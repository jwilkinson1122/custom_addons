<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.custom.fields</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="after">
                <h2>Product Custom Fields</h2>
                <div class="row mt16 o_settings_container" id="custom_product_fields_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <strong>Product Custom Fields</strong>
                            <div class="mt8">
                                <button name="%(product_custom_fields.template_custom_type_action)d"
                                        icon="fa-arrow-right"
                                        type="action"
                                        string="Product Types"
                                        class="btn-link"
                                />
                            </div>
                            <div class="mt8">
                                <button name="%(product_custom_fields.custom_template_field_action)d"
                                        icon="fa-arrow-right"
                                        type="action"
                                        string="Custom Product Fields"
                                        class="btn-link"
                                />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div name="st_b_l_option1" class="o_setting_left_pane">
                            <field name="group_custom_fields_products_show_type" class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane" id="stocks_locations_group">
                            <label for="group_custom_fields_products_show_type"/>
                            <div class="text-muted">
                                If checked, users would be able to choose custom types for Odoo products. Otherwise, 
                                the field 'Custom Product Type' would be hidden, and it would not be possible to change 
                                that for old and new items
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
