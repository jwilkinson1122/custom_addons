<?xml version="1.0"?>
<odoo>

    <record id="template_custom_type_view_search" model="ir.ui.view">
        <field name="name">template.custom.type.search</field>
        <field name="model">template.custom.type</field>
        <field name="arch" type="xml">
            <search>
               <field name="name"/>
               <filter string="Archived"
                        name="inactive"
                        domain="[('active', '=', False)]"
               />
            </search>
        </field>
    </record>
    <record id="template_custom_type_view_form" model="ir.ui.view">
        <field name="name">template.custom.type.form</field>
        <field name="model">template.custom.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"
                                   placeholder="Type"
                                   class="oe_inline"
                            />
                        </h1>
                    </div>
                    <group invisible="1">
                        <field name="input_option"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="template_custom_type_view_tree" model="ir.ui.view">
        <field name="name">template.custom.type.tree</field>
        <field name="model">template.custom.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="template_custom_type_action" model="ir.actions.act_window">
        <field name="name">Product Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">template.custom.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="template_custom_type_view_search"/>
    </record>

</odoo>
