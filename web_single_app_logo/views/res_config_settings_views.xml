<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='business_documents']/div" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="single_app_logo" />
                        <div class="text-muted">
                            Set a single logo for the instance
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label
                                    string=""
                                    for="single_app_logo"
                                    class="col-xs-3 col-md-3 o_light_label"
                                />
                                <field
                                    name="single_app_logo"
                                    required="1"
                                    widget="image"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
