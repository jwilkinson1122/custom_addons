<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="pod_diagnostic_report_graph.pod_diagnostic_report_base"
        inherit_id="pod_diagnostic_report.pod_diagnostic_report_base"
    >
        <xpath expr="//div/t[@t-set='observations']/.." position="after">
            <div id="graph">
            </div>
        </xpath>
        <xpath
            expr="//div//t[@t-if='doc.with_observation and observations']"
            position="attributes"
        >
            <attribute
                name="t-if"
            >doc.with_observation and observations and not doc.hide_observations</attribute>
        </xpath>
    </template>
</odoo>
