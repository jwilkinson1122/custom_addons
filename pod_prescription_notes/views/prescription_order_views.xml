<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="prescription_order_form_notes" model="ir.ui.view">
        <field name="name">prescription.order.form.notes</field>
        <field name="model">prescription.order</field>
        <field name="inherit_id" ref="pod_prescription.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Notes">
                    <group name="notes">
                        <field name="note_header" />
                        <field name="note_footer"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
