<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_contact_view_form" model="ir.ui.view">
        <field name="name">pod.contact.view.form</field>
        <field name="model">pod.contact</field>
        <field name="inherit_id" ref="pod_administration_contact.pod_contact_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_careplans" class="oe_stat_button" icon="fa-hospital-o" groups="pod_clinical_careplan.group_pod_careplan_list" attrs="{'invisible': [('state','=','planned')]}">
                    <field name="careplan_count" widget="statinfo" string="Careplans" />
                    <field name="careplan_ids" invisible="1" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
