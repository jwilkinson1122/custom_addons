<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="pod_document_type_add_language_form">
        <field name="name">pod.document_type.add.language</field>
        <field name="model">pod.document.type.add.language</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Add Language">
                <group>
                    <field name="lang_id" widget="selection" />
                    <field name="lang_ids" invisible="1" />
                    <field name="document_type_id" invisible="1" />
                </group>
                <footer>
                    <button string="Create" name="run" type="object" default_focus="1" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="pod_document_type_add_language_action" model="ir.actions.act_window">
        <field name="name">Add Language</field>
        <field name="res_model">pod.document.type.add.language</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_document_type_id': active_id}</field>
        <field name="target">new</field>
    </record>
    
</odoo>
