<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_module_category_optical" model="ir.module.category">
            <field name="name">Podiatry</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_optical_erp_practices" model="res.groups">
            <field name="name">Practices</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="users" eval="[(4, ref('base.group_system'))]"/>
        </record>
        <record id="group_optical_erp_doctors" model="res.groups">
            <field name="name">Doctors</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="users" eval="[(4, ref('base.group_system'))]"/>
        </record>
        <record id="group_optical_erp_patients" model="res.groups">
            <field name="name">Patients</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="users" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="group_optical_erp_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_optical_erp_assistant" model="res.groups">
            <field name="name">Assistant</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="implied_ids" eval="[(4, ref('group_optical_erp_user'))]"/>
        </record>

        <record id="group_optical_erp_practitioner" model="res.groups">
            <field name="name">Doctor</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="implied_ids" eval="[(4, ref('group_optical_erp_assistant'))]"/>
        </record>

        <record id="group_optical_erp_practice_manager" model="res.groups">
            <field name="name">Center Manager</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="implied_ids" eval="[(4, ref('group_optical_erp_practitioner'))]"/>
        </record>

        <record id="group_optical_erp_manager" model="res.groups">
            <field name="name">Company Manager</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="implied_ids" eval="[(4, ref('group_optical_erp_practice_manager'))]"/>
        </record>

        <record id="group_optical_erp_configurator" model="res.groups">
            <field name="name">System Administrator</field>
            <field name="category_id" ref="ir_module_category_optical"/>
            <field name="implied_ids" eval="[(4, ref('group_optical_erp_manager'))]"/>
        </record>
    </data>
</odoo>