<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_practice_window_by_parent" model="ir.actions.act_window">
        <field name="name">Practices</field>
        <field name="res_model">optical.practice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('parent_id', '=', active_id)]</field>
        <field name="context">{'can_edit_parent_id': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new practice
            </p>
            <p>
                Organize and manage practices at a glance.
            </p>
        </field>
    </record>

    <record id="view_optical_practice_form" model="ir.ui.view">
        <field name="name">optical.practice.form</field>
        <field name="model">optical.practice</field>
        <field name="arch" type="xml">
            <form string="Practice">
                <field name="active" invisible="1"/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(action_practice_window_by_parent)d" class="oe_stat_button" icon="fa-sitemap" context="{'default_parent_id': active_id}">
                            <field name="child_count" string="Practices" widget="statinfo"/>
                        </button>
                        <button name="action_open_practitioners" type="object" class="oe_stat_button" icon="fa-address-book">
                            <div class="o_stat_info">
                                <field name="practitioner_count" class="o_stat_value"/>
                                <span class="o_stat_text">Contacts</span>
                            </div>
                        </button>
                        <button name="action_open_patients" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_stat_info">
                                <field name="patient_count" class="o_stat_value"/>
                                <span class="o_stat_text">Patients</span>
                            </div>
                        </button>
                        <button name="action_open_prescriptions" type="object" class="oe_stat_button" icon="fa-file-text">
                            <div class="o_stat_info">
                                <field name="prescription_count" class="o_stat_value"/>
                                <span class="o_stat_text">Prescriptions</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}' readonly="1"/>
                    <div name="reference">
                        <h1 class="d-flex">
                            <field name="reference"/>
                        </h1>
                    </div>
                    <div name="title" class="oe_title">
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="company_type" invisible="1" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                        <h1>
                            <field name="name" required="1" placeholder="Practice Name"/>
                        </h1>
                    </div>
                    <group name="practice_contact">
                        <group name="parent_practice" string="Parent Practice">
                            <field name="parent_id" readonly="not context.get('can_edit_parent_id', True)"/>
                        </group>
                        <group name="practice_type" string="Type">
                            <field name="practice_type" required="True"/>
                        </group>
                    </group>
                    <separator/>
                    <group name="practice_contact">
                        <group string="Address Info">
                            <field name="type" groups="base.group_no_one" attrs="{'invisible': [('is_company','=', False)], 'readonly': [('user_ids', '!=', [])]}"/>
                            <span class="o_form_label o_td_label" name="address_name">
                                <b attrs="{'invisible': [('type', '!=', 'contact')]}">Company Address</b>
                                <b attrs="{'invisible': [('type', '!=', 'invoice')]}">Invoice Address</b>
                                <b attrs="{'invisible': [('type', '!=', 'delivery')]}">Delivery Address</b>
                                <b attrs="{'invisible': [('type', '!=', 'other')]}">Other Address</b>
                                <b attrs="{'invisible': [('type', '!=', 'private')]}">Private Address</b>
                                <b attrs="{'invisible': [('type', '!=', False)]}">Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            </div>
                            <field name="vat" placeholder="e.g. BE0477472701" attrs="{'readonly': [('parent_id','!=',False)]}"/>
                        </group>
                        <group name="contact_information" string="Contact Info">
                            <field name="mobile" widget="phone" help="help"/>
                            <field name="phone" widget="phone"/>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" widget="email"/>
                            <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active_lang_count" invisible="1"/>
                            <label for="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                            <div class="o_row" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}">
                                <field name="lang"/>
                                <button type="action" name="%(base.res_lang_act_window)d" class="btn-sm btn-link mb4 fa fa-globe" aria-label="More languages" groups="base.group_system" title="More languages" />
                            </div>
                            <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..."/>
                        </group>
                    </group>
                    <separator/>
                    <notebook>
                        <page name="practitioners_list" string="Contacts">
                            <group>
                                <field name="practitioner_id"/>
                            </group>
                        </page>
                        <page name="practice_patients_list" string="Patients">
                            <group>
                                <field name="patient_ids"/>
                            </group>
                        </page>
                        <page name="practice_prescriptions_list" string="Prescriptions">
                            <group>
                                <field name="prescription_id"/>
                            </group>
                        </page>
                        <page name="practice_affiliate_list" string="Affiliates">
                            <group>
                                <field name="child_ids"/>
                            </group>
                        </page>
                        <page name="public" string="Additional Notes">
                            <field name="notes" placeholder="Notes" class="o_address_city"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_optical_practice_tree" model="ir.ui.view">
        <field name="name">optical.practice.tree</field>
        <field name="model">optical.practice</field>
        <field name="arch" type="xml">
            <tree string="Practices" decoration-muted="not active">
                <field name="active" invisible="1"/>
                <field name="sequence" widget="handle"/>
                <field name="full_name" string="Practice Name"/>
                <field name="practice_type"/>
                <field name="code" decoration-bf="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_optical_practice_kanban" model="ir.ui.view">
        <field name="name">optical.practice.kanban</field>
        <field name="model">optical.practice</field>
        <field name="arch" type="xml">
            <kanban string="Medical Clinics" class="o_res_partner_kanban">
                <field name="id"/>
                <field name="color"/>
                <field name="reference"/>
                <field name="name"/>
                <field name="practice_type"/>
                <field name="title"/>
                <field name="email"/>
                <field name="parent_id"/>
                <field name="is_company"/>
                <field name="function"/>
                <field name="phone"/>
                <field name="street"/>
                <field name="street2"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="state_id"/>
                <field name="category_id"/>
                <field name="avatar_128"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="!record.is_company.raw_value">
                                <t t-set="background_image" t-value="kanban_image('optical.practice', 'avatar_128', record.id.raw_value)"/>
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{background_image}')">
                                    <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('optical.practice', 'avatar_128', record.parent_id.raw_value)"/>
                                </div>
                                <div class="o_kanban_image d-md-none" t-attf-style="background-image: url(#{background_image})">
                                    <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('optical.practice', 'avatar_128', record.parent_id.raw_value)"/>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('optical.practice', 'avatar_128', record.id.raw_value)})" role="img"/>
                            </t>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li>ID : 
                                        <field name="reference"/>
                                    </li>
                                    <li t-if="record.parent_id.raw_value and !record.function.raw_value">Parent :
                                        <field name="parent_id"/>
                                    </li>
                                    <li t-if="!record.parent_id.raw_value and record.function.raw_value">
                                        <field name="function"/>
                                    </li>
                                    <li t-if="record.parent_id.raw_value and record.function.raw_value">
                                        <field name="function"/>
 at <field name="parent_id"/>
                                    </li>
                                    <li t-if="record.city.raw_value or record.country_id.raw_value">
                                        <t t-if="record.city.raw_value">
                                            <field name="city"/>
                                            <t t-if="record.country_id.raw_value">, </t>
                                        </t>
                                        <t t-if="record.country_id.raw_value">
                                            <field name="country_id"/>
                                        </t>
                                    </li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow">
                                        <field name="email"/>
                                    </li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_optical_practice_search" model="ir.ui.view">
        <field name="name">optical.practice.search</field>
        <field name="model">optical.practice</field>
        <field name="arch" type="xml">
            <search string="Practices">
                <field name="parent_id" invisible="1"/>
                <!-- Fields -->
                <!-- <field name="name" filter_domain="['|', ('fullname', 'ilike', self), ('code', 'ilike', self)]"/> -->
                <field name="name"/>
                <field name="display_name"/>
                <field name="reference"/>
                <field name="parent_id" operator="child_of"/>
                <separator/>
                <!-- Filters -->
                <filter string="Archived" name="filter_inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <!-- Searchpanel -->
                <searchpanel>
                    <field name="company_id" icon="fa fa-building" enable_counters="1" groups="base.group_multi_company"/>
                    <field name="parent_id" string="Practice" icon="fa fa-cubes" enable_counters="1" hierarchize="1" expand="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!--
    Action: Practices
    -->
    <record id="action_practice_window" model="ir.actions.act_window">
        <field name="name">Practices</field>
        <field name="res_model">optical.practice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_practice', '=', True)]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_optical_practice_search"/>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_practice': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new practice
            </p>
            <p>
                Organize and manage practices at a glance.
            </p>
        </field>
    </record>


</odoo>
