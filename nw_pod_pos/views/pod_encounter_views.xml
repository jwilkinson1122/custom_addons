<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <record id="pod_encounter_view_form" model="ir.ui.view">
        <field name="name">pod.encounter.view.form</field>
        <field name="model">pod.encounter</field>
        <field name="inherit_id" ref="pod_careplan_sale.pod_encounter_view_form" />
        <field name="arch" type="xml">
            <button name="create_sale_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="inprogress2onleave" position="attributes">
                <attribute name="attrs">{}</attribute>
                <attribute name="invisible">1</attribute>
            </button>
            <button name="onleave2finished" position="attributes">
                <attribute name="attrs">{}</attribute>
                <attribute name="invisible">1</attribute>
            </button>
            <button name="onleave2finished" position="after">
                <button name="%(nw_pod_pos.wizard_pod_encounter_add_amount_action)d" type="action" string="Add Amount" class="oe_highlight" context="{'default_encounter_id': active_id}" groups="pod_base.group_pod_reception" attrs="{'invisible': [('state','not in',['arrived', 'in-progress'])]}" />
                <button name="pod_encounter_close_action" type="object" string="Close" class="oe_highlight" groups="pod_base.group_pod_reception" attrs="{'invisible': [('state','not in',['arrived', 'in-progress'])]}" />
                <button name="%(nw_pod_pos.wizard_pod_encounter_finish_action)d" type="action" string="Finish" class="oe_highlight" groups="pod_base.group_pod_reception" context="{'default_encounter_id': active_id}" attrs="{'invisible': [('state','!=','onleave')]}" />
            </button>
            <button name="onleave2finished" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <field name="location_id" position="after">
                <field name="company_id" options="{'no_create': True, 'no_open': True}" />
                <field name="pos_session_id" options="{'no_create': True, 'no_open': True}" />
            </field>
        </field>
    </record>
    
</odoo>
