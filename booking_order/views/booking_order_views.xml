<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="booking_order_view_form" model="ir.ui.view">
            <field name="name">booking.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button type="action" name="%(action_view_wo)d" class="oe_stat_button" icon="fa-book" attrs="{'invisible': [('wo_count', '=', 0)]}">
                        <field name="wo_count" widget="statinfo" string="Work Order"/>
                    </button>
                </xpath>
                <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath> -->
                <xpath expr="//field[@name='order_line']" position="before">
                    <button class="oe_highlight" groups="booking_order.group_product_configurator" name="action_config_start" states="draft,sent" string="Configure Product" style="margin-top: 15px;" type="object" />
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                    <field invisible="1" name="config_ok" />
                    <field name="config_session_id" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field invisible="1" name="config_ok" />
                    <button attrs="{'invisible': ['|', ('config_ok','=',False), ('state','not in',['draft','sent'])]}" class="fa-lg" groups="booking_order.group_product_configurator" help="Reconfigure" icon="fa-cogs" name="reconfigure_product" type="object" title="Reconfigure" />
                    <field name="config_session_id" />
                </xpath>
                <!--
            The line form extension was removed.
            Cases were found where it was causing install errors on other modules,
            that were extending order line (for example sale-workflow/sale_product_approval,
            adding a column after the sales order name field.

            <xpath expr="//form//notebook//field[@name='order_line']/form/field[@name='name']" position="after">
                <div groups="booking_order.group_product_configurator">
                    <label for="custom_value_ids" />
                    <field name="custom_value_ids">
                        <tree>
                            <field name="attribute_id" />
                            <field name="name" />
                            <field name="attachment_ids" widget="many2many_tags" />
                        </tree>
                    </field>
                </div>
            </xpath>
            -->

                <field name="partner_id" position="after">
                    <field name="is_booking_order" invisible="1"/>

                    <field name="practice_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="practitioner_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <!-- <field name="patient_id" required="1" options="{&quot;always_reload&quot;: 1}" /> -->
                    <field name="patient_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="team" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="team_leader" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="team_members" widget="many2many_tags" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                </field>
                <field name="payment_term_id" position="after">
                    <field name="partner_invoice_id"/>
                    <!-- <field name="partner_invoice_id" domain="[('parent_id','=', partner_id)]" /> -->
                    <field name="pricelist_id" />
                    <field name="partner_shipping_id"/>
                    <!-- <field name="partner_shipping_id" domain="[('parent_id','=', partner_id)]" /> -->
                    <field name="booking_start" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="booking_end" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                </field>
            </field>
        </record>

