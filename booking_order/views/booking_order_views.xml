<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="booking_order_view_form" model="ir.ui.view">
            <field name="name">booking.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- <field name="partner_shipping_id" position="after">
                    <field name="practice_id" domain="[('parent_id','child_of',partner_id),('type','=','contact')]" options="{'no_create': True}" />
                </field> -->
                <!-- <field name="partner_shipping_id" position="after">
                    <field name="partner_contact_id" domain="[('parent_id','child_of',partner_id),('type','=','contact')]" options="{'no_create': True}" />
                </field>
                <button name="action_draft" position="attributes">
                    <attribute name="confirm">Are you sure to set this to quotation?</attribute>
                </button>
                <button name="action_cancel" position="attributes">
                    <attribute name="confirm">Are you sure to cancel this order?</attribute>
                </button> -->
                <xpath expr='//button[@name="action_confirm"]' position="after">
                    <button name="action_check" string="Check" class="btn-primary" type="object"/>
                </xpath>
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button type="action" name="%(action_view_wo)d" class="oe_stat_button" icon="fa-book" attrs="{'invisible': [('wo_count', '=', 0)]}">
                        <field name="wo_count" widget="statinfo" string="Work Order"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('is_practice', '=', True)]</attribute>
                </xpath> -->
                <field name="partner_id" position="after">
                    <field name="is_booking_order" invisible="1"/>
                    <!-- <field name="practice_partner_id" invisible="1" /> -->
                    <!-- <field name="practice_partner_id" invisible="1" /> -->
                    <!-- <field name="practice_partner_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/> -->
                    <field name="practice_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>

                    <!-- <field name="invoice_id" domain="[('partner_id','=', partner_id)]"></field> -->
                    <!-- <field name="practice_id" domain="[('partner_id','=', partner_id)]" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/> -->
                    <field name="practitioner_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="patient_id" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>

                </field>
                <field name="payment_term_id" position="after">
                    <field name="pricelist_id" />
                    <!-- <field name="partner_invoice_id"/>
                    <field name="partner_shipping_id"/> -->
                    <field name="partner_invoice_id" context="{'default_type':'invoice'}" options='{"always_reload": True}'/>
                    <field name="partner_shipping_id" context="{'default_type':'delivery'}" options='{"always_reload": True}'/>

                    <field name="booking_start" required="1" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                    <field name="booking_end" attrs="{'invisible': [('is_booking_order', '=', False)]}"/>
                </field>
            </field>
        </record>

        <record id="booking_order_action" model="ir.actions.act_window">
            <field name="name">Booking Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_booking_order', '=', 1)]</field>
            <field name="context">{
                'default_is_booking_order': 1
            }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add
                </p>
                <p>Click Create For New Booking Order</p>
            </field>
        </record>
    </data>
</odoo>