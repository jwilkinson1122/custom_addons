<?xml version="1.0" encoding="utf-8" ?>
 
<odoo>
    <record model="ir.ui.view" id="pod_patient_form_view">
        <field
            name="name"
        >pod.patient.form (in pod_administration_contact)</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_administration.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_contact_ids"
                    class="oe_stat_button"
                    attrs="{'invisible': [('contact_count', '=', 0)]}"
                    icon="fa-hospital-o"
                    groups="pod_administration_contact.group_pod_contact_list"
                >
                    <field
                        name="contact_count"
                        widget="statinfo"
                        string="Contacts"
                    />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
