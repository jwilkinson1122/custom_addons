<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_contact_display" model="res.groups">
        <field name="name">Contact Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_base.group_pod_root_menu')), (4, ref('pod_base.group_pod_administration_menu')), (4, ref('pod_administration.group_pod_patient_display'))]" />
    </record>
    <record id="group_pod_contact_list" model="res.groups">
        <field name="name">Contact List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_contact_display'))]" />
    </record>
    <record id="group_pod_contact_manager" model="res.groups">
        <field name="name">Contact Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_contact_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_contact_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_contact_manager'))]" />
    </record>
</odoo>
