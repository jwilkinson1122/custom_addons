<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_flag_category_view_tree" model="ir.ui.view">
        <field name="name">pod.flag.category.view.tree</field>
        <field name="model">pod.flag.category</field>
        <field
            name="inherit_id"
            ref="pod_administration_flag.pod_flag_category_view_tree"
        />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="flag" />
            </field>
        </field>
    </record>
    <record id="pod_flag_category_view_form" model="ir.ui.view">
        <field name="name">pod.flag.category.view.form</field>
        <field name="model">pod.flag.category</field>
        <field
            name="inherit_id"
            ref="pod_administration_flag.pod_flag_category_view_form"
        />
        <field name="arch" type="xml">
            <field name="description" position="before">
                <group>
                    <field name="flag" />
                    <field name="icon" />
                    <field name="level" />
                </group>
            </field>
        </field>
    </record>
</odoo>
