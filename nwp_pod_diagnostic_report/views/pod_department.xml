<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_department_form_view">
        <field name="name">pod.department.form (in nwp_pod_diagnostic_report)</field>
        <field name="model">pod.department</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <h2>
                        <label for="internal_identifier" />
                        <field name="internal_identifier" readonly="1" />
                    </h2>
                    <group>
                        <field name="name" />
                        <field name="without_practitioner" />
                        <field name="with_department_report_header" sting="Report with header" />
                    </group>
                    <notebook>
                        <page name="diagnostic_report_header" string="Report Header" attrs="{'invisible': [('with_department_report_header', '=', False)]}">
                            <field name="diagnostic_report_header" />
                        </page>
                        <page name="user" string="Users">
                            <field name="user_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_department_tree_view">
        <field name="name">pod.department.tree (in nwp_pod_diagnostic_report)</field>
        <field name="model">pod.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_department_act_window">
        <field name="name">Podiatry Department</field>
        <field name="res_model">pod.department</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="pod_department_menu" name="Departments" parent="contacts.res_partner_menu_config" action="pod_department_act_window" sequence="20" />
</odoo>
