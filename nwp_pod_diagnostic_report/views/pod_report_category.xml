<odoo>
    <record model="ir.ui.view" id="pod_report_category_form_view">
        <field
            name="name"
        >pod.report.category.form (in nwp_pod_diagnostic_report)</field>
        <field name="model">pod.report.category</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <h2>
                        <label for="internal_identifier" />
                        <field name="internal_identifier" readonly="1" />
                    </h2>
                    <group>
                        <field name="name" />
                        <field name="pod_department_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_report_category_tree_view">
        <field
            name="name"
        >pod.report.category.tree (in nwp_pod_diagnostic_report)</field>
        <field name="model">pod.report.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="name" />
                <field name="pod_department_id" />
            </tree>
        </field>
    </record>
    <record id="pod_report_category_act_window" model="ir.actions.act_window">
        <field name="name">Report Categories</field>
        <field name="res_model">pod.report.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.ui.menu" id="pod_configuration_report_category_menu">
        <field name="name">Report Categories</field>
        <field
            name="parent_id"
            ref="pod_diagnostic_report.pod_report_configuration"
        />
        <field
            name="groups_id"
            eval="[(4, ref('pod_base.group_pod_configurator'))]"
        />
        <field name="action" ref="pod_report_category_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
