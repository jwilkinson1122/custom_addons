<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pip_installer_menu_preferences" model="ir.ui.view">
        <field name="name">pip.installer.menu.preferences.form</field>
        <field name="model">pip.installer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code_method" required="1" nolabel="1" colspan="2"/>
                        </group>
                        <group>
                            <field name="code_name" nolabel="1" colspan="2" placeholder="Package Name eg:wheel==0.42.0" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Execute" name="execute_pip" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pip_installer_menu_preferences_action" model="ir.actions.act_window">
        <field name="name">Package Installer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pip.installer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids" eval="[Command.clear(),  Command.create({'view_mode': 'form', 'view_id': ref('custom_orthotics.pip_installer_menu_preferences')})]"/>
    </record>
</odoo>
