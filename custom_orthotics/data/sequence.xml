<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data noupdate="1">
        <!-- sequence patient -->
        <record id="seq_id_patient" model="ir.sequence">
            <field name="name">Patient ID</field>
            <field name="code">patient.seq</field>
            <field name="prefix">PP</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False" />
        </record>
        <!-- sequence doctor -->
        <record id="seq_id_doctor" model="ir.sequence">
            <field name="name">Doctor ID</field>
            <field name="code">doctor.seq</field>
            <field name="prefix">PC</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False" />
        </record>
        <!-- sequence practice -->
        <record id="seq_id_practice" model="ir.sequence">
            <field name="name">Practice ID</field>
            <field name="code">practice.seq</field>
            <field name="prefix">PD</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False" />
        </record>
        <!-- sequence prescription -->
        <record id="seq_id_prescription" model="ir.sequence">
            <field name="name">Prescription ID</field>
            <field name="code">patient_prescription.seq</field>
            <field name="prefix">PA/%(year)s/%(range_month)s/</field>
            <field eval="1" name="number_next" />
            <field eval="1" name="number_increment" />
            <field eval="True" name="use_date_range" />
            <field eval="False" name="company_id" />
            <field name="padding">4</field>
        </record>
        <!-- sequence order -->
        <record id="seq_id_order" model="ir.sequence">
            <field name="name">Order ID</field>
            <field name="code">patient_order.seq</field>
            <field name="prefix">PV/%(year)s/%(month)s/%(range_day)s/</field>
            <field eval="1" name="number_next" />
            <field eval="1" name="number_increment" />
            <field eval="True" name="use_date_range" />
            <field eval="False" name="company_id" />
            <field name="padding">2</field>
        </record>
        <!-- sequence service -->
        <record id="seq_id_service" model="ir.sequence">
            <field name="name">Service ID</field>
            <field name="code">patient_service.seq</field>
            <field name="prefix">PS/%(year)s/%(month)s/%(range_day)s/</field>
            <field eval="1" name="number_next" />
            <field eval="1" name="number_increment" />
            <field eval="True" name="use_date_range" />
            <field eval="False" name="company_id" />
            <field name="padding">3</field>
        </record>
    </data>
</odoo>