<odoo>
  <data>
    <!-- Practice Tree View -->
    <record model="ir.ui.view" id="custom_orthotics_practice_tree">
      <field name="name">custom_orthotics.practice_tree</field>
      <field name="model">custom_orthotics.practice</field>
      <field name="arch" type="xml">
        <tree string="Practice">
          <field name="practice_id" />
          <field name="name" />
        </tree>
      </field>
    </record>

    <!-- Practice Form View -->
    <record model="ir.ui.view" id="custom_orthotics_practice_form">
      <field name="name">custom_orthotics.practice_form</field>
      <field name="model">custom_orthotics.practice</field>
      <field name="arch" type="xml">
        <form string="Practice">
          <sheet>
            <!-- Practice Button Box -->
            <div class="oe_button_box" name="button_box">
              <!-- Practice Prescription Button -->
              <button name="open_practice_prescription" class="oe_stat_button" type="object" icon="fa-calendar">
                <field string="Janji" name="prescription_count" widget="statinfo" />
              </button>
            </div>
            <div class="oe_title">
              <h1>
                <field name="practice_id" />
              </h1>
            </div>
            <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group>
              <group>
                <field name="name" />
                <field name="age" />
                <field name="gender" />
              </group>
              <group>
                <field name="phone" />
                <field name="email" />
                <field name="address" />
              </group>
            </group>
            <!-- <group name="Speciality">
              <field name="item_service" />
            </group> -->
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Practice Kanban View -->
    <record id="custom_orthotics_practice_kanban" model="ir.ui.view">
      <field name="name">custom_orthotics.practice_kanban</field>
      <field name="model">custom_orthotics.practice</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="phone" />
          <field name="age" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_custom_orthotics_docotr_kanban">
                <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_center d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('custom_orthotics.practice', 'image', record.id.raw_value)}')" />
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/base/static/img/avatar.png'" />
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Age :
                      <field name="age" />
                    </li>
                    <li>
                      Phone :
                      <field name="phone" />
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Practice Search View -->
    <record id="custom_orthotics_practice_search" model="ir.ui.view">
      <field name="name">custom_orthotics.practice_search</field>
      <field name="model">custom_orthotics.practice</field>
      <field name="arch" type="xml">
        <search string="Search Practice">
          <field name="name" filter_domain="['|',('name', 'ilike', self),('practice_id', 'ilike', self)]" />
          <!-- <field name="item_service" /> -->
          <field name="practice_id" />
          <field name="name" />
          <separator />
          <!-- <group expand="0" string="Group By">
            <filter string="Speciality" name="item_service" context="{'group_by':'item_service'}" />
          </group> -->
        </search>
      </field>
    </record>

    <!-- Practice Action Window -->
    <record model="ir.actions.act_window" id="practice_action_window">
      <field name="name">Practice</field>
      <field name="res_model">custom_orthotics.practice</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Patient Clinic" id="custom_orthotics.root_menu" web_icon="custom_orthotics,static/description/icon.png" />

    <!-- Menu Practice -->
    <menuitem name="Practice" id="custom_orthotics.practice" parent="custom_orthotics.root_menu" sequence="1" action="practice_action_window" />


    <!-- Menu Master Data -->
    <!-- <menuitem name="Master Data" id="custom_orthotics.master_data" parent="custom_orthotics.root_menu" /> -->

  </data>
</odoo>