<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pod_administration']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_administration_practitioner">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_administration_practitioner" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Practitioner" for="module_pod_administration_practitioner" />
                        <div class="text-muted">
                            Activates practitioner
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_administration_location">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_administration_location" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Locations" for="module_pod_administration_location" />
                        <div class="text-muted">
                            Activates locations
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_administration_contact">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_administration_contact" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Contacts" for="module_pod_administration_contact" />
                        <div class="text-muted">
                            Activates contacts
                        </div>
                        <div>
                            <field class="oe_inline" name="module_pod_administration_contact_careplan" />
                            Link contacts with care plans
                        </div>
                    </div>
                </div>
            </xpath>
            <field name="module_pod_administration" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
</odoo>
