<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_res_partner_display" model="res.groups">
        <field name="name">Partner Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_res_partner_list" model="res.groups">
        <field name="name">Partner List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_res_partner_display'))]" />
    </record>
    <record id="group_res_partner_manager" model="res.groups">
        <field name="name">Partner Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_res_partner_list'))]" />
    </record>
    <record id="group_pod_patient_display" model="res.groups">
        <field name="name">Patient Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_base.group_pod_root_menu'))]" />
    </record>
    <record id="group_pod_patient_list" model="res.groups">
        <field name="name">Patient List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_patient_display')), (4, ref('pod_base.group_pod_administration_menu'))]" />
    </record>
    <record id="group_pod_patient_manager" model="res.groups">
        <field name="name">Patient Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_res_partner_manager')), (4, ref('group_pod_patient_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_patient_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_patient_manager'))]" />
    </record>
</odoo>
