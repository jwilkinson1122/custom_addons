        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <!-- Generic groups -->
    <record id="group_podiatry_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_root_menu')),
                      (4, ref('group_podiatry_administration_menu')),
                      (4, ref('group_podiatry_clinical_menu')),
