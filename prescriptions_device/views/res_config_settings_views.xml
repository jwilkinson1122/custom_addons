<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_prescriptions_device" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.prescriptions.device</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="prescriptions.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='prescriptions']" position="attributes">
                <attribute name="notApp">0</attribute>
            </xpath>
            <xpath expr="//app[@name='prescriptions']" position="inside">
                <block>
                    <setting company_dependent="1" help="Centralize your Device' prescriptions (fines, etc.)">
                        <field name="prescriptions_device_settings"/>
                        <div class="content-group" invisible="not prescriptions_device_settings">
                            <div class="row mt16">
                                <label class="o_form_label col-lg-3" for="prescriptions_device_folder" string="Workspace"/>
                                <field name="prescriptions_device_folder" required="prescriptions_device_settings"/>
                            </div>
                            <div class="row">
                                <label class="o_form_label col-lg-3" for="prescriptions_device_tags" string="Default Tags"/>
                                <field name="prescriptions_device_tags" widget="many2many_tags" domain="[('folder_id','=', prescriptions_device_folder)]"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
