<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="prescriptions_flag_view_tree" model="ir.ui.view">
        <field name="name">prescriptions.flag.view.tree</field>
        <field name="model">prescriptions.flag</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions Flags">
                <field name="internal_identifier" />
                <field name="name" />
                <!-- <field name="practice_id" />
                <field name="practitioner_id" /> -->
                <field name="patient_id" />
            </tree>
        </field>
    </record>
    <record id="prescriptions_flag_view_form" model="ir.ui.view">
        <field name="name">prescriptions.flag.view.form</field>
        <field name="model">prescriptions.flag</field>
        <field name="arch" type="xml">
            <form string="Prescriptions Flags">
                <header />
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="active" invisible="1" />
                    <div name="button_box" class="oe_button_box" />
                    <h1>
                        <field name="internal_identifier" />
                    </h1>
                    <group>
                        <group>
                            <field name="category_id" options="{'no_create': True}" />
                            <!-- <field name="practice_id" />
                            <field name="practitioner_id" /> -->
                            <field name="patient_id" />
                        </group>
                        <group invisible="active">
                            <field name="closure_date" />
                            <field name="closure_uid" />
                        </group>
                    </group>
                    <field name="description" />
                    <notebook invisible="1" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_prescriptions_flag_search" model="ir.ui.view">
        <field name="name">prescriptions.flag.search</field>
        <field name="model">prescriptions.flag</field>
        <field name="arch" type="xml">
            <search string="Prescriptions Flag">
                <field name="internal_identifier" />
                <field name="category_id" />
                <!-- <field name="practice_id" />
                <field name="practitioner_id" /> -->
                <field name="patient_id" />
                <newline />
                <filter string="Archived" name="inactive" domain="[('active','=',False)]" />
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="prescriptions_flag_action">
        <field name="name">Flags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescriptions.flag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
