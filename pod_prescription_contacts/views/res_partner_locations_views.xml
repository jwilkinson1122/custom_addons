<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="action_locations_window" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[("is_location", "=", True), ("patient_ids", "=", False), ('parent_id', 'child_of', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new location
            </p>
            <p>
                Organize and manage locations at a glance.
            </p>
        </field>
    </record>


    <!-- Locations Tree View -->
    <record id="res_partner_locations_tree_view" model="ir.ui.view">
        <field name="name">res.partner.tree.view</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree>
            </tree>
        </field>
    </record>
 
 
    <!-- Locations Form View -->
    <record id="res_partner_locations_form_view" model="ir.ui.view">
        <field name="name">res.partner.form.view</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Locations">
            </form>
        </field>
    </record>
 
 
    <!-- Locations Kanban View -->
    <record id="res_partner_locations_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.view</field>
        <field name="model">res.partner</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban string="Locations" class="o_res_partner_kanban">
            
            </kanban>
        </field>
    </record>
 
 
     <!-- Locations Search View -->
    <record id="res_partner_locations_search_view" model="ir.ui.view">
        <field name="name">res.partner.search.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Locations">
            
            </search>
        </field>
    </record>
 
    <!-- Locations Window Actions -->
    <record id="res_partner_locations_window_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="res_partner_locations_window_action_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="res_partner_locations_window_action" />
        <field name="sequence" eval="20" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_partner_locations_tree_view" />
    </record>
    <record id="res_partner_locations_window_action_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="res_partner_locations_window_action" />
        <field name="sequence" eval="20" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_locations_form_view" />
    </record>
    <record id="res_partner_locations_window_action_kanban" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="res_partner_locations_window_action" />
        <field name="sequence" eval="20" />
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="res_partner_locations_kanban_view" />
    </record>

   

</odoo>
