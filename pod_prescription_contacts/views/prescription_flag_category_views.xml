<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="prescriptions_flag_category_view_tree" model="ir.ui.view">
        <field name="name">prescriptions.flag.category.view.tree</field>
        <field name="model">prescriptions.flag.category</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions Flag Categories">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="prescriptions_flag_category_view_form" model="ir.ui.view">
        <field name="name">prescriptions.flag.category.view.form</field>
        <field name="model">prescriptions.flag.category</field>
        <field name="arch" type="xml">
            <form string="Prescriptions Flag Category">
                <header />
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="active" invisible="1" />
                    <div name="button_box" class="oe_button_box" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="prescriptions_flag_category_action">
        <field name="name">Flag categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescriptions.flag.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_prescriptions_flag_category_root" name="Flag categories" sequence="20" parent="contacts.res_partner_menu_config" action="prescriptions_flag_category_action" />
</odoo>
