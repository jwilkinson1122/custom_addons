    <record id="prescription_patient_search_view" model="ir.ui.view">
        <field name="name">prescription.patient.search</field>
        <field name="model">prescription.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="ref" operator="="/>
                <field name="internal_identifier" operator="="/>
                <separator/>
                <separator/>
                <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group name="group_by" string="Group By">
                    <filter string="Practice" name="parent_id" context="{'group_by': 'parent_id'}"/>
                    <filter string="Practitioner" name="practitioner_id" context="{'group_by': 'practitioner_id'}"/>
                    <separator/>
                    <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="state_id" context="{'group_by': 'state_id'}"/>
                </group>
                <searchpanel>
                    <field name="parent_id" icon="fa-building-o" enable_counters="1"/>
                    <field name="practitioner_id" icon="fa-user-md" enable_counters="1"/>
                </searchpanel>

            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="prescription_patient_window_action">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescription.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="prescription_patient_search_view"/>
        <field name="context">{
            'default_company_type': 'person',
            'default__type': 'contact',
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new patient
            </p>
            <p>
                Schedule and organize your patients efficiently.
            </p>
        </field>
    </record>

