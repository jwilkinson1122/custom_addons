<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="prescription_patient_tree" model="ir.ui.view">
        <field name="name">prescription.patient.tree</field>
        <field name="model">prescription.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="prescription_patient_his_tree" model="ir.ui.view">
        <field name="name">prescription.patient.tree</field>
        <field name="model">prescription.patient</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="vat" />
                <field name="name" />
                <field name="birth_date" />
            </tree>
        </field>
    </record>

    <record id="prescription_patient_form" model="ir.ui.view">
        <field name="name">prescription.patient.form</field>
        <field name="model">prescription.patient</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Partners">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button name="action_view_patient_prescriptions" type="object" class="oe_stat_button" icon="fa fa-prescription" invisible="patient_prescription_count == 0">
                            <field name="patient_prescription_count" widget="statinfo" string="Prescriptions" />
                            <field name='patient_prescription_ids' invisible="1" />
                        </button> -->
                        <button name="action_view_patient_prescriptions" class="oe_stat_button" type="object" icon="fa fa-prescription" invisible="patient_prescription_count == 0">
                            <field name="patient_prescription_count" string="Prescription" widget="statinfo"/>
                        </button>
                        <button name="action_view_patient_flags" type="object" class="oe_stat_button" icon="fa-flag" invisible="patient_flag_count == 0">
                            <field name="patient_flag_count" widget="statinfo" string="Flags" />
                            <field name='patient_flag_ids' invisible="1" />
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                    <h2>
                        <field name="internal_identifier"/>
                    </h2>
                    <div class="oe_title mb24">
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="country_code" invisible="1"/>
                        <field name="company_type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                        <h1>
                            <field name="name" id="patient" options="{'line_breaks': False}" widget="text" class="text-break" default_focus="1" placeholder="e.g. Brandom Freeman" invisible="is_company" required="type == 'contact'"/>
                            <field name="is_company" invisible="True" />
                            <field name="parent_id" invisible="True" />
                        </h1>
                    </div>
                    <group name="responsible">
                        <group string="Practice">
                            <span class="o_form_label o_td_label" name="address_name">
                                <b></b>
                            </span>
                            <div class="o_address_format">
                                <field name="parent_id" class="o_address_street fw-bold" widget="res_partner_many2one" placeholder="Search Practice..." required="1" domain="[('is_company', '=', True), ('id', '!=', 1)]" context="{'default_is_company': True}"/>
                            </div>
                        </group>
                        <group string="Responsible">
                            <span class="o_form_label o_td_label" name="address_name">
                                <b></b>
                            </span>
                            <div class="o_address_format">
                                <field name="practitioner_id" class="o_address_street fw-bold" domain="[('is_practitioner', '=', True), ('parent_id', '=', parent_id)]" placeholder="Search Contact" required="1"/>
                                <!-- <field name="practitioner_id" class="fw-bold" placeholder="Practitioner Name" domain="[('is_practitioner', '=', True), ('parent_id', '=', location_id)]" readonly="state in ['cancel', 'prescription']"/> -->

                            </div>
                        </group>
                    </group>
                    <group name="contact">
                        <group string="Address">
                            <span class="o_form_label o_td_label" name="address_name">
                                <field name="type" invisible="1" readonly="user_ids" class="fw-bold"/>
                                <b></b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <div name="partner_address_country" class="d-flex justify-content-between">
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <!-- <button name="open_parent" type="object" string="Edit" class="oe_link" invisible="not parent_id or type != 'contact'" icon="fa-pencil-square-o"/> -->
                            </div>
                        </group>
                        <group string="Contact">
                            <span class="o_form_label o_td_label" name="address_name">
                                <b></b>
                            </span>
                            <div class="o_address_format">
                                <field name="email" widget="email" placeholder="Email..." class="o_address_street"/>
                                <field name="title" options='{"no_open": True}' invisible="is_company" placeholder="Title"/>
                                <field name="phone" class="o_address_city" widget="phone" placeholder="Phone..."/>
                                <field name="mobile" class="o_address_state" widget="phone" placeholder="Mobile..."/>
                                <field name="fax_number" class="o_address_zip" placeholder="Fax..."/>
                                <field name="active_lang_count" placeholder="Active Language" invisible="1" />
                                <field name="lang" placeholder="Language" invisible="active_lang_count &lt;= 1" />
                                <field name="user_ids" invisible="1" />
                                <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..." />
                            </div>
                        </group>
                    </group>


                    <br></br>

                    <notebook colspan="4">
                        <page name="prescription_administration" string="Administration data">
                            <group string="Patient Data">
                                <group>
                                    <field name="pt_height"/>
                                    <field name="pt_weight"/>
                                    <!-- <field name="pt_age"/> -->
                                    <field name="gender" />
                                    <field name="birth_date" />
                                </group>
                                <group>
                                    <field name="shoe_type" />
                                    <field name="shoe_size" />
                                    <field name="shoe_width" />
                                </group>
                            </group>

                        </page>
                        <page name="patient_measures" string="Measures">

                        </page>
                        <page name="patient_images" string="File Attachments">
                            <group name="photo_group_tlOo2">
                                <group name="photo_group_tlOo2_left">
                                    <field widget="image" options='{"size": [0, 150]}' name="image1" string="Left Image"/>
                                </group>
                                <group name="photo_group_tlOo2_right">
                                    <field widget="image" options='{"size": [0, 150]}' name="image2" string="Right Image"/>
                                </group>
                            </group>
                            <group name="obj_group_DPydw">
                                <group name="obj_group_DPydw_left">
                                    <field filename="left_obj_file_name" name="left_obj_model" string="Left Scan"/>
                                    <field invisible="1" name="left_obj_file_name"/>
                                </group>
                                <group name="obj_group_DPydw_right">
                                    <field filename="right_obj_file_name" name="right_obj_model" string="Right Scan"/>
                                    <field invisible="1" name="right_obj_file_name"/>
                                </group>
                            </group>
                        </page>
                        <page name='internal_notes' string="Patient Notes">
                            <field name="notes" placeholder="Add note..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="prescription_patient_his_form" model="ir.ui.view">
        <field name="name">prescription.patient.form</field>
        <field name="model">prescription.patient</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="birth_date" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="patient_age" />
                            <field name="vat" />
                        </group>
                    </group>
                    <notebook>
                        <page name="administration_data" string="Administration Info">
                            <group>
                                <group id="prescription_administration_contact">
                                    <field name="email" />
                                    <field name="mobile" />
                                </group>
                                <group id="prescription_administration_street">
                                    <field name="street" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

