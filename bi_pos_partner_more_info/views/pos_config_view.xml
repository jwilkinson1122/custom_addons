<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="pos_config_view_inherit_form" model="ir.ui.view">
		<field name="name">pos.config.inherit.form.view</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
		<field name="arch" type="xml">
			<div id="category_reference" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_custom_fields" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_custom_fields" />
                        <div class="content-group mt16" attrs="{'invisible': [('allow_custom_fields', '=', False)]}">
                            <field name="show_custom_field" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </div>
		</field>
	</record>
</odoo>
