<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_inherited_view" model="ir.ui.view">
        <field name="name">product.template.inherited.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_material_size" groups="pod_product_matrix.group_size_matrix_product"/>
                    <label for="is_material_size" groups="pod_product_matrix.group_size_matrix_product"/>
                </div>
                <div>
                    <field name="is_foot_size" groups="pod_product_matrix.group_size_matrix_product"/>
                    <label for="is_foot_size" groups="pod_product_matrix.group_size_matrix_product"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
