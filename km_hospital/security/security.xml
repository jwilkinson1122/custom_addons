<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_hospital">
        <field name="name">Hospital Management</field>
        <field name="description">Category For Hospital</field>
        <field name="sequence">45</field>
    </record>

    <record id="group_hospital_labman" model="res.groups">
        <field name="name">Lab man</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>

    <record id="group_hospital_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_hospital"/>
        <field name="implied_ids" eval="[(4, ref('group_hospital_labman'))]"/>
    </record>

    <record id="product_config_category" model="ir.module.category">
        <field name="name">Product Configurator</field>
    </record>

    <record id="group_product_configurator" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="product_config_category" />
        <field name="implied_ids" eval="[(4, ref('product.group_product_variant'))]" />
    </record>

    <record id="group_product_configurator_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="product_config_category" />
        <field name="implied_ids" eval="[(4, ref('km_hospital.group_product_configurator'))]" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>

    <!-- Set default to all employees -->
    <record model="res.groups" id="base.group_user">
        <field name="implied_ids" eval="[(4, ref('km_hospital.group_product_configurator'))]" />
    </record>
    <record model="res.users" id="base.user_root">
        <field eval="[(4, ref('km_hospital.group_product_configurator_manager'))]" name="groups_id" />
    </record>

</odoo>