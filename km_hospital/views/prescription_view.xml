<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="prescription_tree" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.tree</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <tree decoration-primary="status=='draft'" decoration-warning="status=='confirm'" decoration-success="status=='done'" decoration-danger="status=='cancel'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="phone" groups="km_hospital.group_hospital_admin"/>
                <field name="email"/>
                <field name="age"/>
                <field name="checkup_date"/>
                <field name="status"/>
                <field name="appointed_doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="prescription_form" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.form</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_status_confirm" string="Confirm" class="btn-warning" type="object" confirm="Are you sure you want to confirm?"/>
                    <button id="button_done" name="action_status_done" string="Done" class="btn-success" type="object" confirm="Are you sure you want to set done?"/>
                    <button id="button_cancel" name="action_status_cancel" string="Cancel" class="btn-danger" type="object" confirm="Are you sure you want to cancel?"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirm,done,cancel" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="phone" groups="km_hospital.group_hospital_admin"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="prescription_date"/>
                            <field name="checkup_date"/>
                            <field name="appointed_doctor_id"/>
                            <field name="note" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Doctor eprescription">
                            <field name='description'/>
                        </page>
                        <page string="Medicine" name="medicine">
                            <field name="prescription_medicine_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="quantity"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                        </group>
                                        <group>
                                            <field name="quantity"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Medical Test" name="medicaltest">
                            <field name="prescription_medical_test_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="prescription_search" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.search</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <search string="E-Prescription">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="phone" groups="km_hospital.group_hospital_admin"/>
                <field name="age"/>
                <field name="status"/>
                <field name="appointed_doctor_id"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="1" string="Group By">
                    <filter string="Status" name="state" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="prescription_kanban" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.kanban</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" decoration-warning="status=='draft'" decoration-danger="status=='done'" decoration-success="status=='confirmed'">
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <h1 class="o_kanban_record_title">
                                    <field name="name"/>
                                </h1>
                                <ul>
                                    <li>Name :
                                        <field name="patient_id"/>
                                    </li>
                                    <li>Phone :
                                        <field name="phone"/>
                                    </li>
                                    <li>Checkup date :
                                        <field name="checkup_date"/>
                                    </li>
                                    <li>Status :
                                        <field name="status"/>
                                    </li>
                                    <li>Appointed doctor:
                                        <field name="appointed_doctor_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- calender view -->
    <record id="prescription_view_calendar" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.calendar</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <calendar string="Prescriptions" date_start="prescription_date" date_stop="checkup_date" event_open_popup="true" mode="month" color="name" quick_add="False">
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>

    <!-- pivot view -->
    <record id="prescription_pivot" model="ir.ui.view">
        <field name="name">kmhospital.eprescription.pivot</field>
        <field name="model">kmhospital.eprescription</field>
        <field name="arch" type="xml">
            <pivot string="Prescriptions Pivot View">
                <field name="patient_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="prescription_action" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kmhospital.eprescription</field>
        <field name="view_mode">tree,form,search,kanban,calendar,pivot</field>
        <field name="context">{}</field>
        <!--for default group & filter => {'search_default_state': 1, 'search_default_male': 1}-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New E-Prescription
            </p>
        </field>
    </record>

    <record id="prescription_action_kids" model="ir.actions.act_window">
        <field name="name">Kids Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kmhospital.eprescription</field>
        <field name="view_mode">tree,form,search,kanban,calendar,pivot</field>
        <field name="domain">[('age', '&lt;=', 10)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New E-Prescription
            </p>
        </field>
    </record>

    <!-- action server for changing the status to confirmed -->
    <record id="action_prescription_confirm" model="ir.actions.server">
        <field name="name">Confirm eprescription</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_kmhospital_prescription"/>
        <field name="binding_model_id" ref="model_kmhospital_prescription"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.action_status_confirm()</field>
    </record>

    <!-- action server for changing the status to done -->
    <record id="action_prescription_done" model="ir.actions.server">
        <field name="name">Done eprescription</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_kmhospital_prescription"/>
        <field name="binding_model_id" ref="model_kmhospital_prescription"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.action_status_done()</field>
    </record>

    <menuitem id="hospital_prescription" name="Prescriptions" parent="hospital_root"/>

    <menuitem id="all_prescription" name="All Prescriptions" parent="hospital_prescription" action="prescription_action"/>

    <menuitem id="kids_prescription" name="Kids Prescriptions" parent="hospital_prescription" action="prescription_action_kids"/>

    <menuitem id="print_patient_prescription" name="Print E-Prescription" parent="hospital_prescription" action="action_report_prescription"/>

    <menuitem id="create_patient_prescription" name="Create E-Prescription" parent="hospital_prescription" action="action_create_patient_prescription"/>

</odoo>