<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- We want to activate SO template by default for easier demoing. -->
        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('prescription_management.group_prescription_template'))]"/>
        </record>

        <record id="prescription_template_1" model="prescription.template">
            <field name="name">Large Meeting Table</field>
            <field name="number_of_days">45</field>
        </record>

        <record id="prescription_template_line_1" model="prescription.template.line">
            <field name="prescription_template_id" ref="prescription_template_1"/>
            <field name="name">Large Meeting Table</field>
            <field name="product_id" ref="product.consu_delivery_02"/>
            <field name="product_uom_qty">1</field>
            <field name="product_uom_id" ref="uom.product_uom_unit"/>
        </record>

        <record id="prescription_template_option_1" model="prescription.template.option">
            <field name="prescription_template_id" ref="prescription_template_1"/>
            <field name="name">Office Chair</field>
            <field name="product_id" ref="product.product_delivery_01"/>
            <field name="quantity">4</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
        </record>
</odoo>
