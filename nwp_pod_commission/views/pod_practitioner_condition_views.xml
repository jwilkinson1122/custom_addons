<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_practitioner_condition_tree" model="ir.ui.view">
        <field name="name">pod.practitioner.condition.tree</field>
        <field name="model">pod.practitioner.condition</field>
        <field name="arch" type="xml">
            <tree editable="bottom" delete="0">
                <field name="service_id" />
                <field name="procedure_service_id" />
                <field
                    name="center_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
                <field name="fixed_fee" />
                <field name="variable_fee" />
                <button
                    name="toggle_active"
                    aria-label="Archive"
                    title="Archive"
                    icon="fa-archive"
                    confirm="Are you sure you want to archive/unarchive this element?"
                    type="object"
                />
            </tree>
        </field>
    </record>
    <record id="pod_practitioner_condition_form" model="ir.ui.view">
        <field name="name">pod.practitioner.condition.form</field>
        <field name="model">pod.practitioner.condition</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        text="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="active" invisible="1" />
                        <field name="practitioner_id" />
                        <group>
                            <field name="service_id" />
                            <field name="procedure_service_id" />
                            <field
                                name="center_ids"
                                widget="many2many_tags"
                                options="{'no_create': True}"
                            />
                        </group>
                        <group>
                            <field name="fixed_fee" />
                            <field name="variable_fee" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
