<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_procedure_view_form" model="ir.ui.view">
        <field name="name">pod.procedure.view.form</field>
        <field name="model">pod.procedure</field>
        <field
            name="inherit_id"
            ref="pod_clinical_procedure.pod_procedure_view_form"
        />
        <field name="arch" type="xml">
            <field name="service_id" position="after">
                <field name="procedure_service_id" />
            </field>
            <field name="service_id" position="attributes">
                <attribute name="attrs">{}</attribute>
            </field>
            <notebook position="inside">
                <page
                    name='commission'
                    string="Commission Agent"
                    attrs="{'invisible':[('pod_commission', '=', False)]}"
                >
                    <group name="commission_agent">
                        <field name="pod_commission" invisible="1" />
                        <field
                            name="variable_fee"
                            attrs="{'invisible':[('pod_commission', '=', False)]}"
                        />
                        <field
                            name="fixed_fee"
                            attrs="{'invisible':[('pod_commission', '=', False)]}"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
