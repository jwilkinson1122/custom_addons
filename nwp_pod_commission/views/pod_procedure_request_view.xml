<odoo>
    <record id="pod_procedure_request_view_form" model="ir.ui.view">
        <field name="name">pod.procedure.request.view.form</field>
        <field name="model">pod.procedure.request</field>
        <field
            name="inherit_id"
            ref="pod_clinical_procedure.pod_procedure_request_view_form"
        />
        <field name="arch" type="xml">
            <field name="performer_id" position="after">
                <field name="pod_commission" invisible="1" />
                <field
                    name="variable_fee"
                    attrs="{'invisible':[('pod_commission', '=', False)]}"
                />
                <field
                    name="fixed_fee"
                    attrs="{'invisible':[('pod_commission', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
