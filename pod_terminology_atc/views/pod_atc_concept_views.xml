<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="pod_sct_concept_tree">
        <field name="name">pod.atc.concept.tree</field>
        <field name="model">pod.atc.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_uniparent_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="delete">false</attribute>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="pod_sct_concept_form">
        <field name="name">pod.atc.concept.form</field>
        <field name="model">pod.atc.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_uniparent_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="delete">false</attribute>
            </form>
            <field name="code" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="code" position="before">
                <field name="level_code" attrs="{'readonly': [('editable', '=', False)]}" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="pod_atc_concept_filter">
        <field name="name">pod.atc.concept.filter</field>
        <field name="model">pod.atc.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_filter" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="attributes" />
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_prescription_atc_concept_window_action">
        <field name="name">ATC classification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.atc.concept</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="pod_prescription_atc_concept">
        <field name="name">Prescription ATC Concepts</field>
        <field name="parent_id" ref="pod_base.pod_root_terminologies" />
        <field name="action" ref="pod_prescription_atc_concept_window_action" />
        <field name="sequence" eval="20" />
    </record>
    
</odoo>
