<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pod_flag_view_tree" model="ir.ui.view">
        <field name="name">pod.flag.view.tree</field>
        <field name="model">pod.flag</field>
        <field name="inherit_id" ref="pod_administration_flag.pod_flag_view_tree" />
        <field name="arch" type="xml">
            <field name="internal_identifier" position="before">
                <field name="flag" />
                <field name="level" invisible="1" />
            </field>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-success">level=='1'</attribute>
                <attribute name="decoration-muted">level=='2'</attribute>
                <attribute name="decoration-warning">level=='3'</attribute>
                <attribute name="decoration-danger">level=='4'</attribute>
            </xpath>
        </field>
    </record>

    <record id="pod_flag_view_form" model="ir.ui.view">
        <field name="name">pod.flag.view.form</field>
        <field name="model">pod.flag</field>
        <field name="inherit_id" ref="pod_administration_flag.pod_flag_view_form" />
        <field name="arch" type="xml">
            <field name="internal_identifier" position="before">
                <field name="flag" />
            </field>
        </field>
    </record>
    
</odoo>
