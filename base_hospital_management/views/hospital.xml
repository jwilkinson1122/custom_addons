<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hospital_by_parent" model="ir.actions.act_window">
        <field name="name">Hospitals</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('parent_id', '=', active_id)]</field>
        <field name="context">{'can_edit_parent_id': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create a new practice
            </p>
            <p>
                    Organize and manage practices at a glance.
            </p>
        </field>
    </record>

    <!--Inherit Partner search view-->
    <record id="view_hospital_filter" model="ir.ui.view">
        <field name="name">hospital.search.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Hospitals" name="is_hospital" domain="[('is_hospital', '=', True)]" />
            </xpath>
        </field>
    </record>


    <record id="hospital_search" model="ir.ui.view">
        <field name="name">hospital.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Hospitals">
                <field name="hospital_seq" />
                <field name="parent_id" invisible="1"/>
                <field name="name"/>
                <field name="display_name"/>
                <field name="parent_id" operator="child_of"/>
                <separator/>
                <filter string="Hospital" name="is_hospital" domain="[('is_hospital', '=', 'hospital')]"/>
                <separator/>
                <filter string="Archived" name="filter_inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <searchpanel>
                    <field name="hospital_id" icon="fa fa-building" enable_counters="1" groups="base.group_multi_company"/>
                    <field name="parent_id" string="Practice" icon="fa fa-cubes" enable_counters="1" hierarchize="1" expand="1"/>
                </searchpanel>
            </search>
        </field>
    </record>


