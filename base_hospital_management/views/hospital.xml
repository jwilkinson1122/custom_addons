<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_form" model="ir.ui.view">
        <field name="name">hospital.hospital.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_128" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="hospital_seq" placeholder="Hospital No." required="True"/>
                        </h1>
                        <h2>
                            <field name="name" placeholder="Hospital's Name"/>
                        </h2>
                    </div>
                    <div name="parent_practice_id">
                        <field name="parent_id" placeholder="Parent Practice" readonly="not context.get('can_edit_parent_id', True)"/>
                    </div>
                    <div>
                        <field name="hosp_type"/>
                    </div>
            
                    <notebook>
                        <page name="contact" string="Contact Info">
                            <!-- <group>
                                <group>
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                </group>
                            </group> -->
                            <group name="practice_contact">
                                <group name="address_information" string="Address Information">
                                    <span class="o_form_label o_td_label" name="address">Address</span>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                                    </div>
                                </group>
                                <group name="contact_information" string="Contact Information">
                                    <!-- <field name="hosp_type" required="True"/> -->
                                    <field name="mobile" widget="phone" help="help"/>
                                    <field name="phone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                            </group>
                        </page>
                        
                        <page name="medical" string="Medical">
                            <group string="Prescriptions"/>
                            <field name="prescription_ids">
                                <tree editable="bottom" create="0">
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                    <field name="hospital_id"/>
                                    <field name="medicine_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Internal notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                </div>
            </form>
        </field>
    </record>
    <record id="hospital_tree" model="ir.ui.view">
        <field name="name">hospital.hospital.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" eval="False"/>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="hospital_seq"/>
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>
    <record id="hospital_action" model="ir.actions.act_window">
        <field name="name">Hospitals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="view_ids" eval="[(5, 0, 0),
               (0, 0, {'view_mode': 'tree', 'view_id': ref('base_hospital_management.hospital_tree')}),
               (0, 0, {'view_mode': 'form', 'view_id': ref('base_hospital_management.hospital_form')})]"/>
        <!-- <field name="context">{'default_is_company': True}</field> -->
        <field name="domain">[('is_hospital', '=', True)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'search_default_is_hospital': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a hospital in your address book
            </p>
            <p>
                Odoo helps you to easily track all activities related to a hospital.
            </p>
        </field>
    </record>


    <!-- <menuitem name="Hospital Management" id="hospital_root" sequence="9"/>
    <menuitem name="Hospital" id="hospital_hospital_root" parent="hospital_root" sequence="8"/>
    <menuitem name="Hospital" id="hospital_hospital" parent="hospital_hospital_root" action="action_contacts" sequence="8"/> -->
</odoo>