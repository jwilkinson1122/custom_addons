    <record id="view_partner_search" model="ir.ui.view">
        <field name="name">inherit.res.partner.search.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_prescriptions_contact.res_partner_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <filter string="Parent Company" name="is_company_parent" domain="[('is_company_parent','=',True)]"/>
                <separator/>
            </xpath>
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter name="group_parent_company" string="Parent Company" context="{'group_by': 'highest_parent_id'}"/>
            </xpath>

        </field>
    </record>

