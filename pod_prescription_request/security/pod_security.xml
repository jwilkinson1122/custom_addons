<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_prescription_request_display" model="res.groups">
        <field name="name">Prescription Request Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_prescription.group_pod_prescription_display')), (4, ref('pod_clinical.group_pod_view_requests'))]" />
    </record>
    <record id="group_pod_prescription_request_list" model="res.groups">
        <field name="name">Prescription Request List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_request_display'))]" />
    </record>
    <record id="group_pod_prescription_request_manager" model="res.groups">
        <field name="name">Prescription Request Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_request_list'))]" />
    </record>
    <record id="group_pod_prescription_administration_display" model="res.groups">
        <field name="name">Prescription Administration Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_request_display')), (4, ref('pod_clinical.group_pod_view_requests')), (4, ref('pod_administration_location.group_pod_location_display'))]" />
    </record>
    <record id="group_pod_prescription_administration_list" model="res.groups">
        <field name="name">Prescription Administration List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_administration_display')),(4, ref('group_pod_prescription_request_list')), (4, ref('pod_clinical.group_pod_view_requests'))]" />
    </record>
    <record id="group_pod_prescription_administration_manager" model="res.groups">
        <field name="name">Prescription Administration Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_administration_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_request_display')), (4, ref('group_pod_prescription_administration_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_request_manager')), (4, ref('group_pod_prescription_administration_manager'))]" />
    </record>
</odoo>
