<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_prescription_request_view_tree" model="ir.ui.view">
        <field name="name">pod.prescription.request.view.tree</field>
        <field name="model">pod.prescription.request</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">REQ</attribute>
                <attribute name="decoration-muted">state=='cancelled'</attribute>
            </xpath>
        </field>
    </record>
    <record id="pod_prescription_request_view_form" model="ir.ui.view">
        <field name="name">pod.prescription.request.view.form</field>
        <field name="model">pod.prescription.request</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">REQ</attribute>
            </form>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_prescription_administration" class="oe_stat_button" icon="fa-pills" groups="pod_prescription_request.group_pod_prescription_administration_list" attrs="{'invisible': [('state','=','draft')]}">
                    <field name="prescription_administration_count" widget="statinfo" string="Administrations" />
                    <field name='prescription_administration_ids' invisible="1" />
                </button>
            </xpath>
            <field name="service_id" position="after">
                <field name="product_id" />
                <label for="qty" />
                <div class="o_row">
                    <field name="qty" />
                    <field name="product_uom_id" groups="uom.group_uom" />
                </div>
            </field>
            <field name="service_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <notebook position="attributes">
                <attribute name="invisible">0</attribute>
            </notebook>
        </field>
    </record>
    <record id="pod_prescription_request_view_search" model="ir.ui.view">
        <field name="name">pod.prescription.request.view.search</field>
        <field name="model">pod.prescription.request</field>
        <field name="arch" type="xml">
            <search string="Pod Care Plan">
                <field name="internal_identifier" />
                <field name="name" />
                <field name="patient_id" />
                <field name="state" />
                <field name="intent" />
                <newline />
                <filter name="draft" domain="[('state', '=', 'draft')]" help="Draft" />
                <filter name="active" domain="[('state', '=', 'active')]" help="Active" />
                <filter name="completed" domain="[('state', '=', 'completed')]" help="Completed" />
                <filter name="suspended" domain="[('state', '=', 'suspended')]" help="On Hold" />
                <filter name="error" domain="[('state', '=', 'entered-in-error')]" help="Error" />
                <filter name="cancelled" domain="[('state', '=', 'cancelled')]" help="Cancelled" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" name="group_by_patient" domain="[]" context="{'group_by':'patient_id'}" />
                    <filter string="Name" name="group_by_name" domain="[]" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_prescription_request_action">
        <field name="name">Rx Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.prescription.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="pod_prescription_request" name="Rx Request" parent="pod_base.pod_root_prescriptions" groups="pod_prescription_request.group_pod_prescription_request_list" action="pod_prescription_request_action" sequence="0" />
</odoo>
