<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_saleorder_document"
        inherit_id="sale.report_saleorder_document"
    >
        <xpath
            expr="//div[@t-field='doc.partner_invoice_id']/../../.."
            position="inside"
        >
            <div class="col-6">
                <img
                    t-att-src="'/report/qr/?value=%s&amp;error_correction=%s' % (doc.get_quick_access_code(), 3)"
                    style="width:50;height:50;float:right"
                />
            </div>
        </xpath>
    </template>
</odoo>
