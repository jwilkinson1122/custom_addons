<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="sepa_direct_debit_mandate_document"
        inherit_id="account_banking_sepa_direct_debit.sepa_direct_debit_mandate_document"
    >
        <xpath expr="/t/div" position="inside">
            <div class="row">
                <div class="col-12 text-center">
                    <img
                        t-att-src="'/report/qr/?value=%s&amp;error_correction=%s' % (doc.get_quick_access_code(), 3)"
                        style="width:100;height:100"
                    />
                </div>
            </div>
        </xpath>
    </template>
</odoo>
