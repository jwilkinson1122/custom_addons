<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pod_laboratory_service_view_form" model="ir.ui.view">
        <field name="name">pod.laboratory.service.view.form</field>
        <field name="model">pod.laboratory.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="toggle_active"
                            type="object"
                            confirm="Are you sure you want to archive/unarchive this element?"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="code" />
                        </h1>
                        <h2>
                            <field name="name" />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="laboratory_code" />
                            <field name="delay" />
                        </group>
                    </group>
                    <notebook>
                        <page name="price" string="Prices">
                            <field name="service_price_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pod_laboratory_service_view_tree" model="ir.ui.view">
        <field name="name">pod.laboratory.service.view.tree</field>
        <field name="model">pod.laboratory.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="laboratory_code" />
                <field name="delay" />
            </tree>
        </field>
    </record>
    <record id="pod_laboratory_service_price_view_form" model="ir.ui.view">
        <field name="name">pod.laboratory.service.price.view.form</field>
        <field name="model">pod.laboratory.service.price</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="laboratory_service_id" />
                    <group>
                        <field name="laboratory_code" />
                        <field name="amount" />
                        <field name="cost" />
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="pod_laboratory_service_price_view_tree" model="ir.ui.view">
        <field name="name">pod.laboratory.service.price.view.tree</field>
        <field name="model">pod.laboratory.service.price</field>
        <field name="arch" type="xml">
            <tree>
                <field name="laboratory_service_id" invisible="1" />
                <field name="laboratory_code" />
                <field name="amount" />
                <field name="cost" />
            </tree>
        </field>
    </record>
    <record id="pod_laboratory_service_action" model="ir.actions.act_window">
        <field name="name">Laboratory service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.laboratory.service</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="pod_laboratory_service_menu"
        name="Laboratory services"
        sequence="90"
        parent="contacts.res_partner_menu_config"
        action="pod_laboratory_service_action"
    />
</odoo>
