<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pod_product_tpooings_update_form" model="ir.ui.view">
        <field name='name'>pod.mass.update.options.form</field>
        <field name='model'>pod.mass.update.topings</field>
        <field name='arch' type='xml'>
            <form string='Update Options'>
                <sheet>
                    <group>
                        <field name="pod_option_group_ids" widget="many2many_tags" />
                        <field name="pod_option_product_ids" widget="many2many_tags" />
                    </group>
                    <footer>
                        <button class="btn btn-primary" name="updateOptions" type="object" string="Confirm" />
                        <button string="cancel" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pod_mass_update_optiond_wizard" model="ir.actions.server">
        <field name="name">Update Options</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_update_options()
        </field>
    </record>
</odoo>