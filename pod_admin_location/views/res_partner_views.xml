<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="groups_id" eval="[(4, ref('podiatry_administration_location.group_podiatry_location_display'))]" />
        <field name="arch" type="xml">
            <field name="company_type" position="attributes">
                <attribute name="attrs">{'invisible': [('is_location','=',True)]}</attribute>
            </field>
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_location" invisible="1" />
            </xpath>
            <xpath expr="//h1" position="after">

                <field name="is_location" invisible="1" />
                <h1>
                    <field name="location_identifier" attrs="{'invisible': [('is_location','=',False)]}" />

                </h1>


                <!-- <h1>
                    <field id="company" class="o_text_overflow" name="name" default_focus="1" placeholder="e.g. Lumber Inc" attrs="{'required' : [('type', '=', 'contact'),('is_company', '=', True)], 'invisible': [('is_company','=', False)]}"/>
                    <field id="individual" class="o_text_overflow" name="name" default_focus="1" placeholder="e.g. Brandom Freeman" attrs="{'required' : [('type', '=', 'contact'), ('is_company', '=', False)], 'invisible': [('is_company','=', True)]}"/>
                </h1> -->
            </xpath>
        </field>
    </record>
    <record id="res_partner_view_edit_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="groups_id" eval="[(4, ref('podiatry_administration_location.group_podiatry_location_manager'))]" />
        <field name="arch" type="xml">
            <field name="location_identifier" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
    <record id="podiatry_location_action" model="ir.actions.act_window">
        <field name="name">Practice Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_location', '=', True)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_location': True, 'default_is_prescription': True}</field>
    </record>
</odoo>
