<odoo>
    <record id="ir_sftp_server_view_tree" model="ir.ui.view">
        <field name="name">ir.sftp.server.view.tree</field>
        <field name="model">ir.sftp_server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
                <field name="port"/>
            </tree>
        </field>
    </record>

    <record id="ir_sftp_server_view_form" model="ir.ui.view">
        <field name="name">ir.sftp.server.view.form</field>
        <field name="model">ir.sftp_server</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="row">
                        <button name="test_get_connection" icon="fa-arrow-right" type="object" string="Check connection (if no error is raised all is fine)" class="btn-link"/>
                    </div>
                    <group name="sftp_server_main_group">
                        <group name="url_group">
                            <field name="url"/>
                            <field name="port"/>
                            <field name="timeout"/>
                            <field name="path_for_connection_test"/>
                        </group>
                        <group name="credentials_group">
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                        <group name="key_group">
                            <field name="fingerprint" password="True"/>
                            <field name="key_type" required="fingerprint" invisible="not fingerprint"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ir_sftp_server_action_outgoing" model="ir.actions.act_window">
        <field name="name">Outgoing SFTP Servers</field>
        <field name="res_model">ir.sftp_server</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('ir_sftp_server_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('ir_sftp_server_view_form')})]"/>
        <field name="domain">[('server_type', '=', 'out')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No sftp servers were created yet.</p>
        </field>
    </record>
    <record id="ir_sftp_server_action_incoming" model="ir.actions.act_window">
        <field name="name">Incoming SFTP Servers</field>
        <field name="res_model">ir.sftp_server</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('ir_sftp_server_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('ir_sftp_server_view_form')})]"/>
        <field name="context">{ 'default_server_type': 'in' }</field>
        <field name="domain">[('server_type', '=', 'in')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No sftp servers were created yet.</p>
        </field>
    </record>
</odoo>
