<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="podiatry_device_request_view_tree" model="ir.ui.view">
        <field name="name">podiatry.device.request.view.tree</field>
        <field name="model">podiatry.device.request</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="podiatry_workflow.podiatry_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Rx Request</attribute>
                <attribute name="decoration-muted">state=='cancelled'</attribute>
            </xpath>
        </field>
    </record>
    <record id="podiatry_device_request_view_form" model="ir.ui.view">
        <field name="name">podiatry.device.request.view.form</field>
        <field name="model">podiatry.device.request</field>
        <field name="inherit_id" ref="podiatry_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Rx request</attribute>
            </form>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_device_administration" class="oe_stat_button" icon="fa-pills" groups="podiatry_device_request.group_podiatry_device_administration_list" attrs="{'invisible': [('state','=','draft')]}">
                    <field name="device_administration_count" widget="statinfo" string="Administrations" />
                    <field name='device_administration_ids' invisible="1" />
                </button>
            </xpath>
            <field name="service_id" position="after"></field>
            <field name="service_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
            <notebook position="attributes">
                <attribute name="invisible">0</attribute>

            </notebook>
        </field>
    </record>
    <record id="podiatry_device_request_view_search" model="ir.ui.view">
        <field name="name">podiatry.device.request.view.search</field>
        <field name="model">podiatry.device.request</field>
        <field name="arch" type="xml">
            <search string="Podiatry Care Plan">
                <field name="internal_identifier"/>
                <field name="name" />
                <field name="patient_id" />
                <field name="state" />
                <field name="intent" />
                <newline />
                <filter name="draft" domain="[('state', '=', 'draft')]" help="Draft" />
                <filter name="active" domain="[('state', '=', 'active')]" help="Active" />
                <filter name="completed" domain="[('state', '=', 'completed')]" help="Completed" />
                <filter name="suspended" domain="[('state', '=', 'suspended')]" help="Suspended" />
                <filter name="error" domain="[('state', '=', 'entered-in-error')]" help="Error" />
                <filter name="cancelled" domain="[('state', '=', 'cancelled')]" help="Cancelled" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" name="group_by_patient" domain="[]" context="{'group_by':'patient_id'}" />
                    <filter string="Name" name="group_by_name" domain="[]" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="podiatry_device_request_action">
        <field name="name">Prescription requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.device.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="podiatry_device_request" name="Requests" parent="podiatry_base.podiatry_root_devices" groups="podiatry_device_request.group_podiatry_device_request_list" action="podiatry_device_request_action" sequence="0" />
</odoo>
