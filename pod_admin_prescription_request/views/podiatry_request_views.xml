<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="podiatry_request_form">
        <field name="name">podiatry.request.form</field>
        <field name="model">podiatry.request</field>
        <field name="inherit_id" ref="podiatry_workflow.podiatry_request_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_request" class="oe_stat_button" icon="fa-file-text-o" attrs="{'readonly':[('is_editable', '=', False)]}" groups="podiatry_device_request.group_podiatry_device_request_list" context="{'model_name': 'podiatry.device.request'}">
                    <field name="device_request_count" widget="statinfo" string="Rx Requests" />
                    <field name='device_request_ids' invisible="1" />
                </button>
            </xpath>
            <group name="inheritance" position="inside">
                <field name="device_request_id" readonly="1" options="{'no_create': True, 'no_open': True}" attrs="{'invisible': [('device_request_id', '=', False)]}" />
            </group>
            <notebook position="attributes">
                <attributes name="invisible">0</attributes>
            </notebook>
        </field>
    </record>
    <record id="podiatry_request_form_device_request" model="ir.ui.view">
        <field name="name">podiatry.request.view.form</field>
        <field name="model">podiatry.request</field>
        <field name="inherit_id" ref="podiatry_request_form" />
        <field name="groups_id" eval="[(4, ref('group_podiatry_device_request_list'))]" />
        <field name="arch" type="xml">
            <field name="device_request_id" position="attributes">
                <attribute name="options">{'no_open': False, 'no_create': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
