<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_podiatry_device_request_display" model="res.groups">
        <field name="name">Device Request Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('podiatry_device.group_podiatry_device_display')), (4, ref('podiatry_clinical.group_podiatry_view_requests'))]" />
    </record>
    <record id="group_podiatry_device_request_list" model="res.groups">
        <field name="name">Device Request List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_request_display'))]" />
    </record>
    <record id="group_podiatry_device_request_manager" model="res.groups">
        <field name="name">Device Request Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_request_list'))]" />
    </record>
    <record id="group_podiatry_device_administration_display" model="res.groups">
        <field name="name">Device Administration Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_request_display')), (4, ref('podiatry_clinical.group_podiatry_view_requests')), (4, ref('podiatry_administration_location.group_podiatry_location_display'))]" />
    </record>
    <record id="group_podiatry_device_administration_list" model="res.groups">
        <field name="name">Device Administration List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_administration_display')),(4, ref('group_podiatry_device_request_list')), (4, ref('podiatry_clinical.group_podiatry_view_requests'))]" />
    </record>
    <record id="group_podiatry_device_administration_manager" model="res.groups">
        <field name="name">Device Administration Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_administration_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="podiatry_base.group_podiatry_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_request_display')), (4, ref('group_podiatry_device_administration_display'))]" />
    </record>
    <record id="podiatry_base.group_podiatry_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_request_manager')), (4, ref('group_podiatry_device_administration_manager'))]" />
    </record>
</odoo>
