<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <!--
    Action: Patients
    -->

    <record id="open_podiatry_patients_from_partner" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="domain">[('partner_id', '=', active_id)]</field>
    </record>

    <record id="open_podiatry_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!-- <field name="domain">[('is_patient', '=', True)]</field> -->
        <field name="search_view_id" ref="view_podiatry_patient_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new patient
            </p>
            <p>
                Schedule and organize your patients efficiently.
            </p>
        </field>
    </record>
    <!--Action-->
    <record id="open_podiatry_patients_report" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="view_podiatry_patient_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No patients
            </p>
            <p>
                Create a patient to begin.
            </p>
        </field>
    </record>

    <!--Action: Practices-->
    <record id="open_podiatry_practices" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="res_model">podiatry.practice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_practice', '=', True)]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practice_search"/>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_practice': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new practice
            </p>
            <p>
                Organize and manage practices at a glance.
            </p>
        </field>
    </record>

    <!--Action: Contacts-->
    <record id="open_podiatry_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">podiatry.practitioner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!-- <field name="domain">[('is_practitioner', '=', True)]</field> -->
        <field name="domain">[]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practitioner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new practitioner
            </p>
            <p>
                Schedule and organize your practitioners efficiently.
            </p>
        </field>
    </record>

    <!--Action-->
    <record id="open_podiatry_contacts_report" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">podiatry.practitioner</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="view_podiatry_practitioner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No practitioners
            </p>
            <p>
                Create a practitioner to begin.
            </p>
        </field>
    </record>

    <!--Action-->
    <record id="open_prescription_order" model="ir.actions.act_window">
        <field name="name">Prescription Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescription.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                        Click to create a New Order.
            </p>
        </field>
    </record>


    <record id="action_washing_work" model="ir.actions.act_window">
        <field name="name">Additional Works</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">washing.work</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_washing" model="ir.actions.act_window">
        <field name="name">Washing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">washing.washing</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id','=', uid)]</field>
    </record>


    <record id="open_prescription_order_analysis" model="ir.actions.act_window">
        <field name="name">Prescription Order Analysis</field>
        <field name="res_model">report.prescription.order</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
        <field name="help">This report allows you to analyse the performance of your Prescription Mangement. </field>
    </record>


    
</odoo>
