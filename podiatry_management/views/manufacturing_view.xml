<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="manufacturing_form_view" model="ir.ui.view">
            <field name="name">manufacturing.manufacturing.form</field>
            <field name="model">manufacturing.manufacturing</field>
            <field name="arch" type="xml">
                <form string="Manufacturing" create="false">
                    <header>
                        <button name="start_manufacture" class="oe_highlight" string="Start" type="object" states="draft"/>
                        <button name="set_to_done" class="oe_highlight" string="Set to Done" type="object" states="process"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,process,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="manufacturing_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Additional Products">
                                <field name="product_line" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="price_unit"/>
                                        <field name="subtotal"/>
                                        <field name="manufacture_obj" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="product_total">
                                    <field name="total_amount" widget='monetary'/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="manufacturing_tree_view" model="ir.ui.view">
            <field name="name">manufacturing.manufacturing.tree</field>
            <field name="model">manufacturing.manufacturing</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" decoration-info="state == 'draft'">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="manufacturing_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_manufacturing" model="ir.actions.act_window">
            <field name="name">Manufacturing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manufacturing.manufacturing</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_id','=', uid)]</field>
        </record>

        <menuitem id="podiatry_manufacturing" name="Podiatry Works" parent="podiatry_management_sub_menu" action="action_manufacturing" sequence="2"/>

    </data>
</odoo>