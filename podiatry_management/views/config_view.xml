<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="manufacturing_type_form_view" model="ir.ui.view">
            <field name="name">manufacturing.type.form</field>
            <field name="model">manufacturing.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="assigned_person"/>
                            </group>
                            <group>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="manufacturing_type_tree_view" model="ir.ui.view">
            <field name="name">manufacturing.type.tree</field>
            <field name="model">manufacturing.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="assigned_person"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="action_manufacturing_type" model="ir.actions.act_window">
            <field name="name">Manufacturing Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manufacturing.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="manufacturing_work_form_view" model="ir.ui.view">
            <field name="name">manufacturing.work.form</field>
            <field name="model">manufacturing.work</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="assigned_person"/>
                            </group>
                            <group>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="manufacturing_work_tree_view" model="ir.ui.view">
            <field name="name">manufacturing.work.tree</field>
            <field name="model">manufacturing.work</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="assigned_person"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>

        <record id="action_manufacturing_work" model="ir.actions.act_window">
            <field name="name">Additional Works</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manufacturing.work</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="podiatry_config_menu" name="Configuration" parent="podiatry_management_menu" sequence="3"/>
        <menuitem id="podiatry_customer" name="Customers" parent="podiatry_config_menu" action="base.action_partner_customer_form" sequence="1"/>
        <menuitem id="podiatry_products" name="Products" parent="podiatry_config_menu" action="product.product_normal_action_sell" sequence="2"/>
        <menuitem id="podiatry_manufacturing_type" name="Manufacturing Type" parent="podiatry_config_menu" action="action_manufacturing_type" sequence="3"/>
        <menuitem id="podiatry_manufacturing_work" name="Additional Works" parent="podiatry_config_menu" action="action_manufacturing_work" sequence="4"/>

    </data>
</odoo>