<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_report_podiatry_order" model="ir.ui.view">
            <field name="name">report.podiatry.order.pivot</field>
            <field name="model">report.podiatry.order</field>
            <field name="arch" type="xml">
                <pivot string="Podiatry Order Analysis" display_quantity="true" disable_linking="True">
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="action_podiatry_order_analysis" model="ir.actions.act_window">
            <field name="name">Podiatry Order Analysis</field>
            <field name="res_model">report.podiatry.order</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
            <field name="help">This report allows you to analyse the performance of your Podiatry Mangement. </field>
        </record>

        <menuitem id="podiatry_report_menu" name="Report" parent="podiatry_management_menu" sequence="2"/>
        <menuitem name="Podiatry Order Analysis" action="action_podiatry_order_analysis" id="menu_podiatry_order_analysis" parent="podiatry_report_menu" sequence="1"/>

    </data>
</odoo>