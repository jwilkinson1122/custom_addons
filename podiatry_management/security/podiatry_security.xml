<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="module_podiatry_category" model="ir.module.category">
            <field name="name">Podiatry</field>
            <field name="sequence">18</field>
        </record>
        <record id="podiatry_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_podiatry_category"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="podiatry_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('podiatry_group_user'))]"/>
            <field name="category_id" ref="module_podiatry_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="podiatry_order_admin_rule" model="ir.rule">
            <field name="name">podiatry manager: full access</field>
            <field name="model_id" ref="model_podiatry_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('podiatry_group_manager'))]"/>
        </record>
        <record id="podiatry_order_user_rule" model="ir.rule">
            <field name="name">user: own document only</field>
            <field name="model_id" ref="model_podiatry_order"/>
            <field name="domain_force">[('podiatry_person.id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('podiatry_group_user'))]"/>
        </record>
    </data>
</odoo>
