<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="module_prescription_category" model="ir.module.category">
            <field name="name">Prescription</field>
            <field name="sequence">18</field>
        </record>
        <record id="prescription_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_prescription_category"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="prescription_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="category_id" ref="module_prescription_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="prescription_order_admin_rule" model="ir.rule">
            <field name="name">prescription manager: full access</field>
            <field name="model_id" ref="model_prescription_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('prescription_group_manager'))]"/>
        </record>
        <record id="prescription_order_user_rule" model="ir.rule">
            <field name="name">user: own document only</field>
            <field name="model_id" ref="model_prescription_order"/>
            <field name="domain_force">[('user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('prescription_group_user'))]"/>
        </record>
    </data>
</odoo>
