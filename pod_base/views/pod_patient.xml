    <record id="pod_patient_his_form" model="ir.ui.view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="birth_date" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="patient_age" />
                            <field name="vat" />
                        </group>
                    </group>
                    <notebook>
                        <page name="administration_data" string="Administration Info">
                            <group>
                                <group id="pod_administration_contact">
                                    <field name="email" />
                                    <field name="mobile" />
                                </group>
                                <group id="pod_administration_street">
                                    <field name="street" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

