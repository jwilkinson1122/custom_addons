<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <!-- Pod Category -->
    <record id="ir_module_category_pod" model="ir.module.category">
        <field name="name">Podiatry</field>
    </record>
    <!-- Menu Groups -->
    <record id="group_pod_root_menu" model="res.groups">
        <field name="name">Root menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_administration_menu" model="res.groups">
        <field name="name">Administration menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_clinical_menu" model="res.groups">
        <field name="name">Clinical menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_diagnostics_menu" model="res.groups">
        <field name="name">Diagnostics menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_prescriptions_menu" model="res.groups">
        <field name="name">Prescriptions menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_financial_menu" model="res.groups">
        <field name="name">Financial menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_workflow_menu" model="res.groups">
        <field name="name">Workflow menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_configuration_menu" model="res.groups">
        <field name="name">Configuration menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_specialties_menu" model="res.groups">
        <field name="name">Specialties menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_terminologies_menu" model="res.groups">
        <field name="name">Terminologies menu</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <!-- Generic groups -->
    <record id="group_pod_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_pod_root_menu')),
                      (4, ref('group_pod_administration_menu')),
                      (4, ref('group_pod_clinical_menu')),
                      (4, ref('group_pod_diagnostics_menu')),
                      (4, ref('group_pod_prescriptions_menu')),
                      (4, ref('group_pod_financial_menu')),
                      (4, ref('group_pod_workflow_menu')),
                      (4, ref('group_pod_configuration_menu')),
                      (4, ref('group_pod_specialties_menu')),
                      (4, ref('group_pod_terminologies_menu')),
                      (4, ref('base.group_user'))]" />
    </record>
    <record id="group_pod_configurator" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[(4, ref('group_pod_user')),
                      (4, ref('base.group_erp_manager'))]" />
    </record>
</odoo>
