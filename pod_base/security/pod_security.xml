<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="ir_module_category_podiatry" model="ir.module.category">
        <field name="name">Podiatry Management</field>
    </record>
    <record id="group_user" model="res.groups">
        <field name="name">General User</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
    </record>
    <record id="group_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">The user will have access to sytem configurations and reporting.</field>
        <field name="category_id" ref="ir_module_category_podiatry"/>
        <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('group_manager'))]"/>
    </record>
    <record id="group_practitioner" model="res.groups">
        <field name="name">Practitioner</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager'))]" />
    </record>
    <record id="group_assistant" model="res.groups">
        <field name="name">Assistant</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('group_practitioner'))]" />
    </record>
    <record id="group_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('group_practitioner')), (4, ref('group_assistant'))]" />
    </record>
    <record id="group_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('group_practitioner')), (4, ref('group_assistant'))]" />
    </record>
    <record id="group_receptionist" model="res.groups">
        <field name="name">Receptionist</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('group_practitioner')), (4, ref('group_assistant'))]" />
    </record>
    <record id="group_financial" model="res.groups">
        <field name="name">Financial</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_configurator" model="res.groups">
        <field name="name">Configurator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_flag_category_display" model="res.groups">
        <field name="name">Flag Category Display</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager'))]" />
    </record>
    <record id="group_flag_category_manager" model="res.groups">
        <field name="name">Flag Category Manager</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_flag_category_display'))]" />
    </record>
    <record id="group_flag_display" model="res.groups">
        <field name="name">Flag Display</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_manager')), (4, ref('group_flag_category_display'))]" />
    </record>
    <record id="group_flag_manager" model="res.groups">
        <field name="name">Flag Manager</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_flag_display'))]" />
    </record>
    <record id="group_admin" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[
        (4, ref('group_user')), 
        (4, ref('group_manager')),
        (4, ref('group_configurator')),
        (4, ref('group_flag_category_manager')), 
        (4, ref('group_flag_manager')),
        (4, ref('base.group_erp_manager'))
        ]" />
    </record>

    <!-- Partner rules modification -->
    <!-- <record id="base.res_partner_rule_private_partner" model="ir.rule">
    </record> -->
</odoo>
