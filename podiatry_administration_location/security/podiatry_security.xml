<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_podiatry_location_display" model="res.groups">
        <field name="name">Location Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('podiatry_base.group_podiatry_root_menu')), (4, ref('podiatry_base.group_podiatry_administration_menu')), (4, ref('podiatry_administration.group_res_partner_display'))]" />
    </record>
    <record id="group_podiatry_location_list" model="res.groups">
        <field name="name">Location List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_location_display'))]" />
    </record>
    <record id="group_podiatry_location_manager" model="res.groups">
        <field name="name">Location Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_location_list')), (4, ref('podiatry_administration.group_res_partner_manager'))]" />
    </record>
    <record id="podiatry_administration.group_podiatry_patient_display" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_location_display'))]" />
    </record>
    <!-- Generic groups -->
    <record id="podiatry_base.group_podiatry_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_location_display'))]" />
    </record>
    <record id="podiatry_base.group_podiatry_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_location_manager'))]" />
    </record>
    <!-- Record rules -->
    <record id="location_display" model="ir.rule">
        <field name="name">Location Display</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('group_podiatry_location_display'))]" />
        <field name="domain_force">[('is_location', '=', True)]</field>
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="location_manager" model="ir.rule">
        <field name="name">Location Manager</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('group_podiatry_location_manager'))]" />
        <field name="domain_force">[('is_location', '=', True)]</field>
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="partner_display" model="ir.rule">
        <field name="name">Partner Display</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('podiatry_administration.group_res_partner_display'))]" />
        <field name="domain_force">[('is_prescription', '=', False)]</field>
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="partner_manager" model="ir.rule">
        <field name="name">Partner Manager</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('podiatry_administration.group_res_partner_manager'))]" />
        <field name="domain_force">[('is_prescription', '=', False)]</field>
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
</odoo>
