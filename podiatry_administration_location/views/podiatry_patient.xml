<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="podiatry_patient_view_form" model="ir.ui.view">
        <field name="name">podiatry.patient.form</field>
        <field name="model">podiatry.patient</field>
        <field name="inherit_id" ref="podiatry_administration.podiatry_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='primary_doctor_id']" position="after">
                <!-- <h4> -->
                <!-- <label for="podiatry_location_primary_id">Patient Name</label> -->
                <field name="podiatry_location_primary_id" string="Primary Clinic"/>
                <!-- <label for="podiatry_location_primary_id">Patient Name</label> -->
                <field name="podiatry_location_secondary_ids" widget="many2many_tags" string="Secondary Clinic"/>
                <!-- </h4> -->
            </xpath>
        </field>
    </record>
</odoo>
