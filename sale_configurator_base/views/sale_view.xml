<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sale_order_line_config_base_view_form" model="ir.ui.view">
        <field name="name">sale.order.line.config.base.form</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="Sale Order Line base Configurator">
                <sheet>
                    <field name="order_id" invisible="1" />
                    <field name="partner_id" invisible="1" />
                    <field name="pricelist_id" invisible="1" />
                    <field name="display_type" invisible="1" />
                    <field name="invoice_status" invisible="1"/>
                    <field name="product_uom_category_id" invisible="1"/>
                    <field name="product_updatable" invisible="1"/>
                    <field name="price_unit" readonly="1"/>
                    <group>
                        <group attrs="{'invisible': [('display_type', '!=', False)]}">
                            <field name="product_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                        </group>
                    </group>
                    <field name="name"/>
                    <field name="state" invisible="1" />
                    <field name="company_id" invisible="1" />
                    <field name="product_template_id" string="Product" invisible="1" attrs="{
                        'readonly': [('product_updatable', '=', False)],
                        'required': [('display_type', '=', False)],
                    }" context="{
                        'partner_id': parent.partner_id,
                        'quantity': product_uom_qty,
                        'pricelist': parent.pricelist_id,
                        'uom':product_uom,
                        'company_id': parent.company_id,
                        'default_list_price': price_unit,
                        'default_description_sale': name
                    }" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="product_configurator"/>
                    <field name="product_uom_qty" decoration-info="(not display_type and invoice_status == 'to invoice')" decoration-bf="(not display_type and invoice_status == 'to invoice')" context="{
                        'partner_id': parent.partner_id,
                        'quantity': product_uom_qty,
                        'pricelist': parent.pricelist_id,
                        'uom': product_uom,
                        'company_id': parent.company_id
                    }" />
                    <label for="product_uom_qty" string="Ordered Quantity" />
                    <div>
                        <field name="product_uom_qty" context="{'partner_id':partner_id, 'quantity':product_uom_qty, 'pricelist':pricelist_id, 'uom':product_uom, 'uom_qty_change':True, 'company_id': company_id}" class="oe_inline" />
                        <field name="product_uom" force_save="1" groups="uom.group_uom" class="oe_inline oe_no_button" attrs="{
                                            'readonly': [('state', 'in', ('sale', 'done', 'cancel'))],
                                            'required': [('display_type', '=', False)]}" />
                    </div>
                    <!-- Look at models/ir_ui_view.py
                        We dynamically retrieve all field from the sale order form
                    -->
                </sheet>
                <footer>
                    <button name="save_add_product_and_close" string="Save &amp; Close" type="object" class="btn-primary" />
                    <button name="save_add_product_and_new" string="Save &amp; New" type="object" class="btn-primary" />
                    <button name="cancel" string="Cancel" class="btn-secondary" special="cancel" />

                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_sale_line_config_base">
        <field name="name">Sale Line Configure bases</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="sale_order_line_config_base_view_form" />
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
                <field name="id" invisible="1" />
                <button name="%(action_sale_line_config_base)d" type="action" string="Add Configurable Product" class="btn-primary oe_edit_only oe_left" states="draft,sent" context="{'default_order_id': id,
                      'default_name': '/', }" />
            </xpath>
            <xpath expr="//form/field[@name='display_type']" position="before">
                <field name="is_configurable" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']//tree" position="attributes">
                <attribute name="decoration-it">parent_id</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="attrs">{'invisible': [('hide_subtotal', '=', True)]}</attribute>
                <attribute name="string">Opt Subtotal</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree/field[@name='price_subtotal']" position="after">
                <field name="hide_subtotal" invisible="1" />
                <field name="price_config_subtotal" attrs="{'invisible': [('parent_id', '!=', False)]}" string="Subtotal" />
                <field name="is_configurable" invisible="1" />
                <field name="parent_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']//tree/field[@name='sequence']" position="after">
                <button name="open_sale_line_config_base" type="object" icon="fa-th" attrs="{'invisible': ['|', ('state', 'not in', ('draft', 'sent')), ('is_configurable', '=', False)]}" />
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="bases">{'reload_on_button': true}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree/field[@name='product_template_id']" position="attributes">
                <attribute name="class">product</attribute>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_product_configurator" parent="sale.menu_sale_config" sequence="100" name="Product Configurator" />

</odoo>
