<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="pod_patient_view_form" model="ir.ui.view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_view_flags"
                    class="oe_stat_button"
                    icon="fa-flag"
                >
                    <field name="pod_flag_count" widget="statinfo" string="Flags" />
                    <field name='pod_flag_ids' invisible="1" />
                </button>
            </div>
        </field>
    </record>
</odoo>
