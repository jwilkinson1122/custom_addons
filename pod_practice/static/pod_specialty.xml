<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="pod_specialty_view_form" model="ir.ui.view">
        <field name="name">pod.specialty.form</field>
        <field name="model">pod.specialty</field>
        <field name="arch" type="xml">
            <form string="Pod Specialty">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pod_specialty_view_tree" model="ir.ui.view">
        <field name="name">pod.specialty.tree</field>
        <field name="model">pod.specialty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="pod_specialty_view_search" model="ir.ui.view">
        <field name="name">pod.specialty.search</field>
        <field name="model">pod.specialty</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>
    <record id="pod_specialty_action" model="ir.actions.act_window">
        <field name="name">Specialties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.specialty</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="pod_specialty_menu" name="Specialties" parent="pod_root" action="pod_specialty_action" sequence="30" groups="pod_base.group_pod_user" />
</odoo>
