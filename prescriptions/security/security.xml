<odoo>

        <record id="module_category_prescriptions_management" model="ir.module.category">
            <field name="name">Prescriptions</field>
            <field name="description">Allows you to manage your prescriptions.</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_prescriptions_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_productivity_prescriptions"/>
        </record>

        <record id="group_prescriptions_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="base.module_category_productivity_prescriptions"/>
            <field name="implied_ids" eval="[(4, ref('group_prescriptions_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('prescriptions.group_prescriptions_manager'))]"/>
        </record>


        <!-- folder rules -->
        <data noupdate="1">

        <record id="prescriptions_folder_global_rule" model="ir.rule">
            <field name="name">Prescriptions.folder: company</field>
            <field name="model_id" ref="model_prescriptions_folder"/>
            <field name="domain_force">['|',
                ('company_id', '=', False),
                ('company_id',  'in', company_ids)]</field>
        </record>

        <record id="prescriptions_folder_groups_rule" model="ir.rule">
            <field name="name">Prescriptions.folder: groups</field>
            <field name="model_id" ref="model_prescriptions_folder"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|', '|',
                    '&amp;',
                        ('read_group_ids', '=', False),
                        ('group_ids', '=', False),
                    ('group_ids', 'in', [g.id for g in user.groups_id]),
                    ('read_group_ids', 'in', [g.id for g in user.groups_id]),
                ]</field>
        </record>

        <record id="prescriptions_folder_manager_rule" model="ir.rule">
            <field name="name">Prescriptions.folder: manager rule</field>
            <field name="model_id" ref="model_prescriptions_folder"/>
            <field name="groups" eval="[(4, ref('prescriptions.group_prescriptions_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- prescriptions rules -->

        <record id="prescriptions_prescription_global_rule" model="ir.rule">
            <field name="name">Prescriptions.prescription: global</field>
            <field name="model_id" ref="model_prescriptions_prescription"/>
            <field name="domain_force">['|',
                ('folder_id.company_id', '=', False),
                ('folder_id.company_id', 'in', company_ids)]</field>
        </record>

        <!--
            The two following rule apply to base.group_user (instead of group_prescriptions_user) so users can access
            prescriptions on which they have an activity scheduled for them.
        -->
        <record id="prescriptions_prescription_readonly_rule" model="ir.rule">
            <field name="name">Prescriptions.prescription: readonly rule</field>
            <field name="model_id" ref="model_prescriptions_prescription"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '&amp;',
                    ('folder_id.read_group_ids', 'in', [g.id for g in user.groups_id]),
                    '|',
                        ('folder_id.user_specific', '=', False),
                        ('owner_id', '=', user.id)
                ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="prescriptions_prescription_write_rule" model="ir.rule">
            <field name="name">Prescriptions.prescription: folder write groups</field>
            <field name="model_id" ref="model_prescriptions_prescription"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[
                '|',
                    '&amp;',
                        ('folder_id.group_ids', 'in', [g.id for g in user.groups_id]),
                        '|',
                            ('folder_id.user_specific_write', '=', False),
                            ('owner_id', '=', user.id),
                    '&amp;',
                        ('folder_id.read_group_ids', '=', False),
                        ('folder_id.group_ids', '=', False)]
                    </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="prescriptions_prescription_manager_rule" model="ir.rule">
            <field name="name">Prescriptions.prescription: manager rule</field>
            <field name="model_id" ref="model_prescriptions_prescription"/>
            <field name="groups" eval="[(4, ref('prescriptions.group_prescriptions_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- share links rules -->

        <record id="prescriptions_share_folder_company_rule" model="ir.rule">
            <field name="name">Prescriptions.share: company</field>
            <field name="model_id" ref="model_prescriptions_share"/>
            <field name="domain_force">['|',
                ('folder_id.company_id', '=', False),
                ('folder_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="prescriptions_share_folder_create_uid_rule" model="ir.rule">
            <field name="name">Prescriptions.share: create uid</field>
            <field name="model_id" ref="model_prescriptions_share"/>
            <field name="groups" eval="[(4, ref('group_prescriptions_user'))]"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>

        <record id="prescriptions_share_manager_rule" model="ir.rule">
            <field name="name">Prescriptions.share: manager rule</field>
            <field name="model_id" ref="model_prescriptions_share"/>
            <field name="groups" eval="[(4, ref('group_prescriptions_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="mail_plan_rule_group_prescription_manager_prescription" model="ir.rule">
            <field name="name">Manager can manage prescription plans</field>
            <field name="groups" eval="[(4, ref('prescriptions.group_prescriptions_manager'))]"/>
            <field name="model_id" ref="mail.model_mail_activity_plan"/>
            <field name="domain_force">[('res_model', '=', 'prescriptions.prescription')]</field>
            <field name="perm_read" eval="False"/>
        </record>

        <record id="mail_plan_template_rule_group_prescription_manager_prescription" model="ir.rule">
            <field name="name">Manager can manage prescription plan templates</field>
            <field name="groups" eval="[(4, ref('prescriptions.group_prescriptions_manager'))]"/>
            <field name="model_id" ref="mail.model_mail_activity_plan_template"/>
            <field name="domain_force">[('plan_id.res_model', '=', 'prescriptions.prescription')]</field>
            <field name="perm_read" eval="False"/>
        </record>

    </data>
</odoo>
