<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="prescriptions.PrescriptionsListController" t-inherit="web.ListView" t-inherit-mode="primary">
        <xpath expr="//Layout" position="attributes">
            <attribute name="className">(model.useSampleModel ? 'o_view_sample_data' : '') + ' o_prescriptions_content'</attribute>
        </xpath>
        <xpath expr="//Layout" position="inside">
            <t t-set-slot="control-panel-create-button">
                <t t-call="prescriptions.PrescriptionsViews.ControlPanel"/>
            </t>
        </xpath>
        <xpath expr="//Layout/t[@t-component='props.Renderer']" position="attributes">
            <attribute name="inspectedPrescriptions">prescriptionStates.inspectedPrescriptions</attribute>
            <attribute name="previewStore">prescriptionStates.previewStore</attribute>
        </xpath>
    </t>
</templates>
