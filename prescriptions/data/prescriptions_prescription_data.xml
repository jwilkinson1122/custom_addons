<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- base data -->

        <record id="prescriptions_attachment_video_prescriptions" model="prescriptions.prescription" forcecreate="0">
            <field name="name">Video: NWPL Prescriptions</field>
            <field name="type">url</field>
            <field name="url">https://youtu.be/Ayab6wZ_U1A</field>
            <field name="folder_id" ref="prescriptions.prescriptions_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('prescriptions.prescriptions_internal_template_presentations'),
                                               ref('prescriptions.prescriptions_internal_status_validated')])]"/>
        </record>

        <record id="prescriptions_image_multi_pdf_prescription" model="prescriptions.prescription" forcecreate="0">
            <field name="name">Mails_inbox.pdf</field>
            <field name="datas" type="base64" file="prescriptions/data/files/Mails_inbox.pdf"/>
            <field name="folder_id" ref="prescriptions.prescriptions_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('prescriptions.prescriptions_internal_status_inbox')])]"/>
        </record>

        <record id="prescriptions_mail_png" model="prescriptions.prescription" forcecreate="0">
            <field name="name">mail.png</field>
            <field name="datas" type="base64" file="prescriptions/data/files/mail.png"/>
            <field name="folder_id" ref="prescriptions.prescriptions_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('prescriptions.prescriptions_internal_status_inbox')])]"/>
        </record>
        <!-- The thumbnail is added after -->
        <record id="prescriptions.prescriptions_mail_png" model="prescriptions.prescription" forcecreate="0">
            <field name="thumbnail" type="base64" file="prescriptions/data/files/mail_thumbnail.png"/>
        </record>

    </data>
</odoo>
