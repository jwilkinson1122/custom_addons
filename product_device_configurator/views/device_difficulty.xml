<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="device_difficulty_view_tree" model="ir.ui.view">
        <field name="name">device.difficulty.tree</field>
        <field name="model">device.difficulty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="coefficient"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="device_difficulty_view_form" model="ir.ui.view">
        <field name="name">device.difficulty.form</field>
        <field name="model">device.difficulty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main">
                        <group name="left">
                            <field name="name"/>
                            <field name="coefficient"/>
                        </group>
                        <group name="right">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="device_difficulty_action" model="ir.actions.act_window">
        <field name="name">Difficulty Levels</field>
        <field name="res_model">device.difficulty</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
