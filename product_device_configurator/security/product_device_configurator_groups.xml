<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_device_management" model="ir.module.category">
        <field name="name">Device</field>
        <field name="description">Helps you manage device products configurator.</field>
        <field name="sequence">10</field>
    </record>
    <record id="device_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_device_management"/>
    </record>
    <record id="device_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_device_management"/>
        <field name="implied_ids" eval="[(4, ref('device_group_user'))]"/>
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
</odoo>
