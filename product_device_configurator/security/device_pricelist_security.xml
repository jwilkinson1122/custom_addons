<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="device_pricelist_rule_company" model="ir.rule">
        <field name="name">device.pricelist: Multi-Company</field>
        <field name="model_id" ref="product_device_configurator.model_device_pricelist"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="device_pricelist_item_rule_company" model="ir.rule">
        <field name="name">device.pricelist.item: Multi-Company</field>
        <field
            name="model_id"
            ref="product_device_configurator.model_device_pricelist_item"
        />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
