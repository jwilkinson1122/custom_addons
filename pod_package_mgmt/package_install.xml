<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_package_form" model="ir.ui.view">
        <field name="name">package.install.wizard.form</field>
        <field name="model">package.install.wizard</field>
        <field name="arch" type="xml">
            <form string="Add parameters">
                <group>
                    <field name="name"></field>
                </group>

                <footer>
                    <button string="Execute" name="action_install_now" class="btn-primary" type="object"></button>
                    <button string="Cancel" class="btn-secondary" special="cancel"></button>
                </footer>

            </form>
        </field>
    </record>

    <record id="action_package_install_wizard" model="ir.actions.act_window">
        <field name="name">Write Python Command</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">package.install.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wizard_package_form"></field>
        <field name="target">new</field>
    </record>

    <menuitem name="Libraries" id="menu_package_config" parent="base.menu_custom" sequence="11" />
    <menuitem name="Package Install" id="package_install_menu" sequence="1" parent="pod_package_mgmt.menu_package_config" action="action_package_install_wizard"/>

    <!-- <menuitem name="Package Install" id="package_install_menu" sequence="11" parent="base.menu_custom" action="action_package_install_wizard"/> -->

</odoo>