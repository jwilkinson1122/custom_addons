<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="prescriptions_project_rule" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="sequence">3</field>
            <field name="name">Create a Task</field>
            <field name="activity_option">True</field>
            <field name="excluded_tag_ids" model="prescriptions.tag" eval="obj().env.ref('prescriptions.prescriptions_internal_status_deprecated', raise_if_not_found=False) and [(4, obj().env.ref('prescriptions.prescriptions_internal_status_deprecated', raise_if_not_found=False).id)]"/>
            <field name="activity_type_id" ref="prescriptions.mail_prescriptions_activity_data_tv"/>
            <field name="create_model">project.task</field>
            <field name="condition_type">domain</field>
            <field name="domain" eval="[('res_model', '!=', 'project.task')]"/>
            <field name="domain_folder_id" ref="prescriptions.prescriptions_internal_folder"/>
        </record>

        <record id="prescriptions_workflow_action_project" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule"/>
            <field name="action">replace</field>
            <field name="facet_id" model="prescriptions.facet" eval="obj().env.ref('prescriptions.prescriptions_internal_status', raise_if_not_found=False)"/>
            <field name="tag_id" model="prescriptions.tag" eval="obj().env.ref('prescriptions.prescriptions_internal_status_tc', raise_if_not_found=False)"/>
        </record>


        <record id="prescriptions_project_rule_mark_as_draft" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="name">Mark As Draft</field>
            <field name="sequence">10</field>
            <field name="condition_type">domain</field>
            <field name="domain" eval="['|', ('tag_ids', '=', False), ('tag_ids', 'in', [
                ref('prescriptions_project_status_to_validate'),
                ref('prescriptions_project_status_deprecated')])]"/>
            <field name="remove_activities">True</field>
            <field name="domain_folder_id" ref="prescriptions_project_folder"/>
        </record>

        <record id="prescriptions_project_action_mark_as_draft" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule_mark_as_draft"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="prescriptions_project_status"/>
            <field name="tag_id" ref="prescriptions_project_status_draft"/>
        </record>

        <record id="prescriptions_project_rule_ask_for_validation" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="sequence">15</field>
            <field name="name">Ask for Validation</field>
            <field name="condition_type">domain</field>
            <field name="domain" eval="[('tag_ids', 'in', [
                ref('prescriptions_project_status_draft'),
                ref('prescriptions_project_status_validated')])]"/>
            <field name="activity_option">True</field>
            <field name="activity_type_id" ref="prescriptions.mail_prescriptions_activity_data_tv"/>
            <field name="domain_folder_id" ref="prescriptions_project_folder"/>
        </record>

        <record id="prescriptions_project_action_ask_for_validation" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule_ask_for_validation"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="prescriptions_project_status"/>
            <field name="tag_id" ref="prescriptions_project_status_to_validate"/>
        </record>

        <record id="prescriptions_project_rule_validate" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="sequence">20</field>
            <field name="name">Validate</field>
            <field name="condition_type">domain</field>
            <field name="domain" eval="[('tag_ids', 'in', [
                ref('prescriptions_project_status_draft'),
                ref('prescriptions_project_status_to_validate')])]"/>
            <field name="remove_activities">True</field>
            <field name="domain_folder_id" ref="prescriptions_project_folder"/>
        </record>

        <record id="prescriptions_project_action_validate" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule_validate"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="prescriptions_project_status"/>
            <field name="tag_id" ref="prescriptions_project_status_validated"/>
        </record>

        <record id="prescriptions_project_rule_deprecate" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="name">Deprecate</field>
            <field name="sequence">25</field>
            <field name="remove_activities">True</field>
            <field name="domain" eval="['|', ('tag_ids', '=', False), ('tag_ids', 'in', [
                ref('prescriptions_project_status_to_validate'),
                ref('prescriptions_project_status_validated')])]"/>
            <field name="domain_folder_id" ref="prescriptions_project_folder"/>
        </record>

        <record id="prescriptions_project_action_deprecate" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule_deprecate"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="prescriptions_project_status"/>
            <field name="tag_id" ref="prescriptions_project_status_deprecated"/>
        </record>

        <record id="prescriptions_project_rule_task" model="prescriptions.workflow.rule" forcecreate="0">
            <field name="sequence">3</field>
            <field name="name">Create a Task</field>
            <field name="activity_option">True</field>
            <field name="excluded_tag_ids" eval="[Command.link(ref('prescriptions_project_status_deprecated'))]"/>
            <field name="activity_type_id" ref="prescriptions.mail_prescriptions_activity_data_tv"/>
            <field name="create_model">project.task</field>
            <field name="condition_type">domain</field>
            <field name="domain" eval="[('res_model', '!=', 'project.task')]"/>
            <field name="domain_folder_id" ref="prescriptions_project_folder"/>
        </record>

        <record id="prescriptions_workflow_action_task" model="prescriptions.workflow.action" forcecreate="0">
            <field name="workflow_rule_id" ref="prescriptions_project_rule"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="prescriptions_project_status"/>
            <field name="tag_id" ref="prescriptions_project_status_to_validate"/>
        </record>
    </data>
</odoo>
