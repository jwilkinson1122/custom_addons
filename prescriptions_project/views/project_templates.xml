<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="prescriptions_project.portal_tasks_list" inherit_id="project.portal_tasks_list">
        <xpath expr="//div[@name='project_name']" position="inside">
            <span t-if="tasks[0].project_id.use_prescriptions and tasks[0].project_id.shared_prescription_count" class="ms-auto">
                <a class="btn btn-secondary px-1 py-0" target="_blank" t-attf-href="/my/projects/{{ tasks[0].project_id.id }}/prescriptions?{{ keep_query() }}">
                    <t t-out="tasks[0].project_id.shared_prescription_count"/> Prescriptions
                </a>
            </span>
        </xpath>
    </template>
</odoo>
