<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Action of podiatry floor -->
    <record id="open_podiatry_floor_form_tree" model="ir.actions.act_window">
        <field name="name">Floor</field>
        <field name="res_model">podiatry.floor</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device type -->
    <record id="open_podiatry_device_type_form_tree" model="ir.actions.act_window">
        <field name="name">Device Type</field>
        <field name="res_model">podiatry.device.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device accommodations type -->
    <record id="action_podiatry_device_accommodations_type_view_form" model="ir.actions.act_window">
        <field name="name">Accommodations Type</field>
        <field name="res_model">podiatry.device.accommodations.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device accommodations -->
    <record id="action_podiatry_device_accommodations_view_form" model="ir.actions.act_window">
        <field name="name">Accommodations</field>
        <field name="res_model">podiatry.device.accommodations</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_categ_id':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_accommodations_list" />
    </record>
    <!-- Action for podiatry device -->
    <record id="action_podiatry_device_form" model="ir.actions.act_window">
        <field name="name">Device</field>
        <field name="res_model">podiatry.device</field>
        <field name="context">{'default_is_device':1,'default_rental':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_tree" />
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Action for podiatry prescription -->
    <record id="open_podiatry_prescription1_form_tree_all" model="ir.actions.act_window">
        <field name="name">Generate Prescription</field>
        <field name="res_model">podiatry.prescription</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'prescription': True}</field>
    </record>
    <!-- Action for podiatry service type -->
    <record id="open_podiatry_service_type_form_tree" model="ir.actions.act_window">
        <field name="name">Service Type</field>
        <field name="res_model">podiatry.service.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry service -->
    <record id="action_podiatry_services_form" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">podiatry.services</field>
        <field name="context">{'default_is_service':1,'default_available_in_pos':0}
        </field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
