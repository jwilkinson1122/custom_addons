<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_view_form" model="ir.ui.view">
        <field name="name">product.product.form.advanced</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='lst_price']" position="before">
                <field name="esp_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
            </xpath>
            <field name="list_price" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
    <record id="product_product_view_form_normal" model="ir.ui.view">
        <field name="name">product.product.form.normal.advanced</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="product_variant_count" position="after">
                <field name="esp_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
            </field>
            <field name="lst_price" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

</odoo>
