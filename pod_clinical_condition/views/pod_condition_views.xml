<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_condition_view_tree" model="ir.ui.view">
        <field name="name">pod.condition.view.tree</field>
        <field name="model">pod.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="pod_condition_view_form" model="ir.ui.view">
        <field name="name">pod.condition.view.form</field>
        <field name="model">pod.condition</field>
        <field name="arch" type="xml">
            <form string="Condition">
                <header />
                <sheet>
                    <div name="button_box" class="oe_button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <h2>
                        <field name="internal_identifier" readonly="1" />
                    </h2>
                    <group name="details">
                        <group>
                            <field name="patient_id" readonly="1" />
                            <field name="is_allergy" invisible="1" />
                            <field name="create_warning" invisible="1" />
                            <field
                                name="clinical_finding_id"
                                attrs="{'required': [('is_allergy', '=', False)],
                                   'invisible': [('is_allergy', '=', True)]}"
                            />
                            <field
                                name="allergy_id"
                                attrs="{'invisible': [('is_allergy', '=', False)],
                                   'required': [('is_allergy', '=', True)]}"
                            />
                        </group>
                        <group>
                            <field
                                name="criticality"
                                attrs="{'invisible': [('is_allergy', '=', False)]}"
                            />
                            <field
                                name="last_occurrence_date"
                                attrs="{'invisible': [('is_allergy', '=', False)]}"
                            />
                            <field name="active" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="notes" string="Comments">
                            <field name="notes" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_clinical_condition_action">
        <field name="name">Clinical Conditions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.condition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.actions.act_window" id="pod_allergy_action">
        <field name="name">Allergies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.condition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.actions.act_window" id="pod_warning_action">
        <field name="name">Warnings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.condition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
