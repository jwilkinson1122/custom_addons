<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pod_allergy_substance_view_tree" model="ir.ui.view">
        <field name="name">pod.allergy.substance.view.tree</field>
        <field name="model">pod.allergy.substance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="sct_code_id" />
                <field name="create_warning" />
            </tree>
        </field>
    </record>

    <record id="pod_allergy_substance_view_form" model="ir.ui.view">
        <field name="name">pod.allergy.substance.view.form</field>
        <field name="model">pod.allergy.substance</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div name="button_box" class="oe_button_box" />
                    <h2>
                        <field name="internal_identifier" readonly="1" />
                    </h2>
                    <group name="details" cols="4">
                        <group>
                            <field name="name" />
                            <field name="description" />
                        </group>
                        <group>
                            <field name="sct_code_id" />
                            <field name="create_warning" />
                        </group>
                    </group>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

    <record id="pod_allergy_substance_view_search" model="ir.ui.view">
        <field name="name">pod.allergy.substance.view.search</field>
        <field name="model">pod.allergy.substance</field>
        <field name="arch" type="xml">
            <search>
                <field name="internal_identifier" />
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_allergy_substance_action">
        <field name="name">Allergy Substance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.allergy.substance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="pod_allergy_substance" name="Allergy substances codes" parent="pod_base.pod_root_terminologies" action="pod_allergy_substance_action" sequence="3" />

</odoo>
