<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <record model="ir.ui.view" id="pod_encounter_view_form">
        <field name="name">pod.encounter.form</field>
        <field name="model">pod.encounter</field>
        <field name="inherit_id" ref="pod_administration_encounter.pod_encounter_view_form" />
        <field name="groups_id" eval="[(4, ref('pod_base.group_pod_assistant_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_pod_clinical_condition" class="oe_stat_button btn-primary" string=" Create Clin. Condition" type="object" icon="fa-heartbeat" />
                <button name="create_allergy" class="oe_stat_button btn-danger" string=" Create Allergy" type="object" icon="fa-allergies" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_pod_conditions" class="oe_stat_button" icon="fa-heartbeat" attrs="{'invisible':[('pod_condition_count', '=', 0)]}">
                    <field name="pod_condition_count" widget="statinfo" string="Conditions" />
                    <field name="pod_condition_ids" invisible="1" />
                </button>
                <button type="object" name="action_view_pod_allergies" class="oe_stat_button" icon="fa-allergies" attrs="{'invisible':[('pod_allergies_count', '=', 0)]}">
                    <field name="pod_allergies_count" widget="statinfo" string="Allergies" />
                    <field name="pod_allergy_ids" invisible="1" />
                </button>
                <button type="object" name="action_view_pod_warnings" class="oe_stat_button" icon="fa-exclamation-triangle" attrs="{'invisible':[('pod_warning_count', '=', 0)]}">
                    <field name="pod_warning_count" widget="statinfo" string="Warnings" />
                    <field name="pod_warning_ids" invisible="1" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
