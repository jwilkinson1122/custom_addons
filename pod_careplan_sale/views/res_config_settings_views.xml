<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pod_financial']" position="inside">
                <div
                    class="col-xs-12 col-md-6 o_setting_box"
                    groups="base.group_no_one"
                >
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label
                            string="Third party product"
                            for="def_third_party_product"
                        />
                        <div class="text-muted">
                            Product used for third party sale orders
                        </div>
                        <div class="text-muted">
                            <field name="def_third_party_product" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
