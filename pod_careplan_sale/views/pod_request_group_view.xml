<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_request_group_form">
        <field name="name">pod.request.group.form</field>
        <field name="model">pod.request.group</field>
        <field name="inherit_id" ref="pod_clinical_request_group.pod_request_group_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="breakdown" string="Breakdown Request Group" class="oe_stat_button" icon="fa-bolt" attrs="{'invisible': ['|', ('is_breakdown', '=', False), ('is_billable', '=', False)]}" />
                <field name="is_breakdown" invisible="1" />
                <field name="is_billable" invisible="1" />
                <button type="action" name="%(pod_request_group_discount_action)s" string="Apply discount" class="oe_stat_button" icon="fa-percent" attrs="{'invisible': ['|', ('sale_order_line_count', '!=', 0), ('is_billable', '=', False)]}" />
                <field name="sale_order_line_count" invisible="1" />
                <field name="sale_order_line_ids" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
