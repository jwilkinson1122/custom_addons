<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="prescription_order_view_form" model="ir.ui.view">
            <field name="name">prescription.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr='//button[@name="action_confirm"]' position="after">
                    <button name="action_check" string="Check" class="btn-primary" type="object"/>
                </xpath>
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button type="action" name="%(action_view_wo)d" class="oe_stat_button" icon="fa-book" attrs="{'invisible': [('wo_count', '=', 0)]}">
                        <field name="wo_count" widget="statinfo" string="Work Order"/>
                    </button>
                </xpath>
                <field name="partner_id" position="after">
                    <field name="is_prescription_order" invisible="1"/>
                    <field name="team" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="team_leader" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="team_members" widget="many2many_tags" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                </field>
                <field name="payment_term_id" position="after">
                    <field name="prescription_start" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="prescription_end" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                </field>
            </field>
        </record>

