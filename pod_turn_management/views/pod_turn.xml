<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_turn_form_view">
        <field name="name">pod.turn.form (in pod_turn_management)</field>
        <field name="model">pod.turn</field>
        <field name="arch" type="xml">
            <form create="0">
                <header />
                <sheet>
                    <group>
                        <field
                            name="practitioner_id"
                            domain="[('turn_specialty_ids', '=', specialty_id), ('is_practitioner', '=', True)]"
                        />
                        <field name="center_ids" widget="many2many_tags" />
                        <field name="specialty_id" />
                        <field name="turn_tag_ids" widget="many2many_tags" />
                    </group>
                    <group>
                        <field name="date" />
                        <field name="duration" widget="float_time" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_turn_search_view">
        <field name="name">pod.turn.search (in pod_turn_management)</field>
        <field name="model">pod.turn</field>
        <field name="arch" type="xml">
            <search>
                <field name="practitioner_id" />
                <field name="date" />
                <field name="specialty_id" />
                <field name="center_ids" />
                <field name="turn_tag_ids" string="Tag" />
                <separator />
                <filter
                    name="pending_to_assign"
                    domain="[('practitioner_id', '=', False)]"
                    string="Pending to assign"
                />
                <separator />
                <filter
                    name="my_turns"
                    domain="[('practitioner_id.user_ids', 'in', [uid])]"
                    string="Mine"
                />
                <separator />
                <filter
                    name="from_today"
                    string="From Today"
                    domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"
                />
                <filter
                    name="this_month"
                    string="This Month"
                    domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')),
                         ('date', '&lt;', (context_today()+datetime.timedelta(days=31)).strftime('%Y-%m-01'))]"
                />
                <filter
                    name="next_month"
                    string="Next Month"
                    domain="[('date', '&gt;=', (context_today()+datetime.timedelta(days=31)).strftime('%Y-%m-01')),
                         ('date', '&lt;', (context_today()+datetime.timedelta(days=62)).strftime('%Y-%m-01'))]"
                />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_turn_calendar_list_view">
        <field name="name">pod.turn.tree (in pod_turn_management)</field>
        <field name="model">pod.turn</field>
        <field name="arch" type="xml">
            <calendar_list
                date_start="date"
                date_delay="duration"
                color="specialty_id"
                mode="day"
            >
                <field name="display_name" />
            </calendar_list>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_turn_tree_view">
        <field name="name">pod.turn.tree (in pod_turn_management)</field>
        <field name="model">pod.turn</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="date" />
                <field name="specialty_id" />
                <field name="practitioner_id" />
                <field name="center_ids" widget="many2many_tags" />
                <field name="turn_tag_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_turn_act_window">
        <field name="name">Turns</field>
        <field name="res_model">pod.turn</field>
        <field name="view_mode">calendar_list,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_from_today':1}</field>
    </record>
    <record model="ir.ui.menu" id="pod_turn_menu">
        <field name="name">Turns</field>
        <field name="parent_id" ref="pod_turn_root" />
        <field name="action" ref="pod_turn_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
