<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="prescription_form_form_view">
        <field name="name">prescription.form.form (in pod_product_request)</field>
        <field name="model">prescription.form</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="uom_ids" widget="many2many_tags" required="True" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="prescription_form_search_view">
        <field name="name">prescription.form.search (in pod_product_request)</field>
        <field name="model">prescription.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="prescription_form_tree_view">
        <field name="name">prescription.form.tree (in pod_product_request)</field>
        <field name="model">prescription.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="prescription_form_act_window">
        <field name="name">Prescription Form</field>
        <field name="res_model">prescription.form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="prescription_form_menu">
        <field name="name">Prescription Form</field>
        <field name="parent_id" ref="pod_product_menu" />
        <field name="action" ref="prescription_form_act_window" />
        <field name="sequence" eval="50" />
    </record>
    
</odoo>
