<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_product_template_form_view">
        <field
            name="name"
        >pod.product.template.form (in pod_product_request)</field>
        <field name="model">pod.product.template</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            name="action_view_pod_product_ids"
                            class="oe_stat_button"
                            icon="fa-pills"
                        >
                            <field
                                name="product_count"
                                widget="statinfo"
                                string="Dosification Units"
                            />
                        </button>
                    </div>
                    <h3>
                        <field name="name_template" />
                    </h3>
                    <group>
                        <group name="name" string="Name">
                            <field name="name" />
                        </group>
                        <group name="code" string="Code">
                            <field name="code_template" />
                        </group>
                        <group name="product_type" string="Product Type">
                            <field name="product_type" />
                        </group>
                        <group
                            name='ingredient'
                            string='Ingredients'
                            attrs="{'invisible':[('product_type', '!=', 'device')]}"
                        >
                            <field
                                name="ingredients"
                                attrs="{'required':[('product_type', '==', 'device')]}"
                            />
                            <field
                                name="dosage"
                                attrs="{'required':[('product_type', '==', 'device')]}"
                            />
                        </group>
                        <group
                            name="form"
                            string="Form"
                            attrs="{'invisible':[('product_type', '!=', 'device')]}"
                        >
                            <field
                                name="form_id"
                                widget="selection"
                                attrs="{'required':[('product_type', '==', 'device')]}"
                            />
                            <field
                                name="administration_route_ids"
                                widget="many2many_tags"
                                attrs="{'required':[('product_type', '==', 'device')]}"
                            />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_product_template_search_view">
        <field
            name="name"
        >pod.product.template.search (in pod_product_request)</field>
        <field name="model">pod.product.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_template" />
                <field name="product_type" />
                <field name="code_template" />
                <field name="ingredients" />
                <field name="form_id" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_product_template_tree_view">
        <field
            name="name"
        >pod.product.template.tree (in pod_product_request)</field>
        <field name="model">pod.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_template" />
                <field name="code_template" />
                <field name="ingredients" />
                <field name="form_id" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.menu" id="pod_product_menu">
        <field name="name">Podiatry Product</field>
        <field name="parent_id" ref="contacts.res_partner_menu_config" />
        <field name="sequence" eval="50" />
    </record>
    <record model="ir.actions.act_window" id="pod_product_template_act_window">
        <field name="name">Podiatry Product Template</field>
        <field name="res_model">pod.product.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.ui.menu" id="pod_product_template_menu">
        <field name="name">Podiatry Product Template</field>
        <field name="parent_id" ref="pod_product_menu" />
        <field name="action" ref="pod_product_template_act_window" />
        <field name="sequence" eval="10" />
    </record>
</odoo>
