<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_patient_form_view">
        <field name="name">pod.patient.form (in pod_product_request)</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_pod_product_request_order" class="oe_stat_button btn-success" string="Create Ext. Device" type="object" context="{'default_category': 'discharge', 'default_patient_id': id}" icon="fa-device" />
                <button name="create_pod_product_request_order" class="oe_stat_button btn-warning" string=" Create Int. Podiatry Order" type="object" context="{'default_category': 'inpatient',  'default_patient_id': id}" icon="fa-pills" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_external_pod_product_request_order_ids" class="oe_stat_button" icon="fa-device">
                    <field name="external_product_request_order_count" widget="statinfo" string="Ext. Devices" />
                </button>
                <button type="object" name="action_view_internal_pod_product_request_order_ids" class="oe_stat_button" icon="fa-pills">
                    <field name="internal_product_request_order_count" widget="statinfo" string="Int. Podiatry Order" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
