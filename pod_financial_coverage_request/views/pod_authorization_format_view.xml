<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_authorization_format_form" model="ir.ui.view">
        <field name="name">pod.authorization.format.form</field>
        <field name="model">pod.authorization.format</field>
        <field name="arch" type="xml">
            <form string="Authorization format">
                <header />
                <sheet>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="always_authorized" />
                        <field
                            name="authorization_format"
                            attrs="{'invisible': [('always_authorized', '=', True)], 'required': [('always_authorized', '=', False)]}"
                        />
                        <field name="authorization_information" />
                        <field name="requires_authorization_extra_1" />
                        <field
                            name="authorization_extra_1_format"
                            attrs="{'invisible': [('requires_authorization_extra_1', '=', False)], 'required': [('requires_authorization_extra_1', '=', True)]}"
                        />
                        <field
                            name="authorization_extra_1_information"
                            attrs="{'invisible': [('requires_authorization_extra_1', '=', False)]}"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pod_authorization_format_tree" model="ir.ui.view">
        <field name="name">pod.authorization.format.tree</field>
        <field name="model">pod.authorization.format</field>
        <field name="arch" type="xml">
            <search string="Authorization format">
                <field name="name" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
            </search>
        </field>
    </record>
    <record id="pod_authorization_format_action" model="ir.actions.act_window">
        <field name="name">Authorization Format</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.authorization.format</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="pod_authorization_format_menu"
        name="Authorization format"
        sequence="90"
        parent="pod_base.pod_root_configuration"
        action="pod_authorization_format_action"
    />
</odoo>
