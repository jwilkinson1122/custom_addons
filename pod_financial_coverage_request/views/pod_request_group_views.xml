<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_request_group_form">
        <field name="name">pod.request.group.form</field>
        <field name="model">pod.request.group</field>
        <field name="inherit_id" ref="pod_clinical_request_group.pod_request_group_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <button name="draft2active" position="after">
                <field name="can_change_plan" invisible="1" />
                <button name="%(pod_financial_coverage_request.action_pod_request_group_change_plan)d" type="action" string="Change plan" class="oe_highlight" />
                <button name="check_authorization_action" type="object" string="Check authorization" states="draft,active" />
            </button>
        </field>
    </record>
</odoo>
