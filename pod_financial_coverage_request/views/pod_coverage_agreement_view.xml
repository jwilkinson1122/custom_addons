<odoo>
    <record id="pod_coverage_agreement_view" model="ir.ui.view">
        <field name="name">pod.coverage.agreement.form</field>
        <field name="model">pod.coverage.agreement</field>
        <field
            name="inherit_id"
            ref="pod_financial_coverage_agreement.pod_coverage_agreement_view"
        />
        <field name="arch" type="xml">
            <field name="principal_concept" position="after">
                <field
                    name="authorization_method_id"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field
                    name="authorization_format_id"
                    options="{'no_create': True, 'no_open': True}"
                />
            </field>
        </field>
    </record>
</odoo>
