<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_request_form">
        <field name="name">pod.request.form</field>
        <field name="model">pod.request</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <field name="encounter_id" position="after">
                <field
                    name="practice_id"
                    options="{'no_create': True, 'no_open': True}"
                />
            </field>
            <notebook position="inside">
                <page name="payor" string="Payor">
                    <group>
                        <group>
                            <field
                                name="coverage_id"
                                options="{'no_create': True, 'no_open': True}"
                            />
                        </group>
                        <group>
                            <field
                                name="authorization_method_id"
                                options="{'no_create': True, 'no_open': True}"
                            />
                            <field name="authorization_number" />
                            <field name="authorization_status" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <record id="pod_request_form_coverage" model="ir.ui.view">
        <field name="name">pod.request.view.form</field>
        <field name="model">pod.request</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="arch" type="xml">
            <field name="coverage_id" position="attributes">
                <attribute name="options">{'no_open': False, 'no_create':
                    True}
                </attribute>
            </field>
            <field name="practice_id" position="attributes">
                <attribute name="options">{'no_open': False, 'no_create': True}
                </attribute>
            </field>
        </field>
    </record>
</odoo>
