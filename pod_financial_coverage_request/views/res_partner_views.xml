<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_encounter_identifier.res_partner_view_form" />
        <field name="arch" type="xml">
            <field name="practice_alias" position="after">
                <!-- <field name="integer_practice_identifier" attrs="{'required': [('is_company', '=', True)]}" /> -->
                <field name="integer_practice_identifier" string="Practice ID" widget="integer" attrs="{'required': [('is_company', '=', True)]}" options="{'format': 0}"/>
            </field>
        </field>
    </record>
    <record id="res_partner_view_form_payor" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_financial_coverage.res_partner_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="payor" string="Payor" attrs="{'invisible': [('is_payor','=', False)]}" groups="pod_base.group_pod_financial">
                    <group string="Integration" name="integration">
                        <field name="authorization_web_id" />
                        <field name="authorization_information" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
