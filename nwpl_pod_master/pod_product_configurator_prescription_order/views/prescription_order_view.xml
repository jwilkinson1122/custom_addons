<odoo>
    <record id="view_prescription_order_form_configurator_inherit" model="ir.ui.view">
        <field name="name">prescription.order.form.configurator.inherit</field>
        <field name="model">prescription.order</field>
        <field name="inherit_id" ref="nwpl_pod_master.view_prescription_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="before">
                <button class="oe_highlight" name="action_config_start" string="Configure Product" style="margin-top: 15px;" type="object" />

                <!-- <button class="oe_highlight" groups="product_configurator.group_product_configurator" name="action_config_start" string="Configure Product" style="margin-top: 15px;" type="object" /> -->
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree//field[@name='product_id']" position="after">
                <field name="config_ok" invisible="1" optional="hide" />
                <field name="state" invisible="1" optional="hide" />
                <button invisible="not config_ok or state not in ['draft','open']" class="fa-lg" help="Reconfigure" icon="fa-cogs" name="reconfigure_product" type="object" title="Reconfigure" />

                <!-- <button invisible="not config_ok or state not in ['draft','open']" class="fa-lg" groups="product_configurator.group_product_configurator" help="Reconfigure" icon="fa-cogs" name="reconfigure_product" type="object" title="Reconfigure" /> -->
                <field name="config_session_id" />
            </xpath>
        </field>
    </record>

    <record id="prescription_order_line_form_configurator_inherit" model="ir.ui.view">
        <field name="name">prescription.order.line.form.configurator.inherit</field>
        <field name="model">prescription.order.line</field>
        <field name="inherit_id" ref="nwpl_pod_master.prescription_order_line_form" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field invisible="1" name="config_ok" />
                <field name="config_session_id" />
            </field>
        </field>
    </record>

</odoo>
