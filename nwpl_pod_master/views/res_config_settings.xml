    <record id="pod_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod_pos_order_list</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="after">
                <block title="Custom Configurations">
                    <!-- Counter Config  -->
                    <div style="font-size: 15px; font-weight: 600;">POS Counter</div>
                    <setting>
                        <field name="pos_enable_pos_item_counter"/>
                        <div class="mt16" invisible="not pos_enable_pos_item_counter">
                            <field name="pos_enable_pos_item_report" />
                            <label for="pos_enable_pos_item_report"/>
                        </div>
                    </setting>
                    <setting>
                        <field name="pos_enable_pos_qty_counter" />
                        <div class="mt16" invisible="not pos_enable_pos_qty_counter">
                            <field name="pos_enable_pos_qty_report" />
                            <label for="pos_enable_pos_qty_report"/>
                        </div>
                    </setting>
                    <!-- prescription configuration  -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Prescription Orders </div>
                    <setting>
                        <field name="pos_enable_prescriptions" />
                    </setting>
                    <!-- Create Sale order -->
                    <div style="font-size: 15px; font-weight: 600;"> Create Sale order </div>
                    <setting string="Create Sale Order">
                        <field name="pos_pod_display_sale_btn" />
                        <div class="text-muted">
                            Create sale order from point of sale
                        </div>
                        <div class="mt16" invisible="not pos_pod_display_sale_btn">
                            <field name="pos_select_order_state" invisible="not pos_pod_display_sale_btn" widget="radio" />
                        </div>
                    </setting>
                    <!-- Create Purchase from pos -->
                    <div style="font-size: 15px; font-weight: 600;"> Create Purchase Order </div>
                    <setting string="Create Purchase Order">
                        <field name="pos_pod_dispaly_purchase_btn" />
                        <div class="text-muted">
                            Create purchase order from point of sale
                        </div>
                        <div class="mt16" invisible="not pos_pod_dispaly_purchase_btn">
                            <field name="pos_select_purchase_state" invisible="not pos_pod_display_sale_btn" widget="radio" />
                        </div>
                    </setting>

                    <div style="font-size: 15px; font-weight: 600;"> Order Line Label Configuration </div>
                    <setting string="Enable Order Line Label">
                        <field name="enable_order_line_label" />
                        <div class="mt16" invisible="not enable_order_line_label">
                            <field name="enable_order_line_label_in_receipt" />
                            <label for="enable_order_line_label_in_receipt"/>
                        </div>
                        <div class="mt16" invisible="not enable_order_line_label">
                            <field name="enabel_delete_label_with_product" />
                            <label for="enabel_delete_label_with_product"/>
                        </div>
                    </setting>
                    <setting> 
                         <!-- created for blank dir -->
                    </setting>
                    <div style="font-size: 15px; font-weight: 600;"> Order List Configuration </div>
                    <setting>
                        <field name="pos_pod_enable_order_list"/>
                        <div class="mt16">
                            <div class="text-muted">
                                Use to show pos ordes in Point of sale
                            </div>
                        </div>
                        <div class="mt16" invisible="not pos_pod_enable_order_list">
                            <label for="pos_pod_load_order_by" class="o_light_label"/>
                            <field name="pos_pod_load_order_by" required="pos_pod_enable_order_list" />
                        </div>
                        <div class="mt16" invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'session_wise'" help="Load Order of Current Session or Last No Of Session">
                            <label for="pos_pod_session_wise_option" class="o_light_label"/>
                            <field name="pos_pod_session_wise_option" widget="radio" required="pos_pod_enable_order_list" />
                            <div invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'session_wise' or pos_pod_session_wise_option == 'current_session'">
                                <label for="pos_pod_last_no_session" class="o_light_label"/>
                                <field name="pos_pod_last_no_session" invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'session_wise' or pos_pod_session_wise_option == 'current_session'" required="pos_pod_enable_order_list" />
                            </div>
                        </div>
                        <div class="mt16" invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'day_wise'" help="Load Order of Current Day or Last No Of Days">
                            <label for="pos_pod_day_wise_option" class="o_light_label"/>
                            <field name="pos_pod_day_wise_option" widget="radio" required="pos_pod_enable_order_list" />
                            <div invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'day_wise' or pos_pod_day_wise_option == 'current_day'">
                                <label for="pos_pod_last_no_days" class="o_light_label"/>
                                <field name="pos_pod_last_no_days" invisible="not pos_pod_enable_order_list or pos_pod_load_order_by != 'day_wise' or pos_pod_day_wise_option == 'current_day'" required="pos_pod_enable_order_list" />
                            </div>
                        </div>
                        <div class="mt16" invisible="not pos_pod_enable_order_list">
                            <label for="pos_pod_how_many_order_per_page" class="o_light_label"/>
                            <field name="pos_pod_how_many_order_per_page" required="pos_pod_enable_order_list" />
                        </div>
                    </setting>

                    <setting id="pod_pos_order_re_order" invisible="not pos_pod_enable_order_list">
                        <div class="mt16" invisible="not pos_pod_enable_order_list">
                            <field name="pos_pod_enable_re_order"/>
                            <label for="pos_pod_enable_re_order" />
                            <div class="text-muted">
                                ReOrder POS Order From Order Screen
                            </div>
                        </div>
                        <div class="mt16" invisible="not pos_pod_enable_order_list">
                            <field name="pos_pod_enable_order_reprint"/>
                            <label for="pos_pod_enable_order_reprint" />
                            <div class="text-muted">
                                Print Order Receipt From Order Screen
                            </div>
                        </div>
                    </setting>
                    <!-- receipt extend -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Extended Receipt </div>
                    <setting help=" Display Barcode / QrCode in Receipt">
                        <field name="pos_pod_pos_receipt_bacode_qr" />
                        <div class="content-group mt16" invisible="not pos_pod_pos_receipt_bacode_qr">
                            <div>
                                <field name="pos_pod_pos_receipt_barcode_qr_selection" widget="radio" invisible="not pos_pod_pos_receipt_bacode_qr" />
                            </div>
                        </div>
                    </setting>
                    <setting help="Display Invoice Number in Receipt">
                        <field name="pos_pod_pos_receipt_invoice"  />
                    </setting>
                    <setting help="Display Order Number in Receipt">
                        <field name="pos_pod_pos_order_number"  />
                    </setting>
                    <setting help="Display Customer Detail in Receipt">
                        <field name="pos_pod_pos_receipt_customer_detail"  />
                        <div class="content-group mt16" invisible="not pos_pod_pos_receipt_customer_detail">
                            <div>
                                <field name="pos_pod_pos_receipt_customer_name" style="width: 4%;" />
                                <label for="pos_pod_pos_receipt_customer_name" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_receipt_customer_address" style="width: 4%;" />
                                <label for="pos_pod_pos_receipt_customer_address" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_receipt_customer_mobile" style="width: 4%;" />
                                <label for="pos_pod_pos_receipt_customer_mobile" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_receipt_customer_phone" style="width: 4%;" />
                                <label for="pos_pod_pos_receipt_customer_phone" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_receipt_customer_email" style="width: 4%;" />
                                <label for="pos_pod_pos_receipt_customer_email" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_vat" style="width: 4%;" />
                                <label for="pos_pod_pos_vat" style="font-weight: normal;" />
                                <br />
                                <field name="pos_pod_pos_vat_name" style='width: 20%;' invisible='not pos_pod_pos_vat' placeholder="Vat" />
                            </div>
                        </div>
                    </setting>
                    <setting help="Enable A3 recipts inside POS interface">
                        <field name="pos_pod_enable_a3_receipt"  />
                    </setting>
                    <setting help=" Enable A4 recipts inside POS interface">
                        <field name="pos_pod_enable_a4_receipt"  />
                    </setting>
                    <setting help=" Enable A5 recipts inside POS interface">
                        <field name="pos_pod_enable_a5_receipt"  />
                    </setting>
                    <setting string="Default Receipt">
                        <field name="pos_pod_default_receipt" widget="radio"/>
                    </setting>
                    <!-- variant configuration  -->
                    <div style="font-size: 15px; font-weight: 600;"> POS product variant </div>
                    <setting>
                        <field name="pos_pod_pos_enable_product_variants" />
                        <setting   invisible="not pos_pod_pos_enable_product_variants">
                            <field name="pos_pod_pos_variants_group_by_attribute"  />
                        </setting>
                    </setting>
                    <setting  invisible="not pos_pod_pos_enable_product_variants">
                        <field name="pos_pod_close_popup_after_single_selection"  />
                    </setting>
                    <setting   invisible="not pos_pod_pos_enable_product_variants">
                        <field name="pos_pod_pos_display_alternative_products"  />
                    </setting>
                    <!-- wh stock -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Stock Information </div>
                    <setting  help="Display Warehouse wise Product Quantity">
                        <field name="pos_pod_display_stock" />
