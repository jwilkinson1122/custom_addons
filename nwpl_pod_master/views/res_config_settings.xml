                                <label for="pod_validation_to_remove_all_item" class=" o_light_label" />
                            </div>
                        </div>
                    </setting>
                    <!-- keyboard shortcut -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Shortcut </div>
                    <setting >
                        <field name="pos_pod_enable_shortcut" />
                    </setting>
                    <div class="content-group" invisible='not pos_pod_enable_shortcut'>
                        <div class="mt16">
                            <field name="pos_pod_shortcut_keys_screen">
                                <form>
                                    <group>
                                        <group>
                                            <field name="pod_shortcut_screen" required="1" />
                                        </group>
                                        <group>
                                            <field name="pod_shortcut_screen_type" required="1" />
                                        </group>
                                    </group>
                                    <field name="pod_key_ids">
                                        <tree editable="bottom">
                                            <field name="pod_key_ids" options="{'no_create': True, 'no_create_edit':True}" />
                                        </tree>
                                    </field>
                                </form>
                                <tree>
                                    <field name="pod_shortcut_screen" required="1" />
                                    <field name="pod_shortcut_screen_type" required="1" />
                                </tree>
                            </field>
                            <field name="pos_pod_payment_shortcut_keys_screen">
                                <form>
                                    <group>
                                        <group>
                                            <field name="payment_method_id" required="1" options="{'no_create': True, 'no_create_edit':True}" />
                                        </group>
                                        <group>
                                            <field name="pod_payment_shortcut_screen_type" required="1" />
                                        </group>
                                    </group>
                                    <field name="pod_key_ids">
                                        <tree editable="bottom">
                                            <field name="pod_key_ids" options="{'no_create': True, 'no_create_edit':True}" />
                                        </tree>
                                    </field>
                                </form>
                                <tree>
                                    <field name="payment_method_id" required="1" options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="pod_payment_shortcut_screen_type" required="1" />
                                </tree>
                            </field>
                        </div>
                    </div>
                    <!-- pos discount -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Discount </div>
                    <setting>
                        <field name="pos_pod_allow_order_line_discount" />
                    </setting>
                    <setting>
                        <field name="pos_pod_allow_global_discount" />
                    </setting>
                    <!-- Product Suggestion -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Product Suggetion </div>
                    <setting>
                        <field name="pos_enable_product_suggestion" />
                    </setting>
                    <div style="font-size: 15px; font-weight: 600;"> Product Internal Reference </div>
                    <setting>
                        <field name="pos_pod_enable_prduct_code" />
                    </setting>
                    <setting>
                        <field name="pos_pod_enable_product_code_in_cart" />
                    </setting>
                    <setting>
                        <field name="pos_pod_enable_product_code_in_receipt" />
                    </setting>
                    <!-- POS Cash Control -->
                    <div style="font-size: 15px; font-weight: 600;"> POS Cash Control </div>
                    <setting>
                        <field name="pos_pod_enable_cash_control"/>
                    </setting>
                    <setting>
                        <field name="pos_pod_enable_cash_in_out_statement" />
                    </setting>
                    <setting>
                        <field name="pos_pod_enable_payment" />
                    </setting>
                    <div style="font-size: 15px; font-weight: 600;"> POS Product Modifier </div>
                    <setting>
                        <field name="pos_pod_enable_options" />
                    </setting>
                    <setting  invisible="not pos_pod_enable_options">
                        <field name="pos_pod_add_options_on_click_product"/>
                    </setting>
                    <setting  invisible="not pos_pod_enable_options">
                        <field name="pos_pod_allow_same_product_different_qty"/>
                    </setting>
                    <!-- <setting>
                        <field name="pos_pod_enable_customizations" />
                    </setting> -->
                    <div style="font-size: 15px; font-weight: 600;"> Order Types </div>
                    <setting>
                        <field name="enable_order_type" />
                    </setting>
                    <setting invisible="not enable_order_type" required="1">
                        <field name="order_type_mode" widget="radio" required="enable_order_type"/>
                    </setting>
                    <setting invisible="order_type_mode != 'multi'" >
                        <field name="order_types_ids" widget="many2many_tags" invisible="order_type_mode != 'multi'"/>
                    </setting>
                    <setting invisible="not enable_order_type" >
                        <field name="order_type_id" required="order_type_mode != 'multi' and enable_order_type"/>
                    </setting>
                    <div style="font-size: 15px; font-weight: 600;">POS Multi Barcode</div>
                    <setting string="Enable Multi Barcode">
                        <field name="pos_pod_enable_multi_barcode" />
                    </setting>
                </block>
            </xpath>

