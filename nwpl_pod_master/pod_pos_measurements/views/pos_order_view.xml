<?xml version="1.0"?>
<odoo>
 

    <record id="inherit_view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form.view.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"></field>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='notice']" position='after'>
                <field name="measurement_ids" />
            </xpath> -->
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="measurement_ids" widget="many2many_tags"/>
                <field name="measurement_unit"/>
            </xpath>
            <xpath expr="//page[@name='products']//tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
        </field>
    </record>
 
</odoo>
