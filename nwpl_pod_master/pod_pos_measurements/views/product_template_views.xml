		<record id="inherit_product_template_only_form_view" model="ir.ui.view">
			<field name="name">inherit.product.template.only.form.view</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='options']" position="inside">
					<div>
						<field name="is_custom_product"/>
						<label for="is_custom_product"/>
					</div>
					<div>
						<field name="allow_measurements"/>
						<label for="allow_measurements"/>
					</div>
					<div>
						<field name="measurement_cat_ids" widget="many2many_tags" invisible="available_in_pos == False"/>
						<label for="measurement_cat_ids"/>
					</div>
				</xpath>
				<xpath expr="//widget" position="after">
					<widget name="web_ribbon" text="Custom" invisible="not is_custom_product"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
