<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_res_partner_pos_form" model="ir.ui.view">
        <field name="name">inherit.res.partner.pos.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="4"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Measurements">
                    <field name="measurement_ids">
                        <tree create="false">
                            <field name="date"/>
                            <field name="measurement_type"/>
                            <field name="measurement"/>
                            <field name="measurement_unit" readonly="True"/>
                        </tree>
                        <form>
                            <group>
                                <field name="date"/>
                                <field name="measurement_type"/>
                                <field name="measurement"/>
                                <field name="measurement_unit" readonly="True"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

