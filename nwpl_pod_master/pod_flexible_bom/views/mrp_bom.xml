<odoo>
    <record id="mrp_bom_view" model="ir.ui.view">
        <field name="name">mrp.bom.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]" position="after">
                <field name="bom_template_id"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='components']/field[@name='bom_line_ids']/tree[1]/field[@name='operation_id']" position="after">
                <field name="unit_cost" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show"/>
                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
