<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record model="res.groups" id="prescription_orders_disable_adding_lines">
        <field name="name">Disable adding more lines to SOs from Prescription Orders</field>
    </record>
    <!-- Multi - Company Rules -->
    <record model="ir.rule" id="prescription_order_comp_rule">
        <field name="name">Prescription Order multi-company</field>
        <field name="model_id" ref="model_prescription_order" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="prescription_order_line_comp_rule">
        <field name="name">Prescription Order Line multi-company</field>
        <field name="model_id" ref="model_prescription_order_line" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
