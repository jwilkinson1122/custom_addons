<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- This record is for adding a field in pos configuration for allowing prescription order-->
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.prescription.order</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
        <!-- <xpath expr="//div[@id='restaurant_on_create']" position="replace">
                <div id="shop_on_create" class="row mt16 o_settings_container" invisible="not context.get('pos_config_create_mode', False)">
                    <setting>
                        <field name="product_configure" />
                    </setting>
                </div>
            </xpath> -->
            <xpath expr="//setting[@id='other_devices']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_prescriptions"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_prescriptions" string="Prescription Orders"/>
                        <div class="text-muted">
                            Allow prescription orders
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
