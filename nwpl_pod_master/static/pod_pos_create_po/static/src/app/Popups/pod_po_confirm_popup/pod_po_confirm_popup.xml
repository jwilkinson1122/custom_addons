<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pod_pos_create_po.PodPOConfirmPopup">
        <div class="popup pod_purchase_order_ref_popup">
            <div class="modal-header">
                <t t-esc="props.title" />
            </div>
            <main class="modal-body">
                <t t-if='props.PurhcaseOrderId'>
                    <label class="pod_po_label">Purchase Order Ref : </label>
                    <a target="blank" class="po-name pod_po_value" t-attf-href="/mail/view?model=purchase.order&amp;res_id={{props.PurhcaseOrderId}}">
                        <t t-esc="props.PurchaseOrderName" />
                    </a>
                </t>
                <t t-else=''>
                    <t t-esc="props.body" />
                </t>
            </main>
            <div class="footer footer-flex modal-footer">
                <div class="button confirm highlight btn btn-lg btn-primary" t-on-click="confirm">
                    <t t-esc="props.confirmText" />
                </div>
            </div>
        </div>
    </t>
</templates>
