<?xml version="1.0" encoding="UTF-8"?>
<template id="receipt_template" xml:space="preserve">
    <!--This is used for adding some more data to pos receipt based on the prescription order-->
    <t t-name="PrescriptionOrderReceipt" t-inherit="point_of_sale.OrderReceipt"
         t-inherit-mode="extension" owl="1">
         <xpath expr="//div[hasclass('before-footer')]" position="after">
             <t t-set="order" t-value="this.env.services.pos.get_order()"/>
             <t t-if="order.is_prescription">
                 <hr/>
                 <div>
                     Prescription Ref:
                     <span t-esc="order.prescription_data.name"
                           class="pos-receipt-right-align"/>
                 </div>
                 <div>
                     Contact No.:
                     <span t-esc="order.prescription_data.phone"
                           class="pos-receipt-right-align"/>
                 </div>
                 <div>
                     Order Note:
                     <span t-esc="order.prescription_data.note"/>
                 </div>
                 <t t-if="order.prescription_data.pickup">
                     <div>
                        Pickup Date:
                        <span t-esc="order.prescription_data.pickup"
                              class="pos-receipt-right-align"/>
                    </div>
                 </t>
                 <t t-if="order.prescription_data.deliver">
                     <div>
                        Delivery Date:
                        <span t-esc="order.prescription_data.deliver"
                              class="pos-receipt-right-align"/>
                     </div>
                     <div>
                        Delivery address:
                        <span t-esc="order.prescription_data.address"/>
                     </div>
                 </t>
             </t>
       </xpath>
   </t>
</template>