<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pod_pos_measurements.ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('set-partner')]" position="after">
            <button class="button set-measurement btn btn-light rounded-0 py-2 flex-shrink-1 fw-bolder" t-on-click="() => this.click()">
                <div class="d-flex justify-content-center align-items-center ">
                    <span class="d-flex justify-content-center align-items-center rounded-circle me-2 text-bg-dark">
                    <i class="fa fa-sliders" role="img" aria-label="Set Values" title="Set Values"></i>
                    </span>
                    <div> Set Values </div>
                </div>
            </button>
        </xpath>
    </t>
</templates>

