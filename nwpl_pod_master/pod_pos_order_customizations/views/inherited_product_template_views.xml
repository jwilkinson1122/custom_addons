    <!-- Add customization group to product.template form view in POS -->
    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <button name="action_open_label_layout" position="after">
                <button name="%(wizard_product_variant_configurator_manual_creation_action)d" type="action" string="Create Pending Variants" invisible="not has_pending_variants"/>
                <field name="has_pending_variants" invisible="1" />
            </button>
            <xpath expr="//field[@name='to_weight']" position="after">
                <field name="customization_group_ids" widget="many2many_tags" invisible="available_in_pos == False"/>
            </xpath>
        </field>
    </record>

