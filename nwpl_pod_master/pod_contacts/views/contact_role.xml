<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="contact_role_view_form" model="ir.ui.view">
        <field name="name">contact.role.view.form</field>
        <field name="model">contact.role</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="active" invisible="1" />
                    <div name="button_box" class="oe_button_box" />
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="contact_role_view_tree" model="ir.ui.view">
        <field name="name">contact.role.view.tree</field>
        <field name="model">contact.role</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="contact_role_action">
        <field name="name">Roles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contact.role</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
