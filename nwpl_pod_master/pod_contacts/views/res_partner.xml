<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="res_partner_find" model="ir.actions.act_window">
        <field name="name">Find Partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.action</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_model': 'res.partner', 'default_method': 'find_res_partner_by_ref_using_barcode', 'prevent_recursion': True}</field>
        <field name="target">new</field>
    </record>

    <record id="act_res_partner_child" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_parent_id': active_id, 'prevent_recursion': True}</field>
    </record>

    <record id="action_locations_window" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[("is_location", "=", True), ("patient_ids", "=", False), ('parent_id', 'child_of', active_id)]</field>
        <field name="context">{'prevent_recursion': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new location
            </p>
            <p>
                Organize and manage locations at a glance.
            </p>
        </field>
    </record>

    <record id="action_contacts_window" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[("is_company", "=", False), ("patient_ids", "=", False), ('parent_id', 'child_of', active_id)]</field>
        <field name="context">{'prevent_recursion': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new contact
            </p>
            <p>
                Organize and manage contacts at a glance.
            </p>
        </field>
    </record>

    <record id="action_patients_window" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">contact.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('practitioner_id', '=', active_id)]</field>
        <field name="context">{'default_practitioner_id': active_id, 'prevent_recursion': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new patient
            </p>
            <p>
            Organize and manage patients at a glance.
            </p>
        </field>
    </record>


    <record id="res_partner_view_kanban" model="ir.ui.view">
        <field name="name">res.partner.kanban.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="internal_code" />
            </field>
            <field name="active" position="after">
                <field name="location_count" />
            </field>

            <xpath expr="//strong[hasclass('o_kanban_record_title')]//field[@name='display_name']" position="after">
                <div class="o_kanban_record_title">
                    <field name="ref"/>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <span t-if="record.is_company.raw_value and record.location_count.value>0" class="badge badge-pill">
                    <i class="fa fa-fw fa-sitemap" role="img" aria-label="Locations" title="Locations" />
                    <t t-esc="record.location_count.value" />
                </span>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(act_res_partner_child)d" icon="fa-sitemap" invisible="is_practitioner or child_count == 0 or child_count == ''">
                    <field string="Contacts" name="child_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="action" name="%(action_patients_window)d" icon="fa-users" invisible="not is_practitioner">
                    <field string="Patients" name="patient_records" widget="statinfo"/>
                </button>
                <!-- <button class="oe_stat_button" type="action" name="%(action_patients_window)d" icon="fa-users" invisible="not is_practitioner">
                    <field string="Patients" name="patient_records" widget="statinfo"/>
                </button> -->
            </div>
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_parent_account" invisible="1" />
                <field name="is_company" invisible="1" />
                <field name="is_location" invisible="1" />
                <field name="is_practitioner" invisible="1" />
                <field name="is_patient" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="replace">
                <h2>
                    <field name="ref" readonly="1"/>
                </h2>
                <div class="oe_title mb24">
                    <field name="is_parent_account" invisible="1" />
                    <field name="is_company" invisible="1" />
                    <field name="is_location" invisible="1" />
                    <field name="is_practitioner" invisible="1" />
                    <h1>
                        <field id="company" options="{'line_breaks': False}" widget="text" name="name" default_focus="1" placeholder="e.g. Fab Foot Clinic" invisible="not is_company" required="is_company" />
                        <field id="individual" options="{'line_breaks': False}" widget="text" name="name" default_focus="1" placeholder="e.g. Brandom Freeman" invisible="is_company" required="type == 'contact' and not is_company" />
                    </h1>
                    <div class="o_row" style="margin-top:10px; margin-bottom:10px">
                        <field name="parent_id" placeholder="Parent Account" domain="[('is_parent_account', '=', True), ('is_company', '=', True), ('id', '!=', 1)]" invisible="not is_location" class="fw-bold" />
                        <field name="parent_id" placeholder="Account / Location" domain="[('is_company', '=', True), ('id', '!=', 1)]" invisible="not is_practitioner" class="fw-bold" />
                        <field name="active" invisible="1"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group" position="replace">
                <separator name="contact_info" string="Contact Information" />
                <group>
                    <group>
                        <span class="o_form_label o_td_label" name="address_name">
                            <field name="type" placeholder="Address Type" readonly="user_ids" required="1" class="fw-bold"/>
                            <field name="practice_type" placeholder="Practice Type" required="1" invisible="is_practitioner and not is_company" class="fw-bold" />
                        </span>
                        <div class="o_address_format">
                            <field name="street" placeholder="Street..." class="o_address_street" readonly="type == 'contact' and parent_id" />
                            <field name="street2" placeholder="Street 2..." class="o_address_street" readonly="type == 'contact' and parent_id" />
                            <field name="city" placeholder="City" class="o_address_city" readonly="type == 'contact' and parent_id" />
                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" readonly="type == 'contact' and parent_id" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" />
                            <field name="zip" placeholder="ZIP" class="o_address_zip" readonly="type == 'contact' and parent_id" />
                            <div name="partner_address_country" class="d-flex justify-content-between">
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="type == 'contact' and parent_id"/>
                            </div>
                        </div>
                        <field name="vat" placeholder="e.g. BE0477472701" readonly="parent_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="function" placeholder="e.g. Sales Director" invisible="1" />
                        <field name="practitioner_role_ids" placeholder='Roles' widget="many2many_tags" required="is_practitioner" invisible="is_company" options="{'no_create': True}" class="fw-bold" />
                        <field name="phone" placeholder='Phone' widget="phone" />
                        <field name="mobile" placeholder='Mobile' widget="phone" />
                        <field name="fax_number" placeholder='Fax' widget="phone" />
                        <field name="user_ids" placeholder='User' invisible="1" />
                        <field name="email" placeholder='Email' widget="email" context="{'gravatar_image': True}" required="user_ids" />
                        <field name="website" placeholder="e.g. https://www.odoo.com" string="Website" widget="url" />
                        <field name="title" options='{"no_open": True}' placeholder="e.g. Mister" invisible="is_company" />
                        <field name="active_lang_count" placeholder="Active Language" invisible="1" />
                        <field name="internal_code"/>
                        <field name="ref" />
                        <field name="lang" placeholder="Language" invisible="active_lang_count &lt;= 1" />
                        <field name="category_id" placeholder='Tags' widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
                    </group>
                </group>
            </xpath>
            <!-- Add Locations Page -->
            <xpath expr='//page[@name="contact_addresses"]' position="before">
                <page string="Locations" name="location_addresses" invisible="not is_company" autofocus="autofocus">
                    <separator name="locations" string="Locations List" />
                    <div name="alert_no_locations" class="oe_read_only alert alert-info mb8" role="alert" invisible="not location_ids">
                        No Locations Available
                    </div>
                    <field name="location_ids" context="{'default_parent_id': active_id, 'default_is_company': True, 'default_type':''}" mode="kanban">
                        <kanban create="true" on_create="base.view_partner_form">
                            <field name="id" />
                            <field name="color" />
                            <field name="ref"/>
                            <field name="internal_code"/>
                            <field name="name" />
                            <field name="title" />
                            <field name="type" />
                            <field name="email" />
                            <field name="parent_id" />
                            <field name="is_company" />
                            <field name="function" />
                            <field name="phone" />
                            <field name="street" />
                            <field name="street2" />
                            <field name="zip" />
                            <field name="city" />
                            <field name="country_id" />
                            <field name="mobile" />
                            <field name="state_id" />
                            <field name="image_128" />
                            <field name="avatar_128" />
                            <field name="lang" />
                            <field name="comment" />
                            <field name="display_name" />
                            <field name="active"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                        <field name="avatar_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                                        <div class="ribbon ribbon-top-right" invisible="active">
                                            <span class="text-bg-danger">Archived</span>
                                        </div>
                                        <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                            <div class="o_kanban_record_top">
                                                <div class="o_kanban_record_headings">
                                                    <strong class="o_kanban_record_title oe_partner_heading">
                                                        <field name="display_name" />
                                                    </strong>
                                                    <div class="o_kanban_tags_section oe_kanban_partner_categories" />
                                                    <ul>
                                                        <li t-if="record.ref.raw_value">
                                                ID: <field name="ref" />
                                                        </li>
                                                        <li t-if="record.internal_code.raw_value">
                                                Internal ID: <field name="internal_code" />
                                                        </li>
                                                        <li t-if="record.phone">
                                                Phone: <field name="phone" />
                                                        </li>

                                                        <li t-if="record.email.raw_value" class="o_text_overflow">
                                                Email: <field name="email"/>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="o_kanban_record_bottom">
                                                    <div class="oe_kanban_bottom_left"/>
                                                    <div class="oe_kanban_bottom_right"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <form string="Location / Address">
                            <sheet>
                                <field name="type" required="1" widget="radio" options="{'horizontal': true}" />
                                <div class="text-muted oe_edit_only">
                                    <p class="mb-0" invisible="type != 'invoice'">
                                        <span>Preferred address for all invoices. Selected by
                                            default when you invoice an order that belongs to this
                                            company.</span>
                                    </p>
                                    <p class="mb-0" invisible="type != 'delivery'">
                                        <span>Preferred address for all deliveries. Selected by
                                            default when you deliver an order that belongs to this
                                            company.</span>
                                    </p>
                                    <p class="mb-0" invisible="type != 'other'">
                                        <span>Other address for the company (e.g. subsidiary, ...)</span>
                                    </p>
                                </div>
                                <hr />
                                <group>
                                    <field name="parent_id" string="Parent Practice" />
                                    <group>
                                        <field name="name" string="Location Name" />
                                        <label for="street" string="Address" />
                                        <div>
                                            <div class="o_address_format" name="div_address">
                                                <field name="street" placeholder="Street..." class="o_address_street" />
                                                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                                <field name="city" placeholder="City" class="o_address_city" />
                                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}" />
                                                <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' />
                                            </div>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="email" widget="email" />
                                        <field name="phone" widget="phone" />
                                        <field name="mobile" widget="phone" />
                                        <field name="company_id" invisible="1" />
                                    </group>
                                </group>
                                <group>
                                    <field name="comment" placeholder="Internal notes..." nolabel="1" colspan="2" />
                                </group>
                                <field name="lang" invisible="True" />
                                <field name="user_id" invisible="True" />
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>

            <!-- Modify the contact_addresses page attributes -->
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="autofocus"></attribute>
                <attribute name="string">Contacts</attribute>
                <attribute name="invisible">not is_company</attribute>
            </xpath>

            <!-- Add an alert to the contact_addresses page -->
            <xpath expr="//page[@name='contact_addresses']//field[@name='child_ids']" position="before">
                <separator name="contacts" string="Contacts List" />
                <div name="alert_no_contacts" class="oe_read_only alert alert-info mb8" role="alert" invisible="not child_ids">
                    No Locations Available
                </div>
            </xpath>

            <!-- Modify the child_ids field context -->
            <xpath expr="//page[@name='contact_addresses']//field[@name='child_ids']" position="attributes">
                <attribute name="context">{'default_parent_id': active_id, 'default_is_company':
                    False, 'default_type':'contact', 'search_default_parent_id': active_id, 'prevent_recursion': True}</attribute>
                <attribute name="options">{'kanban_view': {'create': True}}</attribute>
            </xpath>


            <!-- Page for patients list -->
            <xpath expr='//page[@name="contact_addresses"]' position="after">
                <page name="patients_list" string="Patients">
                    <separator name="patients" string="Patients List" />
                    <div name="alert_no_patients" class="oe_read_only alert alert-info mb8" role="alert" invisible="not patient_records or patient_records == ''">
                        No Patients Available
                    </div>
                    <field name="patient_records" mode="kanban" context="{'prevent_recursion': True}" />
                </page>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']//field[@name='ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="res_partner_child_ids_kanban_view_custom" model="ir.ui.view">
        <field name="name">res.partner.child.ids.kanban.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']/kanban" position="inside">
                <field name="active"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="avatar_128"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/kanban/templates" position="replace">
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                        <field name="avatar_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                        <div class="ribbon ribbon-top-right" t-if="!record.active">
                            <span class="text-bg-danger">Archived</span>
                        </div>
                        <div class="oe_kanban_details d-flex flex-column justify-content-between">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="name" class="o_text_overflow"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.phone">
                                        Phone: <field name="phone" />
                                        </li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow">
                                        Email: <field name="email"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_tree" model="ir.ui.view">
        <field name="name">res.partner.view.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="before">
                <field name="ref"/>
                <field name="parent_id" column_invisible="context.get('default_is_parent_account', False)"/>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="after">
                <field name="internal_code"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_search_view" model="ir.ui.view">
        <field name="name">res.partner.search.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//search" position="inside">
                    <field name="name" filter_domain="['|','|','|',('display_name','ilike',self),('ref','=',self), ('email','ilike',self), ('internal_code','=',self)]" string="Account"/>
                    <field name="ref" filter_domain="[('ref','ilike',self)]" />
                    <field name="internal_code" filter_domain="[('internal_code','ilike',self)]" />
                    <separator />
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]" />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                    <separator />
                    <group name="group_by" string="Group By">
                        <filter string="Accounts" name="parent_id" domain="[('is_company', '=', True), ('is_parent_account', '=', True)]" context="{'group_by': 'parent_id'}" />
                        <filter string="Locations" name="is_location" domain="[('is_company', '=', True), ('is_location', '=', True)]" />
                        <filter string="Country" name="country_id" context="{'group_by': 'country_id'}" />
                        <filter string="State" name="state_id" context="{'group_by': 'state_id'}" />
                    </group>
                    <searchpanel>
                        <field name="parent_id" icon="fa-building-o" enable_counters="1" />
                        <field name="country_id" icon="fa-globe" enable_counters="1" />
                    </searchpanel>
                </xpath>
            </data>
        </field>
    </record>

    <record id="contact_account_action" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_company', '=', True), ('is_parent_account', '=', True), ('is_location', '=', False), ('id', '!=', 1)]</field>
        <field name="context">{
            'default_company_type':'company',
            'default_is_company':True,
            'default_is_parent_account':True,
            'default_is_partner': True,
            'default_type': '',
            'default_practice_type': '',
            'prevent_recursion': True,
            }</field>
        <field name="search_view_id" ref="res_partner_search_view" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new account
            </p>
            <p>
                An Account is the parent entity of locations and establishes the hierachical relationship.
            </p>
        </field>
    </record>

    <record id="contact_location_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_company', '=', True), ('is_parent_account', '=', False), ('is_location', '=', True)]</field>
        <field name="context">{
            'default_company_type':'company',
            'default_is_company':True,
            'default_is_location': True,
            'default_is_partner': True,
            'default_type': '',
            'default_practice_type': '',
            'prevent_recursion': True,
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new account location
            </p>
            <p>A Location gives details and position information for a physical place where services are provided and resources and participants may be stored, found, contained or accommodated.</p>
        </field>
    </record>

    <record id="contact_practitioner_action" model="ir.actions.act_window">
        <field name="name">Practitioners</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_practitioner', '=', True)]</field>
        <field name="context">{
            'default_company_type':'person',
            'default_is_company':False,
            'default_is_practitioner': True,
            'default_is_partner': True,
            'prevent_recursion': True,
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new account podiatry practitioner
            </p>
