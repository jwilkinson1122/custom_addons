<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <!-- Accounts Tree View -->
    <record id="res_partner_accounts_tree_view" model="ir.ui.view">
        <field name="name">res.partner.tree.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_contacts.inherit_view_partner_tree"/>
        <field name="arch" type="xml">
            <tree>
            </tree>
        </field>
    </record>

    <!-- Accounts Form View -->


    <record id="res_partner_accounts_form_view" model="ir.ui.view">
        <field name="name">res.partner.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_contacts.inherit_view_partner_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <!-- <attribute name="domain">[('is_parent_account', '=', True)]</attribute> -->
            </xpath>
            <xpath expr="//field[@name='child_ids']//form//field[@name='is_company']" position="after">
                <field name="is_parent_account" invisible="1" />
            </xpath>
        </field>
    </record>

    <!-- Accounts Kanban View -->
    <record id="res_partner_accounts_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_contacts.inherit_res_partner_kanban_view"/>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='active']" position="after">
                <field name="location_count" />
            </xpath>
             <xpath expr="//div[hasclass('oe_kanban_bottom_right')]" position="inside">
                <span t-if="record.is_location.raw_value and record.location_count.value>0" class="badge badge-pill">
                    <i class="fa fa-fw fa-sitemap" role="img" aria-label="Locations" title="Locations" />
                    <t t-esc="record.location_count.value" />
                </span>
            </xpath>
        </field>
    </record>

    <!-- Accounts Search View -->
    <record id="res_partner_accounts_search_view" model="ir.ui.view">
        <field name="name">res.partner.search.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_contacts.inherit_view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <filter string="Accounts" name="type_account" domain="[('is_parent_account', '=', True)]"/>
            </xpath>
            <!-- <xpath expr="//searchpanel/field[@name='parent_id']" position="before">
                <field name="parent_id" icon="fa-building-o" enable_counters="1" />
            </xpath> -->
        </field>
    </record>

    <!-- Accounts Window Action -->
    <record id="order_accounts_action" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="pod_contacts.inherit_view_res_partner_filter"/>
        <field name="domain">[('is_company', '=', True), ('is_parent_account', '=', True)]</field>
        <field name="context">{
            'default_company_type':'company',
            'default_is_company':True,
            'default_is_parent_account':True,
            'default_is_partner': True,
            'default_type': '',
            'default_practice_type': '',
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new account
            </p>
            <p>
                An Account is the parent entity of locations and establishes the hierachical relationship.
            </p>
        </field>
    </record>

</odoo>
