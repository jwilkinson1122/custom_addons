<odoo>
  <data>

    <!-- Patient Tree View -->
    <record model="ir.ui.view" id="pod_clinic_patient_tree">
      <field name="name">pod_clinic.patient_tree</field>
      <field name="model">pod_clinic.patient</field>
      <field name="arch" type="xml">
        <tree string="Patient">
          <field name="patient_id" />
          <field name="name" />
          <field name="owner_name" />
          <field name="patient_type" />
        </tree>
      </field>
    </record>

    <!-- Patient Form View -->
    <record model="ir.ui.view" id="pod_clinic_patient_form">
      <field name="name">pod_clinic.patient_form</field>
      <field name="model">pod_clinic.patient</field>
      <field name="arch" type="xml">
        <form string="Patient">
          <sheet>
            <!-- Patient Button Box -->
            <div class="oe_button_box" name="button_box">
              <!-- Patient Prescription Button -->
              <button name="open_patient_prescription" class="oe_stat_button" type="object" icon="fa-file-text-o">
                <field string="Prescription" name="prescription_count" widget="statinfo" />
              </button>
            </div>
            <div name="avatar">
              <field name="image" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
            </div>
            <div class="oe_title">
              <h1>
                <field name="patient_id" />
              </h1>
            </div>
            <group name="practice_patient">
              <!-- Patient Information-->
              <group name="patient_information" string="Patient Information">
                <field name="name" placeholder="Patient Name..."/>
                <field name="mobile" widget="phone" help="help"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
              </group>
              <!--Address Information -->
              <group name="address_information" string="Address Information">
                <span class="o_form_label o_td_label" name="address">Address</span>
                <div class="o_address_format">
                  <field name="street" placeholder="Street..." class="o_address_street"/>
                  <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                  <field name="city" placeholder="City" class="o_address_city"/>
                  <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                </div>
              </group>
            </group>
            <notebook>
              <!-- <page name="doctors_page" string="Doctors">
                <field name="doctor" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page> -->
              <!-- <page name="patients_page" string="Patients">
                <field name="patient" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page> -->
              <page name="information_page" string="Information">

              </page>
              <page name="attachments_page" string="Attachments">

              </page>
              <page name="prescriptions_page" string="Prescriptions">
                <field name="prescription" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>
            </notebook>
            <!-- <div class="oe_title">
              <h1>
                <field name="patient_id" />
              </h1>
            </div> -->
            <!-- <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group name="data">
              <group>
                <field name="name" />
                <field name="age" />
                <field name="gender" />
              </group>
              <group>
                <field name="patient_type" />
                <field name="patient_diagnosis" />
                <field name="owner" />
              </group>
            </group>
            <group string="Description">
              <field name="description" nolabel="1" placeholder="This is Animal Note" />
            </group>
            <note>

            </note> -->
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="pod_clinic_patient_kanban" model="ir.ui.view">
      <field name="name">pod_clinic.patient_kanban</field>
      <field name="model">pod_clinic.patient</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="age" />
          <field name="owner_name" />
          <field name="patient_type" />
          <field name="patient_diagnosis" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_pod_clinic_patient_kanban">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('item.template', 'image', record.id.raw_value)" alt="Item" />
                </div>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Owner :
                      <field name="owner_name" />
                    </li>
                    <li>
                      Age :
                      <field name="age" />
                    </li>
                    <li>
                      Type :
                      <span>
                        <field name="patient_type" />
                        -
                        <field name="patient_diagnosis" />
                      </span>
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Patient Graph View -->
    <record id="pod_clinic_patient_graph" model="ir.ui.view">
      <field name="name">pod_clinic.patient_graph</field>
      <field name="model">pod_clinic.patient</field>
      <field name="arch" type="xml">
        <graph string="Patient Graph" type="pie">
          <field name="patient_type" />
        </graph>
      </field>
    </record>

    <!-- Patient Search View -->
    <record id="pod_clinic_patient_search" model="ir.ui.view">
      <field name="name">pod_clinic.patient_search</field>
      <field name="model">pod_clinic.patient</field>
      <field name="arch" type="xml">
        <search string="Search Patient">
          <field name="name" filter_domain="['|',('name', 'ilike', self)]" />
          <field name="patient_type" />
          <separator />
          <filter string="Male" name="male" domain="[('gender', '=', 'male')]" />
          <filter string="Female" name="female" domain="[('gender', '=', 'female')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
            <filter string="Type" name="patient_type" context="{'group_by':'patient_type'}" />
            <filter string="Diagnosis" name="patient_diagnosis" context="{'group_by':'patient_diagnosis'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- Patient Action Window -->
    <record model="ir.actions.act_window" id="pod_clinic_patient_action_window">
      <field name="name">Patients</field>
      <field name="res_model">pod_clinic.patient</field>
      <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <!-- Menu Root -->
    <!-- <menuitem name="Practice" id="pod_clinic.root_menu" web_icon="pod_clinic,static/description/icon.png" /> -->

    <!-- Menu Patient -->
    <!-- <menuitem name="Patient" id="pod_clinic.patient" parent="pod_clinic.root_menu" /> -->

    <!-- Menu Patient -> Patient -->
    <menuitem name="Patients" id="pod_clinic.patient" parent="pod_clinic.root_menu" action="pod_clinic_patient_action_window" sequence="3"/>
  </data>
</odoo>