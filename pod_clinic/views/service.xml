<odoo>
    <data>
        <!-- Accommodation Tree View -->
        <record model="ir.ui.view" id="pod_clinic_service_tree">
            <field name="name">pod_clinic.service_tree</field>
            <field name="model">pod_clinic.service</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'canceled'" decoration-success="state == 'done'" decoration-danger="state == 'in_process'">
                    <field name="service_id" />
                    <field name="visitation_patient_name" />
                    <field name="visitation_doctor_name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <!-- Accommodation Form View -->
        <record model="ir.ui.view" id="pod_clinic_service_form">
            <field name="name">pod_clinic.service_form</field>
            <field name="model">pod_clinic.service</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <header>
                        <button name="action_check" type="object" string="Check" class="oe_highlight" states="draft" />
                        <button name="action_done" type="object" string="Done" class="oe_highlight" attrs="{'invisible': [('state','!=', 'in_process')]}" />
                        <button name="action_cancel" type="object" string="Cancel" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_process,done" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="service_id" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="visitation_patient_name" />
                                <field name="visitation_doctor_name" />
                            </group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" placeholder="This is Accommodation Note" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Accommodation Kanban View -->
        <record id="pod_clinic_service_kanban" model="ir.ui.view">
            <field name="name">pod_clinic.service_kanban</field>
            <field name="model">pod_clinic.service</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id" />
                    <field name="service_id" />
                    <field name="visitation_patient_name" />
                    <field name="visitation_doctor_name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>
                                            <span>
                                                <field name="service_id" />
                                            </span>
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <i>
                                            <i class="fa fa-file-text-o" role="img" aria-label="Start" title="Start" />
                                            <field name="date_start" />
                                        </i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span>
                                            <field name="visitation_patient_name" />
                                        </span>
                                    </div>
                                    <div class="col-6  text-right">
                                        <i>
                                            <i class="fa fa-file-text-o-check-o" role="img" aria-label="End" title="End" />
                                            <field name="date_end" />
                                        </i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span>
                                            Doctor
                                            <field name="visitation_doctor_name" />
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right" style="font-size:16px;">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'in_process': 'warning', 'done': 'success', 'canceled': 'danger'}}" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>



        <!-- Accommodation Graph View -->
        <record id="pod_clinic_service_graph" model="ir.ui.view">
            <field name="name">pod_clinic.patient_graph</field>
            <field name="model">pod_clinic.service</field>
            <field name="arch" type="xml">
                <graph string="Accommodation Graph" type="pie">
                    <field name="date_start" />
                    <field name="date_start" type="measure" />
                </graph>
            </field>
        </record>

        <!-- Accommodation Search View -->
        <record id="pod_clinic_service_search" model="ir.ui.view">
            <field name="name">pod_clinic.service_search</field>
            <field name="model">pod_clinic.service</field>
            <field name="arch" type="xml">
                <search string="Search Accommodation">
                    <field name="service_id" filter_domain="[('service_id', 'ilike', self)]" />
                    <field name="visitation_doctor_name" />
                    <separator />
                    <filter string="Today" name="date_today" domain="[('date_start', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date_start', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]" />
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                    <filter string="In Process" name="in_process" domain="[('state', '=', 'in_process')]" />
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]" />
                    <filter string="Canceled" name="canceled" domain="[('state', '=', 'canceled')]" />
                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" context="{'group_by':'state'}" />
                        <filter string="Status" name="state" context="{'group_by':'service_name'}" />
                        <filter string="Doctor" name="doctor_name" context="{'group_by':'visitation_doctor_name'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Accommodation Action Window -->
        <record model="ir.actions.act_window" id="pod_clinic_service_action_window">
            <field name="name">Accommodation</field>
            <field name="res_model">pod_clinic.service</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{'search_default_date_today': 1}</field>
        </record>

        <!-- Menu Root -->
        <menuitem name="Practice" id="pod_clinic.root_menu" />

        <!-- Menu Accommodation -->
        <menuitem name="Accommodation" id="pod_clinic.service" parent="pod_clinic.root_menu" action="pod_clinic_service_action_window" />
        <!-- <menuitem name="Accommodation" id="pod_clinic.service" parent="pod_clinic.root_menu" action="pod_clinic_service_action_window" /> -->
    </data>
</odoo>