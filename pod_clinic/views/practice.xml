<odoo>
  <data>

    <!-- Practice Tree View -->
    <record model="ir.ui.view" id="pod_clinic_practice_tree">
      <field name="name">pod_clinic.practice_tree</field>
      <field name="model">pod_clinic.practice</field>
      <field name="arch" type="xml">
        <tree>
          <field name="practice_id" />
          <field name="name" />
          <field name="phone" />
          <field name="email" />
        </tree>
      </field>
    </record>

    <!-- Practice Form View -->
    <record model="ir.ui.view" id="pod_clinic_practice_form">
      <field name="name">pod_clinic.practice_form</field>
      <field name="model">pod_clinic.practice</field>
      <field name="arch" type="xml">
        <form string="Practice">
          <header>
            <button name="%(pod_clinic.create_patient_wizard)d" string="Create Patient" type="action" class="oe_highlight" context="{'default_owner': active_id}" />
          </header>
          <sheet>
            <!-- Practice Button Box -->
            <div class="oe_button_box" name="button_box">
              <button name="open_practice_doctor" class="oe_stat_button" type="object" icon="fa-user-md">
                <field string="Doctors" name="doctor_count" widget="statinfo" />
              </button>
              <button name="open_practice_patient" class="oe_stat_button" type="object" icon="fa-address-card-o">
                <field string="Patients" name="patient_count" widget="statinfo" />
              </button>
              <button name="open_practice_prescription" class="oe_stat_button" type="object" icon="fa-file-text-o">
                <field string="Prescriptions" name="prescription_count" widget="statinfo" />
              </button>
            </div>
            <div name="avatar">
              <field name="image" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
            </div>
            <div class="oe_title">
              <h1>
                <field name="practice_id" />
              </h1>
            </div>
            <group name="practice_contact">
              <!-- Contact Information-->
              <group name="contact_information" string="Practice Information">
                <field name="name" placeholder="Practice Name..."/>
                <field name="mobile" widget="phone" help="help"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
              </group>
              <!--Address Information -->
              <group name="address_information" string="Address Information">
                <span class="o_form_label o_td_label" name="address">Address</span>
                <div class="o_address_format">
                  <field name="street" placeholder="Street..." class="o_address_street"/>
                  <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                  <field name="city" placeholder="City" class="o_address_city"/>
                  <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                </div>
              </group>
            </group>
            <notebook>
              <page name="affiliates_page" string="Affiliates">
                <!-- <field name="doctor" widget="many2many_kanban" domain="[('owner', '=', False)]" /> -->
              </page>
              <page name="doctors_page" string="Doctors">
                <field name="doctor" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>
              <page name="patients_page" string="Patients">
                <field name="patient" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>
              <page name="prescriptions_page" string="Prescriptions">
                <field name="prescription" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Practice Kanban View -->
    <record id="pod_clinic_practice_kanban" model="ir.ui.view">
      <field name="name">pod_clinic.practice_kanban</field>
      <field name="model">pod_clinic.practice</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="phone" />
          <field name="email" />
          <!-- <field name="street" />
          <field name="street2" />
          <field name="city" />
          <field name="state_id" />
          <field name="zip" />
          <field name="country_id" /> -->

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_pod_clinic_patient_kanban">
                <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('pod_clinic.practice', 'image', record.id.raw_value)}')" />
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/base/static/img/avatar.png'" />
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Phone :
                      <field name="phone" />
                    </li>
                    <li>
                      Email :
                      <field name="email" />
                    </li>
                    <li>
                      Address :
                      <field name="street" />
                      <field name="street2" />
                      <field name="city" />
                      <field name="state_id" />
                      <field name="zip" />
                      <field name="country_id" />

                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Practice Search View -->
    <record id="pod_clinic_practice_search" model="ir.ui.view">
      <field name="name">pod_clinic.practice_search</field>
      <field name="model">pod_clinic.practice</field>
      <field name="arch" type="xml">
        <search string="Search Practice">
          <field name="name" filter_domain="['|',('name', 'ilike', self),('practice_id', 'ilike', self)]" />
          <field name="practice_id" />
          <field name="name" />
          <!-- <separator />
          <filter string="Male" name="male" domain="[('gender', '=', 'male')]" />
          <filter string="Female" name="female" domain="[('gender', '=', 'female')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
          </group> -->
        </search>
      </field>
    </record>

    <!-- Practice Action Window -->
    <record model="ir.actions.act_window" id="practice_clinic_practice_action_window">
      <field name="name">Practice</field>
      <field name="res_model">pod_clinic.practice</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Profiles" id="pod_clinic.root_menu" web_icon="pod_clinic,static/description/icon.png" />

    <!-- Menu Patient -> Practice -->
    <menuitem name="Practice" id="pod_clinic.menu_practice" parent="pod_clinic.root_menu" action="practice_clinic_practice_action_window" sequence="1"/>
  </data>
</odoo>