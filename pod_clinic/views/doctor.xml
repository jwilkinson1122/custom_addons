<odoo>
  <data>
    <!-- Doctor Tree View -->
    <record model="ir.ui.view" id="pod_clinic_doctor_tree">
      <field name="name">pod_clinic.doctor_tree</field>
      <field name="model">pod_clinic.doctor</field>
      <field name="arch" type="xml">
        <tree string="Doctor">
          <field name="doctor_id" />
          <field name="name" />
        </tree>
      </field>
    </record>

    <!-- Doctor Form View -->
    <record model="ir.ui.view" id="pod_clinic_doctor_form">
      <field name="name">pod_clinic.doctor_form</field>
      <field name="model">pod_clinic.doctor</field>
      <field name="arch" type="xml">
        <form string="Doctor">
          <sheet>
            <!-- Doctor Button Box -->
            <div class="oe_button_box" name="button_box">
              <!-- Doctor Practice Doctor Button -->
              <!-- <button name="open_practice_doctor" class="oe_stat_button" type="object" icon="fa-user-md ">
                <field string="Doctors" name="doctor_count" widget="statinfo" />
              </button> -->
              <!-- Doctor Prescription Button -->
              <button name="open_doctor_prescription" class="oe_stat_button" type="object" icon="fa-file-text-o">
                <field string="Prescriptions" name="prescription_count" widget="statinfo" />
              </button>
              <!-- Doctor Patient Button -->
              <button name="open_doctor_patient" class="oe_stat_button" type="object" icon="fa-address-card-o">
                <field string="Patients" name="patient_count" widget="statinfo" />
              </button>
            </div>
            <!-- <div class="oe_title">
              <h1>
                <field name="doctor_id" />
              </h1>
            </div>
            <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group>
              <group>
                <field name="name" />
              </group>
             
            </group> -->
            <!-- <group name="Speciality">
              <field name="item_service" />
            </group> -->

            <div name="avatar">
              <field name="image" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
            </div>
            <div class="oe_title">
              <h1>
                <field name="doctor_id" />
              </h1>
            </div>

            <group name="practice_doctor">
              <!-- Patient Information-->
              <group name="doctor_information" string="Doctor Information">
                <field name="name" placeholder="Doctor Name..."/>
                <field name="mobile" widget="phone" help="help"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="owner" />
                <!-- <field name="owner_id" />
                <field name="owner_id_name" /> -->

              </group>
              <!--Address Information -->
              <!-- <group name="address_information" string="Address Information">
                <span class="o_form_label o_td_label" name="address">Address</span>
                <div class="o_address_format">
                  <field name="street" placeholder="Street..." class="o_address_street"/>
                  <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                  <field name="city" placeholder="City" class="o_address_city"/>
                  <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                </div>
              </group> -->
            </group>
            <notebook>
              <page name="prescriptions_page" string="Prescriptions">
                <field name="prescription" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>
              <page name="patients_page" string="Patients">
                <field name="patient" widget="many2many_kanban" domain="[('owner', '=', False)]" />
              </page>

            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Doctor Kanban View -->
    <record id="pod_clinic_doctor_kanban" model="ir.ui.view">
      <field name="name">pod_clinic.doctor_kanban</field>
      <field name="model">pod_clinic.doctor</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="phone" />
          <!-- <field name="age" /> -->
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_pod_clinic_docotr_kanban">
                <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_center d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('pod_clinic.doctor', 'image', record.id.raw_value)}')" />
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/base/static/img/avatar.png'" />
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <!-- <li>
                      Age :
                      <field name="age" />
                    </li> -->
                    <li>
                      Phone :
                      <field name="phone" />
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Doctor Search View -->
    <record id="pod_clinic_doctor_search" model="ir.ui.view">
      <field name="name">pod_clinic.doctor_search</field>
      <field name="model">pod_clinic.doctor</field>
      <field name="arch" type="xml">
        <search string="Search Doctor">
          <field name="name" filter_domain="['|',('name', 'ilike', self),('doctor_id', 'ilike', self)]" />
          <field name="item_service" />
          <field name="doctor_id" />
          <field name="name" />
          <separator />
          <group expand="0" string="Group By">
            <filter string="Speciality" name="item_service" context="{'group_by':'item_service'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- Doctor Action Window -->
    <record model="ir.actions.act_window" id="doctor_clinic_doctor_action_window">
      <field name="name">Doctors</field>
      <field name="res_model">pod_clinic.doctor</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>


    <menuitem name="Doctors" id="pod_clinic.menu_doctor" parent="pod_clinic.root_menu" action="doctor_clinic_doctor_action_window" sequence="2"/>

  </data>
</odoo>
 