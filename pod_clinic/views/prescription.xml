<odoo>
  <data>
    <!-- Prescription Tree View -->
    <record model="ir.ui.view" id="pod_clinic_prescription_tree">
      <field name="name">pod_clinic.prescription_tree</field>
      <field name="model">pod_clinic.prescription</field>
      <field name="arch" type="xml">
        <tree decoration-info="state == 'draft'" decoration-muted="state == 'canceled'" decoration-success="state == 'confirmed'">
          <field name="prescription_id" />
          <field name="owner" />
          <field name="patient" />
          <field name="doctor" />
          <field name="date" />
          <field name="state" />
        </tree>
      </field>
    </record>

    <!-- Prescription Form View -->
    <record model="ir.ui.view" id="pod_clinic_prescription_form">
      <field name="name">pod_clinic.prescription_form</field>
      <field name="model">pod_clinic.prescription</field>
      <field name="arch" type="xml">
        <form string="Patient">
          <header>
            <button name="%(pod_clinic.create_visitation_wizard)d" string="Create Visitation" type="action" class="oe_highlight" context="{'default_prescription':active_id,'default_owner':owner,'default_patient':patient,'default_doctor':doctor,'default_date':date}" attrs="{'invisible': [('state','!=', 'confirmed')]}" />
            <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" states="draft" />
            <button name="action_cancel" type="object" string="Cancel" />
            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed" />
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="prescription_id" />
              </h1>
            </div>
            <group name="data">
              <group>
                <field name="owner" />
                <field name="patient" />
              </group>
              <group>
                <field name="item_service" />
                <field name="doctor" />
                <field name="date" />
              </group>
            </group>
            <group string="Description">
              <field name="description" nolabel="1" placeholder="This is Prescription Note" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Prescription Kanban View -->
    <record id="pod_clinic_prescription_kanban" model="ir.ui.view">
      <field name="name">pod_clinic.prescription_kanban</field>
      <field name="model">pod_clinic.prescription</field>
      <field name="arch" type="xml">
        <kanban default_group_by="state" class="o_kanban_small_column">
          <field name="id" />
          <field name="prescription_id" />
          <field name="doctor_name" />
          <field name="patient" />
          <field name="date" />
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="row mb4">
                  <div class="col-6">
                    <strong>
                      <span>
                        <field name="prescription_id" />
                      </span>
                    </strong>
                  </div>
                  <div class="col-6 text-right">
                    <strong>
                      <i class="fa fa-file-text-o" role="img" aria-label="Date" title="Date" />
                      <field name="date" />
                    </strong>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <span>
                      <field name="patient" />
                    </span>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    <span>
                      Doctor
                      <field name="doctor_name" />
                    </span>
                  </div>
                  <div class="col-6">
                    <span class="float-right" style="font-size:16px;">
                      <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'confirmed': 'success', 'canceled': 'danger'}}" />
                    </span>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <!-- Prescription Graph View -->
    <record id="pod_clinic_prescription_graph" model="ir.ui.view">
      <field name="name">pod_clinic.patient_graph</field>
      <field name="model">pod_clinic.prescription</field>
      <field name="arch" type="xml">
        <graph string="Prescription Graph" type="pie">
          <field name="date" />
          <field name="date" type="measure" />
        </graph>
      </field>
    </record>

    <!-- Prescription Search View -->
    <record id="pod_clinic_prescription_search" model="ir.ui.view">
      <field name="name">pod_clinic.prescription_search</field>
      <field name="model">pod_clinic.prescription</field>
      <field name="arch" type="xml">
        <search string="Search Prescription">
          <field name="prescription_id" filter_domain="[('prescription_id', 'ilike', self)]" />
          <field name="doctor_name" />
          <field name="date" />
          <separator />
          <filter string="Today" name="date_today" domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]" />
          <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
          <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]" />
          <filter string="Canceled" name="canceled" domain="[('state', '=', 'canceled')]" />
          <group expand="0" string="Group By">
            <filter string="Status" name="state" context="{'group_by':'state'}" />
            <filter string="Doctor" name="doctor_name" context="{'group_by':'doctor_name'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- Prescription Action Window -->
    <record model="ir.actions.act_window" id="pod_clinic_prescription_action_window">
      <field name="name">Prescription</field>
      <field name="res_model">pod_clinic.prescription</field>
      <field name="view_mode">kanban,tree,form,graph</field>
      <field name="context">{'search_default_date_today': 1}</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Practice" id="pod_clinic.root_menu" web_icon="pod_clinic,static/description/icon.png" />

    <!-- Menu Prescription -->
    <menuitem name="Prescription" id="pod_clinic.prescription" parent="pod_clinic.root_menu" action="pod_clinic_prescription_action_window" sequence="4"/>
  </data>
</odoo>