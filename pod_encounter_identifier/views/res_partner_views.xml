<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="pod_administration_practice.res_partner_view_form"
        />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    name="practice"
                    string="Practice"
                    attrs="{'invisible': [('is_practice', '!=', True)]}"
                >
                    <group>
                        <group>
                            <field name="practice_alias" />
                        </group>
                        <group>
                            <field
                                name="encounter_sequence_prefix"
                                style="padding-right: 1.0em"
                                class="oe_inline"
                                attrs="{'required': [('is_practice', '=', True)]}"
                            />
                            <field
                                name="encounter_sequence_id"
                                groups="base.group_no_one"
                            />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
