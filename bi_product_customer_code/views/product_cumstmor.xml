<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>

        <record id="view_product_account_form_inherit" model="ir.ui.view">
            <field name="name">product.template.account.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form//field[@name='sale_ok']" position="before">
                    <field name="product_customer_code" invisible="1"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="name" string="Customer Code" invisible="not product_customer_code">
                        <field name="product_customer_code_ids" nolabel="1" colspan="4" widget="one2many_list"
                               context="{'default_product_tmpl_id':context.get('product_tmpl_id',active_id)}">
                            <tree string="Product Customer Code" editable="bottom">
                                <field name="product_id"
                                    domain="[('product_tmpl_id', '=?', context.get('default_product_tmpl_id', False))]"/>
                                <field name="product_code"/>
                                <field name="name_id"/>
                            </tree>
                            <form string="Product Customer Code" version="7.0">
                                <field name="product_id" readonly="1"
                                    domain="[('product_tmpl_id', '=?', context.get('default_product_tmpl_id', False))]"/>                               
                                <field name="product_code"/>
                                <field name="name_id"/>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="view_product_customer_code_form">
            <field name="name">view.product.customer.code.form</field>
            <field name="model">product.customer.code</field>
            <field name="arch" type="xml">
                <form string="Product Customer Code" version="7.0">
                    <field name="product_code"/>
                    <field name="name_id"/>
                     <field name="product_id"/>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_customer_code_tree">
            <field name="name">view.product.customer.code.tree</field>
            <field name="model">product.customer.code</field>
            <field name="arch" type="xml">
                <tree string="Product Customer Code">
                    <field name="product_code"/>
                    <field name="name_id"/>
                     <field name="product_id"/>
                </tree>
            </field>
        </record>


        <record id="action_view_product_customer_code" model="ir.actions.act_window">
            <field name="name">Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.customer.code</field>
            <field name="view_mode">form</field>
            <field name="context">{'visible_product_tmpl_id':False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Customer Code 
                </p>
            </field>
        </record>

    </data>
</odoo>
