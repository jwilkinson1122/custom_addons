        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


	<record id="group_medical_practitioner" model="res.groups">
        <field name="name">Practitioner</field>
        <field name="comment">the user will have access to his own data in the Practitioner.</field>
    </record>
	
	<record id="group_medical_chemist" model="res.groups">
        <field name="name">Chemist</field>
        <field name="comment">the user will have access to his own data in the Chemist.</field>
    </record>

    <record id="group_medical_receptionist" model="res.groups">
        <field name="name">Receptionist</field>
        <field name="comment">the user will have access to his own data in the Receptionist.</field>
    </record>

    <record id="group_medical_medical_group" model="res.groups">
        <field name="name">Medical Group</field>
        <field name="comment">the user will have access to his own data in the Medical Group.</field>
    </record>



 

