<data noupdate="1">

    <record id="module_category_medical_management" model="ir.module.category">
        <field name="name">Podiatry Medical Management</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_medical_user" model="res.groups">
        <field name="name">Podiatry Medical Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
