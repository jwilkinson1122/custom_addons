<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">pod.doctor.tree</field>
        <field name="model">pod.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="age"/>
                <field name="enrolled_date"/>

                <field name="view_prescription_ids"/>
            </tree>
        </field>
    </record>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">pod.doctor.form</field>
        <field name="model">pod.doctor</field>
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button name="action_url" string="Create Portal User" class="btn-primary" type="object"/>
                </header> -->
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="address"/>


                            <field name="age"/>
                            <field name="enrolled_date"/>
                            <field name="image" widget='image' class='oe_avatar'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Patient List" autofocus="autofocus">
                            <group string="Total prescriptions:">
                                <h2>
                                    <field name="total_prescriptions"/>
                                </h2>
                            </group>
                            <field name='view_prescription_ids'/>
                        </page>
                        <page string="About">
                            <field name='description'/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

