<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Form View Of Practice Information -->
    <record id="view_podiatry_practice_form" model="ir.ui.view">
        <field name="name">podiatry.practice.form</field>
        <field name="model">podiatry.practice</field>
        <field name="arch" type="xml">
            <form string="Practice Information">
                <sheet>
                    <separator string="Practice Configuration" />
                    <group col="4" colspan="4">
                        <field name="name" string="Name" placeholder="Practice Name" />
                        <field name="code" placeholder="Code" />
                    </group>
                    <group>
                        <label for="street" string="Address" />
                        <div class="o_address_format">
                            <field name="street" class="o_address_street" placeholder="Street..." />
                            <field name="street2" class="o_address_street" placeholder="Street2..." />
                            <field name="city" class="o_address_city" placeholder="City" required="1" />
                            <field name="state_id" class="o_address_state" domain="[('country_id','=',country_id)]" required="1" placeholder="State" options="{&quot;no_open&quot;: true}" />
                            <field name="zip" class="o_address_zip" placeholder="ZIP" />
                            <field name="country_id" class="o_address_city,oe_no_button" placeholder="Country" options="{&quot;no_open&quot;: true}" required="1"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View Of Practice Information -->
    <record id="view_podiatry_practice_tree" model="ir.ui.view">
        <field name="name">podiatry.practice.tree</field>
        <field name="model">podiatry.practice</field>
        <field name="arch" type="xml">
            <tree string="Practice Information">
                <field name="name" string="Practice Name" />
                <field name="code" />
            </tree>
        </field>
    </record>



    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="string">Practice Name</attribute>
            </field>
        </field>
    </record>



    <!-- Action Of Form & Tree Views Of Practice Information -->
    <!-- <record id="action_podiatry_practice_form" model="ir.actions.act_window">
        <field name="name">Practices</field>
        <field name="res_model">podiatry.practice</field>
        <field name="view_mode">tree,form</field>
    </record> -->


    <record id="action_podiatry_practice" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.practice</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- <menuitem id="menu_practitioners" name='Practitioners' parent="pod_hms.main_menu_podiatry_management" action="action_podiatry_practitioner" sequence="2" />
 -->
    <menuitem id="menu_clinics_root" name='Administration' parent="menu_podiatry_practice" />

    <menuitem id="menu_clinics" name='Clinics' parent="menu_clinics_root" action="action_podiatry_practice" sequence="0" />


</odoo>
