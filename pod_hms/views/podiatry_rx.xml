<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podiatry_rx_tree_view" model="ir.ui.view">
        <field name="name">podiatry.rx.tree.view</field>
        <field name="model">podiatry.rx</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="rx_id" />
                <field name="patient_id" />
                <field name="date_analysis" />
            </tree>
        </field>
    </record>



    <record id="podiatry_rx_form_view" model="ir.ui.view">
        <field name="name">podiatry.rx.form.view</field>
        <field name="model">podiatry.rx</field>
        <field name="arch" type="xml">
            <form string="RX Test">
                <header>
                    <button name="%(action_create_rx_invoice2)d" string="Create Rx Invoice" type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <group string="Main Info">
                        <group>
                            <field name="name" readonly="1" />
                            <field name="date_analysis" />
                            <field name="podiatry_rx_practitioner_id" />
                            <field name="requestor_practitioner_id" required="1" />
                        </group>
                        <group>
                            <field name="rx_id" required="1" />
                            <field name="patient_id" required="1" />
                            <field name="date_requested" />
                        </group>
                    </group>
                    <group string="Total Cases">
                        <field name="criteria_ids" colspan="4" nolabel="1">
                            <tree editable="top" string="Test Cases">
                                <field name="seq" />
                                <field name="name" />
                                <field name="result_text" />
                                <field name="normal_range" />
                                <field name="rx_unit_id" />
                            </tree>
                            <form string="Test Cases">

                                <field name="name" />
                                <field name="seq" />
                                <field name="result_text" />
                                <field name="rx_unit_id" />
                                <field name="normal_range" />
                            </form>
                        </field>
                    </group>
                    <group string="Extra Info">
                        <field name="results" />
                        <field name="diagnosis" />
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="action_podiatry_rx_form" model="ir.actions.act_window">
        <field name="name">Rx Results</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.rx</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_podiatry_rx_tree" model="ir.actions.act_window">
        <field name="name">Rx Results</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.rx</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree</field>
    </record>

    <act_window id="action_view_rx_id" name="Rx Reports" res_model="podiatry.rx" binding_model="podiatry.patient" view_mode="tree,form" domain="[('patient_id', '=', active_id)]" />

    <!-- <menuitem name="Rx Results" id="menu_rx_result" parent="pod_hms.main_menu_rx" action="action_podiatry_rx_form" sequence="0" /> -->

</odoo>
