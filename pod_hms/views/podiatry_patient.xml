<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podiatry_patients_form_view" model="ir.ui.view">
        <field name="name">podiatry.patients.form.view</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="print_report" type="object" string="Print Patient Card" class="oe_highlight" />
                </header>
                <sheet>
                    <field name="photo" nolabel="1" class="oe_left oe_avatar" img_width="120" img_height="120" width="120" height="120" widget="image" />
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="patient_id" />
                        </div>
                        <h1>
                            <field style="width: 50%%" name="patient_id" default_focus="1" placeholder="Patient Name" context="{'default_is_patient': 1,'default_is_person': 1}" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_of_birth" />
                            <!-- <field name="marital_status" /> -->
                        </group>
                        <group>
                            <field name="gender" />
                            <field name="age" readonly="1" />
                            <field name="partner_address_id" />
                        </group>
                    </group>
                    <group>
                        <separator colspan="4" string="Patient Critical Information" />
                        <newline />
                        <field colspan="6" name="critical_info" nolabel="1" />
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group string="Patient General Information">
                                <!-- <group>
                                    <field name="blood_type" />
                                    <field name="current_insurance_id" />
                                </group> -->
                                <group>
                                    <field name="rh" />
                                    <field name="receivable" />
                                    <field name="primary_care_practitioner_id" />
                                </group>
                            </group>

                            <group colspan="4" string="Patient Extra Information">
                                <field colspan="4" name="general_info" nolabel="1" />
                                <newline />
                                <group>
                                    <field name="deceased" />
                                    <field name="date_of_death" attrs="{'invisible':[('deceased','=',False)],'required':[('deceased','=',1)]}" />
                                    <field name="cause_of_death" attrs="{'invisible':[('deceased','=',False)]}" />
                                </group>
                            </group>
                        </page>

                        <page string="Pathologies">
                            <field name="patient_condition_ids" nolabel="1" widget="one2many_list" />
                        </page>

                        <page string="Device">
                            <group>
                                <field name="prescription_ids" string="Device History" colspan="4" widget="one2many_list">
                                    <tree>
                                        <field name="podiatry_treatment_id" />
                                        <field name="indication_pathology_id" />
                                        <field name="start_treatment" />
                                        <field name="end_treatment" />
                                        <field name="is_active" />
                                        <field name="doctor_practitioner_id" />
                                    </tree>
                                </field>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="podiatry_patients_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patients.tree.view</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient Information">
                <field name="name" />
                <field name="patient_id" />
                <field name="gender" />
                <field name="date_of_birth" />
                <field name="primary_care_practitioner_id" />
                <field name="deceased" />
            </tree>
        </field>
    </record>

    <record id="action_podiatry_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <act_window id="action_view_priscription_id2" name="Prescription Orders" res_model="podiatry.prescription.order" binding_model="podiatry.patient" view_mode="tree" domain="[('patient_id', '=', active_id)]" />

    <act_window id="action_view_rx_id" name="Rx Reports" res_model="podiatry.rx" binding_model="podiatry.patient" view_mode="tree,form" domain="[('patient_id', '=', active_id)]" />

    <act_window id="action_products_services_id" name="Products &amp; Services" res_model="podiatry.patient.products.services" binding_model="podiatry.patient" view_mode="tree,form" domain="[('patient_id', '=', active_id)]" />

    <!-- <menuitem id="menu_podiatry_patients" name="Patients" action="action_podiatry_patient" parent="main_menu_podiatry_management" sequence="3" /> -->

    <menuitem id="menu_podiatry_patients" name='Patients' parent="menu_podiatry_accounts" action="action_podiatry_patient" sequence="3" />


</odoo>
