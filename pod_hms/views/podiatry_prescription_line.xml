<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view -->
    <record id="podiatry_prescription_line_tree_view" model="ir.ui.view">
        <field name="name">podiatry.prescription.line.tree.view</field>
        <field name="model">podiatry.prescription.line</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Prescription lines">
                <field name="prnt" />
                <field name="product_id" />
                <!-- <field name="treatment_id" /> -->
                <!-- <field name="indication" /> -->
                <field name="quantity" />
                <field name="quantity_unit_id" />
                <field name="form" />
                <field name="prescription_quantity_id" />
                <field name="quantity" />
                <field name="duration" />
                <field name="duration_period" />
                <field name="allow_substitution" />
                <field name="short_comment" />
            </tree>
        </field>
    </record>

    <record id="podiatry_prescription_line_form_view" model="ir.ui.view">
        <field name="name">podiatry.prescription.line.form.view</field>
        <field name="model">podiatry.prescription.line</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <notebook>
                    <page string="Main Info">
                        <group>
                            <group colspan="4" col="4">
                                <field name="product_id" required="1" />
                                <!-- <field name="indication" /> -->
                                <field name="allow_substitution" />
                                <field name="prnt" />
                                <field name="form" />
                                <field name="route" />
                                <field name="start_treatment" />
                                <field name="end_treatment" />
                            </group>
                            <group colspan="4" string="Quantity">
                                <group colspan="6" col="6">
                                    <field name="quantity" />
                                    <field name="quantity_unit_id" />

                                    <field name="qty" />
                                </group>
                                <separator string="Common Quantity" />
                                <group colspan="4" col="4">
                                    <field name="prescription_quantity_id" />
                                    <field name="admin_times" />
                                </group>
                                <separator string="Specific Quantity" />
                                <group colspan="4" col="4">
                                    <field name="frequency" />
                                    <field name="frequency_unit" />
                                </group>
                            </group>
                            <group colspan="4" col="4">
                                <field name="duration" />
                                <field name="duration_period" />
                                <field name="review" />
                                <field name="quantity" />
                                <field name="refills" />
                                <field name="short_comment" />
                            </group>
                        </group>
                    </page>
                    <page string="Presentation">

                    </page>
                    <page string="Composition">

                    </page>

                    <page string="Quantity">

                    </page>

                    <page string="Adverse Reactions">

                    </page>

                    <page string="Storage Pathologies">

                    </page>

                    <page string="Extra Info">
                        <field name="notes" />
                    </page>
                </notebook>

            </form>
        </field>
    </record>

</odoo>
