<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="podiatry_rx_type_tree_view" model="ir.ui.view">
        <field name="name">podiatry.test.type.tree.view</field>
        <field name="model">podiatry.rx_type</field>
        <field name="arch" type="xml">
            <tree string="Rx test type">
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="podiatry_rx_type_form_view" model="ir.ui.view">
        <field name="name">podiatry.test.type.form.view</field>
        <field name="model">podiatry.rx_type</field>
        <field name="arch" type="xml">
            <form string="Rx">
                <sheet>
                    <notebook>
                        <page string="Main Info">
                            <group colspan="4" col="4">
                                <field name="name" required="1" />
                                <field name="code" />
                                <field name="criteria_ids" colspan="4" nolabel="1">
                                    <tree editable="top" string="Test Cases">
                                        <field name="seq" />
                                        <field name="name" />

                                        <field name="normal_range" />
                                        <field name="rx_unit_id" />
                                    </tree>
                                    <form string="Test Cases">
                                        <field name="name" />
                                        <field name="seq" />
                                        <field name="rx_unit_id" />
                                        <field name="normal_range" />
                                    </form>

                                </field>
                                <field name="podiatry_product_id" />
                            </group>
                        </page>
                        <page string="Extra Info">
                            <field name="info" />
                        </page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="action_podiatry_rx_type" model="ir.actions.act_window">
        <field name="name">Product Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.rx_type</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Product Type" id="menu_rx_new_type_rx" parent="main_menu_conf_rx" action="action_podiatry_rx_type" />

</odoo>
