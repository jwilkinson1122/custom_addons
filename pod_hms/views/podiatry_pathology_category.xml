<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_pathology_category_form_view" model="ir.ui.view">
        <field name="name">podiatry.pathology.category.form.view</field>
        <field name="model">podiatry.pathology.category</field>
        <field name="arch" type="xml">
            <form string="Pathology Categories">
                <group colspan="4" col="4">
                    <field name="name" />
                    <field name="active" />
                    <field name="parent_id" />
                    <field name="code"/>
                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_pathology_category_tree_view" model="ir.ui.view">
        <field name="name">podiatry.pathology.category.tree.view</field>
        <field name="model">podiatry.pathology.category</field>
        <field name="arch" type="xml">
            <tree string="Pathology Categories">
                <field name="name" />
                <field name="active" />
                <field name="parent_id" />
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_podiatry_pathology_category_tree" model="ir.actions.act_window">
        <field name="name">Categories Structure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.pathology.category</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="action_podiatry_pathology_category_form" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.pathology.category</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


    <menuitem id="menu_categories_categories" action="action_podiatry_pathology_category_form" sequence="2" parent="menu_conditions" />







</odoo>
