<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_pathology_category_form_view" model="ir.ui.view">
        <field name="name">podiatry.pathology.category.form.view</field>
        <field name="model">podiatry.pathology.category</field>
        <field name="arch" type="xml">
            <form string="Pathology Categories">
                <group colspan="4" col="4">
                    <field name="name" />
                    <field name="active" widget="boolean_toggle"/>

                    <!-- <field name="active" /> -->
                    <field name="parent_id"/>
                    <field name="code"/>

                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_pathology_category_tree_view" model="ir.ui.view">
        <field name="name">podiatry.pathology.category.tree.view</field>
        <field name="model">podiatry.pathology.category</field>
        <field name="arch" type="xml">
            <tree string="Pathology Categories">
                <field name="name" />
                <field name="active" widget="boolean_toggle"/>
                <field name="parent_id"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View Of Pathologies -->

    <!-- active = fields.Boolean(string="Active", default=True) -->

    <record id="podiatry_pathology_category_kanban_view" model="ir.ui.view">
        <field name="name">podiatry.pathology.category.kanban.view</field>
        <field name="model">podiatry.pathology.category</field>
        <field name="arch" type="xml">
            <!-- <kanban default_group_by="active" decoration-danger="active=='False'" decoration-success="active=='True'"> -->
            <!-- <kanban default_group_by="active" decoration-danger="[('active', '=', False)]" decoration-success="[('active', '=', True)]"> -->
            <kanban default_group_by="parent_id">


                <field name="name"/>
                <field name="parent_id"/>
                <!-- <field name="parent_id" attrs="{'invisible': [('parent_id', '!=', False)]}"/> -->

                <field name="code"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <h1 class="o_kanban_record_title">
                                    <field name="name"/>
                                </h1>
                                <ul>
                                    <li>Name :
                                        <field name="name"/>
                                    </li>
                                    <li>Parent Category :
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <!-- <field name="parent_id"/> -->
                                        <field name="parent_id"/>

                                    </li>
                                    <li>Code :
                                        <field name="code"/>
                                    </li>
                                    <li>Status :
                                        <field name="active"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Of Form, Tree & Kanban View Of Podiatry Pathology Categories Structure -->
    <record id="action_podiatry_pathology_category_tree" model="ir.actions.act_window">
        <field name="name">Categories Structure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.pathology.category</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('parent_id','!=',False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Add a new pathology category
            </p>
            <p>
               Classify medical pathologies by category.
            </p>
        </field>
    </record>
    <!-- Action Of Form, Tree & Kanban View Of Podiatry Pathology Categories -->
    <record id="action_podiatry_pathology_category_form" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.pathology.category</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Add a new pathology category
            </p>
            <p>
               Classify medical pathologies by category.
            </p>
        </field>

    </record>




    <menuitem id="menu_pathology_categories" parent="pod_hms.menu_pathologies_root" action="action_podiatry_pathology_category_form" sequence='2' />
    <menuitem id="menu_pathology_category_structure" parent="pod_hms.menu_pathologies_root" action="action_podiatry_pathology_category_tree" sequence='2' />

    <!-- <menuitem id="menu_categories_categories" action="action_podiatry_pathology_category_form" sequence="2" parent="pod_hms.main_menu_configuration" /> -->







</odoo>
