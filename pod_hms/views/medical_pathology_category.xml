<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_pathology_category_form_view" model="ir.ui.view">
        <field name="name">medical.pathology.category.form.view</field>
        <field name="model">medical.pathology.category</field>
        <field name="arch" type="xml">
            <form string="Condition categories">
                <sheet>
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="active" />
                        <field name="parent_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medical_pathology_category_tree_view" model="ir.ui.view">
        <field name="name">medical.pathology.category.tree.view</field>
        <field name="model">medical.pathology.category</field>
        <field name="arch" type="xml">
            <tree string="Condition Categories">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_medical_pathology_category_tree" model="ir.actions.act_window">
        <field name="name">Condition categories Structure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.pathology.category</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_medical_pathology_category" model="ir.actions.act_window">
        <field name="name">Condition Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.pathology.category</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_conditions" name="Conditions" parent="pod_hms.menu_configuration" sequence='1' />

    <menuitem id="menu_categories" name="Categories" action="action_medical_pathology_category" parent="pod_hms.menu_conditions" /> -->

</odoo>
