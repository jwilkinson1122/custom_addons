<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_inherit_form_health_center_view" model="ir.ui.view">
        <field name="name">res.partner.inherit.form.health.center.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <page name="internal_notes" position="after">
                <page name="references" string="References">
                    <field name="reference" context="{'default_partner_id': id}">
                        <tree editable="bottom">
                            <field name="reference_type_id"/>
                            <field name="value"/>
                            <field name="partner_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </page>

            <notebook>
                <page string="Medical">
                    <group colspan="6" col="6">
                        <field name="is_patient" />
                        <field name="is_practitioner" />
                        <field name="is_practice" />
                        <field name="is_person" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <menuitem id="menu_podiatry_clinics" name="Podiatry Clinics" parent="main_menu_configuration" />


</odoo>
