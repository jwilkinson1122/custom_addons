<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="medical_patient_device1_form_view" model="ir.ui.view">
            <field name="name">medical.patient.device1.form.view</field>
            <field name="model">medical.patient.device1</field>
            <field name="arch" type="xml">
                <form string="Device History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="medical_product_id" />
                            <field name="practitioner_practitioner_id" />
                            <field name="is_active" />
                            <field name="pathology_id" />
                            <field name="prescription_date" />
                        </group>
                        <separator colspan="4" string="Admnistration" />
                        <group colspan="4" col="4">
                            <field name="quantity" />
                            <field name="qty" />
                        </group>
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="medical_patient_device1_tree_view" model="ir.ui.view">
            <field name="name">medical.patient.device1.tree.view</field>
            <field name="model">medical.patient.device1</field>
            <field name="arch" type="xml">
                <tree string="Device">
                    <field name="medical_product_id" />
                    <field name="practitioner_practitioner_id" />
                    <field name="is_active" />
                    <field name="pathology_id" />
                    <field name="prescription_date" />
                </tree>
            </field>
        </record>

</odoo>
