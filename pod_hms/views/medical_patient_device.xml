<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="medical_patient_device_form" model="ir.ui.view">
            <field name="name">medical.patient.device.form</field>
            <field name="model">medical.patient.device</field>
            <field name="arch" type="xml">
                <form string="Device History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="product" />
                            <field name="practitioner_practitioner_id" />
                            <field name="is_active" />
                            <field name="prescription_date" />
                        </group>
                        <separator colspan="4" string="Admnistration" />
                        <group colspan="4" col="4">
                            <field name="quantity" />
                            <field name="qty" />
                        </group>
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="medical_patient_device_tree" model="ir.ui.view">
            <field name="name">medical.patient.device.tree</field>
            <field name="model">medical.patient.device</field>
            <field name="arch" type="xml">
                <tree string="Device">
                    <field name="product" />
                    <field name="practitioner_practitioner_id" />
                    <field name="is_active" />
                    <field name="prescription_date" />
                </tree>
            </field>
        </record>

</odoo>
