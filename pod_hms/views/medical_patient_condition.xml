<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="medical_patient_condition_form_view" model="ir.ui.view">
            <field name="name">medical.patient.condition.form.view</field>
            <field name="model">medical.patient.condition</field>
            <field name="arch" type="xml">
                <form string="Conditions">
                    <group string="Main">
                        <group>
                            <field name="pathology_id" />
                            <field name="condition_severity" />
                            <!-- <field name="status" /> -->
                            <field name="is_active" />
                        </group>
                        <group>
                            <field name="short_comment" />
                            <field name="diagnosis_date" />
                            <field name="age" />
                            <field name="practitioner_id" />
                        </group>
                    </group>

                    <group string="Allergies">
                   
                    </group>

                    <group string="Pregnancy">
                    
                    </group>

                    <group string="Therapy">
                       
                    </group>

                    <group string="Extra Info">
                        <field name="extra_info" nolabel="1" colspan="2"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="medical_patient_condition_tree_view" model="ir.ui.view">
            <field name="name">medical.patient.condition.tree.view</field>
            <field name="model">medical.patient.condition</field>
            <field name="arch" type="xml">
                <tree string="Conditions">
                    <field name="pathology_id" />
                    <!-- <field name="status" /> -->
                    <field name="is_active" />
                    <field name="diagnosis_date" />
                    <field name="short_comment" />
                </tree>
            </field>
        </record>

        <record id="action_medical_patient_condition" model="ir.actions.act_window">
            <field name="name">Conditions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.patient.condition</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
