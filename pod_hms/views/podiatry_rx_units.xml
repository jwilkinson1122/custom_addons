<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podiatry_rx_units_tree_view" model="ir.ui.view">
        <field name="name">podiatry.rx.units.tree.view</field>
        <field name="model">podiatry.rx.units</field>
        <field name="arch" type="xml">

            <tree string="Test Unit">
                <field name="name" required="1" />
                <field name="code" />
            </tree>
        </field>
    </record>


    <record id="podiatry_rx_units_form_view" model="ir.ui.view">
        <field name="name">podiatry.rx.units.form.view</field>
        <field name="model">podiatry.rx.units</field>
        <field name="arch" type="xml">

            <form string="Test Unit">
                <group colspan="4" col="4">
                    <field name="name" required="1" />
                    <field name="code" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_podiatry_rx_units" model="ir.actions.act_window">
        <field name="name">Product Units</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.rx.units</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Product Units" id="menu_rx_units" parent="main_menu_conf_rx" action="action_podiatry_rx_units" />

</odoo>