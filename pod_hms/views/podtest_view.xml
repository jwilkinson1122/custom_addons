<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podtest_tree" model="ir.ui.view">
        <field name="name">pod.podtest.tree</field>
        <field name="model">pod.podtest</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="podtest_form" model="ir.ui.view">
        <field name="name">pod.podtest.form</field>
        <field name="model">pod.podtest</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="podtest_search" model="ir.ui.view">
        <field name="name">pod.podtest.search</field>
        <field name="model">pod.podtest</field>
        <field name="arch" type="xml">
            <search string="Medicaltest">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="podtest_action" model="ir.actions.act_window">
        <field name="name">Medicaltest</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.podtest</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create pod test List
            </p>
        </field>
    </record>

    <menuitem id="podiatry_podtest" name="Medical test" parent="podiatry_root" action="podtest_action" />

</odoo>