<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_product_route_form_view" model="ir.ui.view">
        <field name="name">podiatry.product.route.form.view</field>
        <field name="model">podiatry.product.route</field>
        <field name="arch" type="xml">
            <form string="Treatment Administration Routes">
                <group colspan="4" col="4">
                    <field name="name" />
                    <field name="code" />
                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_product_route_tree_view" model="ir.ui.view">
        <field name="name">podiatry.product.route.tree.view</field>
        <field name="model">podiatry.product.route</field>
        <field name="arch" type="xml">
            <tree string="Treatment Administration Routes">
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="action_podiatry_product_route" model="ir.actions.act_window">
        <field name="name">Treatment Administration Routes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.product.route</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
