<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_patient_device1_form_view" model="ir.ui.view">
        <field name="name">podiatry.patient.device1.form.view</field>
        <field name="model">podiatry.patient.device1</field>
        <field name="arch" type="xml">
            <form string="Device History">
                <group>
                    <group colspan="4" col="4">
                        <field name="podiatry_treatment_id" />
                        <field name="doctor_practitioner_id" />
                        <field name="is_active" />
                        <field name="indication_pathology_id" />
                        <field name="start_treatment" />
                        <field name="end_treatment" />
                        <field name="course_completed" />
                        <field name="discontinued" />
                    </group>
                    <separator colspan="4" string="Admnistration" />
                    <group colspan="4" col="4">
                        <field name="product_route_id" />
                    </group>
                    <separator colspan="4" string="Quantity" />
                    <group colspan="4" col="4">
                        <field name="quantity" />
                        <field name="qty" />
                        <field name="quantity_unit_id" />
                    </group>
                    <separator colspan="4" string=" Treatment Duration " />
                    <group colspan="4" col="4">
                        <field name="duration" />
                        <field name="duration_period" />
                    </group>
                    <separator colspan="4" string="  Common Quantity  " />
                    <group colspan="4" col="4">
                        <field name="device_quantity_id" />
                        <field name="admin_times" />
                    </group>
                    <separator colspan="4" string="  Specific Quantity  " />
                    <group colspan="4" col="4">
                        <field name="frequency" />
                        <field name="frequency_unit" />
                    </group>
                    <separator colspan="4" string=" Notes" />
                    <group colspan="4" col="4">
                        <field name="notes" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_patient_device1_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patient.device1.tree.view</field>
        <field name="model">podiatry.patient.device1</field>
        <field name="arch" type="xml">
            <tree string="Device">
                <field name="podiatry_treatment_id" />
                <field name="doctor_practitioner_id" />
                <field name="is_active" />
                <field name="indication_pathology_id" />
                <field name="start_treatment" />
                <field name="end_treatment" />
                <field name="course_completed" />
                <field name="discontinued" />
            </tree>
        </field>
    </record>

</odoo>
