<?xml version="1.0"?>
<odoo>

    <record id="view_report_prescription_form" model="ir.ui.view">
        <field name="name">pod.prescription.report.wizard.form</field>
        <field name="model">pod.prescription.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Prescriptions">
                <group>
                    <field name="patient_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_prescription" model="ir.actions.act_window">
        <field name="name">Print Prescription</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.prescription.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_prescription_form"/>
        <field name="target">new</field>
    </record>

</odoo>
