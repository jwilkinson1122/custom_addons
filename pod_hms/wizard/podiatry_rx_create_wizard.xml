<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podiatry_rx_create_wizard_view" model="ir.ui.view">
        <field name="name">podiatry.rx.create.wizard.view</field>
        <field name="model">podiatry.rx.create</field>
        <field name="arch" type="xml">
            <form string="Create Rx">
                <separator colspan="4" string="Do you want to generate the test(s) ?" />
                <newline />
                <separator string="Create Tests" colspan="6" />
                <footer>
                    <button name="create_rx" string="Create Rx" type="object" class="oe_highlight" />
                        or
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_create_rx_result2" name="Create Rx Result" res_model="podiatry.rx.create" binding_model="podiatry.patient.rx" view_mode="form" target="new" />

    <menuitem name="Products" id="main_menu_conf_rx" parent = "pod_hms.main_menu_configuration" sequence='0'/>

</odoo>
