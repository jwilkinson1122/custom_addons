<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <act_window id="action_create_rx_invoice2" name="Create Rx Invoice" res_model="podiatry.rx.invoice" binding_model="podiatry.patient.rx" view_mode="form" target="new"/>

    <record id="podiatry_rx_invoice_wizard_view" model="ir.ui.view">
        <field name="name">podiatry.rx.invoice.wizard.view</field>
        <field name="model">podiatry.rx.invoice</field>
        <field name="arch" type="xml">
            <form string="Create Rx">
                <separator colspan="4" string="Do you want to generate the invoice(s)?"/>
                <newline/>
                <separator string="Create Invoice" colspan="6"/>
                <footer>
                    <button name="create_rx_invoice" string="Create Rx Invoice" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
