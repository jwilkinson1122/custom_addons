<odoo noupdate="1">

    <record id="stage_draft" model="medical.prescription.order.stage">
        <field name="name">Draft</field>
        <field name="sequence">10</field>
        <field name="state">draft</field>
    </record>
    <record id="stage_done" model="medical.prescription.order.stage">
        <field name="name">Done</field>
        <field name="sequence">90</field>
        <field name="state">done</field>
    </record>
    <record id="stage_cancel" model="medical.prescription.order.stage">
        <field name="name">Cancel</field>
        <field name="sequence">95</field>
        <field name="state">cancel</field>
    </record>
    <record id="stage_hold" model="medical.prescription.order.stage">
        <field name="name">Hold</field>
        <field name="sequence">100</field>
        <field name="state">hold</field>
    </record>

    <record id="action_medical_prescription_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">medical.prescription.order.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>