<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pod_hms.podiatry_view_report_document_rx">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div>
                        <h4 class="text-center">
                            <strong>LABORATORY RXS</strong>
                        </h4>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <table class="table table-condensed">
                        <tr>
                            <th style="border: 0px ;" class="text-left">Patient Name: 
                                <span style="font-weight:normal;" t-field="doc.patient_id.name"/>
                            </th>

                            <th style="border: 0px ;" class="text-left">Patient ID : 
                                <span style="font-weight:normal;" t-field="doc.name"/>
                            </th>

                            <th style="border: 0px ;" class="text-left">Gender : 
                                <span style="font-weight:normal;" t-field="doc.gender"/>
                            </th>

                            <th style="border: 0px ;" class="text-left">Age : 
                                <span style="font-weight:normal;" t-field="doc.age"/>
                            </th>

                        </tr>
                    </table>
                    <br/>
                    <br/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Test Type</th>
                                <th>Practitioner Name</th>
                                <th>Date</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="doc.rx_ids" t-as="l">
                                <tr>
                                    <td>
                                        <span t-field="l.podiatry_rx_type_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="l.doctor_id"/>
                                    </td>
                                    <td>
                                        <span t-field="l.date"/>
                                    </td>
                                    <td>
                                        <span t-field="l.state"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="rx_demo">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="pod_hms.podiatry_view_report_document_rx" t-lang="doc.patient_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
