<odoo>
  <record id="view_form_prescription_extend" model="ir.ui.view">
    <field name="name">Prescription: add Is Available? field</field>
    <field name="model">podiatry.prescription</field>
    <field name="inherit_id" ref="podiatry_app.view_form_prescription"/>
    <field name="arch" type="xml">

      <field name="isbn" position="after">
        <field name="is_available" />
      </field>
      <!-- Or, using xpath:
      <xpath expr="//field[@name='isbn']" position="after">
        <field name="is_available" />
      </xpath>
      -->

    </field>
  </record>
</odoo>
