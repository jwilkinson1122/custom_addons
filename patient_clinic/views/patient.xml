<odoo>
  <data>

    <!-- Patient Tree View -->
    <record model="ir.ui.view" id="patient_clinic_patient_tree">
      <field name="name">patient_clinic.patient_tree</field>
      <field name="model">patient_clinic.patient</field>
      <field name="arch" type="xml">
        <tree string="Patient">
          <field name="patient_id" />
          <field name="name" />
          <field name="owner_name" />
          <!-- <field name="patient_type" /> -->
        </tree>
      </field>
    </record>

    <!-- Patient Form View -->
    <record model="ir.ui.view" id="patient_clinic_patient_form">
      <field name="name">patient_clinic.patient_form</field>
      <field name="model">patient_clinic.patient</field>
      <field name="arch" type="xml">
        <form string="Patient">
          <sheet>
            <!-- Patient Button Box -->
            <div class="oe_button_box" name="button_box">
              <!-- Patient Prescription Button -->
              <button name="open_patient_prescription" class="oe_stat_button" type="object" icon="fa-file-text-o">
                <field string="Janji" name="prescription_count" widget="statinfo" />
              </button>
            </div>
            <div class="oe_title">
              <h1>
                <field name="patient_id" />
              </h1>
            </div>
            <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group name="data">
              <group>
                <field name="name" />
                <field name="age" />
                <field name="gender" />
              </group>
              <group>

                <field name="owner" />
              </group>
            </group>
            <group string="Description">
              <field name="description" nolabel="1" placeholder="This is Animal Note" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="patient_clinic_patient_kanban" model="ir.ui.view">
      <field name="name">patient_clinic.patient_kanban</field>
      <field name="model">patient_clinic.patient</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="age" />
          <field name="owner_name" />

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_patient_clinic_patient_kanban">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('item.template', 'image', record.id.raw_value)" alt="Item" />
                </div>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Owner :
                      <field name="owner_name" />
                    </li>
                    <li>
                      Age :
                      <field name="age" />
                    </li>

                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Patient Graph View -->
    <record id="patient_clinic_patient_graph" model="ir.ui.view">
      <field name="name">patient_clinic.patient_graph</field>
      <field name="model">patient_clinic.patient</field>
      <field name="arch" type="xml">
        <graph string="Patient Graph" type="pie">
          <!-- <field name="patient_type" /> -->
        </graph>
      </field>
    </record>

    <!-- Patient Search View -->
    <record id="patient_clinic_patient_search" model="ir.ui.view">
      <field name="name">patient_clinic.patient_search</field>
      <field name="model">patient_clinic.patient</field>
      <field name="arch" type="xml">
        <search string="Search Patient">
          <field name="name" filter_domain="['|',('name', 'ilike', self)]" />
          <!-- <field name="patient_type" /> -->
          <separator />
          <filter string="Male" name="male" domain="[('gender', '=', 'male')]" />
          <filter string="Female" name="female" domain="[('gender', '=', 'female')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />

          </group>
        </search>
      </field>
    </record>

    <!-- Patient Action Window -->
    <record model="ir.actions.act_window" id="patient_clinic_patient_action_window">
      <field name="name">Patient</field>
      <field name="res_model">patient_clinic.patient</field>
      <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Patient Clinic" id="patient_clinic.root_menu" web_icon="patient_clinic,static/description/icon.png" />
    />
    <!-- Menu Patient -->
    <menuitem name="Patient" id="patient_clinic.patient" parent="patient_clinic.root_menu" />

    <!-- Menu Patient -> Patient -->
    <menuitem name="Patient" id="patient_clinic.menu_patient" parent="patient_clinic.patient" action="patient_clinic_patient_action_window" />
  </data>
</odoo>