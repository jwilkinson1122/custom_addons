<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="spreadsheet.PrescriptionsViews.Buttons" t-inherit="prescriptions.PrescriptionsViews.ControlPanel" t-inherit-mode="extension">
        <xpath expr="//ul" position="inside">
            <button type="button" class="btn btn-link dropdown-item o_prescriptions_kanban_spreadsheet"
                t-att-disabled="folder.id and !folder.has_write_access"
                t-on-click.stop.prevent="onClickCreateSpreadsheet" data-hotkey="x">
                New Spreadsheet
            </button>
        </xpath>
    </t>
</templates>
