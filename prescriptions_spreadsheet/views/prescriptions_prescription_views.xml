<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spreadsheet_prescription_view_kanban" model="ir.ui.view">
        <field name="name">spreadsheet.prescriptions.prescription.kanban</field>
        <field name="model">prescriptions.prescription</field>
        <field name="inherit_id" ref="prescriptions.prescription_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="handler"/>
            </xpath>
            <xpath expr="//div[@name='prescription_preview']" position="before">
                <t t-set="isSpreadsheet" t-value="record.handler.raw_value === 'spreadsheet'"/>
                <t t-set="isXlsx"
                   t-value="record.mimetype.raw_value === 'application/vnd.openxmlformats-officeprescription.spreadsheetml.sheet'"/>
            </xpath>
            <xpath expr="//div[@name='prescription_preview']" position="attributes">
                <attribute name="t-attf-class" separator=" " add="#{(isSpreadsheet) ? 'o_prescription_spreadsheet' : ''}"/>
                <attribute name="t-attf-class" separator=" " add="#{(isXlsx) ? 'o_prescription_xlsx' : ''}"/>
            </xpath>
            <xpath expr="(//div[@name='prescription_preview']/div)[last()]" position="before">
                <div t-elif="isSpreadsheet" class="o_attachment_image o_prescriptions_image">
                    <img t-attf-src="/prescriptions/image/#{record.id.raw_value}?field=thumbnail&amp;unique=#{unique}" alt="Spreadsheet Preview"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="prescriptions_prescription_view_list" model="ir.ui.view">
        <field name="name">prescriptions.prescription.view.list</field>
        <field name="model">prescriptions.prescription</field>
        <field name="inherit_id" ref="prescriptions.prescriptions_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="handler" column_invisible="True"/>
            </xpath>
        </field>
    </record>

    <record id="prescription_view_search_spreadsheet" model="ir.ui.view">
        <field name="model">prescriptions.prescription</field>
        <field name="inherit_id" ref="prescriptions.prescription_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='pdf_doc']" position='after'>
                <filter string="Spreadsheet" name="spreadsheet" domain="[('handler', '=', 'spreadsheet')]"/>
            </xpath>
        </field>
    </record>
</odoo>
