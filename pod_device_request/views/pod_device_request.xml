<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_device_request_view_tree" model="ir.ui.view">
        <field name="name">pod.device.request.view.tree</field>
        <field name="model">pod.device.request</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted">state=='cancelled'</attribute>
            </xpath>
        </field>
    </record>
    <record id="pod_device_request_view_form" model="ir.ui.view">
        <field name="name">pod.device.request.view.form</field>
        <field name="model">pod.device.request</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_device_administration" class="oe_stat_button" icon="fa-prescription" attrs="{'invisible': [('state','=','draft')]}">
                    <field name="device_administration_count" widget="statinfo" string="Administrations" />
                    <field name='device_administration_ids' invisible="1" />
                </button>
            </xpath>
            <field name="service_id" position="after">
                <field name="product_id" />
                <label for="qty" />
                <div class="o_row">
                    <field name="qty" />
                    <field name="product_uom_id" groups="uom.group_uom" />
                </div>
            </field>
            <field name="service_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="pod_device_request_view_search" model="ir.ui.view">
        <field name="name">pod.device.request.view.search</field>
        <field name="model">pod.device.request</field>
        <field name="arch" type="xml">
            <search string="Podiatry Care Plan">
                <field name="internal_identifier" />
                <field name="name" />
                <field name="patient_id" />
                <field name="state" />
                <field name="intent" />
                <newline />
                <filter name="draft" domain="[('state', '=', 'draft')]" help="Draft" />
                <filter name="active" domain="[('state', '=', 'active')]" help="Active" />
                <filter name="completed" domain="[('state', '=', 'completed')]" help="Completed" />
                <filter name="suspended" domain="[('state', '=', 'suspended')]" help="Suspended" />
                <filter name="error" domain="[('state', '=', 'entered-in-error')]" help="Error" />
                <filter name="cancelled" domain="[('state', '=', 'cancelled')]" help="Cancelled" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" name="group_by_patient" domain="[]" context="{'group_by':'patient_id'}" />
                    <filter string="Name" name="group_by_name" domain="[]" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_device_request_action">
        <field name="name">Device requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.device.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="pod_device_request">
        <field name="name">Requests</field>
        <field name="parent_id" ref="pod_base.pod_clinical_request" />
        <field name="action" ref="pod_device_request_action" />
        <field name="sequence" eval="0" />
    </record>
</odoo>
