<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <!-- Podiatry Category -->
    <record id="ir_module_category_podiatry" model="ir.module.category">
        <field name="name">Podiatry</field>
    </record>

    <!-- Base Group -->
    <record id="group_podiatry_user" model="res.groups">
        <field name="name">Podiatry User</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_podiatry_assistance_user" model="res.groups">
        <field name="name">Podiatry Assitance User</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user'))]" />
    </record>

    <!-- Groups -->
    <record id="group_podiatry_practitioner" model="res.groups">
        <field name="name">Practitioner</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_assistance_user'))]" />
    </record>
    <record id="group_podiatry_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_assistance_user'))]" />
    </record>
    <record id="group_podiatry_auxiliary" model="res.groups">
        <field name="name">Nurse Auxiliar</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_assistance_user'))]" />
    </record>
    <record id="group_podiatry_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_assistance_user'))]" />
    </record>
    <record id="group_podiatry_pharmacy" model="res.groups">
        <field name="name">Pharmacy</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user'))]" />
    </record>
    <record id="group_podiatry_reception" model="res.groups">
        <field name="name">Reception</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user'))]" />
    </record>
    <record id="group_podiatry_financial" model="res.groups">
        <field name="name">Financial</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user'))]" />
    </record>
    <record id="group_podiatry_configurator" model="res.groups">
        <field name="name">Configurator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user'))]" />
    </record>
    <record id="group_podiatry_admin" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_user')),
                      (4, ref('group_podiatry_technician')),
                      (4, ref('group_podiatry_practitioner')),
                      (4, ref('group_podiatry_nurse')),
                      (4, ref('group_podiatry_auxiliary')),
                      (4, ref('group_podiatry_pharmacy')),
                      (4, ref('group_podiatry_reception')),
                      (4, ref('group_podiatry_financial')),
                      (4, ref('group_podiatry_configurator')),
                      (4, ref('base.group_erp_manager'))]" />
    </record>

    <!-- Partner rules modification -->
    <record id="base.res_partner_rule_private_employee" model="ir.rule">
    </record>
</odoo>
