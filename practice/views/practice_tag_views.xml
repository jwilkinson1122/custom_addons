<?xml version="1.0"?>
<odoo>
    <data>
        <!-- PRESCRIPTION.TAG.CATEGORY VIEWS -->
        <record id="practice_tag_category_view_tree" model="ir.ui.view">
            <field name="name">practice.tag.category.view.tree</field>
            <field name="model">practice.tag.category</field>
            <field name="arch" type="xml">
                <tree string="Practice Category">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </tree>
            </field>
        </record>

        <record id="practice_tag_category_view_form" model="ir.ui.view">
            <field name="name">practice.tag.category.view.form</field>
            <field name="model">practice.tag.category</field>
            <field name="arch" type="xml">
                <form string="Practice Category">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field nolabel="1" name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="tag_ids" context="{'default_category_id': active_id}">
                                <tree string="Tags" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="color" widget="color_picker"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="practice_tag_category_action_tree" model="ir.actions.act_window">
            <field name="name">Practice Tags Categories</field>
            <field name="res_model">practice.tag.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Practice Tag Category
                </p>
                <p>
                    Use Practice Tag Categories to classify and organize your practice tags.
                </p>
            </field>
        </record>

        <!-- PRESCRIPTION.TAG VIEWS -->
        <record id="practice_tag_view_tree" model="ir.ui.view">
            <field name="name">practice.tag.view.tree</field>
            <field name="model">practice.tag</field>
            <field name="arch" type="xml">
                <tree string="Practice Tags Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>

        <record id="practice_tag_view_form" model="ir.ui.view">
            <field name="name">practice.tag.view.form</field>
            <field name="model">practice.tag</field>
            <field name="arch" type="xml">
                <form string="Practice Category Tag">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="category_id" widget="many2one"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="menu_practice_category" model="ir.ui.menu">
            <field name="action" ref="practice.practice_tag_category_action_tree"/>
        </record>

    </data>
</odoo>
