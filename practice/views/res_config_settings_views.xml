<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.practice</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="65"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Practices" string="Practices" data-key="practice" groups="practice.group_practice_manager">
                        <h2>Practices</h2>
                        <div class="row mt16 o_settings_container" name="practices_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="manage_tracks" title="Add a navigation menu to your practice web pages with schedule, tracks, a track proposal form, etc.">
                                <div class="o_setting_left_pane">
                                    <field name="module_website_practice_track"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Schedule &amp; Tracks" for="module_website_practice_track"/>
                                    <div class="text-muted">
                                        Manage &amp; publish a schedule with tracks
                                    </div>
                                    <div class="mt-3 d-flex" attrs="{'invisible': [('module_website_practice_track', '=', False)]}">
                                        <field name="module_website_practice_track_live" class="w-auto"/>
                                        <div>
                                            <label string="Live Broadcast" for="module_website_practice_track_live"/>
                                            <br/>
                                            <span class="text-muted">Air your tracks online through a Youtube integration</span>
                                        </div>
                                    </div>
                                    <div class="mt-3 d-flex" attrs="{'invisible': [('module_website_practice_track', '=', False)]}">
                                        <field name="module_website_practice_track_quiz" class="w-auto"/>
                                        <div>
                                            <label string="Practice Gamification" for="module_website_practice_track_quiz"/>
                                            <br/>
                                            <span class="text-muted">Share a quiz to your attendees once a track is over</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <div class="o_setting_left_pane">
                                        <field name="module_website_practice_meet"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Community Chat Rooms" for="module_website_practice_meet"/>
                                        <div class="text-muted">
                                            Foster interactions between attendees by creating virtual conference rooms
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="o_setting_left_pane">
                                        <field name="module_website_practice_exhibitor"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Online Exhibitors" for="module_website_practice_exhibitor"/>
                                        <div class="text-muted">
                                            Display Sponsors and Exhibitors on your practice pages
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="o_setting_left_pane">
                                        <field name="module_practice_booth"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Booth Management" for="module_practice_booth"/>
                                        <div class="text-muted">
                                            Create Booths and manage their reservations
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Confirmation</h2>
                        <div class="row mt16 o_settings_container" name="confirmation_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="sell_devices">
                                <div class="o_setting_left_pane">
                                    <field name="module_practice_sale"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_practice_sale"/>
                                    <div class="text-muted">
                                        Sell devices with sales orders
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" name="practice_settings_website">
                                <div class="o_setting_left_pane">
                                    <field name="module_website_practice_sale"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_website_practice_sale"/>
                                    <div class="text-muted">
                                        Sell devices on your website
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Attendance</h2>
                        <div class="row mt16 o_settings_container" name="attendance_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="practice_barcode">
                                <div class="o_setting_left_pane">
                                    <field name="module_practice_barcode" widget="upgrade_boolean"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_practice_barcode"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                    <div class="text-muted" name="practice_barcode">
                                        Scan badges to confirm attendances
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_practice_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'practice', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_practice_global_settings" name="Settings" parent="menu_practice_configuration" sequence="0" action="action_practice_configuration" groups="base.group_system"/>
    </data>
</odoo>
