<odoo>

    <!-- Practice specialty Tree View -->
    <record id="view_practice_specialty_tree" model="ir.ui.view">
        <field name="name">view.practice.specialty.tree</field>
        <field name="model">practice.specialty</field>
        <field name="arch" type="xml">
            <tree string="Specialties">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="type_id" />
            </tree>
        </field>
    </record>

    <!-- Practice specialty Form View -->
    <record id="view_practice_specialty_form" model="ir.ui.view">
        <field name="name">view.practice.specialty.form</field>
        <field name="model">practice.specialty</field>
        <field name="arch" type="xml">
            <form string="Specialty">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group id="main">
                        <group id="left">
                            <field name="type_id" />
                        </group>
                        <group id="right" />
                    </group>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_practice_specialty" model="ir.actions.act_window">
        <field name="name">Specialties</field>
        <field name="res_model">practice.specialty</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a specialty.
            </p>
        </field>
    </record>

</odoo>
