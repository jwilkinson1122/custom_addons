<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--======= Room Type ======= -->
    <!-- Form view of practice practice type -->
    <record id="view_practice_practice_type_form" model="ir.ui.view">
        <field name="name">practice.practice_type.form</field>
        <field name="model">practice.practice.type</field>
        <field name="arch" type="xml">
            <form string=" Practice Room Type">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="categ_id" select="1" />
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of practice practice type -->
    <record id="view_practice_practice_type_tree" model="ir.ui.view">
        <field name="name">practice.practice_type.tree</field>
        <field name="model">practice.practice.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>
