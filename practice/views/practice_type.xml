<odoo>

    <!-- Practice Type Tree View -->
    <record id="view_practice_type_tree" model="ir.ui.view">
        <field name="name">view.practice.type.tree</field>
        <field name="model">practice.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Practice Type Form View -->
    <record id="view_practice_type_form" model="ir.ui.view">
        <field name="name">view.practice.type.form</field>
        <field name="model">practice.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group id="main">
                        <group id="left" />
                        <group id="right" />
                    </group>
                    <notebook>
                        <page string="Specialties" id="specialties">
                            <field name="specialty_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_practice_type" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="res_model">practice.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a type.
            </p>
        </field>
    </record>

</odoo>
