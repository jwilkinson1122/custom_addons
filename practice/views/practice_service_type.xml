<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--============ Practice Service Type ============ -->
    <!-- Form view of practice service type -->
    <record id="view_practice_service_type_form" model="ir.ui.view">
        <field name="name">practice.service_type.form</field>
        <field name="model">practice.service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <group>
                        <field name="name" string="Service Name" />
                        <field name="service_id" />
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of practice service type -->
    <record id="view_practice_service_type_tree" model="ir.ui.view">
        <field name="name">practice.service_type.tree</field>
        <field name="model">practice.service.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>
