<?xml version="1.0"?>
<odoo>
    <data>

        <!-- PRESCRIPTION.TYPE.TICKET -->
        <record id="practice_type_device_view_tree_from_type" model="ir.ui.view">
            <field name="name">practice.type.device.view.tree.from.type</field>
            <field name="model">practice.type.device</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree string="Practice Template Devices" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="seats_max"/>
                    <field name="seats_limited"/>
                </tree>
            </field>
        </record>

        <record id="practice_type_device_view_form_from_type" model="ir.ui.view">
            <field name="name">practice.type.device.view.form.from.type</field>
            <field name="model">practice.type.device</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Practice Template Device">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="seats_limited"/>
                            <field name="seats_max"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="practice_type_device_view_tree" model="ir.ui.view">
            <field name="name">practice.type.device.view.tree</field>
            <field name="model">practice.type.device</field>
            <field name="inherit_id" ref="practice_type_device_view_tree_from_type"/>
            <field name="mode">primary</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="practice_type_id"/>
                </xpath>
            </field>
        </record>

        <record id="practice_type_device_view_form" model="ir.ui.view">
            <field name="name">practice.type.device.view.form</field>
            <field name="model">practice.type.device</field>
            <field name="inherit_id" ref="practice_type_device_view_form_from_type"/>
            <field name="mode">primary</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="practice_type_id"/>
                </xpath>
            </field>
        </record>

        <!-- PRESCRIPTION.TICKET -->
        <record id="practice_practice_device_view_tree_from_practice" model="ir.ui.view">
            <field name="name">practice.practice.device.view.tree.from.practice</field>
            <field name="model">practice.practice.device</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree string="Devices" editable="bottom">
                    <field name="name"/>
                    <field name="description" optional="hide"/>
                    <field name="start_sale_datetime" optional="show"/>
                    <field name="end_sale_datetime" optional="show"/>
                    <field name="seats_max" sum="Total" width="105px" string="Maximum"/>
                    <field name="seats_reserved" sum="Total" width="105px" string="Confirmed"/>
                    <field name="seats_unconfirmed" sum="Total" width="110px" string="Unconfirmed"/>
                </tree>
            </field>
        </record>

        <record id="practice_practice_device_view_form_from_practice" model="ir.ui.view">
            <field name="name">practice.practice.device.view.form.from.practice</field>
            <field name="model">practice.practice.device</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Device">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="start_sale_datetime"/>
                                <field name="end_sale_datetime"/>
                            </group>
                            <group>
                                <field name="seats_max"/>
                                <field name="seats_reserved"/>
                                <field name="seats_unconfirmed"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="practice_practice_device_view_kanban_from_practice" model="ir.ui.view">
            <field name="name">practice.practice.device.view.kanban.from.practice</field>
            <field name="model">practice.practice.device</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="seats_max"/>
                    <field name="seats_reserved"/>
                    <field name="seats_unconfirmed"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-8">
                                        <strong>
                                            <t t-esc="record.name.value"/>
                                        </strong>
                                    </div>
                                </div>
                                <div>
                                    <i>
                                        <t t-esc="record.seats_reserved.value"/>
 reserved + <t t-esc="record.seats_reserved.value"/>
 unconfirmed
                                    </i>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="practice_practice_device_view_tree" model="ir.ui.view">
            <field name="name">practice.practice.device.view.tree</field>
            <field name="model">practice.practice.device</field>
            <field name="inherit_id" ref="practice_practice_device_view_tree_from_practice"/>
            <field name="mode">primary</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>
                <field name="name" position="after">
                    <field name="practice_id"/>
                </field>
            </field>
        </record>

        <record id="practice_practice_device_form_view" model="ir.ui.view">
            <field name="name">practice.practice.device.view.form</field>
            <field name="model">practice.practice.device</field>
            <field name="arch" type="xml">
                <form string="Practice's Device">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Device Type"/>
                            <h1>
                                <field name="name" placeholder="e.g. VIP Device"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="practice_id"/>
                                <field name="seats_limited"/>
                                <field name="seats_available"/>
                                <field name="start_sale_datetime"/>
                                <field name="end_sale_datetime"/>
                            </group>
                            <group>
                                <field name="seats_max"/>
                                <field name="seats_reserved"/>
                                <field name="seats_unconfirmed"/>
                                <field name="seats_used"/>
                                <field name="is_expired"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>