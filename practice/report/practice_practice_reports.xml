<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_practice_foldable_badge" model="report.paperformat">
        <field name="name">Custom Paperformat for the Practice Foldable Badge report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">96</field>
    </record>

    <record id="paperformat_practice_full_page_device" model="report.paperformat">
        <field name="name">Custom Paperformat for the Practice Full Page Device report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- The "Full Page Device", as opposed to the foldable badge that is meant to be folded and
    only contains the bare minimum (attendee name + barcode), gives all the information of the
    device in a portrait A4 format.
    It allows to add some information in the device_instructions field and, when printed, functions
    as an "official" device that the attendee can show to the confirmation desk where all
    the information are available (practice name, organizer, SO reference, barcode, footer with
    sponsors, ...). -->
    <record id="action_report_practice_confirmation_full_page_device" model="ir.actions.report">
        <field name="name">Full Page Device</field>
        <field name="model">practice.confirmation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">practice.practice_confirmation_report_template_full_page_device</field>
        <field name="report_file">practice.practice_confirmation_report_template_full_page_device</field>
        <field name="print_report_name">'Full Page Device - %s - %s' % ((object.practice_id.name or 'Practice').replace('/',''), object.name.replace('/',''))</field>
        <field name="binding_model_id" ref="model_practice_confirmation"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_practice_full_page_device"/>
    </record>

    <record id="action_report_practice_practice_full_page_device" model="ir.actions.report">
        <field name="name">Full Page Device Example</field>
        <field name="model">practice.practice</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">practice.practice_practice_report_template_full_page_device</field>
        <field name="report_file">practice.practice_practice_report_template_full_page_device</field>
        <field name="print_report_name">'Full Page Device - %s' % (object.name or 'Practice').replace('/','')</field>
        <field name="binding_model_id" ref="model_practice_practice"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_practice_full_page_device"/>
    </record>

    <record id="action_report_practice_confirmation_foldable_badge" model="ir.actions.report">
        <field name="name">Foldable Badge</field>
        <field name="model">practice.confirmation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">practice.practice_confirmation_report_template_foldable_badge</field>
        <field name="report_file">practice.practice_confirmation_report_template_foldable_badge</field>
        <field name="print_report_name">'Foldable Badge - %s - %s' % ((object.practice_id.name or 'Practice').replace('/',''), object.name.replace('/',''))</field>
        <field name="binding_model_id" ref="model_practice_confirmation"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_practice_foldable_badge"/>
    </record>

    <record id="action_report_practice_practice_foldable_badge" model="ir.actions.report">
        <field name="name">Foldable Badge Example</field>
        <field name="model">practice.practice</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">practice.practice_practice_report_template_foldable_badge</field>
        <field name="report_file">practice.practice_practice_report_template_foldable_badge</field>
        <field name="print_report_name">'Foldable Badge - %s' % (object.name or 'Practice').replace('/','')</field>
        <field name="binding_model_id" ref="model_practice_practice"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_practice_foldable_badge"/>
    </record>

</odoo>
