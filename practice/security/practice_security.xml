<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="base.module_category_medical_practices">
            <field name="description">Helps you manage your Practices.</field>
            <field name="sequence">18</field>
        </record>

        <record id="group_practice_confirmation_desk" model="res.groups">
            <field name="name">Confirmation Desk</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_medical_practices"/>
        </record>

        <record id="group_practice_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('group_practice_confirmation_desk'))]"/>
            <field name="category_id" ref="base.module_category_medical_practices"/>
        </record>

        <record id="group_practice_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="base.module_category_medical_practices"/>
            <field name="implied_ids" eval="[(4, ref('group_practice_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('practice.group_practice_manager'))]"/>
        </record>

        <!-- Multi - Company Rules -->
        <record model="ir.rule" id="practice_practice_company_rule">
            <field name="name">Practice: multi-company</field>
            <field name="model_id" ref="model_practice_practice"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record model="ir.rule" id="practice_confirmation_company_rule">
            <field name="name">Practice/Confirmation: multi-company</field>
            <field name="model_id" ref="model_practice_confirmation"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_practice_practice_device_company" model="ir.rule">
            <field name="name">Practice/Device: multi-company</field>
            <field name="model_id" ref="model_practice_practice_device"/>
            <field name="domain_force">['|', ('practice_id.company_id', '=', False), ('practice_id.company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
