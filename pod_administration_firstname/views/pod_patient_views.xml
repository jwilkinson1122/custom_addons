<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_patient_form">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [('is_company', '=', False)],
                    'required': [('is_company', '=', True)]
                    }
                </attribute>
            </xpath>
            <xpath expr="//h1//field[@name='name']/.." position="before">
                <div class="oe_edit_only">
                    <group attrs="{'invisible': [('is_company', '=', True)]}">
                        <field
                            name="lastname"
                            attrs="{'required': [('firstname', '=', False),
                                ('is_company', '=', False),
                                ('type', '=', 'contact')]}"
                        />
                        <field
                            name="firstname"
                            attrs="{'required': [('lastname', '=', False),
                                ('is_company', '=', False),
                                ('type', '=', 'contact')]}"
                        />
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
