<odoo>
    <record model="ir.ui.view" id="pod_sct_concept_tree">
        <field name="name">pod.sct.concept.tree</field>
        <field name="model">pod.sct.concept</field>
        <field
            name="inherit_id"
            ref="pod_terminology.pod_abstract_concept_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="delete">false</attribute>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_sct_concept_form">
        <field name="name">pod.sct.concept.form</field>
        <field name="model">pod.sct.concept</field>
        <field
            name="inherit_id"
            ref="pod_terminology.pod_abstract_concept_multiparent_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="delete">false</attribute>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_sct_concept_filter">
        <field name="name">pod.sct.concept.filter</field>
        <field name="model">pod.sct.concept</field>
        <field
            name="inherit_id"
            ref="pod_terminology.pod_abstract_concept_filter"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="attributes" />
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_sct_concept_window_action">
        <field name="name">Snomed codes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.sct.concept</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="pod_sct_concept">
        <field name="name">SCT Concepts</field>
        <field name="parent_id" ref="pod_base.pod_root_terminologies" />
        <field name="action" ref="pod_sct_concept_window_action" />
        <field name="sequence" eval="10" />
    </record>

</odoo>
