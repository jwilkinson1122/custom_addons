<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_sct_concept_tree">
        <field name="name">pod.sct.concept.tree</field>
        <field name="model">pod.sct.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="string">Clinical Terms Concepts</attribute>
                <attribute name="delete">false</attribute>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_sct_concept_form">
        <field name="name">pod.sct.concept.form</field>
        <field name="model">pod.sct.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_multiparent_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Clinical Terms Concept</attribute>
                <attribute name="delete">false</attribute>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_sct_concept_filter">
        <field name="name">pod.sct.concept.filter</field>
        <field name="model">pod.sct.concept</field>
        <field name="inherit_id" ref="pod_terminology.pod_abstract_concept_filter" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="attributes">
                <attribute name="string">Clinical Terms Filter</attribute>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_sct_concept_window_action">
        <field name="name">Snomed codes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.sct.concept</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="pod_sct_concept" name="SCT Concepts" parent="pod_base.pod_root_terminologies" groups="pod_terminology_sct.group_pod_sct_concept_list" sequence="10" action="pod_sct_concept_window_action" />
</odoo>
