<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pathology_category" model="ir.module.category">
        <field name="name">Pathology</field>
        <field name="sequence">60</field>
    </record>

    <record id="sh_pathology_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        <field name="category_id" ref="sh_pathology_management.sh_pathology_category" />
    </record>

    <record id="sh_pathology_pathologist" model="res.groups">
        <field name="name">Pathologist</field>
        <field name="implied_ids" eval="[(4, ref('sh_pathology_management.sh_pathology_technician'))]" />
        <field name="category_id" ref="sh_pathology_management.sh_pathology_category" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

    <record id="sh_pathology_technician_rule" model="ir.rule">
        <field name="name">Own Technician</field>
        <field name="model_id" ref="sh_pathology_management.model_sh_patho_request_line" />
        <field name="domain_force">['|',('technician_id', '=', user.partner_id.id),('technician_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('sh_pathology_management.sh_pathology_technician'))]" />
    </record>

    <record id="sh_pathology_pathologist_rule" model="ir.rule">
        <field name="name">Own Pathologist</field>
        <field name="model_id" ref="sh_pathology_management.model_sh_patho_request_line" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('sh_pathology_management.sh_pathology_pathologist'))]" />
    </record>

    <!-- Multi company Code Starts -->
    <record id="sh_lab_test_appointment_comp_rule" model="ir.rule">
        <field name="name">Appointment multi-company</field>
        <field name="model_id" ref="sh_pathology_management.model_sh_patho_request" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

     <record id="sh_patient_diagnosis_comp_rule" model="ir.rule">
        <field name="name">Diagnosis multi-company</field>
        <field name="model_id" ref="sh_pathology_management.model_sh_patho_request_line" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
