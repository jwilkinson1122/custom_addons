<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_product_general_inherit_form" model="ir.ui.view">
        <field name="name">sh.product.general.inherit.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[last()]" position="before">
                <group attrs="{'invisible': [('sh_patho_is_lab_test_product', '=', False)]}">
                    <group string="Lab Test Details">
                        <field name="sh_patho_is_lab_test_product" invisible="1" />
                        <field name="sh_patho_report_delivery_time" widget="float_time" />
                        <field name="sh_patho_report_delivery_type" />
                        <field name="sh_patho_pre_info_id" />
                        <field name="sh_patho_sample_type_id" />
                    </group>
                    <group></group>
                </group>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" type = "object" name = "blank_method" icon="fa-plus-square" attrs="{'invisible': [('sh_patho_is_lab_test_product', '=', False)]}">
                    <field name="sh_patho_product_total_tests" />
                    <span class="o_stat_text">Test</span>
                </button>
            </div>
        </field>
    </record>

    <record id="sh_product_test_inherit_form" model="ir.ui.view">
        <field name="name">sh_product_test_inherit_form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <page name="general_information" position="after">
                <page name="collection" string="Test Parameters" attrs="{'invisible': [('sh_patho_is_lab_test_product', '=', False)]}">
                    <field name="sh_patho_test_parameter_ids" widget="many2many" nolabel="1" />
                </page>
            </page>
        </field>
    </record>

    <record id="sh_lab_test_action" model="ir.actions.act_window">
        <field name="name">Lab Tests</field>
        <field name="res_model">product.product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sh_patho_is_lab_test_product','=',True)]</field>
        <field name="context">{'default_sh_patho_is_lab_test_product':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Lab Test</p>
        </field>
    </record>
</odoo>
