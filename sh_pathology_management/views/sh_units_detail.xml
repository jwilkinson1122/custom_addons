<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_unit_detail_form" model="ir.ui.view">
        <field name="name">sh.source.detail.form</field>
        <field name="model">sh.lab.test.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}" />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="active" invisible="1" />
                        </group>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_unit_detail_tree" model="ir.ui.view">
        <field name="name">sh.unit.detail.tree</field>
        <field name="model">sh.lab.test.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="sh_unit_action" model="ir.actions.act_window">
        <field name="name">Units</field>
        <field name="res_model">sh.lab.test.unit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Unit</p>
        </field>
    </record>

    <record id="view_sh_unit_filter" model="ir.ui.view">
        <field name="name">sh.lab.test.select</field>
        <field name="model">sh.lab.test.unit</field>
        <field name="arch" type="xml">
            <search>
                <field name="active" />
                <filter string="Archieved" name="filter" domain="[('active', '!=', True)]" />
                <filter string="Unarchieved" name="filter" domain="[('active', '=', True)]" />
            </search>
        </field>
    </record>

    <menuitem name="Tests" id="sh_tests_detail_menu" parent="sh_configuration_detail_menu" sequence="3" />
    <menuitem name="Units" action="sh_unit_action" id="sh_unit_detail_menu" parent="sh_tests_detail_menu" sequence="1" />
</odoo>
