<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_information_detail_tree" model="ir.ui.view">
        <field name="name">sh.information.detail.tree</field>
        <field name="model">sh.lab.test.pre.info</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" required="1" />
            </tree>
        </field>
    </record>

    <record id="sh_information_action" model="ir.actions.act_window">
        <field name="name">Pre Informations</field>
        <field name="res_model">sh.lab.test.pre.info</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Test Information</p>
        </field>
    </record>

    <menuitem name="Pre Informations" action="sh_information_action" id="sh_information_detail_menu" parent="sh_tests_detail_menu" sequence="3" />
</odoo>
