<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_parameter_patient_detail_form" model="ir.ui.view">
        <field name="name">Patient Parameter</field>
        <field name="model">sh.lab.test.parameter.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}" />
                    <group>
                        <field name="name" required="1" />
                        <field name="sequence" />
                        <field name="active" invisible="1" />
                        <field name="request_line_id" invisible="1" />
                    </group>

                    <notebook>
                        <page name="standard" string="Standard Specification">
                            <group>
                                <group>
                                    <field name="min_value" />
                                    <field name="max_value" />
                                </group>
                                <group>
                                    <field name="normal_value" />
                                    <field name="unit_id" />
                                    <field name="patient_value" />
                                </group>
                            </group>
                        </page>

                        <page name="description" string="Description">
                            <group>
                                <field name="description" nolabel="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_parameter_patient_detail_tree" model="ir.ui.view">
        <field name="name">Patient Parameter</field>
        <field name="model">sh.lab.test.parameter.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="min_value" />
                <field name="max_value" />
                <field name="normal_value" />
                <field name="unit_id" />
                <field name="patient_value" />
            </tree>
        </field>
    </record>

    <record id="sh_parameter_patient_action" model="ir.actions.act_window">
        <field name="name">Patient's Parameters </field>
        <field name="res_model">sh.lab.test.parameter.patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Patient Parameter</p>
        </field>
    </record>

    <record id="view_sh_parameter_patient_filter" model="ir.ui.view">
        <field name="name">Patient Parameter</field>
        <field name="model">sh.lab.test.parameter.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="active" />
                <filter string="Archieved" name="filter" domain="[('active', '!=', True)]" />
                <filter string="Unarchieved" name="filter" domain="[('active', '=', True)]" />
            </search>
        </field>
    </record>

    <!-- <menuitem name="Patient Parameters" action="sh_parameter_patient_action" id="sh_parameter_patient_detail_menu" parent="sh_pathology_menu" sequence="6" groups="sh_pathology_management.sh_pathology_pathologist" /> -->
</odoo>
