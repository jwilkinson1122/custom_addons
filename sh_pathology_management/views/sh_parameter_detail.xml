<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_parameter_detail_form" model="ir.ui.view">
        <field name="name">sh.parameter.detail.form</field>
        <field name="model">sh.lab.test.parameter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="sequence" />
                        <field name="active" invisible="1" />
                        <field name="request_line_id" invisible="1" />
                    </group>

                    <notebook>
                        <page name="standard" string="Standard Specification">
                            <group>
                                <group>
                                    <field name="min_value" />
                                    <field name="max_value" />
                                </group>
                                <group>
                                    <field name="normal_value" />
                                    <field name="unit_id" options="{'no_create': True, 'no_create_edit':True}" widget="selection" />
                                </group>
                            </group>
                        </page>

                        <page name="description" string="Description">
                            <group>
                                <field name="description" nolabel="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_parameter_detail_tree" model="ir.ui.view">
        <field name="name">sh.parameter.detail.tree</field>
        <field name="model">sh.lab.test.parameter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" optional="show" />
                <field name="min_value" optional="show" />
                <field name="max_value" optional="show" />
                <field name="normal_value" optional="show" />
                <field name="unit_id" optional="show" />
            </tree>
        </field>
    </record>

    <record id="sh_parameter_action" model="ir.actions.act_window">
        <field name="name">Parameters</field>
        <field name="res_model">sh.lab.test.parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Parameter</p>
        </field>
    </record>

    <record id="view_sh_parameter_filter" model="ir.ui.view">
        <field name="name">sh.lab.test.select</field>
        <field name="model">sh.lab.test.parameter</field>
        <field name="arch" type="xml">
            <search>
                <field name="active" />
                <filter string="Archieved" name="filter" domain="[('active', '!=', True)]" />
                <filter string="Unarchieved" name="filter" domain="[('active', '=', True)]" />
            </search>
        </field>
    </record>

    <menuitem name="Parameters" action="sh_parameter_action" id="sh_parameter_detail_menu" parent="sh_tests_detail_menu" sequence="2" />
</odoo>
