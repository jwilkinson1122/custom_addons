<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_collection_detail_form" model="ir.ui.view">
        <field name="name">sh.collection.detail.form</field>
        <field name="model">sh.collection.center</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" />
                    <field name="image" widget="image" class="oe_avatar" />
                    <widget name="web_ribbon" title="Archieved" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}" />

                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" default_focus="1" placeholder="Name" />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <span class="o_form_label o_td_label">
                                <b>Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" />
                                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                <field name="city" placeholder="City" class="o_address_city" />
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': country_id}" />
                                <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' />
                                <field name="active" invisible="1" />
                            </div>
                        </group>

                        <group>
                            <field name="email" widget="email" context="{'gravatar_image': True}" />
                            <field name="mobile" />
                            <field name="laboratory_id" options="{'no_create': True, 'no_create_edit':True}" widget="selection" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_collection_detail_tree" model="ir.ui.view">
        <field name="name">sh.collection.detail.tree</field>
        <field name="model">sh.collection.center</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" optional="show" />
                <field name="mobile" optional="show" />
                <field name="email" optional="show" />
                <field name="city" optional="show" />
                <field name="country_id" optional="show" />
            </tree>
        </field>
    </record>

    <record id="view_sh_collection_filter" model="ir.ui.view">
        <field name="name">sh.collection.select</field>
        <field name="model">sh.collection.center</field>
        <field name="arch" type="xml">
            <search>
                <field name="active" />
                <filter string="Archieved" name="filter" domain="[('active', '!=', True)]" />
                <filter string="Unarchieved" name="filter" domain="[('active', '=', True)]" />
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_by_filter" string="State" domain="[]" context="{'group_by' : 'state_id'}" />
                    <filter name="group_by_filter" string="Country" domain="[]" context="{'group_by' : 'country_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_collection_action" model="ir.actions.act_window">
        <field name="name">Collection Centers</field>
        <field name="res_model">sh.collection.center</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create A New Collection</p>
        </field>
    </record>

    <menuitem name="Centers" id="sh_centers_detail_menu" parent="sh_configuration_detail_menu" sequence="2" />
    <menuitem name="Collection Centers" action="sh_collection_action" id="sh_collection_detail_menu" parent="sh_centers_detail_menu" sequence="1" />
</odoo>
