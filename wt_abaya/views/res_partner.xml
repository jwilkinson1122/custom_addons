<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wt_view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Measurment">
                    <field name="measurment_ids">
                        <tree create="false">
                            <field name="date"/>
                            <field name="category_id"/>
                            <field name="measurment_ids" widget="many2many_tags"/>
                            <field name="measurment_unit" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>