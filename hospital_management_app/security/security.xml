<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- =========approval access========== -->
	<record model="ir.module.category" id="category_management">
		<field name="name">Hospital</field>
		<field name="sequence">10</field>
	</record>

	<record id="group_hospital_user" model="res.groups">
		<field name="name">User</field>
		<field name="category_id" ref="hospital_management_app.category_management"/>
		<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	</record>

	<record id="group_hospital_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="implied_ids" eval="[(4, ref('group_hospital_user')),(4, ref('base.user_root'))]"/>
		<field name="category_id" ref="hospital_management_app.category_management"/>
	</record>


	<record id="group_device_management" model="res.groups">
		<field name="name">Device Management</field>
	</record>

	<record id="group_option_management" model="res.groups">
		<field name="name">Option Management</field>
	</record>

</odoo>
