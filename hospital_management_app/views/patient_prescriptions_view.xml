<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="patient_prescriptions_view_tree_new" model="ir.ui.view">
            <field name="name">patient.prescriptions.view.form.popup</field>
            <field name="model">patient.prescriptions</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="registration_no"/>
                    <field name="condition_type_id"/>
                    <field name="condition_stage_id"/>
                    <field name="date"/>
                    <field name="doctor_id"/>
                </tree>
            </field>
        </record>
        <!---->
        <record id="patient_prescriptions_view_form_new" model="ir.ui.view">
            <field name="name">patient.prescriptions.view.form.popup</field>
            <field name="model">patient.prescriptions</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form>                    <!---->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" options="{'no_create': True, 'no_open': True}" required="1" domain="[('is_patient','=', True)]"/>
                                <field name="condition_type_id" />
                                <field name="condition_stage_id" />
                            </group>
                            <group>
                                <field name="registration_no" />
                                <field name="date" required="1"/>
                                <field name="doctor_id" options="{'no_create': True, 'no_open': True}" required="1" domain="[('is_doctor','=', True)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="prescriptions_id" invisible="1"/>
                                        <field name="product_id" options="{'no_create': True, 'no_open': True}" required="1" domain="[('is_food', '=', False)]"/>
                                        <field name="uom_id"/>
                                        <field name="quantity"/>
                                        <field name="dose"/>
                                        <field name="dose_unit"/>
                                        <field name="morning"/>
                                        <field name="afternoon"/>
                                        <field name="evening"/>
                                        <field name="night"/>
                                        <field name="when_take" required="1"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="remark" nolable="1" placholder="Remark"/>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="patient_prescriptions_view_search_new" model="ir.ui.view">
            <field name="name">patient.prescriptions.view.search</field>
            <field name="model">patient.prescriptions</field>
            <field name="arch" type="xml">
                <search string="Activity">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="registration_no"/>
                    <field name="condition_type_id"/>
                    <field name="condition_stage_id"/>
                    <field name="date"/>
                    <field name="doctor_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Condition Type" name="condition_type_id" context="{'group_by': 'condition_type_id'}"/>
                        <filter string="Condition Stage" name="condition_stage_id" context="{'group_by': 'condition_stage_id'}"/>
                        <filter string="Patient" name="patient_id" context="{'group_by': 'patient_id'}"/>
                        <filter string="Doctor" name="doctor_id" context="{'group_by': 'doctor_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_patient_prescriptions" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">patient.prescriptions</field>
            <field name="view_mode">tree,search,form</field>
        </record>



        <menuitem id="menu_patient_prescriptions" name='Prescriptions' parent="main_menu_hospitalization" action="action_patient_prescriptions" sequence="7" />


    </data>
</odoo>
