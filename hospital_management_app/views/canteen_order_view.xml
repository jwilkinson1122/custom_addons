<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
		<record id="canteen_order_view_tree_new" model="ir.ui.view">
			<field name="name">canteen.order.view.form.popup</field>
			<field name="model">canteen.order</field>
			<field name="priority">20</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="partner_id"/>
					<field name="date"/>
					<field name="invoice_id"/>
					<field name="total_bill"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		<record id="canteen_order_view_form_new" model="ir.ui.view">
        <field name="name">canteen.order.view.form.popup</field>
        <field name="model">canteen.order</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form><!---->
                <header>
                    <button name="action_done" states="draft" string="Done" type="object" class="oe_highlight"/>
					<button name="action_create_invoice" states="done" string="Create Invoice" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
					<div class="oe_title">
						<h1><field name="name" readonly="1"/></h1>
					</div>
					<group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="date" required="1"/>
                        </group>
                        <group>
                            <field name="total_bill"/>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Food Items">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="order_id" invisible="1"/>
                                    <field name="product_id" required="1" domain="[('is_food', '=', True)]" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="price_unit"/>
                                    <field name="quantity"/>
                                    <field name="subtotal"/>
                                </tree>
                                <form create="0" edit="0" delete="0"><!---->
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="order_id" required="1"/>
                                                <field name="product_id" required="1"/>
                                            </group>
                                            <group>
                                                <field name="price_unit"/>
                                                <field name="quantity"/>
                                                <field name="subtotal"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    	</record> 

    	<record id="canteen_order_view_search_new" model="ir.ui.view">
            <field name="name">canteen.order.view.search</field>
            <field name="model">canteen.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
					<field name="partner_id"/>
					<field name="date"/>
					<field name="invoice_id"/>
					<field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>


		<record id="action_canteen_order" model="ir.actions.act_window">
			<field name="name">Canteen Order</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">canteen.order</field>
<!--			<field name="domain">[('user_id', '=', uid)]</field>-->
			<field name="view_mode">tree,search,form</field>
		</record>

		 <menuitem id="menu_canteen_order"
                   name='Canteen Order'
                   groups="group_canteen_management"
                   parent="main_menu_canteen"
                   action="action_canteen_order"
                   sequence="2" />
	</data>
</odoo>
