<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
		

		<record id="employee_degree_view_tree_new" model="ir.ui.view">
			<field name="name">employee.degree.view.form.popup</field>
			<field name="model">employee.degree</field>
			<field name="priority">20</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="employee_degree_view_form_new" model="ir.ui.view">
        <field name="name">employee.degree.view.form.popup</field>
        <field name="model">employee.degree</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
					<div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <field name="note" placeholder="Log a note..."/>
                </sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    	</record> 




		<record id="action_employee_degree" model="ir.actions.act_window">
			<field name="name">Degree</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">employee.degree</field>
<!--			<field name="domain">[('user_id', '=', uid)]</field>-->
			<field name="view_mode">tree,form</field>
		</record>


		 <menuitem id="menu_employee_degree"
                  name='Degree'
                  parent="menu_hospital_configuration"
                  action="action_employee_degree"
                  sequence="8" />


	</data>
</odoo>
