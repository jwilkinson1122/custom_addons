<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="partner_type_search_view">
        <field name="name">partner.type.search</field>
        <field name="model">partner.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="partner_type_tree_view">
        <field name="name">partner.type.tree</field>
        <field name="model">partner.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="shortcut" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="partner_type_form_view">
        <field name="name">partner.type.form</field>
        <field name="model">partner.type</field>
        <field name="arch" type="xml">
            <form string="Partner Types">
                <group col="4">
                    <field name="name" />
                    <field name="shortcut" />
                    <field name="code" placeholder="Code" attrs="{'readonly': [('id', '!=', False)]}"/>
                    <field name="id" invisible="True"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_type_act_window">
        <field name="name">Partner Types</field>
        <field name="res_model">partner.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!-- <menuitem id="menu_hospital_configuration" name='Configuration' parent="main_menu_hospital_management" groups="group_hospital_manager" sequence="100" /> -->

    <menuitem action="partner_type_act_window" id="menu_contact_type" name="Partner Types" parent="menu_hospital_configuration" sequence="3" />

</odoo>
