<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_employee_entry_tree" model="ir.ui.view">
		<field name="name">hr.employee.tree</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='coach_id']" position="after">
                <field name="staff_type"/>
                <field name="degree_id" options="{'no_create': True, 'no_open': True}"/>
			</xpath>
		</field>
	</record>

    <record id="hr_employee_entry_form_inherit" model="ir.ui.view">
		<field name="name">hr.employee.tree.inherit</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='coach_id']" position="after">
                <field name="staff_type" required="1"/>
                <field name="degree_id" options="{'no_create': True, 'no_open': True}"/>
			</xpath>
		</field>
	</record>

    <record id="open_view_employee_all_list" model="ir.actions.act_window">
        <field name="name">All Staff</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>

        <menuitem
                id="menu_hr_employee_user_all"
                name="All Staff"
                action="open_view_employee_all_list"
                parent="main_menu_management"
                sequence="2"/>

    <record id="action_hr_employee_administrator" model="ir.actions.act_window">
        <field name="name">Administrator</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="domain">[('staff_type', '=', 'administrator')]</field>
        <field name="context">{'default_staff_type':'administrator'}</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>

     <menuitem id="menu_employee_administrator"
                  name='Administrator'
                  parent="main_menu_management"
                  action="action_hr_employee_administrator"
                  sequence="3" />

