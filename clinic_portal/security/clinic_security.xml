<odoo>
  <data noupdate="1">
    <record id="patient_portal_rule" model="ir.rule">
      <field name="name">Clinic Patient Portal Access</field>
      <field name="model_id" ref="clinic_patient.model_clinic_patient"/>
      <field name="domain_force">[('partner_id', '=', user.partner_id.id)]
      </field>
      <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
    </record>

    <record id="bookout_portal_rule" model="ir.rule">
      <field name="name">Clinic Bookout Portal Access</field>
      <field name="model_id" ref="clinic_bookout.model_clinic_bookout"/>
      <field name="domain_force">[('patient_id.partner_id', '=', user.partner_id.id)]</field>
      <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
    </record>
  </data>
</odoo>
