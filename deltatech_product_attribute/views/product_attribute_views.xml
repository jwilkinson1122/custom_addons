<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_attribute_view_form" model="ir.ui.view">
        <field name="name">product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="group_id" />
            </field>
            <field name="is_custom" position="after">
                <field name="bool_value" column_invisible="parent.display_type!='boolean'" />
            </field>
        </field>
    </record>

    <record id="product_attribute_group_view_tree" model="ir.ui.view">
        <field name="name">product.attribute.group.tree</field>
        <field name="model">product.attribute.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
            </tree>
        </field>
    </record>

    <record id="product_attribute_group_view_form" model="ir.ui.view">
        <field name="name">product.attribute.group.form</field>
        <field name="model">product.attribute.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="type" />
                    </group>
                    <group>
                        <field name="min" />
                        <field name="max" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attribute_group" model="ir.actions.act_window">
        <field name="name">Attribute group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.attribute.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_product_attribute_group"
        action="action_attribute_group"
        parent="sale.prod_config_main"
        groups="product.group_product_variant"
        sequence="3"
    />

</odoo>
