<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_document_reference_view_form" model="ir.ui.view">
        <field name="name">pod.document.reference.view.form</field>
        <field name="model">pod.document.reference</field>
        <field
            name="inherit_id"
            ref="pod_document.pod_document_reference_view_form"
        />
        <field name="arch" type="xml">
            <header position="inside">
                <button type="object" name="render" string="Render" />
            </header>
            <button name="view" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('document_type', '=', 'zpl2')]}</attribute>
            </button>
        </field>
    </record>
</odoo>
