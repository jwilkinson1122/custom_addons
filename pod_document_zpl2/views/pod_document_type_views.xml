<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="pod_document_type_view_form" model="ir.ui.view">
        <field name="name">pod.document.type.view.form</field>
        <field name="model">pod.document.type</field>
        <field
            name="inherit_id"
            ref="pod_document.pod_document_type_view_form"
        />
        <field name="arch" type="xml">
            <field name="report_action_id" position="after">
                <field
                    name="label_zpl2_id"
                    attrs="{'invisible': [('document_type', '!=', 'zpl2')], 'required': [('document_type', '=', 'zpl2')]}"
                />
            </field>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_document_type_zpl2_action">
        <field name="name">Document Actions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('document_type', '=', 'zpl2')]</field>
        <field name="context">{'default_document_type': 'zpl2'}</field>
    </record>
    <menuitem
        id="pod_document_type_zpl2_menu"
        parent="contacts.res_partner_menu_config"
        action="pod_document_type_zpl2_action"
        name="Podiatry ZPL Labels"
    />
</odoo>
