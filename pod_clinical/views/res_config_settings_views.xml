<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pod_clinical']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_clinical_procedure">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_clinical_procedure" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Procedures &amp; Procedure requests" for="module_pod_clinical_procedure" />
                        <div class="text-muted">
                            Activates procedures and procedure requests
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_clinical_careplan">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_clinical_careplan" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Care plans" for="module_pod_clinical_careplan" />
                        <div class="text-muted">
                            Activates care plans
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_clinical_request_group">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_clinical_request_group" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Request groups" for="module_pod_clinical_request_group" />
                        <div class="text-muted">
                            Activates request groups
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" name="module_pod_clinical_condition">
                    <div class="o_setting_left_pane" name="left">
                        <field name="module_pod_clinical_condition" />
                    </div>
                    <div class="o_setting_right_pane" name="right">
                        <label string="Pathology" for="module_pod_clinical_condition" />
                        <div class="text-muted">
                            Activates clinical pathology
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
