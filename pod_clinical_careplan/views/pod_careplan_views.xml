<odoo>
    <record id="pod_careplan_view_tree" model="ir.ui.view">
        <field name="name">pod.careplan.view.tree</field>
        <field name="model">pod.careplan</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="decoration-muted">state=='cancelled'</attribute>
            </tree>
        </field>
    </record>
    <record id="pod_procedure_request_view_form" model="ir.ui.view">
        <field name="name">pod.careplan.view.form</field>
        <field name="model">pod.careplan</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <button name="draft2active" position="before">
                <button
                    name="%(pod_clinical_careplan.action_pod_careplan_add_plan_definition_form)d"
                    type="action"
                    string="Add Plan definition"
                    groups="pod_clinical_careplan.group_pod_careplan_add_plan_definition"
                    class="oe_highlight"
                />
            </button>
        </field>
    </record>
    <record id="pod_careplan_view_search" model="ir.ui.view">
        <field name="name">pod.careplan.view.search</field>
        <field name="model">pod.careplan</field>
        <field name="arch" type="xml">
            <search string="Podiatry Care Plan">
                <field name="internal_identifier" />
                <field name="name" />
                <field name="patient_id" />
                <field name="state" />
                <field name="intent" />
                <newline />
                <filter
                    name="draft"
                    domain="[('state', '=', 'draft')]"
                    string="Draft"
                />
                <filter
                    name="active"
                    domain="[('state', '=', 'active')]"
                    string="Active"
                />
                <filter
                    name="completed"
                    domain="[('state', '=', 'completed')]"
                    string="Completed"
                />
                <filter
                    name="suspended"
                    domain="[('state', '=', 'suspended')]"
                    string="Suspended"
                />
                <filter
                    name="error"
                    domain="[('state', '=', 'entered-in-error')]"
                    string="Error"
                />
                <filter
                    name="cancelled"
                    domain="[('state', '=', 'cancelled')]"
                    string="Cancelled"
                />
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_careplan_action">
        <field name="name">Care Plans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.careplan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="pod_clinical_careplan"
        name="Care plans"
        parent="pod_base.pod_clinical_request"
        action="pod_careplan_action"
        sequence="0"
    />
</odoo>
