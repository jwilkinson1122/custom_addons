<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_workflow.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pod_workflow']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_pod_careplan_add_plan_definition" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Plan definition on careplans" for="group_pod_careplan_add_plan_definition" />
                        <div class="text-muted">
                            Allow to add plan definitions on care plans
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
