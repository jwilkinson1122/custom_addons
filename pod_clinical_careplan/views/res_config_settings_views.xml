<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_clinical.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='module_pod_clinical_careplan']/div[@name='right']" position="inside">
                <div>
                    <field class="oe_inline" name="group_pod_careplan_add_plan_definition" />
                    Allow to add plan definitions on care plans
                </div>
            </xpath>
        </field>
    </record>
</odoo>
