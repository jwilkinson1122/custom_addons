<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_request_form">
        <field name="name">pod.request.form</field>
        <field name="model">pod.request</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_request" class="oe_stat_button" icon="fa-hospital-o" groups="pod_clinical_careplan.group_pod_careplan_list" attrs="{'readonly':[('is_editable', '=', False)]}" context="{'model_name': 'pod.careplan'}">
                    <field name="careplan_count" widget="statinfo" string="Care Plans" />
                    <field name='careplan_ids' invisible="1" />
                </button>
            </xpath>
            <group name="inheritance" position="inside">
                <field name="careplan_id" readonly="1" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('careplan_id', '=', False)]}" />
            </group>
            <notebook position="attributes">
                <attributes name="invisible">0</attributes>
            </notebook>
        </field>
    </record>
    <record id="pod_request_form_careplan" model="ir.ui.view">
        <field name="name">pod.request.view.form</field>
        <field name="model">pod.request</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="groups_id" eval="[(4, ref('group_pod_careplan_list'))]" />
        <field name="arch" type="xml">
            <field name="careplan_id">
                <attribute name="options">{'no_open': False, 'no_create': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
