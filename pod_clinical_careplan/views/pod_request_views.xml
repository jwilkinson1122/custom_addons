<odoo>
    <record model="ir.ui.view" id="pod_request_form">
        <field name="name">pod.request.form</field>
        <field name="model">pod.request</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_request"
                    class="oe_stat_button"
                    icon="fa-hospital-o"
                    context="{'model_name': 'pod.careplan'}"
                >
                    <field
                        name="careplan_count"
                        widget="statinfo"
                        string="Care Plans"
                    />
                    <field name='careplan_ids' invisible="1" />
                </button>
            </xpath>
            <group name="inheritance" position="inside">
                <field
                    name="careplan_id"
                    readonly="1"
                    attrs="{'invisible': [('careplan_id', '=', False)]}"
                />
            </group>
        </field>
    </record>
</odoo>
