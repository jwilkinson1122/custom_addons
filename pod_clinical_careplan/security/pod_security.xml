<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_careplan_add_plan_definition" model="res.groups">
        <field name="name">Add plan definition on careplans</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_careplan_display" model="res.groups">
        <field name="name">Careplan Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_administration.group_pod_patient_display'))]" />
    </record>
    <record id="group_pod_careplan_list" model="res.groups">
        <field name="name">Careplan List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_clinical.group_pod_view_requests')), (4, ref('group_pod_careplan_display'))]" />
    </record>
    <record id="group_pod_careplan_manager" model="res.groups">
        <field name="name">Careplan Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_careplan_list'))]" />
    </record>
    <record id="pod_clinical.group_pod_view_requests" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_careplan_display')), (4, ref('pod_administration_practitioner.group_pod_practitioner_display'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_careplan_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_careplan_manager'))]" />
    </record>
</odoo>
