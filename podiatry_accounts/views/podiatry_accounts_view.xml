<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
    <!-- Search View Of Patient PaySlip Line Information -->
    <record id="view_patient_payslip_line_search" model="ir.ui.view">
        <field name="name">patient.payslip.line.search</field>
        <field name="model">patient.payslip.line</field>
        <field name="arch" type="xml">
            <search string="Accounts Structure">
                <group colspan="6" col="4">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Search View Of Patient Accounts Structure Information -->
    <record id="view_accounts_structure_search" model="ir.ui.view">
        <field name="name">patient.accounts.structure.search</field>
        <field name="model">patient.accounts.structure</field>
        <field name="arch" type="xml">
            <search string="Accounts Structure">
                <field name="name"/>
                <field name="code"/>
                <group expand="1" string="Group By">
                    <filter string="Code" name="code" context="{'group_by':'code'}"/>
                    <filter string="Structure Name" name="name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Form View Of Patient Accounts Structure Information -->
    <record id="view_patient_accounts_structure_form" model="ir.ui.view">
        <field name="name">patient.accounts.structure.form</field>
        <field name="model">patient.accounts.structure</field>
        <field name="arch" type="xml">
            <form string="Patient Accounts Structure">
                <sheet>
                    <group col="6" colspan="4">
                        <field name="name" placeholder="Name"/>
                        <field name="code" placeholder="Code"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Accounts Structure">
                            <field name="line_ids" nolabel="1" colspan="4"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient Accounts Structure Information -->
    <record id="view_patient_accounts_structre_tree" model="ir.ui.view">
        <field name="name">patient.accounts.structure.tree</field>
        <field name="model">patient.accounts.structure</field>
        <field name="arch" type="xml">
            <tree string="Patient Accounts Structure">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <!-- Form View Of Patient PaySlip Line Information -->
    <record id="view_patient_payslip_line_form" model="ir.ui.view">
        <field name="name">patient.payslip.line.form</field>
        <field name="model">patient.payslip.line</field>
        <field name="arch" type="xml">
            <form string="Patient Payslip Line">
                <sheet>
                    <group col="4">
                        <field name="name" placeholder="Name"/>
                        <field name="code" placeholder="Code"/>
                    </group>
                    <group col="4" string="Calculations">
                        <field name="type"/>
                        <field name="amount" />
                        <field name="account_id" options="{&quot;no_create&quot;: True}"/>
                        <field name="company_id"/>
                        <field name="currency_id" invisible="0"/>
                        <field name="currency_symbol" invisible="0"/>
                    </group>
                    <group col="2" attrs="{'invisible':[('type','=','range')]}" string="Description">
                        <field name="description" />
                    </group>
                    <notebook colspan="4"  attrs="{'invisible':[('type','!=','range')]}">
                        <page string="Function">
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Function Arguments" >
                                    <field name="from_month" placeholder="Month (From)"/>
                                    <field name="to_month" placeholder="Month (To)"/>
                                </tree>
                                <form string="Function Arguments" >
                                    <field name="from_month" placeholder="Month (From)"/>
                                    <field name="to_month" placeholder="Month (To)"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient PaySlip Line Information -->
    <record id="view_patient_payslip_line_tree" model="ir.ui.view">
        <field name="name">patient.payslip.line.tree</field>
        <field name="model">patient.payslip.line</field>
        <field name="arch" type="xml">
            <tree string="Accounts Structure">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="account_id"/>
                <field name="amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="currency_symbol" invisible="1"/>
            </tree>
        </field>
    </record>
    <!-- Form View Of Patient PaySlip Line Information -->
    <record id="view_patient_accounts_structure_line_form" model="ir.ui.view">
        <field name="name">patient.accounts.structure.line.form</field>
        <field name="model">patient.accounts.structure.line</field>
        <field name="arch" type="xml">
            <form string="Patient Payslip Line">
                <group col="4">
                    <field name="name"/>
                    <field name="code"/>
                </group>
                <group col="4" string="Calculations">
                    <field name="type"/>
                    <field name="product_id"/>
                    <field name="account_id" required="1"/>
                    <field name="amount" readonly="1" force_save="1"/>
                    <field name="company_id"/>
                    <field name="currency_id"/>
                    <field name="currency_symbol"/>
                </group>
                <notebook colspan="4">
                    <page string="Function">
                        <field name="line_ids" colspan="4" nolabel="1" attrs="{'readonly':[('type','!=','range')]}">
                            <tree string="Function Arguments" >
                                <field name="from_month"/>
                                <field name="to_month"/>
                            </tree>
                            <form string="Function Arguments" >
                                <field name="sequence"/>
                                <field name="from_month"/>
                                <field name="to_month"/>
                            </form>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient PaySlip Line Information -->
    <record id="view_patient_accounts_structure_line_tree" model="ir.ui.view">
        <field name="name">patient.accounts.structure.line.tree</field>
        <field name="model">patient.accounts.structure.line</field>
        <field name="arch" type="xml">
            <tree string="Accounts Structure">
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="account_id"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>
    <!-- Form View Of Patient PaySlip Information -->
    <record id="view_patient_payslip_form" model="ir.ui.view">
        <field name="name">patient.payslip.form</field>
        <field name="model">patient.payslip</field>
        <field name="arch" type="xml">
            <form string="Patient Payslip">
                <header>
                    <button name="payslip_confirm" class="fa fa-check" string="Confirm" states="draft" type="object" groups="podiatry.group_podiatry_administration"/>
                    <button name="patient_pay_accounts" class="fa fa-share" string="Payment" states="confirm" type="object" groups="podiatry.group_podiatry_administration"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="invoice_view" string="Invoice" icon="fa-pencil-square-o" widget="stateinfo" class="oe_stat_button"
                            states="pending,paid" type="object" groups="podiatry.group_podiatry_administration"/>
                    </div>
                    <h2>
                        <field name="patient_id" placeholder="Patient Name" colspan="4" attrs="{'readonly':[('state','not in','draft')]}"
                                domain="[('state','=','done')]" options="{&quot;no_create&quot;: True}"/>
                        </h2>
                    <group>
                        <group col="2" string="Information">
                            <field name="name" placeholder="Description" required="1"
                                attrs="{'readonly':[('state','not in','draft')]}"/>
                            <field name="number" readonly="1" attrs="{'invisible': [('state', 'not in', ('pending', 'paid'))]}"/>
                            <field name="date" attrs="{'readonly':[('state','not in','draft')]}"/>
                        </group>
                        <group col="2" string="Standard Information">
                            <field name="standard_id" placeholder="Standard" widget="selection" attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                            <field name="division_id" placeholder="Division" widget="selection" attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                            <field name="medium_id" placeholder="Medium" widget="selection" attrs="{'readonly':[('state','not in','draft')]}" readonly="1"/>
                        </group>
                    </group>
                    <group col="4">
                        <separator string="Accounts Structure" colspan="4"/>
                        <field name="accounts_structure_id" required="1" placeholder="Account Structure" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                        <field name="journal_id" widget="selection" placeholder="Journal" domain="[('type','=','sale')]" attrs="{'readonly':[('state','not in','draft')]}"/>
                        <notebook colspan="4">
                            <page string="Accounts Structure">
                                <field name="line_ids" colspan="4" nolabel="1" readonly="1"/>
                                <separator string="" colspan="4"/>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field name="total"/>
                                    <field name="paid_amount" readonly="1"/>
                                    <field name="due_amount" readonly="1"/>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group col="4" colspan="4">
                                    <field name="type"  placeholder="Type" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="currency_id" placeholder="Currency" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="currency_symbol" invisible="0"/>
                                    <field name="move_id" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="payment_date" placeholder="Payment Date" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    <field name="company_id" string = "Podiatry" placeholder="Podiatry Name" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient PaySlip Information -->
    <record id="view_patient_payslip_tree" model="ir.ui.view">
        <field name="name">patient.payslip.tree</field>
        <field name="model">patient.payslip</field>
        <field name="arch" type="xml">
            <tree string="Accounts Payslip" decoration-danger="state in '[draft,pending]'" decoration-info="state == 'paid'">
                <field name="name"/>
                <field name="number"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="register_id"/>
                <field name="state" widget="badge" decoration-info="state in ('draft','pending')" decoration-success="state in ('confirm','paid')"/>
            </tree>
        </field>
    </record>
    <!-- Search View Of Patient PaySlip Information -->
    <record id="view_patient_payslip_search" model="ir.ui.view">
        <field name="name">patient.payslip.search</field>
        <field name="model">patient.payslip</field>
        <field name="arch" type="xml">
            <search string="Payslip">
                <group col="10" colspan="4">
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]" help="Draft Slip"/>
                    <filter name="confirm" string="Confirm" domain="[('state','=','confirm')]" help="Confirm Slip"/>
                    <separator orientation="vertical"/>
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="number"/>
                    <field name="date"/>
                </group>
                <newline/>
                <group expand="0" string="Group By..." colspan="12" col="10">
                    <filter string="Patient" name="patient_id" context="{'group_by':'patient_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="Register" name="register_id" context="{'group_by':'register_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="States" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Form View Of Patient Accounts Register Information -->
    <record id="view_patient_accounts_register_form" model="ir.ui.view">
        <field name="name">patient.accounts.register.form</field>
        <field name="model">patient.accounts.register</field>
        <field name="arch" type="xml">
            <form string="Patient Accounts Register">
                <header>
                    <button name="accounts_register_confirm" type="object" class="fa fa-check" string="Confirm" states="draft" groups="podiatry.group_podiatry_administration"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group string="Information" col="4" colspan="4">
                        <field name="name" placeholder="Name" attrs="{'readonly':[('state','not in','draft')]}"/>
                        <field name="number" readonly="1"/>
                        <field name="date" attrs="{'readonly':[('state','not in','draft')]}"/>
                        <field name="journal_id" placeholder="Journal" domain="[('type','=','sale')]" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                        <!-- <field name="period_id" placeholder="Force Period"/> -->
                        <field name="company_id" string = "Podiatry" placeholder="Podiatry Name" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                    </group>
                    <group string="Accounts Register for" col="4" colspan="4">
                        <field name="accounts_structure" placeholder="Account structure" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                        <field name="standard_id" placeholder="Select Class" attrs="{'readonly':[('state','not in','draft')]}"
                            required="1" widget="selection"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Patient Payslip">
                            <field name="line_ids" colspan="4" nolabel="1" attrs="{'readonly':[('state','not in','draft')]}">
                                <tree string="Patient Payslip" create="false">
                                    <field name="name"/>
                                    <field name="number"/>
                                    <field name="patient_id"/>
                                    <field name="total"/>
                                    <field name="state"/>
                                </tree>
                                <form string="Patient Payslip">
                                    <header>
                                        <field name="state" widget="statusbar" readonly="1"/>
                                    </header>
                                    <sheet>
                                        <group col="4" colspan="4">
                                            <field name="name" placeholder="Name"/>
                                            <field name="number"/>
                                            <field name="patient_id" placeholder="Patient Name"/>
                                            <field name="total"/>
                                            <field name="journal_id" placeholder="Journal"/>
                                            <field name="company_id" placeholder="Podiatry Name"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient Accounts Register Information -->
    <record id="view_patient_accounts_register_tree" model="ir.ui.view">
        <field name="name">patient.accounts.register.tree</field>
        <field name="model">patient.accounts.register</field>
        <field name="arch" type="xml">
            <tree string="Patient Accounts Register">
                <field name="name"/>
                <field name="number"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-info="state in ('draft')" decoration-success="state in ('confirm')"/>
            </tree>
        </field>
    </record>
    <!-- Search View Of Patient Accounts Register Information -->
    <record id="view_patient_accounts_register_search" model="ir.ui.view">
        <field name="name">patient.accounts.register.search</field>
        <field name="model">patient.accounts.register</field>
        <field name="arch" type="xml">
            <search string="Accounts Register">
                <group col="10" colspan="4">
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]" help="Draft Slip"/>
                    <filter name="confirm" string="Confirm" domain="[('state','=','confirm')]" help="Confirm Slip"/>
                    <separator orientation="vertical"/>
                    <field name="name"/>
                    <field name="number"/>
                    <field name="date"/>
                </group>
                <newline/>
                <group expand="0" string="Group By..." colspan="12" col="10">
                    <filter string="States" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Of Form & Tree Views Of Patient Accounts Structure Information -->
    <record model="ir.actions.act_window" id="action_patient_accounts_structure_form">
        <field name="name">Accounts Structure</field>
        <field name="res_model">patient.accounts.structure</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action Of Form & Tree Views Of Patient PaySlip Line Information -->
    <record id="action_patient_payslip_line_form" model="ir.actions.act_window">
        <field name="name">Accounts Head</field>
        <field name="res_model">patient.accounts.structure.line</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action Of Form & Tree Views Of Patient PaySlip Information -->

    <record id="action_patient_payslip_form" model="ir.actions.act_window">
        <field name="name">Accounts Receipt</field>
        <field name="res_model">patient.payslip</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action Of Form & Tree Views Of Patient Accounts Register Information -->
    <record id="action_patient_accounts_register_form" model="ir.actions.act_window">
        <field name="name">Accounts Register</field>
        <field name="res_model">patient.accounts.register</field>
        <field name="view_id" ref="view_patient_accounts_register_tree"/>
        <field name="search_view_id" ref="view_patient_accounts_register_search"/>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action Of Form & Tree Views Of Patient View's Accounts Button -->
    <record id="action_pat_accounts_form" model="ir.actions.act_window">
        <field name="name">Accounts Register</field>
        <field name="res_model">patient.payslip</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_patient_id': active_id}</field>
    </record>

    <!-- Inherited Form View Of Patient -->
    <record id="view_patient_patient_form2" model="ir.ui.view">
        <field name="name">patient.patient.form</field>
        <field name="model">patient.patient</field>
        <field name="inherit_id" ref="podiatry.view_patient_patient_form_1"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button name="%(action_pat_accounts_form)d" type="action" class="oe_inline oe_stat_button" attrs="{'invisible':[('state', 'in', ['draft','close','alumni','cancel'])]}" groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_patient">
                        <img src="/podiatry/static/description/payment.png" alt="Logo" style="margin-left:20px;"/>
                            <lable style="margin-left:20px;">Accounts Receipt</lable>
                    </button>
                </xpath>
            </data>
        </field>
    </record>

    <!-- memu Items for Accounts -->
    <menuitem id="menu_accounts" name="Accounts" parent="podiatry.admission_register" groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_patient,podiatry.group_podiatry_doctor" sequence="11"/>
    <menuitem id="menu_patient_payslip" name="Accounts Receipts" parent="menu_accounts" action="action_patient_payslip_form"
              groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_patient,podiatry.group_podiatry_doctor" sequence="111"/>
    <menuitem id="menu_patient_accounts_register" name="Accounts Registers" parent="menu_accounts" action="action_patient_accounts_register_form"
              groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_patient" sequence="112"/>
    <menuitem id="menu_patient_accounts_structure_form" name="Accounts" parent="podiatry.menu_configuration"/>
    <menuitem id="menu_patient_accounts_structure_sub_form" name="Accounts Structure" parent="menu_patient_accounts_structure_form"
              action="action_patient_accounts_structure_form"/>
    <menuitem id="menu_patient_payslip_line_form" name="Accounts Head" parent="menu_patient_accounts_structure_form"
              action="action_patient_payslip_line_form" sequence="2"/>
</odoo>
