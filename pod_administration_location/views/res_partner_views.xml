<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="groups_id" eval="[(4, ref('pod_administration_location.group_pod_location_display'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_location" invisible="1" />
            </xpath>
            <xpath expr="//h1" position="after">
                <!-- <h1> -->
                <field name="is_location" invisible="1" />
                <field name="location_identifier" attrs="{'invisible': [('is_location','=',False)]}" />
                <!-- </h1> -->
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_edit_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="groups_id" eval="[(4, ref('pod_administration_location.group_pod_location_manager'))]" />
        <field name="arch" type="xml">
            <field name="location_identifier" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>
    <record id="pod_location_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_location', '=', True)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_location': True, 'default_is_pod': True}</field>
    </record>
</odoo>
