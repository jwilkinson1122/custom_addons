<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_base.res_partner_view_form" />
        <field name="arch" type="xml">
            <field name="is_pod" position="after">
                <field name="is_location" />
            </field>
            <xpath
                expr="//field[@name='child_ids']//form//field[@name='parent_id']"
                position="after"
            >
                <!-- We need this in order to not make by default the childs as location -->
                <field name="is_location" invisible="1" />
            </xpath>
        </field>
    </record>
    <record id="pod_location_action" model="ir.actions.act_window">
        <field name="name">Podiatry Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_location', '=', True)]</field>
        <field
            name="context"
        >{'default_company_type':'company', 'default_is_company':True, 'default_is_location': True, 'default_is_pod': True}</field>
    </record>
</odoo>
