<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='module_pod_administration_location']/div[@name='right']" position="inside">
                <div>
                    <field class="oe_inline" name="module_pod_administration_location_stock" />
                    Relate a pod location with a stock location
                </div>
            </xpath>
        </field>
    </record>
</odoo>
