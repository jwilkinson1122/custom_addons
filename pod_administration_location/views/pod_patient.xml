<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pod_patient_view_form" model="ir.ui.view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <h4>
                    <label for="pod_location_primary_id" />
                    <field name="pod_location_primary_id" />
                    <label for="pod_location_secondary_ids" />
                    <field name="pod_location_secondary_ids" widget="many2many_tags" />
                </h4>
            </xpath>
        </field>
    </record>
</odoo>
