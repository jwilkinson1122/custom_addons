<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Configuration Restriction Lines -->

    <record id="product_config_line_custom_devices" model="product.config.line">
        <field name="product_tmpl_id" ref="custom_device_series" />
        <field name="attribute_line_id" ref="product_attribute_line_device_shell_foundation" />
        <field name="value_ids" eval="[(6, 0, [
            ref('product_attribute_value_sg_flex'),
            ref('product_attribute_value_sg_everyday'),
            ref('product_attribute_value_sg_proformance'),
            ref('product_attribute_value_poly_semi_flexible'),
            ref('product_attribute_value_poly_semi_rigid'),
            ref('product_attribute_value_poly_rigid'),
            ref('product_attribute_value_ncv_gentle'),
            ref('product_attribute_value_ncv_firm'),
            ref('product_attribute_value_pc_multi_density'),
            ref('product_attribute_value_pc_composite')])]" />
        <field name="domain_id" ref="product_config_domain_custom_lines" />
    </record>

