<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="podiatry_pathology_view_search" model="ir.ui.view">
        <field name="name">podiatry.pathology.search</field>
        <field name="model">podiatry.pathology</field>
        <field name="arch" type="xml">
            <search string="Podiatry Pathology">
                <field name="category_id" />
                <field name="notes" />
                <field name="code" />
                <field name="name" />
                <field name="protein" />
                <field name="gene" />
                <field name="chromosome" />
                <group expand="0" string="Group By...">
                    <filter string="Category" name="Category" context="{'group_by':'category_id'}" />
                    <filter string="Protein involved" name="Protein" context="{'group_by':'protein'}" />
                    <filter string="Gene" name="Gene" context="{'group_by':'gene'}" />
                    <filter string="Affected Chromosome" name="Affected" context="{'group_by':'chromosome'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="podiatry_pathology_view_tree" model="ir.ui.view">
        <field name="name">podiatry.pathology.tree</field>
        <field name="model">podiatry.pathology</field>
        <field name="arch" type="xml">
            <tree string="Podiatry Pathology">
                <field name="name" />
                <field name="code" />
                <field name="category_id" />
                <field name="protein" />
                <field name="gene" />
                <field name="chromosome" />
            </tree>
        </field>
    </record>

    <record id="podiatry_pathology_view_form" model="ir.ui.view">
        <field name="name">podiatry.pathology.form</field>
        <field name="model">podiatry.pathology</field>
        <field name="arch" type="xml">
            <form string="Podiatry Pathology">
                <header>
                </header>
                <sheet>
                    <div class="oe_title" name="title">
                        <label for="name" class="edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons">
                    </div>

                    <group name="data">
                        <group name="main">
                            <field name="code" />
                            <field name="protein" />
                            <field name="chromosome" />
                            <field name="gene" />
                            <field name="category_id" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Condition Groups" name="notes" autofocus="autofocus">
                            <field name="podiatry_pathology_group_m2m_ids" />
                        </page>
                        <page string="Others" name="others">
                            <separator string="Notes"/>
                            <field name="notes" />
                        </page>
                    </notebook>
                </sheet>
                <div name="configurator" class="oe_form_sheetbg" groups="podiatry.group_podiatry_configurator">
                    <div class="oe_formview oe_form_sheet_width">
                        <h3>More Info</h3>
                        <group name="moreinfo">
                            <field name="id"/>
                        </group>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="podiatry_pathology_action">
        <field name="name">Pathologies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.pathology</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="podiatry_pathology_view_tree" />
        <field name="search_view_id" ref="podiatry_pathology_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
