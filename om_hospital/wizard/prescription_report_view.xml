<?xml version="1.0"?>
<odoo>
    <record id="prescription_report_view_form_id" model="ir.ui.view">
        <field name="name">create.prescription.report.form</field>
        <field name="model">prescription.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group class="oe_title">
                    <field name="patient_id" />
                    <field name="date_from" />
                    <field name="date_to" />
                </group>
                <footer>
                    <button name="action_prescription_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_prescription_report_view_form_id" model="ir.actions.act_window">
        <field name="name">Prescriptions Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescription.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="prescription_report_view_form_id"/>
        <field name="target">new</field>
    </record>


</odoo>
