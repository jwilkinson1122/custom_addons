<?xml version="1.0"?>
<odoo>

    <record id="view_create_prescription_form" model="ir.ui.view">
        <field name="name">create.prescription.wizard.form</field>
        <field name="model">create.prescription.wizard</field>
        <field name="arch" type="xml">
            <form string="Create New Prescription">
                <group>
                    <field name="date_prescription"/>
                    <field name="patient_id"/>
                </group>
                <footer>
                    <button name="action_create_prescription" type="object" string="Create" class="btn-primary"/>
                    <!--                    <button name="action_view_prescription" type="object" string="View Prescriptions" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_prescription" model="ir.actions.act_window">
        <field name="name">Create Prescription</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.prescription.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_prescription_form"/>
        <field name="target">new</field>
    </record>

</odoo>
