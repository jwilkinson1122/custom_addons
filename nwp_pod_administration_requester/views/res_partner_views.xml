<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_base.res_partner_view_form" />
        <field name="groups_id" eval="[(4, ref('pod_base.group_pod_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_requester" invisible="1" />
            </xpath>
            <field name="is_pod" position="before">
                <field name="is_requester" />
            </field>
            <field name="vat" position="after">
                <field name="college_number" attrs="{'invisible': [('is_requester','=',False), ('is_practitioner', '=', False)]}" />
            </field>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_requester_action">
        <field name="name">Requester</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_requester', '=', True)]</field>
        <field name="context">{'default_company_type':'person', 'default_is_company':False, 'default_is_requester': True, 'default_is_pod': True, 'default_is_customer': False}</field>
    </record>
</odoo>
