<odoo>

  <data>
    <!-- Clinic User Group -->
    <record id="clinic_group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_medical"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Clinic Manager Group -->
    <record id="clinic_group_manager" model="res.groups">
      <field name="name">Lab User</field>
      <field name="category_id" ref="base.module_category_medical"/>
      <field name="implied_ids" eval="[(4, ref('clinic_group_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>

  </data>
  <data noupdate="1">
    <record id="prescription_user_rule" model="ir.rule">
      <field name="name">Clinic Prescription User Access</field>
      <field name="model_id" ref="model_clinic_prescription"/>
      <field name="domain_force">
        [('active', '=', True)] 
      </field>
      <field name="groups" eval="[(4, ref('clinic_group_user'))]"/>
    </record>
  </data>

</odoo>
