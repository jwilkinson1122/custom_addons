<?xml version="1.0" ?>
<odoo>

    <record id="pod_encounter_prescription_form" model="ir.ui.view">
        <field name="name">pod.encounter.prescription</field>
        <field name="model">pod.encounter.prescription</field>
        <field name="arch" type="xml">
            <form string="Add Prescription">
                <group>
                    <field name="pod_id" invisible="1" />
                    <field name="location_id" options="{'no_create': True}" />
                    <field name="product_id" options="{'no_create': True}" context="{'search_on_supplier': True}" />
                </group>
                <footer>
                    <button name="run" string="Create" type="object" class="oe_highlight" />
                    or
                    <button name="action_cancel" string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="pod_encounter_prescription_action" model="ir.actions.act_window">
        <field name="name">Add Prescription</field>
        <field name="res_model">pod.encounter.prescription</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_pod_id': active_id}</field>
        <field name="target">new</field>
    </record>
    
</odoo>
