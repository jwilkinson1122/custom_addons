<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="podiatry_request_group_tree">
        <field name="name">podiatry.request.group.tree</field>
        <field name="model">podiatry.request.group</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="podiatry_workflow.podiatry_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Requests groups</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="podiatry_request_group_form">
        <field name="name">podiatry.request.group.form</field>
        <field name="model">podiatry.request.group</field>
        <field name="inherit_id" ref="podiatry_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Request Group</attribute>
            </form>
        </field>
    </record>
    <record id="podiatry_request_group_view_search" model="ir.ui.view">
        <field name="name">podiatry.request.group.view.search</field>
        <field name="model">podiatry.request.group</field>
        <field name="arch" type="xml">
            <search string="Request Groups">
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="name" />
                <field name="state" />
                <field name="priority" />
                <field name="order_by_id" />
                <newline />
                <filter name="draft" domain="[('state', '=', 'draft')]" help="Draft" />
                <filter name="active" domain="[('state', '=', 'active')]" help="Active" />
                <filter name="completed" domain="[('state', '=', 'completed')]" help="Completed" />
                <filter name="suspende" domain="[('state', '=', 'suspended')]" help="Suspended" />
                <filter name="error" domain="[('state', '=', 'entered-in-error')]" help="Error" />
                <filter name="cancelled" domain="[('state', '=', 'cancelled')]" help="Cancelled" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" domain="[]" name="group_by_patient" context="{'group_by':'patient_id'}" />
                    <filter string="Priority" name="group_by_priority" domain="[]" context="{'group_by':'priority'}" />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="podiatry_request_group_window_action">
        <field name="name">Request Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.request.group</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="podiatry_request_groups" name="Request groups" parent="podiatry_clinical.podiatry_clinical_request" groups="podiatry_clinical_request_group.group_podiatry_request_group_list" sequence="10" action="podiatry_request_group_window_action" />
</odoo>
