<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_podiatry_request_group_display" model="res.groups">
        <field name="name">Request Group Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('podiatry_clinical.group_podiatry_view_requests'))]" />
    </record>
    <record id="group_podiatry_request_group_list" model="res.groups">
        <field name="name">Request Group List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_request_group_display'))]" />
    </record>
    <record id="group_podiatry_request_group_manager" model="res.groups">
        <field name="name">Request Group Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_request_group_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="podiatry_base.group_podiatry_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_request_group_display'))]" />
    </record>
    <record id="podiatry_base.group_podiatry_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_request_group_manager'))]" />
    </record>
</odoo>
