<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="podiatry_patient_tree">
        <field name="name">podiatry.patient.tree</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier"/>
                <field name="name"/>
                <field name="primary_doctor_id"/>
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="podiatry_patient_form" model="ir.ui.view">
        <field name="name">podiatry.patient.form</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>

                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box"/>

                    <field name="photo" nolabel="1" class="oe_right oe_avatar" img_width="120" img_height="120" width="120" height="120" widget="image" />
                    <div class="oe_title">
                        <!-- <div class="oe_edit_only">
                            <label for="internal_identifier" />
                        </div> -->
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                        </h1>
                        <h1>
                            <!-- <label for="internal_identifier" string="PID:"/> -->

                            <field style="width: 30%%" name="internal_identifier" default_focus="1" context="{'default_is_patient': 1,'default_is_person': 1}" />
                        </h1>
                    </div>

                    <group>
                        <field name="is_company" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="company_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}" invisible="1"/>
                        <field name="parent_id" invisible="True"/>
                    </group>

                    <group name="contact">
                        <group>
                            <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <div class="oe_edit_only">
                                    <button name="open_parent" type="object" string="(edit)" class="oe_link" attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                </div>
                                <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            </div>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <!--                            <field name="user_ids" invisible="1" />-->
                            <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'required': [('user_ids','!=', [])]}"/>

                        </group>
                        <group>
                            <field name="primary_doctor_id" string="Primary Doctor"/>
                            <field name="user_ids" invisible="1"/>
                            <!--                            <field name="vat" placeholder="e.g. BE0477472701" />-->
                            <!--                            <field name="phone" widget="phone"/>-->
                            <!--                            <field name="mobile" widget="phone"/>-->
                            <!--                            &lt;!&ndash;                            <field name="user_ids" invisible="1" />&ndash;&gt;-->
                            <!--                            <field-->
                            <!-- name="email"-->
                            <!-- widget="email"-->
                            <!-- context="{'gravatar_image': True}"-->
                            <!-- attrs="{'required': [('user_ids','!=', [])]}"-->
                            <!--                            />-->
                            <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..."/>
                        </group>
                    </group>
                    <notebook name="administration_data">
                        <page name="podiatry_images" string="Files">
                            <group name="photo_group_tlOo2">
                                <group name="photo_group_tlOo2_left">
                                    <!--                                    <field widget="image" name="left_photo" string="Left Image"/>-->
                                    <field widget="image" options='{"size": [0, 150]}' name="left_photo" string="Left Image"/>
                                </group>
                                <group name="photo_group_tlOo2_right">
                                    <!--                                    <field widget="image" name="right_photo" string="Right Image"/>-->
                                    <field widget="image" options='{"size": [0, 150]}' name="right_photo" string="Right Image"/>
                                </group>
                            </group>
                            <group name="obj_group_DPydw">
                                <group name="obj_group_DPydw_left">
                                    <field filename="left_obj_file_name" name="left_obj_model" string="Left Scan"/>
                                    <field invisible="1" name="left_obj_file_name"/>
                                </group>
                                <group name="obj_group_DPydw_right">
                                    <field filename="right_obj_file_name" name="right_obj_model" string="Right Scan"/>
                                    <field invisible="1" name="right_obj_file_name"/>
                                </group>
                            </group>
                        </page>
                        <page name="patient_information" string="Patient Info">
                            <group>
                                <group>
                                    <field name="birth_date"/>
                                    <field name="gender"/>
                                    <field name="patient_height"/>
                                    <field name="patient_weight"/>
                                    <field name="diagnosis"/>
                                </group>
                                <group>
                                    <field name="shoe_width"/>
                                    <field name="shoe_size"/>
                                    <field name="shoe_type"/>
                                    <field name="other_shoe_type" attrs="{'invisible':[('shoe_type','!=','other')]}"/>
                                </group>
                            </group>

                        </page>
                        <page name="order_history" string="Prescriptions">

                        </page>
                        <page name="podiatry_administration" string="Administration">

                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="podiatry_patient_kanban" model="ir.ui.view">
        <field name="name">podiatry.patient.kanban</field>
        <field name="model">podiatry.patient</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="color"/>
                <field name="display_name"/>
                <field name="title"/>
                <field name="email"/>
                <field name="parent_id"/>
                <field name="is_company"/>
                <field name="function"/>
                <field name="phone"/>
                <field name="street"/>
                <field name="street2"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="state_id"/>
                <field name="category_id"/>
                <field name="image_128"/>
                <field name="type"/>
                <field name="id" invisible="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                            <div class="o_kanban_image">
                                <t t-if="record.image_128.raw_value">
                                    <img alt="Image" t-att-src="kanban_image('podiatry.patient', 'image_128', record.id.raw_value)"/>
                                </t>
                                <t t-if="!record.image_128.raw_value">
                                    <t t-if="record.is_company.raw_value === true">
                                        <img alt="company_image" name="kanban_image_default_company" t-attf-src='{{ _s }}/base/static/img/company_image.png'/>
                                    </t>

                                    <t t-if="record.is_company.raw_value === false">
                                        <img alt="default_image" name="kanban_image_default_person" t-attf-src='{{ _s }}/base/static/img/avatar.png'
                                        />

</t>

</t>

</div>

<div class="oe_kanban_details">
                                            <strong class="oe_partner_heading">
                                                <field name="display_name"/>
                                            </strong>
                                            <ul name="entity_details">
                                                <!-- <li t-if="record.email.raw_value" class="o_text_overflow">
                                                    <field name="email"/>
                                                </li> -->
                                                <li>
                                                    <field name="primary_doctor_id"/>
                                                </li>
                                                <li>
                                                    <field name="internal_identifier"/>
                                                </li>
                                            </ul>
                                            <div class="oe_kanban_partner_links"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </record>
                <record model="ir.actions.act_window" id="podiatry_patient_window_action">
                    <field name="name">Patients</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">podiatry.patient</field>
                    <field name="view_mode">kanban,tree,form</field>
                    <field name="context">{'default_company_type': 'person'}</field>
                </record>
                <menuitem id="podiatry_patient" name="Patients" parent="podiatry_base.podiatry_root_administration" groups="podiatry_administration.group_podiatry_patient_list" sequence="10" action="podiatry_patient_window_action"/>
            </odoo>

       