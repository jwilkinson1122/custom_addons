<odoo>

    <!-- Practice Tree View -->
    <record id="view_practice_account_tree" model="ir.ui.view">
        <field name="name">view.practice.owner.tree</field>
        <field name="model">practice</field>
        <field name="inherit_id" ref="practice.view_practice_tree" />
        <field name="arch" type="xml">
            <field name="color_id" position="after">
                <field name="partner_id" />
            </field>
        </field>
    </record>

    <!-- Practice Form View -->
    <record id="view_practice_account_form" model="ir.ui.view">
        <field name="name">view.practice.owner.form</field>
        <field name="model">practice</field>
        <field name="inherit_id" ref="practice.view_practice_form" />
        <field name="arch" type="xml">
            <field name="species_id" position="after">
                <field name="partner_id" />
            </field>
        </field>
    </record>

    <!-- Practice Kanban View -->
    <record id="view_practice_account_kanban" model="ir.ui.view">
        <field name="name">view.practice.owner.kanban</field>
        <field name="model">practice</field>
        <field name="inherit_id" ref="practice.view_practice_kanban" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" />
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]/ul" position="inside">
                <li t-if="record.partner_id.raw_value">
                    <field name="partner_id" />
                </li>
            </xpath>
        </field>
    </record>

    <!-- Practice Search View -->
    <record id="view_practice_account_search" model="ir.ui.view">
        <field name="name">view.practice.owner.search</field>
        <field name="model">practice</field>
        <field name="inherit_id" ref="practice.view_practice_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" />
            </field>
            <filter name="gender" position="before">
                <filter name="partner_id" string="Account" domain="" context="{'group_by': 'partner_id'}" />
            </filter>
        </field>
    </record>

</odoo>
