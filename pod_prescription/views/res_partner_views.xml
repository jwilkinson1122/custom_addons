    <record id="crm_lead_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.prescription_order.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="prescription_order_count" groups="pod_prescription_team.group_prescription_personnel"/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <a t-if="record.prescription_order_count.value>0" data-type="object" data-name="action_view_prescription_order" groups="pod_prescription_team.group_prescription_personnel" href="#" class="oe_kanban_action oe_kanban_action_a me-1">
                    <span class="badge rounded-pill">
                        <i class="fa-file-o" role="img" aria-label="Prescription orders" title="Prescription orders"/>
                        <t t-out="record.prescription_order_count.value"/>
                    </span>
                </a>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_buttons" model="ir.ui.view">
        <field name="name">res.partner.view.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_prescription_order" groups="pod_prescription_team.group_prescription_personnel" icon="fa-file-o">
                    <field string="Prescription" name="prescription_order_count" widget="statinfo"/>
                </button>
            </div>
            <!-- <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Product Preferences">
                    <field name="product_preference_ids">
                        <tree editable="bottom">
                            <field name="product_template_id"/>
                            <field name="preference_type"/>
                            <field name="preference_value"/>
                        </tree>
                        <form>
                            <group>
                                <field name="product_template_id"/>
                                <field name="preference_type"/>
                                <field name="preference_value"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath> -->
            <xpath expr="//page[@name='internal_notes']//field[@name='comment']" position="after">
                <group groups="pod_prescription_team.group_prescription_personnel">
                    <group groups="pod_prescription.group_warning_prescription" col="2">
                        <separator string="Warning on the Prescription Order" colspan="2"/>
                        <field name="prescription_warn" nolabel="1" colspan="2" required="1"/>
                        <field name="prescription_warn_msg" nolabel="1" string="Message" placeholder="Type a message..." colspan="2" invisible="prescription_warn in (False, 'no-message')" required="prescription_warn and prescription_warn != 'no-message'"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_form_payment_defaultcreditcard" model="ir.ui.view">
        <field name="name">res.partner.view.form.payment.defaultcreditcard</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="payment.view_partners_form_payment_defaultcreditcard"/>
        <field name="arch" type="xml">
            <button name="%(payment.action_payment_token)d" position="attributes">
                <attribute name="groups">pod_prescription_team.group_prescription_personnel</attribute>
            </button>
        </field>
    </record>

    <record id="res_partner_view_form_property_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.property.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <group name="fiscal_information" position="attributes">
                <attribute name="groups">account.group_account_invoice, pod_prescription_team.group_prescription_personnel</attribute>
            </group>
            <field name="property_payment_term_id" position="attributes">
                <attribute name="groups">account.group_account_invoice, pod_prescription_team.group_prescription_personnel</attribute>
            </field>
            <field name="property_supplier_payment_term_id" position="attributes">
                <attribute name="groups">account.group_account_invoice, pod_prescription_team.group_prescription_personnel</attribute>
            </field>
        </field>
    </record>

</odoo>
