<?xml version="1.0"?>
<odoo>

    <record id="act_res_partner_2_prescription_order" model="ir.actions.act_window">
        <field name="name">Prescription</field>
        <field name="res_model">prescription.order</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="groups_id" eval="[(4, ref('pod_prescription_team.group_prescription_personnel'))]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new quotation, the first step of a new prescription!
            </p>
            <p>
            Once the quotation is confirmed by the customer, it becomes a prescription order.<br/>
 You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>


