<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define the action -->
        <record id="action_device_tree" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">prescription.device</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
          Click here to add a new device.
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="device_tree_view">
            <field name="name">prescription.device.tree</field>
            <field name="model">prescription.device</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="laterality"/>
                    <field name="unit_price"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>

        <record id="view_device_form" model="ir.ui.view">
            <field name="name">prescription.device.form</field>
            <field name="model">prescription.device</field>
            <field name="arch" type="xml">
                <form string="Device">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" widget="char"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description" widget="text"/>
                                <field name="laterality"/>
                            </group>
                            <group>
                                <field name="unit_price"/>
                                <field name="quantity"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the menuitem that points to the action -->
        <!-- <menuitem id="menu_device_tree" name="Devices" parent="clinic_parent_menu" action="action_device_tree" sequence="60" /> -->

    </data>
</odoo>
