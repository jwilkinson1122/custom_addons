<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dedicated actions used in views below -->
    <record id="action_quotations_prescription_teams" model="ir.actions.act_window">
        <field name="name">Prescription</field>
        <field name="res_model">prescription.order</field>
        <field name="view_id" ref="pod_prescription.view_quotation_tree"/>
        <field name="view_mode">tree,form,calendar,graph,kanban,pivot</field>
        <field name="context">{
                'search_default_team_id': [active_id],
                'default_team_id': active_id,
                'show_address': 1,
            }
        </field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="pod_prescription.prescription_order_view_search_inherit_quotation"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new quotation, the first step of a new prescription!
            </p><p>
            Once the quotation is confirmed by the customer, it becomes a prescription order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

    <record id="action_quotation_form" model="ir.actions.act_window">
        <field name="name">New Draft Rx</field>
        <field name="res_model">prescription.order</field>
        <field name="view_mode">form</field>
        <field name="context">{
                'search_default_team_id': [active_id],
                'default_team_id': active_id,
                'default_user_id': uid,
        }
        </field>
        <field name="search_view_id" ref="prescription_order_view_search_inherit_quotation"/>
    </record>

    <record id="action_prescription_prescription_teams" model="ir.actions.act_window">
        <field name="name">Prescription Orders</field>
        <field name="res_model">prescription.order</field>
        <field name="view_mode">tree,form,calendar,graph,kanban,pivot</field>
        <field name="search_view_id" ref="pod_prescription.prescription_order_view_search_inherit_prescription"/>
        <field name="domain">[('state','not in',('draft','sent','cancel'))]</field>
        <field name="context">{
                'search_default_team_id': [active_id],
                'default_team_id': active_id,
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new quotation, the first step of a new prescription!
            </p><p>
            Once the quotation is confirmed by the customer, it becomes a prescription order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

    <record id="action_prescription_to_invoice_prescription_teams" model="ir.actions.act_window">
        <field name="name">Prescription Orders</field>
        <field name="res_model">prescription.order</field>
        <field name="view_mode">tree,form,calendar,graph,kanban,pivot</field>
        <field name="search_view_id" ref="pod_prescription.prescription_order_view_search_inherit_prescription"/>
        <field name="domain">[('invoice_status','=','to invoice')]</field>
        <field name="context">{
                'search_default_team_id': [active_id],
                'default_team_id': active_id,
            }
        </field>
    </record>

    <!-- crm.team views (& actions) -->

    <record id="crm_team_prescription_teams_view_form" model="ir.ui.view">
        <field name="name">crm.team.form</field>
        <field name="model">crm.team</field>
        <field name="priority">9</field>
        <field name="inherit_id" ref="pod_prescription_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <label for="invoiced_target"/>
                <div class="o_row">
                    <field name="invoiced_target" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_inline"/>
                    <span class="flex-grow-1">/ Month</span>
                </div>
            </field>
        </field>
    </record>

    <record id="crm_team_view_kanban_dashboard" model="ir.ui.view">
        <field name="name">crm.team.view.kanban.dashboard.inherit.prescription</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="pod_prescription_team.crm_team_view_kanban_dashboard"/>
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="invoiced_target"/>
            </xpath>

            <xpath expr="//t[@name='second_options']" position="after">
                <div class="row" t-if="record.quotations_count.raw_value">
                    <div class="col">
                        <a name="%(action_quotations_prescription_teams)d" type="action" context="{'search_default_draft': True, 'search_default_sent': True}">
                            <field name="quotations_count" class="me-1"/>
                            <t t-if="record.quotations_count.raw_value == 1">Draft Rx</t>
                            <t t-else="">Prescription</t>
                        </a>
                    </div>
                    <div class="col-auto text-truncate">
                        <field name="quotations_amount" widget="monetary"/>
                    </div>
                </div>
                <div class="row" name="orders_to_invoice" t-if="record.prescription_to_invoice_count.raw_value">
                    <div class="col-8">
                        <a name="%(action_prescription_to_invoice_prescription_teams)d" type="action">
                            <field name="prescription_to_invoice_count" class="me-1"/>
                            <t t-if="record.prescription_to_invoice_count.raw_value == 1">Order to Invoice</t>
                            <t t-else="">Orders to Invoice</t>
                        </a>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('o_kanban_primary_bottom')]" position="after">
                <t groups="pod_prescription_team.group_prescription_manager">
                    <div class="col-12 o_kanban_primary_bottom bottom_block">
                        <field name="invoiced" widget="prescription_team_progressbar" title="Invoicing" options="{'current_value': 'invoiced', 'max_value': 'invoiced_target', 'editable': true, 'edit_max_value': true, 'on_change': 'update_invoiced_target'}"/>
                    </div>
                </t>
            </xpath>

            <xpath expr="//div[hasclass('o_kanban_manage_view')]" position="inside">
                <div>
                    <a name="%(action_prescription_prescription_teams)d" type="action">Prescription Orders</a>
                </div>
                <div groups="account.group_account_invoice">
                    <a name="%(action_invoice_prescription_teams)d" type="action">Invoices</a>
                </div>
            </xpath>

            <div name="o_team_kanban_report_separator" position="before">
                <div name="prescription_report">
                    <a name="%(action_order_report_so_prescription_team)d" type="action">
                        Prescription
                    </a>
                </div>
                <div groups="account.group_account_invoice" name="invoices_report">
                    <a name="%(action_account_invoice_report_prescription_team)d" type="action">
                        Invoices
                    </a>
                </div>
            </div>
        </field>
    </record>

    <record id="pod_prescription_team.mail_activity_type_action_config_prescription" model="ir.actions.act_window">
        <field name="domain">['|', ('res_model', '=', False), ('res_model', 'in', ['prescription.order', 'res.partner', 'product.template', 'product.product'])]</field>
    </record>

</odoo>
