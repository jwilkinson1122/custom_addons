<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_prescription_display" model="res.groups">
        <field name="name">Prescription Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]" />
    </record>
    <record id="group_pod_prescription_list" model="res.groups">
        <field name="name">Prescription List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_display')),(4, ref('pod_base.group_pod_root_menu')), (4, ref('pod_base.group_pod_prescriptions_menu')), (4, ref('stock.group_stock_user'))]" />
    </record>
    <record id="group_pod_prescription_manager" model="res.groups">
        <field name="name">Prescription Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_list')), (4, ref('stock.group_stock_manager'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_prescription_manager'))]" />
    </record>
</odoo>
