<odoo noupdate="1">

    <record id="stage_draft" model="prescription.order.stage">
        <field name="name">Draft</field>
        <field name="sequence">10</field>
        <field name="state">draft</field>
    </record>
    <record id="stage_done" model="prescription.order.stage">
        <field name="name">Confirmed</field>
        <field name="sequence">20</field>
        <field name="state">done</field>
    </record>
    <record id="stage_cancel" model="prescription.order.stage">
        <field name="name">Canceled</field>
        <field name="sequence">30</field>
        <field name="state">cancel</field>
    </record>
    <record id="stage_hold" model="prescription.order.stage">
        <field name="name">On Hold</field>
        <field name="sequence">40</field>
        <field name="state">hold</field>
    </record>
    <record id="action_pod_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">prescription.order.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>