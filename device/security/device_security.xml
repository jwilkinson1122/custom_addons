<?xml version="1.0" ?>
<odoo>
        <record id="module_device_category" model="ir.module.category">
            <field name="name">Orthotic Device</field>
            <field name="sequence">17</field>
        </record>
        <record id="device_group_user" model="res.groups">
            <field name="name">Officer: Manage all custom</field>
            <field name="category_id" ref="module_device_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="device_group_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('device_group_user'))]"/>
            <field name="category_id" ref="module_device_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('device.device_group_manager'))]"/>
        </record>
        <record id="device_rule_contract_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her contracts</field>
            <field name="model_id" ref="model_device_custom_log_contract"/>
            <field name="groups" eval="[(4, ref('device_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('custom_id.driver_id','=',user.partner_id.id)]</field>
        </record>
        <record id="device_rule_service_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her custom services</field>
            <field name="model_id" ref="model_device_custom_log_services"/>
            <field name="groups" eval="[(4, ref('device_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('custom_id.driver_id','=',user.partner_id.id)]</field>
        </record>
        <record id="device_rule_odometer_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her custom odometer</field>
            <field name="model_id" ref="model_device_custom_odometer"/>
            <field name="groups" eval="[(4, ref('device_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('custom_id.driver_id','=',user.partner_id.id)]</field>
        </record>
        <record id="device_rule_custom_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her custom</field>
            <field name="model_id" ref="model_device_custom"/>
            <field name="groups" eval="[(4, ref('device_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('driver_id','=',user.partner_id.id)]</field>
        </record>
        <record id="device_rule_contract_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on custom contracts</field>
            <field name="model_id" ref="model_device_custom_log_contract"/>
            <field name="groups" eval="[Command.link(ref('device_group_manager'))]"/>
        </record>
        <record id="device_rule_service_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on custom services</field>
            <field name="model_id" ref="model_device_custom_log_services"/>
            <field name="groups" eval="[Command.link(ref('device_group_manager'))]"/>
        </record>
        <record id="device_rule_odometer_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on custom custom odometer</field>
            <field name="model_id" ref="model_device_custom_odometer"/>
            <field name="groups" eval="[Command.link(ref('device_group_manager'))]"/>
        </record>
        <record id="device_rule_custom_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on custom</field>
            <field name="model_id" ref="model_device_custom"/>
            <field name="groups" eval="[Command.link(ref('device_group_manager'))]"/>
        </record>
        <record id="ir_rule_device_custom" model="ir.rule">
            <field name="name">Device custom: Multi Company</field>
            <field name="model_id" ref="model_device_custom"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_device_custom_log_contract" model="ir.rule">
            <field name="name">Device custom log contract: Multi Company</field>
            <field name="model_id" ref="model_device_custom_log_contract"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_device_report" model="ir.rule">
            <field name="name">Costs Analysis: Multi Company</field>
            <field name="model_id" ref="model_device_custom_cost_report"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_device_odometer" model="ir.rule">
            <field name="name">Device odometer: Multi Company</field>
            <field name="model_id" ref="model_device_custom_odometer"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('custom_id.company_id', '=', False), ('custom_id.company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_device_log_services" model="ir.rule">
            <field name="name">Device log services: Multi Company</field>
            <field name="model_id" ref="model_device_custom_log_services"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
