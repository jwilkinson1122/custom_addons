<odoo>

    <!-- Device Tree View -->
    <record id="view_device_tree" model="ir.ui.view">
        <field name="name">device.tree</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref" />
                <field name="name" />
                <field name="gender" />
                <field name="category_id" />
                <field name="type_id" />
                <field name="color_id" />
            </tree>
        </field>
    </record>

    <!-- Device Form View -->
    <record id="view_device_form" model="ir.ui.view">
        <field name="name">device.form</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <field name="image" widget='image' class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="gender" widget="radio" options="{'horizontal': true}" />
                    </div>
                    <group id="main">
                        <group id="left">
                            <field name="category_id" />
                            <field name="type_id" domain="[('category_id', '=', category_id)]" />
                            <field name="color_id" domain="[('type_id', '=', type_id)]" />
                            <field name="size" />
                        </group>
                        <group id="right">
                            <field name="ref" />
                            <field name="weight" />
                            <field name="birth_date" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
                </div>
            </form>
        </field>
    </record>

    <!-- Device Kanban View -->
    <record id="view_device_kanban" model="ir.ui.view">
        <field name="name">device.kanban</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id" />
                <field name="image" />
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="record.image.raw_value">
                                <img class="o_kanban_image" t-att-src="kanban_image('device', 'image', record.id.raw_value)" t-att-alt="record.name" />
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/device/static/img/avatar.png"'
                                />
</t>
<div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="display_name" />
                                    </strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories" />
                                    <ul>
                                        <li t-if="record.gender.raw_value">
                                            <field name="gender" />
                                        </li>
                                        <li t-if="record.category_id.raw_value and record.type_id.raw_value">
                                            <field name="type_id" />
                                            <field name="category_id" />
                                        </li>
                                    </ul>
                                    <div class="oe_kanban_partner_links" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search for device -->
        <record id="view_device_search" model="ir.ui.view">
            <field name="name">device.search</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <search string="Devices">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]" string="Name" />
                    <field name="category_id" />
                    <field name="type_id" />
                    <field name="color_id" />
                    <field name="size" />
                    <separator />
                    <filter string="Female" domain="[('gender', '=', 'female')]" name="female" />
                    <filter string="Male" domain="[('gender', '=', 'male')]" name="male" />
                    <!-- <filter string="Hermaphrodite" domain="[('gender', '=', 'hermaphrodite')]" name="hermaphrodite" />
                    <filter string="Neutered" domain="[('gender', '=', 'neutered')]" name="neutered" /> -->
                    <separator />
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                    <separator />
                    <group expand="0" string="Group By">
                        <filter name="gender" string="Gender" domain="" context="{'group_by': 'gender'}" />
                        <filter name="category_id" string="Category" domain="" context="{'group_by': 'category_id'}" />
                        <filter name="type_id" string="Type" domain="" context="{'group_by': 'type_id'}" />
                        <filter name="color_id" string="Color" domain="" context="{'group_by': 'color_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_device" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">device</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_device_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create an device</p>
            </field>
        </record>

    </odoo>
