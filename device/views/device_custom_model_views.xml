<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='device_custom_model_view_form' model='ir.ui.view'>
        <field name="name">device.custom.model.form</field>
        <field name="model">device.custom.model</field>
        <field name="arch" type="xml">
            <form string="Model">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_model_custom" type="object" icon="fa-cog" class="oe_stat_button"
                            invisible="custom_count == 0">
                            <field name="custom_count" widget="statinfo" string="Customs"/>
                        </button>
                    </div>
                    <field name="image_128" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Model S"/>
                        </h1>
                        <label for="brand_id"/>
                        <h2>
                            <field name="brand_id" placeholder="e.g. Tesla"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="custom_type"/>
                            <field name="category_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information" name="information">
                            <group>
                                <group string="Model" invisible="custom_type != 'car'">
                                    <field name="seats"/>
                                    <field name="doors"/>
                                    <field name="color"/>
                                    <field name="model_year"/>
                                    <field name="trailer_hook"/>
                                </group>
                                <group id="custom_information" string="Custom Information" invisible="custom_type != 'bike'">
                                    <field name="electric_assistance"/>
                                </group>
                            </group>
                            <group string="Engine" invisible="custom_type != 'car'">
                                <group>
                                    <field name="default_shell_type" required="1"/>
                                    <label for="default_co2"/>
                                    <div class="o_row" name="default_co2">
                                        <field name="default_co2"/><span>g/km</span>
                                    </div>
                                    <field name="co2_standard"/>
                                    <field name="transmission"/>
                                </group>
                                <group>
                                    <label for="power"/>
                                    <div class="o_row">
                                        <field name="power"/><span>kW</span>
                                    </div>
                                    <field name="horsepower"/>
                                    <field name="horsepower_tax"/>
                                </group>
                            </group>
                        </page>
                        <page string="Vendors" name="vendors">
                            <field name="vendors">
                                <kanban quick_create="false" create="true">
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div style="position: relative" class="oe_kanban_global_click">
                                                <div>
                                                    <div class="o_kanban_record_title">
                                                        <field name="name"/>
                                                        <div class="o_kanban_details float-end">
                                                            <span class="text-muted">
                                                                <t t-if="record.phone.raw_value"><field name="phone"/><br/></t>
                                                                <t t-if="record.email.raw_value"><field name="email"/></t>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='device_custom_model_view_tree' model='ir.ui.view'>
        <field name="name">device.custom.model.tree</field>
        <field name="model">device.custom.model</field>
        <field name="arch" type="xml">
            <tree string="Models" multi_edit="1">
                <field name="brand_id" />
                <field name="name" />
                <field name="custom_count" string="Customs"/>
                <field name="category_id" optional="show"/>
                <field name="custom_type" optional="show"/>
                <field name="default_co2" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id='device_custom_model_view_kanban' model='ir.ui.view'>
        <field name="name">device.custom.model.kanban</field>
        <field name="model">device.custom.model</field>
        <field name="arch" type="xml">
            <kanban string="Models">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_details">
                            <div><strong><field name="name"/></strong></div>
                            <div><field name="brand_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='device_custom_model_view_search' model='ir.ui.view'>
        <field name="name">device.custom.model.search</field>
        <field name="model">device.custom.model</field>
        <field name="arch" type="xml">
            <search string="Customs costs" >
                <field name="name" string="Model" />
                <field name="brand_id"/>
                <filter string="Contains Custom" name="contains_custom" domain="[('custom_count', '!=', 0)]"/>
                <group expand="1" string="Group By">
                    <filter name="groupby_brand" context="{'group_by' : 'brand_id'}" string="Manufacturers"/>
                    <filter name="groupby_category" context="{'group_by' : 'category_id'}" string="Category"/>
                    <filter name="groupby_custom_type" context="{'group_by' : 'custom_type'}" string="Custom Type"/>
                </group>
            </search>
        </field>
    </record>

    <record id='device_custom_model_action' model='ir.actions.act_window'>
        <field name="name">Models</field>
        <field name="res_model">device.custom.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_groupby_brand" : True,}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new model
          </p><p>
            You can define several models (e.g. A3, A4) for each make (Audi).
          </p>
        </field>
    </record>

    <menuitem name="Device" id="menu_root" sequence="220" groups="device_group_user" web_icon="device,static/description/icon.png"/>
    <menuitem name="Configuration" parent="menu_root" id="device_configuration" sequence="100" groups="device_group_manager"/>

    <record id='device_custom_model_brand_view_tree' model='ir.ui.view'>
        <field name="name">device.custom.model.brand.tree</field>
        <field name="model">device.custom.model.brand</field>
        <field name="arch" type="xml">
            <tree string="Model Make">
                <field name="name" />
                <field name="model_count" string="Models"/>
            </tree>
        </field>
    </record>

    <record id='device_custom_model_brand_view_form' model='ir.ui.view'>
        <field name="name">device.custom.model.brand.form</field>
        <field name="model">device.custom.model.brand</field>
        <field name="arch" type="xml">
            <form string="Model Make">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_brand_model" type="object" icon="fa-cog" class="oe_stat_button"
                            invisible="model_count == 0">
                            <field name="model_count" widget="statinfo" string="Models"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="image_128" widget="image" class="oe_avatar float-start"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='device_custom_model_brand_view_kanban' model='ir.ui.view'>
        <field name="name">device.custom.model.brandkanban</field>
        <field name="model">device.custom.model.brand</field>
        <field name="arch" type="xml">
            <kanban default_order="name" action="action_brand_model" type="object">
                <field name="id"/>
                <field name="name"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="open" class="dropdown-item">Configuration</a>
                        <a role="menuitem" type="object" name="toggle_active" class="dropdown-item">
                            <t t-if="record.active.raw_value">Archive</t>
                            <t t-else="">Restore</t>
                        </a>
                        <a role="menuitem" t-if="widget.deletable" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="img" t-att-src="kanban_image('device.custom.model.brand', 'image_128', record.id.raw_value)" class="o_image_64_max" height="52"/>
                            </div>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <div>
                                    <field name="model_count"/> MODELS
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="device_custom_model_brand_view_search" model="ir.ui.view">
        <field name="name">device.custom.model.brand.view.search</field>
        <field name="model">device.custom.model.brand</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="With Models" name="with_models"
                    domain="[('model_count', '>', 0)]"/>
                <separator/>
                <filter string="Archived" name="active" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id='device_custom_model_brand_action' model='ir.actions.act_window'>
        <field name="name">Manufacturers</field>
        <field name="res_model">device.custom.model.brand</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new manufacturer
          </p>
        </field>
    </record>

    <!-- Model Category -->
    <record id='device_custom_model_category_action' model='ir.actions.act_window'>
        <field name="name">Categories</field>
        <field name="res_model">device.custom.model.category</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new category
            </p>
            <p>
                Categories will help you manage your device more efficiently and arrange your custom.
            </p>
        </field>
    </record>

    <record id="device_custom_model_category_view_tree" model="ir.ui.view">
        <field name="name">device.custom.model.category.view.tree</field>
        <field name="model">device.custom.model.category</field>
        <field name="arch" type="xml">
            <tree string="Model Category" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="device_custom_model_category_view_form" model="ir.ui.view">
        <field name="name">device.custom.model.category.view.form</field>
        <field name="model">device.custom.model.category</field>
        <field name="arch" type="xml">
            <form string="Model Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem name="Models" parent="device_configuration" id="device_models_configuration" sequence="10" groups="device_group_manager"/>
    <menuitem action="device_custom_model_brand_action" parent="device_models_configuration" id="device_custom_model_brand_menu" sequence="1"/>
    <menuitem action="device_custom_model_action" parent="device_models_configuration" id="device_custom_model_menu" sequence="5"/>
    <menuitem action="device_custom_model_category_action" parent="device_models_configuration" id="device_custom_model_category_menu" sequence="10"/>
</odoo>
