<odoo>
    <record id="pod_patient_form" model="ir.ui.view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(pod_workflow.action_pod_add_plan_definition_form)d"
                    type="action"
                    string="Add Plan definition"
                    groups="pod_workflow.group_patient_add_plan_definition"
                    class="oe_highlight"
                />
            </xpath>
        </field>
    </record>
</odoo>
