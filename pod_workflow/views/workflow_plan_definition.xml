<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="workflow_plan_definition_tree">
        <field name="name">workflow.plan.definition.tree</field>
        <field name="model">workflow.plan.definition</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="type_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="workflow_plan_definition_form">
        <field name="name">workflow.plan.definition.form</field>
        <field name="model">workflow.plan.definition</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="Plan definition">
                <header>
                    <button name="activate" string="Activate" type="object" states="draft" />
                    <button name="retire" string="Retire" type="object" states="active" />
                    <button name="reactivate" string="Reactivate" type="object" states="retired" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box" />
                    <h2>
                        <field name="internal_identifier" readonly="1" />
                    </h2>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="description" />
                        </group>
                        <group>
                            <field name="type_id" invisible="context.get('invisible_type',False)" options="{'no_create': True}" />
                            <field name="activity_definition_id" options="{'no_create': True}" groups="pod_workflow.group_main_activity_plan_definition" />
                        </group>
                        <group name="pod">
                        </group>
                    </group>
                    <notebook>
                        <page string="Actions group list" name='actions'>
                            <field name="direct_action_ids" context="{'default_type_id':type_id}">
                                <tree string="Actions">
                                    <field name="complete_name" />
                                    <field name="activity_definition_id" />
                                    <field name="execute_plan_definition_id" />
                                </tree>
                            </field>
                        </page>
                        <page string="Actions list" name='actions_list'>
                            <field name="action_ids">
                                <tree string="Actions">
                                    <field name="complete_name" />
                                    <field name="activity_definition_id" />
                                    <field name="execute_plan_definition_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="workflow_plan_definition">
        <field name="name">Plan definition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workflow.plan.definition</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'default_type_id': ref('pod_workflow.pod_workflow'), 'invisible_type': True}" />
    </record>
    <menuitem id="workflow_plan_definitions_menu" name="Plan definitions" parent="pod_base.pod_root_workflow" groups="pod_workflow.group_workflow_plan_definition_list" action="workflow_plan_definition" sequence="10" />
</odoo>
