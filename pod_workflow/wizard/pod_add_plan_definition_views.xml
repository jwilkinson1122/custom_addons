<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_add_plan_definition_form">
        <field name="name">pod.add.plan.definition.form</field>
        <field name="model">pod.add.plan.definition</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="patient_id" invisible="1" />
                    <field name="plan_definition_id" />
                </group>
                <footer>
                    <button
                        type="object"
                        name="run"
                        string="Create"
                        class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_pod_add_plan_definition_form" model="ir.actions.act_window">
        <field name="name">Add Plan definition</field>
        <field name="res_model">pod.add.plan.definition</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_patient_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
