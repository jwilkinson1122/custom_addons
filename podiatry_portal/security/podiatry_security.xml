<odoo>
  <data noupdate="1">
    <record id="practitioner_portal_rule" model="ir.rule">
      <field name="name">Podiatry Practitioner Portal Access</field>
      <field name="model_id" ref="podiatry_practitioner.model_podiatry_practitioner"/>
      <field name="domain_force">[('partner_id', '=', user.partner_id.id)]
      </field>
      <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
    </record>

    <record id="checkout_portal_rule" model="ir.rule">
      <field name="name">Podiatry Checkout Portal Access</field>
      <field name="model_id" ref="podiatry_checkout.model_podiatry_checkout"/>
      <field name="domain_force">[('practitioner_id.partner_id', '=', user.partner_id.id)]</field>
      <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
    </record>
  </data>
</odoo>
