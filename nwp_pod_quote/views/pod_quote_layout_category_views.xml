<odoo>
    <record id="pod_quote_report_configuration_form_view" model="ir.ui.view">
        <field name="name">pod.quote.report.configuration.form.view</field>
        <field name="model">pod.quote.layout_category</field>
        <field name="arch" type="xml">
            <form string="Podiatry Quote Report Configuration">
                <group>
                    <field name="name" />
                    <field name="subtotal" widget="checkbox" />
                    <field name="pagebreak" widget="checkbox" />
                    <field name="sequence" />
                </group>
            </form>
        </field>
    </record>
    <record id="pod_quote_report_configuration_tree_view" model="ir.ui.view">
        <field name="name">pod.quote.report.configuration.form.view</field>
        <field name="model">pod.quote.layout_category</field>
        <field name="arch" type="xml">
            <tree string="Podiatry Quote Report Configuration">
                <field name="name" />
                <field name="subtotal" widget="checkbox" />
                <field name="pagebreak" widget="checkbox" />
                <field name="sequence" />
            </tree>
        </field>
    </record>
    <record id="pod_quote_report_configuration_search_view" model="ir.ui.view">
        <field name="name">pod.quote.report.configuration.search.view</field>
        <field name="model">pod.quote.layout_category</field>
        <field name="arch" type="xml">
            <search string="Search Name">
                <field name='name' />
                <filter
                    string="Total"
                    domain="[('subtotal','=','True')]"
                    name="total"
                />
                <filter
                    string="Breaks Page"
                    domain="[('pagebreak','=','True')]"
                    name="breaks_page"
                />
                <group string="Group By Name">
                    <filter string="Name" name="name" context="{'group_by' : 'name'}" />
                </group>
            </search>
        </field>
    </record>
    <record
        id='pod_quote_report_configuration_action'
        model='ir.actions.act_window'
    >
        <field name="name">Podiatry Quote Report Configuration</field>
        <field name="res_model">pod.quote.layout_category</field>
        <field name="domain">[('quote_id','=',False)]</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
