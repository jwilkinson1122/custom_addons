<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_encounter_view_form">
        <field name="name">pod.encounter.form (in nwp_nonconformity)</field>
        <field name="model">pod.encounter</field>
        <field
            name="inherit_id"
            ref="pod_administration_encounter.pod_encounter_view_form"
        />
        <field name="arch" type="xml">
            <header position="inside">
                <button
                    name="%(nwp_nonconformity_encounter.wizard_create_nonconformity_act_window)d"
                    string="Add Quality Issue"
                    type="action"
                />
            </header>
            <div name="button_box" position="inside">
                <field name="quality_issue_count" invisible="1" />
                <button
                    name="action_view_quality_issues"
                    class="oe_stat_button"
                    icon="fa-exclamation"
                    type="object"
                    attrs="{'invisible': [('quality_issue_count', '=', 0)]}"
                >
                    <field
                        name="quality_issue_count"
                        widget="statinfo"
                        string="Issues"
                    />
                </button>
            </div>
        </field>
    </record>
</odoo>
