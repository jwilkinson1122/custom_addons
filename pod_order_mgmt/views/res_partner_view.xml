<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <!-- <field name="groups_id" eval="[(4, ref('pod_base.group_pod_user'))]"/> -->
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <!-- Button to view practitioner prescriptions with a count -->
                <button name="action_open_practice_prescriptions" type="object" class="oe_stat_button" icon="fa-prescription" attrs="{'invisible': [('is_company', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="prescription_order_count"/>
                        </span>
                        <span class="o_stat_text">Prescriptions</span>
                    </div>
                </button>
            </xpath>
            <!-- Page for prescriptions list -->
            <xpath expr='//page[@name="sales_purchases"]' position="before">
                <page name="practice_perscriptions_list" string="Prescriptions" attrs="{'invisible': [('is_company', '=', False)]}">
                    <separator name="prescriptions" string="Prescriptions"/>
                    <div name="alert_no_prescriptions" class="oe_read_only alert alert-info mb8" role="alert" attrs="{'invisible': [('practice_prescription_orders', '!=', ())]}">
                        No Prescriptions Available
                    </div>
                    <field name="practice_prescription_orders" mode="kanban"/>
                </page>
                <page name="practitioner_perscriptions_list" string="Prescriptions" attrs="{'invisible': [('is_practitioner', '=', False)]}">
                    <separator name="prescriptions" string="Prescriptions"/>
                    <div name="alert_no_prescriptions" class="oe_read_only alert alert-info mb8" role="alert" attrs="{'invisible': [('practitioner_prescription_orders', '!=', ())]}">
                        No Prescriptions Available
                    </div>
                    <field name="practitioner_prescription_orders" mode="kanban"/>
                </page>
            </xpath>



        </field>
    </record>




    <!-- <menuitem id="menu_res_partners" name="Contacts" action="action_res_partner_patients" parent="pod_order_management.menu_configuration_root" sequence="20"/> -->

</odoo>
