<odoo>

  <!-- Podiatry App Menu -->
  <menuitem id="menu_podiatry" name="Podiatry" />

  <!-- Action to open the Prescription list -->
  <record id="action_podiatry_prescription" model="ir.actions.act_window">
    <field name="name">Podiatry Prescriptions</field>
    <field name="res_model">podiatry.prescription</field>
    <field name="view_mode">tree,form</field>
  </record>
  <!-- Old act_wndow, deprecated
  <act_window id="action_podiatry_prescription" name="Podiatry Prescriptions" res_model="podiatry.prescription" view_mode="tree,form" />
  -->
  <!-- Menu item to open the Prescription list -->
  <menuitem id="menu_podiatry_prescription" name="Prescriptions" parent="menu_podiatry" action="action_podiatry_prescription" sequence="80" />

  <menuitem id="menu_podiatry_configuration" name="Configuration" parent="menu_podiatry" sequence="100" />

</odoo>
