<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_cash_control" model="ir.ui.view">
        <field name="name">res.config.view.form.inherit.point_of_sale.opening.closing.control</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="cash_control">
                    <div class="o_setting_left_pane">
                        <field name="pos_cash_control"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_cash_control" string="Enable Opening Closing Cash Control"/>
                        <div class="text-muted">
                            Enable Opening Cash Control
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
