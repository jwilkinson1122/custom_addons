<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_pod_patient_filter" model="ir.ui.view">
        <field name="name">pod.patient.search</field>
        <field name="model">pod.patient</field>
        <field name="arch" type="xml">
            <search>
                <field string="Name" name="name" />
                <field string="VAT" name="vat" />
                <field string="Birth date" name="birth_date" />
            </search>
        </field>
    </record>

    <record id="pod_patient_tree" model="ir.ui.view">
        <field name="name">pod.patient.tree</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="vat" />
                <field name="birth_date" />
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_base.pod_patient_window_action">
        <field name="view_mode">tree,kanban,form</field>
    </record>
    
</odoo>
