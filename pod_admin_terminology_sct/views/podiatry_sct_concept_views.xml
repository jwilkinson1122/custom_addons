<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record model="ir.ui.view" id="podiatry_sct_concept_tree">
        <field name="name">podiatry.sct.concept.tree</field>
        <field name="model">podiatry.sct.concept</field>
        <field name="inherit_id" ref="podiatry_terminology.podiatry_abstract_concept_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="string">SNOMED CT Concepts</attribute>
                <attribute name="delete">false</attribute>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="podiatry_sct_concept_form">
        <field name="name">podiatry.sct.concept.form</field>
        <field name="model">podiatry.sct.concept</field>
        <field name="inherit_id" ref="podiatry_terminology.podiatry_abstract_concept_multiparent_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">SNOMED CT Concept</attribute>
                <attribute name="delete">false</attribute>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="podiatry_sct_concept_filter">
        <field name="name">podiatry.sct.concept.filter</field>
        <field name="model">podiatry.sct.concept</field>
        <field name="inherit_id" ref="podiatry_terminology.podiatry_abstract_concept_filter" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="attributes">
                <attribute name="string">SNOMED CT Filter</attribute>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="podiatry_sct_concept_window_action">
        <field name="name">Snomed codes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.sct.concept</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="podiatry_sct_concept" name="SCT Concepts" parent="podiatry_base.podiatry_root_terminologies" groups="podiatry_terminology_sct.group_podiatry_sct_concept_list" sequence="10" action="podiatry_sct_concept_window_action" />
</odoo>
