<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="safe_box_group_tree">
        <field name="name">safe.box.group.tree</field>
        <field name="model">safe.box.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="safe_box_group_form">
        <field name="name">safe.box.group.form</field>
        <field name="model">safe.box.group</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="recompute_amount"
                        type="object"
                        string="Recompute amounts"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="%(safe_box.wizard_safe_box_move_action)d"
                            type="action"
                            string="Add Internal move"
                            icon="fa-arrows-v"
                            context="{'default_safe_box_group_id': active_id}"
                        />
                        <button
                            name="%(safe_box.wizard_safe_box_move_external_action)d"
                            type="action"
                            string="Add external move"
                            icon="fa-bank"
                            context="{'default_safe_box_group_id': active_id}"
                        />
                        <button
                            name="action_count_money"
                            type="object"
                            string="Count money"
                            icon="fa-money"
                        />
                        <!--
                        <button
                            name="%(safe_box.wizard_safe_box_count_action)d"
                            type="action"
                            string="Count money"
                            icon="fa-money"
                            context="{'default_safe_box_group_id': active_id}"
                        />-->
                    </div>
                    <group>
                        <field name="code" />
                        <field name="name" />
                        <field name="currency_id" />
                    </group>
                    <notebook>
                        <page id="safe_box" string="Safe boxes">
                            <field name="safe_box_ids" />
                        </page>
                        <page id="account" string="Accounts">
                            <field name="account_ids" readonly="True">
                                <tree>
                                    <field name="company_id" />
                                    <field name="code" />
                                    <field name="name" />
                                    <field name="safe_box_amount" sum="Total Amount" />
                                </tree>
                            </field>
                        </page>
                        <page id="coin" string="Coins">
                            <field name="coin_ids" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="safe_box_group_action">
        <field name="name">Safe Box Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">safe.box.group</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="safe_box_group_menu"
        name="Safe Box Group"
        parent="safe_box_menu"
        action="safe_box_group_action"
        sequence="99"
    />
</odoo>
