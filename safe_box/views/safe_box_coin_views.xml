<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="safe_box_coin_form">
        <field name="name">safe.box.coin.form</field>
        <field name="model">safe.box.coin</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="rate" />
                    <field name="safe_box_group_id" invisible="1" />
                    <field
                        name="safe_box_ids"
                        widget="many2many_tags"
                        domain="[('safe_box_group_id', '=', safe_box_group_id)]"
                    />
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="safe_box_coin_tree">
        <field name="name">safe.box.coin.tree</field>
        <field name="model">safe.box.coin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="rate" />
                <field name="safe_box_group_id" invisible="1" />
            </tree>
        </field>
    </record>
</odoo>
