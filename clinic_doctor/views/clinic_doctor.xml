<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_open_prescriptions" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.prescription</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('clinic_partner_id','=', active_id)]</field>
        <field name="context">{'default_doctor_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first prescription !
            </p>
        </field>
    </record>
    <record id="clinic_doctor_form_view" model="ir.ui.view">
        <field name="name">clinic.doctor.form.view</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <notebook>
                    <page string="Main Info">
                        <group colspan="4" col="4">
                            <field name="partner_id" required="1" context="{'default_is_doctor': 1, 'search_default_is_doctor': 1}" />
                            <field name="clinic_partner_id" context="{'default_is_clinic': 1, 'search_default_is_clinic': 1}" />
                            <field name="code" />
                        </group>
                    </page>
                    <page string="Extra Info">
                        <field name="info" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="clinic_doctor_search_view" model="ir.ui.view">
        <field name="name">clinic.doctor.search.view</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <search string="Search Doctor">
                <separator orientation="vertical" />
                <field name="partner_id" select="1" />
                <field name="code" select="1" />
                <field name="clinic_partner_id" select="1" />
                <newline />
                <group expand="1" string="Group By">
                    <filter string="Doctor" name='by_user' context="{'group_by':'partner_id'}"/>
                    <filter string="Medical clinic" name='by_clinic' context="{'group_by':'clinic_partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="clinic_doctor_tree_view" model="ir.ui.view">
        <field name="name">clinic.doctor.tree.view</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor Information">
                <field name="partner_id" />
                <field name="code" />
                <field name="clinic_partner_id" />
            </tree>
        </field>
    </record>

    <!-- Action for clinic doctors -->
    <record id="action_clinic_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.doctor</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
