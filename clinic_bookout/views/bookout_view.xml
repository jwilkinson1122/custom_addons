  <!-- Chapter 10 -->
  <record id="view_form_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">

      <form>

        <header>
          <!-- To add buttons and status widget -->
          <field name="state" invisible="True" />
          <button name="button_done" type="object" string="Return Prescriptions" attrs="{'invisible': [('state', 'in', ['new', 'done', 'cancel'])]}" states="open" class="oe_highlight" />
          <field name="stage_id" widget="statusbar" options="{'clickable': True, 'fold_field': 'fold'}" />
        </header>

        <sheet>

          <div name="button_box" class="oe_button_box">
            <button type="action" name="%(action_clinic_bookout)d" class="oe_stat_button" icon="fa-prescription" domain="[('patient_id', '=', patient_id)]" context="{'default_patient_id': patient_id}">
              <field name="count_bookouts" string="Bookouts" widget="statinfo" />
            </button>
          </div>

          <field name="patient_image" widget="image" class="oe_avatar" />
          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name"/>
            </h1>
            <h3>
              <span class="oe_read_only">By </span>
              <label for="patient_id" class="oe_edit_only"/>
              <field name="patient_id" class="oe_inline" />
            </h3>
          </div>

          <!-- Organizing the form content using groups -->
          <!--
          <group name="group_top">
            <group name="group_col1">
              <field name="request_date" />
            </group>
            <group name="group_col2">
              <field name="user_id" />
              <field name="close_date" />
            </group>
          </group>
          -->
          <group name="group_top" col="4">
            <field name="request_date" />
            <field name="user_id" />
            <span colspan="2" />
            <field name="close_date" />
          </group>

          <notebook>
            <page name="page_lines" string="Received Prescriptions">
              <field name="line_ids">
                <tree>
                  <field name="prescription_id" />
                </tree>
                <form>
                  <field name="prescription_id" />
                </form>
              </field>

            </page>
          </notebook>

        </sheet>

        <!-- Discuss widgets -->
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" />
          <field name="activity_ids" widget="mail_activity" />
          <field name="message_ids" widget="mail_thread" />
        </div>
      </form>

    </field>
  </record>

  <record id="view_filter_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">

      <search>

        <field name="name"/>
        <field name="patient_id" />
        <field name="user_id" />

        <filter name="filter_not_done" string="To Return" domain="[('state','=','open')]"/>
        <filter name="filter_my_bookouts" string="My Bookouts" domain="[('user_id','=',uid)]"/>
        <filter name="group_user" string="By Patient" context="{'group_by': 'patient_id'}"/>

        <searchpanel>
          <field name="patient_id" enable_counters="1" />
          <field name="stage_id" select="multi" />
        </searchpanel>

      </search>

    </field>
  </record>

  <record id="view_activity_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">
      <activity string="Bookouts">
        <templates>
          <div t-name="activity-box">
            <div>
              <field name="name" />
            </div>
          </div>
        </templates>
      </activity>
    </field>
  </record>

  <record id="view_calendar_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">
      <calendar date_start="request_date" color="user_id">
        <field name="patient_id" />
        <field name="stage_id" />
      </calendar>
    </field>
  </record>

  <record id="view_pivot_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">
      <pivot>
        <field name="stage_id" type="col" />
        <field name="patient_id" />
        <field name="request_date" interval="week" />
        <field name="num_prescriptions" type="measure" />
      </pivot>
    </field>
  </record>

  <record id="view_graph_bookout" model="ir.ui.view">
    <field name="model">clinic.bookout</field>
    <field name="arch" type="xml">
      <graph type="bar">
        <field name="stage_id" />
        <field name="num_prescriptions" type="measure" />
      </graph>
    </field>
  </record>

</odoo>
