<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_guard_display" model="res.groups">
        <field name="name">Podiatry Guard Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_guard_manager" model="res.groups">
        <field name="name">Podiatry Guard Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_guard_display'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_guard_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_guard_manager'))]" />
    </record>
</odoo>
