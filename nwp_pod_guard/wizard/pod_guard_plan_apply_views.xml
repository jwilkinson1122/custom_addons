<?xml version="1.0" ?>

<odoo>
    <record id="pod_guard_plan_apply_form" model="ir.ui.view">
        <field name="name">pod.guard.plan.apply.form</field>
        <field name="model">pod.guard.plan.apply</field>
        <field name="arch" type="xml">
            <form string="Apply Guard plans">
                <group>
                    <group>
                        <field name="start_date" />
                    </group>
                    <group>
                        <field name="end_date" />
                    </group>
                </group>
                <footer>
                    <button
                        name="run"
                        string="Create"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="action_cancel"
                        string="Cancel"
                        class="oe_link"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record id="pod_guard_plan_apply_action" model="ir.actions.act_window">
        <field name="name">Apply Guard plans</field>
        <field name="res_model">pod.guard.plan.apply</field>
        <field name="view_mode">form</field>

        <field name="target">new</field>
    </record>
    <menuitem
        id="pod_guard_plan_apply_menu"
        parent="nwp_pod_guard.pod_guard_root"
        groups="nwp_pod_guard.group_pod_guard_manager"
        action="pod_guard_plan_apply_action"
        sequence="60"
    />
</odoo>
