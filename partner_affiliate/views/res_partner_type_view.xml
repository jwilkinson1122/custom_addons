<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="partner_partner_type_view_form" model="ir.ui.view">
        <field name="name">res.partner.type.view.form</field>
        <field name="model">res.partner.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Partner Address Types">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="partner_partner_type_view_tree" model="ir.ui.view">
        <field name="name">res.partner.type.view.tree</field>
        <field name="model">res.partner.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="Partner Address Types">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_partner_type_action">
        <field name="name">Partner Address Types</field>
        <field name="res_model">res.partner.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
