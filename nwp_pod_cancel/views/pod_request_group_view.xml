<odoo>
    <record model="ir.ui.view" id="pod_request_group_form">
        <field name="name">pod.request.group.form</field>
        <field name="model">pod.request.group</field>
        <field
            name="inherit_id"
            ref="pod_clinical_request_group.pod_request_group_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='cancel']" position="after">
                <button
                    name="%(nwp_pod_cancel.pod_request_group_cancel_action)s"
                    string="Cancel"
                    states="draft,active"
                    type="action"
                />
            </xpath>
        </field>
    </record>
</odoo>
