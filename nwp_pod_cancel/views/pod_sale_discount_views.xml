<odoo>
    <record id="pod_cancel_reason_form" model="ir.ui.view">
        <field name="name">pod.cancel.reason.form</field>
        <field name="model">pod.cancel.reason</field>
        <field name="arch" type="xml">
            <form string="Cancellation reasons">
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        text="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="name" />
                        <field name="active" invisible="1" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pod_cancel_reason_tree" model="ir.ui.view">
        <field name="name">pod.cancel.reason.search</field>
        <field name="model">pod.cancel.reason</field>
        <field name="arch" type="xml">
            <tree string="Cancellation reasons">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="pod_cancel_reason_search" model="ir.ui.view">
        <field name="name">pod.cancel.reason.search</field>
        <field name="model">pod.cancel.reason</field>
        <field name="arch" type="xml">
            <search string="Cancellation reasons">
                <field name="name" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
            </search>
        </field>
    </record>
    <record id="pod_cancel_reason_action" model="ir.actions.act_window">
        <field name="name">Podiatry Cancel Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.cancel.reason</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="pod_cancel_reason_menu"
        name="Cancel reasons"
        sequence="90"
        parent="pod_base.pod_root_configuration"
        action="pod_cancel_reason_action"
    />
</odoo>
