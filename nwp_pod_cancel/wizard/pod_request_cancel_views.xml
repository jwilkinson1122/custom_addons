<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_request_cancel_form">
        <field name="name">pod.request.cancel</field>
        <field name="model">pod.request.cancel</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Cancel request">
                <group>
                    <field name="request_id" options="{'no_create': True}" />
                    <field name="cancel_reason_id" options="{'no_create': True}" />
                    <field name="cancel_reason" />
                </group>
                <footer>
                    <button
                        string="Cancel"
                        name="run"
                        type="object"
                        default_focus="1"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
