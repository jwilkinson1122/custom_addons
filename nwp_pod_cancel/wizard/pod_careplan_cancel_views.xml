<odoo>
    <record model="ir.ui.view" id="pod_careplan_cancel_form">
        <field name="name">pod.careplan.cancel</field>
        <field name="model">pod.careplan.cancel</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_request_cancel_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="String">Cancel careplan</attribute>
            </xpath>
        </field>
    </record>
    <record id="pod_careplan_cancel_action" model="ir.actions.act_window">
        <field name="name">Cancel Careplan</field>
        <field name="res_model">pod.careplan.cancel</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_request_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
