<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_podiatry_device_display" model="res.groups">
        <field name="name">Device Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]" />
    </record>
    <record id="group_podiatry_device_list" model="res.groups">
        <field name="name">Device List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_display')),(4, ref('podiatry_base.group_podiatry_root_menu')), (4, ref('podiatry_base.group_podiatry_devices_menu')), (4, ref('stock.group_stock_user'))]" />
    </record>
    <record id="group_podiatry_device_manager" model="res.groups">
        <field name="name">Device Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_list')), (4, ref('stock.group_stock_manager'))]" />
    </record>
    <!-- Generic groups -->
    <record id="podiatry_base.group_podiatry_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_display'))]" />
    </record>
    <record id="podiatry_base.group_podiatry_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_podiatry_device_manager'))]" />
    </record>
</odoo>
