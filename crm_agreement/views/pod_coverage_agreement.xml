<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_coverage_agreement_view">
        <field name="name">pod.coverage.agreement.form (in crm_agreement)</field>
        <field name="model">pod.coverage.agreement</field>
        <field
            name="inherit_id"
            ref="pod_financial_coverage_agreement.pod_coverage_agreement_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" icon="fa-star" name="view_leads">
                    <field string="Leads" name="lead_count" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
