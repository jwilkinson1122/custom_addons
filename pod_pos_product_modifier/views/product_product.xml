<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<record id="product_template_form_view_multi_cat" model="ir.ui.view">
			<field name="name">product.template.form.inherit.multi.cat</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<div name="options" position="inside">
					<div>
						<field name="modifier_ok"/>
						<label for="modifier_ok"/>
					</div>
					<div>
						<field name="device_laterality"/>
						<label for="device_laterality"/>
					</div>
					<div>
						<field name="bom_product"/>
						<label for="bom_product"/>
					</div>
				</div>

				<xpath expr="//page[@name='inventory']" position="after">
					<page string='Modifier' invisible="not device_laterality">
						<group>
							<group>
								<field name="modifier_groups_ids" widget="many2many_tags" required="device_laterality"/>
							</group>
							<group>
								<button name="get_modifiers" type="object" string="Get Modifier" class="oe_highlight"/>
							</group>
						</group>
						<group>
							<field name="modifier_attribute_product_id" readonly="1">
	                            <tree editable="bottom">
	                                <control>
	                                    <create string="Add a product"/>
	                                </control>
	                                <field name="product_id"/>
	                                <field name="product_temp_id" invisible="1"/>
	                                <field name="name"/>
	                                <field name="price"/>
	                            </tree>
	                        </field>
						</group>
					</page>
					<page string='Sub Product' invisible="not device_laterality">
						<group>
							<group>
								<field name="sub_products_ids" widget="many2many_tags"/>
							</group>
							
						</group>
					</page>	
				</xpath>
			</field>
		</record>

