<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="ir_module_category_prescription" model="ir.module.category">
        <field name="name">Prescription Practice</field>
    </record>
    <record id="group_prescription_user" model="res.groups">
        <field name="name">General User</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_prescription_assistance_user" model="res.groups">
        <field name="name">Assistant</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user'))]" />
    </record>
    <record id="group_prescription_practitioner" model="res.groups">
        <field name="name">Practitioner</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_assistance_user'))]" />
    </record>
    <record id="group_prescription_practitioner_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_practitioner'))]" />
    </record>
    <record id="group_prescription_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_assistance_user'))]" />
    </record>
    <record id="group_prescription_auxiliary" model="res.groups">
        <field name="name">Support</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_assistance_user'))]" />
    </record>
    <record id="group_prescription_auxiliary_manager" model="res.groups">
        <field name="name">Staff Supervisor</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_nurse'))]" />
    </record>
    <record id="group_prescription_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_assistance_user'))]" />
    </record>
    <record id="group_prescription_technician_manager" model="res.groups">
        <field name="name">Technician Manager</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_technician'))]" />
    </record>
    <record id="group_prescription_pharmacy" model="res.groups">
        <field name="name">Supplier</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user'))]" />
    </record>
    <record id="group_prescription_reception" model="res.groups">
        <field name="name">Processing</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user'))]" />
    </record>
    <record id="group_prescription_financial" model="res.groups">
        <field name="name">Financial</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user'))]" />
    </record>
    <record id="group_prescription_configurator" model="res.groups">
        <field name="name">Configurator</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user'))]" />
    </record>
    <record id="group_prescription_admin" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_prescription" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_user')),
                      (4, ref('group_prescription_technician')),
                      (4, ref('group_prescription_practitioner')),
                      (4, ref('group_prescription_nurse')),
                      (4, ref('group_prescription_auxiliary')),
                      (4, ref('group_prescription_pharmacy')),
                      (4, ref('group_prescription_reception')),
                      (4, ref('group_prescription_financial')),
                      (4, ref('group_prescription_configurator')),
                      (4, ref('base.group_erp_manager'))]" />
    </record>

    <!-- Partner rules modification -->
