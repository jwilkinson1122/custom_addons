<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_prescription_flag_category_display" model="res.groups">
        <field name="name">Flag category Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_prescription_flag_category_manager" model="res.groups">
        <field name="name">Flag category Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_flag_category_display'))]" />
    </record>
    <record id="group_prescription_flag_display" model="res.groups">
        <field name="name">Flag Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('prescription_contacts.group_prescription_user')), (4, ref('group_prescription_flag_category_display'))]" />
    </record>
    <record id="group_prescription_flag_manager" model="res.groups">
        <field name="name">Flag Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_prescription_flag_display'))]" />
    </record>
    <!-- Generic groups -->
    <record id="prescription_contacts.group_prescription_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_prescription_flag_display'))]" />
    </record>
    <record id="prescription_contacts.group_prescription_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_prescription_flag_category_manager')), (4,ref('group_prescription_flag_manager'))]" />
    </record>
</odoo>
