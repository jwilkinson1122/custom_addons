<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pod_sale_discount_form" model="ir.ui.view">
        <field name="name">pod.sale.discount.form</field>
        <field name="model">pod.sale.discount</field>
        <field name="arch" type="xml">
            <form string="Podiatry discount">
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        text="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <field name="active" invisible="1" />
                        <field name="name" />
                        <field name="description" />
                    </group>
                    <group>
                        <group>
                            <field name="percentage" />
                        </group>
                        <group>
                            <field name="is_fixed" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pod_sale_discount_tree" model="ir.ui.view">
        <field name="name">pod.sale.discount.search</field>
        <field name="model">pod.sale.discount</field>
        <field name="arch" type="xml">
            <tree string="Podiatry discounts">
                <field name="name" />
                <field name="description" />
                <field name="percentage" />
                <field name="is_fixed" />
            </tree>
        </field>
    </record>
    <record id="pod_sale_discount_search" model="ir.ui.view">
        <field name="name">pod.sale.discount.search</field>
        <field name="model">pod.sale.discount</field>
        <field name="arch" type="xml">
            <search string="Podiatry discounts">
                <field name="name" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
            </search>
        </field>
    </record>
    <record id="pod_sale_discount_action" model="ir.actions.act_window">
        <field name="name">Podiatry Discounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.sale.discount</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="pod_sale_discount_menu"
        name="Podiatry Discounts"
        sequence="90"
        parent="pod_base.pod_root_configuration"
        action="pod_sale_discount_action"
    />
</odoo>
