<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="ir_module_category_pod" model="ir.module.category">
        <field name="name">Podiatry Practice</field>
    </record>
    <record id="group_user" model="res.groups">
        <field name="name">General User</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_assistance_user" model="res.groups">
        <field name="name">Assistant</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_practitioner" model="res.groups">
        <field name="name">Practitioner</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_assistance_user'))]" />
    </record>
    <record id="group_practitioner_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_practitioner'))]" />
    </record>
    <record id="group_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_assistance_user'))]" />
    </record>
    <record id="group_auxiliary" model="res.groups">
        <field name="name">Support</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_assistance_user'))]" />
    </record>
    <record id="group_auxiliary_manager" model="res.groups">
        <field name="name">Staff Supervisor</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_nurse'))]" />
    </record>
    <record id="group_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_assistance_user'))]" />
    </record>
    <record id="group_technician_manager" model="res.groups">
        <field name="name">Technician Manager</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_technician'))]" />
    </record>
    <record id="group_pharmacy" model="res.groups">
        <field name="name">Supplier</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_reception" model="res.groups">
        <field name="name">Processing</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_financial" model="res.groups">
        <field name="name">Financial</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_configurator" model="res.groups">
        <field name="name">Configurator</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_admin" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_pod" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[(4, ref('group_user')),
                      (4, ref('group_technician')),
                      (4, ref('group_practitioner')),
                      (4, ref('group_nurse')),
                      (4, ref('group_auxiliary')),
                      (4, ref('group_pharmacy')),
                      (4, ref('group_reception')),
                      (4, ref('group_financial')),
                      (4, ref('group_configurator')),
                      (4, ref('base.group_erp_manager'))]" />
    </record>

    <!-- Partner rules modification -->
    <!-- <record id="base.res_partner_rule_private_employee" model="ir.rule">
    </record> -->
</odoo>
