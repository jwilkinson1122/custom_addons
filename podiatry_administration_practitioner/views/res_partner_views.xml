            <field name="company_type" position="attributes">
                <attribute name="attrs">{'invisible': [('is_practitioner','=',True)]}</attribute>
            </field>
            <xpath expr="//field[@name='name']" position="before">

                <field name="is_practitioner" invisible="1" />
                <field name="practitioner_identifier" attrs="{'invisible': [('is_practitioner','=',False)]}" />
                <field name="practitioner_type" invisible="1" widget="radio" options="{'horizontal': true}" readonly="1" attrs="{'invisible': [('is_practitioner','=',False)]}" />
