<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_view_partner" model="ir.actions.act_window">
            <field name="name">Prescriptions Partners</field>
            <field name="res_model">prescriptions.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="partners_view_search"/>
        </record>
        <record id="action_view_partner_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="act_window_id" ref="action_view_partner"/>
            <field name="view_id" ref="prescriptions_partner_view_kanban"/>
        </record>
        <record id="action_view_partner_list" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_view_partner"/>
            <field name="view_id" ref="prescriptions_partner_view_list"/>
        </record>
        <record id="action_view_partner_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="action_view_partner"/>
            <field name="view_id" ref="prescriptions_partner_view_form"/>
        </record>
        <record id="action_view_company" model="ir.actions.act_window">
            <field name="name">Companys</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[('is_company', '=', True)]</field>
        </record>
        <record id="action_view_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">prescriptions.patient</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
        <menuitem id="prescriptions_partner_root" web_icon="prescriptions_partner,static/description/icon.png" name="Prescriptions Practice" groups="pod_prescriptions_partner.group_prescriptions_partner_user" action="action_view_partner">
            <menuitem id="prescriptions_partner_companys" name="Companys" groups="pod_prescriptions_partner.group_prescriptions_partner_user" action="action_view_company"/>
            <menuitem id="prescriptions_partner_partners" name="Partners" groups="pod_prescriptions_partner.group_prescriptions_partner_user" action="action_view_partner"/>
            <menuitem id="prescriptions_partner_patients" name="Patients" groups="pod_prescriptions_partner.group_prescriptions_partner_user" action="action_view_patient"/>
        </menuitem>
    </data>
</odoo>
