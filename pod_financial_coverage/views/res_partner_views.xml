<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_base.res_partner_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_payor" invisible="1" />
            </xpath>
            <field name="is_pod" position="before">
                <field name="is_payor" />
            </field>
            <div name="button_box" position="inside">
                <button type="object" name="action_view_coverage_template" class="oe_stat_button" icon="fa-plus-square" groups="pod_base.group_pod_financial" attrs="{'invisible': [('is_payor', '=', False)]}">
                    <field name="coverage_template_count" widget="statinfo" string="Coverage Templates" />
                    <field name='coverage_template_ids' invisible="1" />
                </button>
            </div>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_payor_action">
        <field name="name">Payors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_payor', '=', True)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_payor': True, 'default_is_pod': True}</field>
    </record>
</odoo>
