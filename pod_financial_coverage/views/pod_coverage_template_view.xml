<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pod_coverage_template_view_tree" model="ir.ui.view">
        <field name="name">pod.coverage.template.view.tree</field>
        <field name="model">pod.coverage.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="internal_identifier" />
                <field name="name" />
                <field name="payor_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="pod_coverage_template_view_form" model="ir.ui.view">
        <field name="name">pod.coverage.template.view.form</field>
        <field name="model">pod.coverage.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Activate" type="object" name="draft2active" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}" />
                    <button string="Cancel" type="object" name="draft2cancelled" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}" />
                    <button string="Entered In Error" type="object" name="draft2enteredinerror" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}" />
                    <button string="Cancel" type="object" name="active2cancelled" class="oe_highlight" attrs="{'invisible': [('state','!=','active')]}" />
                    <button string="Entered In Error" type="object" name="active2enteredinerror" class="oe_highlight" attrs="{'invisible': [('state','!=','active')]}" />
                    <button string="Entered In Error" type="object" name="cancelled2enteredinerror" class="oe_highlight" attrs="{'invisible': [('state','!=','cancelled')]}" />
                    <button string="Send to draft" type="object" name="active2draft" class="oe_highlight" attrs="{'invisible': [('state','!=','active')]}" />
                    <button string="Send to draft" type="object" name="cancelled2draft" class="oe_highlight" attrs="{'invisible': [('state','!=','cancelled')]}" />
                    <button string="Activate" type="object" name="cancelled2active" class="oe_highlight" attrs="{'invisible': [('state','!=','cancelled')]}" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                    </div>
                    <h1>
                        <field name="internal_identifier" />
                    </h1>
                    <h2>
                        <field name="name" />
                    </h2>
                    <group>
                        <group name="payor">
                            <field name="payor_id" />
                        </group>
                    </group>
                    <notebook />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_pod_coverage_template_search" model="ir.ui.view">
        <field name="name">pod.coverage.template.search</field>
        <field name="model">pod.coverage.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="internal_identifier" />
                <separator />
                <field name="name" />
                <separator />
                <field name="payor_id" />
                <separator />
                <field name="state" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_coverage_template_action">
        <field name="name">Coverages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.coverage.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    
</odoo>
