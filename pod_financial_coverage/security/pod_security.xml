<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="group_pod_coverage_template_display" model="res.groups">
        <field name="name">Coverage template Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_pod_payor_display" model="res.groups">
        <field name="name">Payor Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('pod_administration.group_res_partner_display')), (4, ref('group_pod_coverage_template_display'))]" />
    </record>
    <record id="group_pod_payor_list" model="res.groups">
        <field name="name">Payor List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_payor_display')), (4, ref('pod_base.group_pod_root_menu')), (4, ref('pod_base.group_pod_financial_menu'))]" />
    </record>
    <record id="group_pod_payor_manager" model="res.groups">
        <field name="name">Payor Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_payor_list')), (4, ref('pod_administration.group_res_partner_manager'))]" />
    </record>
    <record id="group_pod_coverage_template_list" model="res.groups">
        <field name="name">Coverage template List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_template_display'))]" />
    </record>
    <record id="group_pod_coverage_template_manager" model="res.groups">
        <field name="name">Coverage template Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_template_list'))]" />
    </record>
    <record id="group_pod_coverage_display" model="res.groups">
        <field name="name">Coverage Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_template_display'))]" />
    </record>
    <record id="group_pod_coverage_list" model="res.groups">
        <field name="name">Coverage List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_display'))]" />
    </record>
    <record id="group_pod_coverage_manager" model="res.groups">
        <field name="name">Coverage Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_list'))]" />
    </record>
    <record id="pod_administration.group_pod_patient_display" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_display'))]" />
    </record>
    <record id="pod_administration.group_pod_patient_list" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_coverage_list'))]" />
    </record>
    <!-- Generic groups -->
    <record id="pod_base.group_pod_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_payor_display')), (4, ref('group_pod_coverage_display')), (4, ref('group_pod_coverage_template_display'))]" />
    </record>
    <record id="pod_base.group_pod_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_pod_payor_manager')), (4, ref('group_pod_coverage_template_manager')), (4, ref('group_pod_coverage_manager'))]" />
    </record>
    <!-- Record rules -->
    <record id="payor_display" model="ir.rule">
        <field name="name">Payor Display</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('group_pod_payor_display'))]" />
        <field name="domain_force">[('is_payor', '=', False)]</field>
        <field name="perm_write" eval="False" />
        <field name="perm_create" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
    <record id="payor_manager" model="ir.rule">
        <field name="name">Payor Manager</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="groups" eval="[(4, ref('group_pod_payor_manager'))]" />
        <field name="domain_force">[('is_payor', '=', False)]</field>
        <field name="perm_write" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="perm_read" eval="True" />
    </record>
</odoo>
