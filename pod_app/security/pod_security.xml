<odoo>

  <data>
    <!-- Podiatry User Group -->
    <record id="pod_group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_services_podiatry"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Podiatry Manager Group -->
    <record id="pod_group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="category_id" ref="base.module_category_services_podiatry"/>
      <field name="implied_ids" eval="[(4, ref('pod_group_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>

  </data>
  <data noupdate="1">
    <record id="patient_user_rule" model="ir.rule">
      <field name="name">Podiatry Patient User Access</field>
      <field name="model_id" ref="model_pod_patient"/>
      <field name="domain_force">
        [('active', '=', True)] 
      </field>
      <field name="groups" eval="[(4, ref('pod_group_user'))]"/>
    </record>
  </data>

</odoo>
