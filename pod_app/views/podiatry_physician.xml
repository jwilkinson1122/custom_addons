<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_physician_form_view" model="ir.ui.view">
        <field name="name">podiatry.physician.form.view</field>
        <field name="model">podiatry.physician</field>
        <field name="arch" type="xml">
            <form string="Physician">
                <notebook>
                    <page string="Main Info">
                        <group colspan="4" col="4">
                            <field name="partner_id" required="1" context="{'default_is_doctor': 1, 'search_default_is_doctor': 1}" />
                            <field name="institution_partner_id" context="{'default_is_practice': 1, 'search_default_is_practice': 1}" />
                            <field name="code" />
                        </group>
                    </page>
                    <page string="Extra Info">
                        <field name="info" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="podiatry_physician_search_view" model="ir.ui.view">
        <field name="name">podiatry.physician.search.view</field>
        <field name="model">podiatry.physician</field>
        <field name="arch" type="xml">
            <search string="Search Physician">
                <separator orientation="vertical" />
                <field name="partner_id" select="1" />
                <field name="code" select="1" />
                <field name="institution_partner_id" select="1" />
                <newline />
                <group expand="1" string="Group By">
                    <filter string="Doctor" name='by_user' context="{'group_by':'partner_id'}"/>
                    <filter string="Institution" name='by_institution' context="{'group_by':'institution_partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="podiatry_physician_tree_view" model="ir.ui.view">
        <field name="name">podiatry.physician.tree.view</field>
        <field name="model">podiatry.physician</field>
        <field name="arch" type="xml">
            <tree string="Physician Information">
                <field name="partner_id" />
                <field name="code" />
                <field name="institution_partner_id" />
            </tree>
        </field>
    </record>

    <!-- Kanban View Of physician Profiles -->

    <record id="podiatry_physician_kanban_view" model="ir.ui.view">
        <field name="name">podiatry.physician.kanban.view</field>
        <field name="model">podiatry.physician</field>
        <field name="arch" type="xml">
            <kanban default_group_by="partner_id" quick_create="true">
                <!-- <field name="name"/> -->
                <field name="partner_id" />
                <field name="code" />
                <field name="institution_partner_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <h1 class="o_kanban_record_title">
                                    <field name="partner_id"/>
                                </h1>
                                <ul>
                                    <!-- <li>Doctor :
                                        <field name="partner_id"/>
                                    </li> -->
                                    <li>Code :
                                        <field name="code"/>
                                    </li>
                                    <li>Practice :
                                        <field name="institution_partner_id"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_podiatry_physician" model="ir.actions.act_window">
        <field name="name">Physicians</field>
        <!-- <field name="type">ir.actions.act_window</field> -->
        <field name="res_model">podiatry.physician</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- <record id="action_podiatry_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record> -->

    <menuitem id="menu_physician" name='Physicians' parent="main_menu_configuration" sequence="7" />

    <menuitem id="menu_podiatry_physician" parent="menu_physician" action="action_podiatry_physician" sequence="6" />

</odoo>
