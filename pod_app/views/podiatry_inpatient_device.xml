<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="podiatry_inpatient_device_form_view" model="ir.ui.view">
        <field name="name">podiatry.inpatient.device.form.view</field>
        <field name="model">podiatry.inpatient.device</field>
        <field name="arch" type="xml">
            <form string="Device History">
                <group>
                    <group colspan="4" col="4">
                        <field name="podiatry_treatment_id" />
                        <field name="podiatry_inpatient_device_physician_id" />
                        <field name="is_active" />
                        <field name="podiatry_pathology_id" />
                        <field name="start_treatment" />
                        <field name="end_treatment" />
                        <field name="course_completed" />
                        <field name="discontinued" />
                    </group>
                    <separator colspan="4" string="Admnistration" />
                    <group colspan="4" col="4">
                    </group>
                    <separator colspan="4" string="Dosage" />
                    <group colspan="4" col="4">
                        <field name="dose" />
                        <field name="qty" />
                        <field name="podiatry_dose_unit_id" />
                    </group>
                    <separator colspan="4" string=" Treatment Duration " />
                    <group colspan="4" col="4">
                        <field name="duration" />
                        <field name="duration_period" />
                    </group>
                    <separator colspan="4" string="  Common Dosage  " />
                    <group>
                        <field name="podiatry_device_dosage_id" />
                    </group>
                    <group colspan="2" col="2">
                        <field name="inpatient_admin_times_ids" />
                    </group>
                    <separator colspan="4" string="  Specific Dosage  " />
                    <group colspan="4" col="4">
                        <field name="frequency" />
                        <field name="frequency_unit" />
                    </group>

                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_inpatient_device_tree_view" model="ir.ui.view">
        <field name="name">podiatry.inpatient.device.tree.view</field>
        <field name="model">podiatry.inpatient.device</field>
        <field name="arch" type="xml">
            <tree string="Device">
                <field name="podiatry_treatment_id" />
                <field name="podiatry_inpatient_device_physician_id" />
                <field name="is_active" />
                <field name="podiatry_pathology_id" />
                <field name="start_treatment" />
                <field name="end_treatment" />
                <field name="course_completed" />
                <field name="discontinued" />
            </tree>
        </field>
    </record>

</odoo>
