<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="podiatry_treatment_form_view" model="ir.ui.view">
        <field name="name">podiatry.treatment.form.view</field>
        <field name="model">podiatry.treatment</field>
        <field name="arch" type="xml">
            <form string="treatments">
                <notebook>
                    <page string="Main Info">
                        <group colspan="4" col="4">
                            <field name="product_id" required="1" context="{'default_is_treatment': 1, 'search_default_is_treatment': 1,'search_default_type': 'service','default_type': 'service'}" />
                            <field name="corrective_action" />
                            <field name="components" />
                            <field name="price" />
                            <field name="qty_available" />
                            <newline />
                            <!-- <field name="indications" colspan="4" /> -->
                        </group>
                    </page>
                    <page string="Presentation">
                        <field name="presentation" />
                    </page>
                    <page string="Composition">
                        <field name="composition" />
                    </page>

                    <page string="Quatity">
                        <group colspan="4" col="4">
                            <field name="quantity" />
                        </group>
                    </page>


                    <page string="Extra Info">
                        <field name="notes" />
                    </page>
                </notebook>

            </form>
        </field>
    </record>

    <record id="podiatry_treatment_tree_view" model="ir.ui.view">
        <field name="name">podiatry.treatment.tree.view</field>
        <field name="model">podiatry.treatment</field>
        <field name="arch" type="xml">
            <tree string="treatment">
                <field name="product_id" />
                <field name="components" />
                <field name="qty_available" />
                <field name="corrective_action" />
                <field name="price" />
            </tree>
        </field>
    </record>

    <record id="action_podiatry_treatment" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.treatment</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
