<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="podiatry_patient_registration_form_view" model="ir.ui.view">
        <field name="name">podiatry.patient.registration.form.view</field>
        <field name="model">podiatry.patient.registration</field>
        <field name="arch" type="xml">
            <form string="Patient Registration Information">
                <header>
                    <button name="registration_confirm" states="free" string="Confirm Registration" class="oe_highlight" type="object" />
                    <button name="registration_cancel" states="confirmed" class="oe_highlight" string="Cancel Registration" type="object" />
                    <button name="registration_admission" states="confirmed" class="oe_highlight" string="Patient Admission" type="object" />
                    <button name="patient_discharge" states="practiceized" class="oe_highlight" string="Discharge Patient" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="free,confirmed,cancelled,practiceized" readonly="1" />
                </header>
                <sheet>
                    <group string="Administrative Data">
                        <group>
                            <field name="name" required="1" />
                            <field name="patient_id" required="1" />

                            <field name="care_date" required="1" />
                            <field name="discharge_date" required="1" />
                        </group>
                        <group>
                            <field name="primary_physician_id" />
                            <field name="operating_physician_id" />
                            <field name="admission_type" required="1" />
                            <field name="podiatry_pathology_id" />
                        </group>
                    </group>
                    <group>
                        <field name="info" />
                    </group>
                    <group colspan="4" col="4">
                        <field name="location_transfers_ids" colspan="4">
                            <tree editable="bottom">
                                <field name="date" />
                                <field name="location_from" />
                                <field name="location_to" />
                                <field name="reason" />
                            </tree>
                        </field>
                    </group>
                    <group string="Care Plan">
                        <field name="nursing_plan" />
                        <field name="discharge_plan" />
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="podiatry_patient_registration_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patient.registration.tree.view</field>
        <field name="model">podiatry.patient.registration</field>
        <field name="arch" type="xml">
            <tree string="Patient Registration Info">
                <field name="name" />
                <field name="patient_id" />
                <field name="care_date" />
                <field name="discharge_date" />
                <field name="admission_type" />
                <field name="state" />
            </tree>

        </field>
    </record>

    <record id="action_podiatry_patient_registration" model="ir.actions.act_window">
        <field name="name">Patient Care</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.patient.registration</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_ss_care_administration" parent="menu_patient_administration" action="action_podiatry_patient_registration" sequence="0" />

</odoo>
