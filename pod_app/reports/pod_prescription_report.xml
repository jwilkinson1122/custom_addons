<odoo>

  <record id="paperformat_euro_landscape" model="report.paperformat">
    <field name="name">A4 Landscape</field>
    <field name="format">A4</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">40</field>
    <field name="margin_bottom">32</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
  </record>

  <record id="action_pod_prescription_report" model="ir.actions.report">
    <field name="name">Prescription Archive</field>
    <field name="model">pod.prescription</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">pod_app.prescription_archive</field>
    <field name="binding_model_id" ref="model_pod_prescription" />
    <field name="binding_type">report</field>
    <field name="paperformat_id" ref="paperformat_euro_landscape" />
  </record>

  <template id="prescription_archive">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">

        <!-- Running total: initialize variable -->
        <t t-set="missing_count" t-value="0" />

        <div class="page">

          <!-- Report header content -->
          <div class="container">
            <div class="row bg-primary">
              <div class="col-3">Title</div>
              <div class="col-2">Prescriber</div>
              <div class="col-2">Date</div>
              <div class="col-3">Prescriber Address</div>
              <div class="col-2">Doctors</div>
            </div>

            <t t-foreach="docs" t-as="o">
              <!-- Report row content -->
              <div class="row">
                <div class="col-3">
                  <h4>
                    <span t-field="o.name" />
                  </h4>
                </div>
                <div class="col-2">
                  <span t-field="o.prescriber_id" />

                  <!-- Running total: increment and present -->
                  <t t-set="missing_count" t-value="missing_count + int(not o.prescriber_id)" />
                  <p>(accum. <t t-out="missing_count" />
)</p>

                </div>
                <div class="col-2">
                  <span t-field="o.date_prescribed" t-options="{'widget': 'date'}" />
                </div>
                <div class="col-3">
                  <div t-field="o.prescriber_id" t-options='{
                         "widget": "contact",
                         "fields": ["address", "email", "phone", "website"], "no_marker": true}' />
                </div>
                <div class="col-2">
                  <!-- Render Doctors -->
                  <ul class="list-unstyled">
                    <t t-foreach="o.doctor_ids" t-as="author">
                      <span t-field="doctor.image_128" t-options="{'widget': 'image', 'style': 'max-width: 32px'}" />
                      <span t-field="doctor.name" />
                    </t>
                  </ul>
                </div>
              </div>
            </t>

            <!-- Report footer content -->
            <div class="row">
              <div class="col-3">
                <t t-out="len(docs)" />
 Prescriptions
              </div>
              <div class="col-7" />
              <div class="col-2">
                <t t-out="len(docs.mapped('doctor_ids'))" />
 Doctors
              </div>
            </div>

          </div>          <!-- container -->
        </div>        <!-- page -->

      </t>
    </t>
  </template>


  <record id="action_pod_prescription_report_native" model="ir.actions.report">
    <field name="name">Native Language Prescription Archive</field>
    <field name="model">pod.prescription</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">pod_app.prescription_archive_native</field>
    <field name="binding_model_id" ref="model_pod_prescription" />
    <field name="binding_type">report</field>
    <field name="paperformat_id" ref="paperformat_euro_landscape" />
  </record>

  <template id="prescription_archive_native">
    <t t-call="pod_app.prescription_archive" t-lang="res_company.partner_id.lang" />
  </template>

</odoo>
