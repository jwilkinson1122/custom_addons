<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_diagnostic_report_expand_form_view">
        <field
            name="name"
        >pod.diagnostic.report.expand.form (in pod_diagnostic_report)</field>
        <field name="model">pod.diagnostic.report.expand</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="diagnostic_report_id" invisible="1" />
                    <field
                        name="template_id"
                        options="{'no_create': 1, 'no_open': 1}"
                        domain="[('id', 'not in', template_ids)]"
                    />
                    <field name="template_ids" invisible="1" />
                </group>
                <footer>
                    <button
                        name="merge"
                        string="Merge"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_diagnostic_report_expand_act_window"
    >
        <field name="name">Podiatry Diagnostic Report Expand</field>
        <field name="res_model">pod.diagnostic.report.expand</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_diagnostic_report_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
