<odoo>

    <record model="ir.ui.view" id="pod_patient_create_diagnostic_report_form_view">
        <field
            name="name"
        >pod.patient.create.diagnostic.report.form (in pod_diagnostic_report)</field>
        <field name="model">pod.patient.create.diagnostic.report</field>
        <field name="arch" type="xml">
            <form string="Create Diagnostic Report">
                <group>
                    <group>
                        <field
                            name="template_id"
                            options="{'no_create': 1, 'no_open': 1}"
                        />
                    </group>
                    <group>
                        <field name="patient_id" invisible="1" />
                        <field
                            name="encounter_warning"
                            nolabel="1"
                            decoration-danger="1"
                            attrs="{'invisible':[('show_encounter_warning', '=', False)]}"
                        />
                        <field name="show_encounter_warning" invisible="1" />
                        <field
                            name="encounter_id"
                            widget="selection"
                            readonly="False"
                            domain="[('patient_id', '=', patient_id)]"
                        />
                        <field name="lang" widget="selection" />
                    </group>
                    <footer>
                        <button
                            name="generate"
                            string="Create"
                            class="btn-primary"
                            type="object"
                        />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </group>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_patient_create_diagnostic_report_act_window"
    >
        <field name="name">Podiatry Patient Create Diagnostic Report</field>
        <field name="res_model">pod.patient.create.diagnostic.report</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_patient_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
