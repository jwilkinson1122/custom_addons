<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record
        model="ir.ui.view"
        id="pod_encounter_create_diagnostic_report_form_view"
    >
        <field
            name="name"
        >pod.encounter.create.diagnostic.report.form (in pod_diagnostic_report)</field>
        <field name="model">pod.encounter.create.diagnostic.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="encounter_id" invisible="1" />
                    <field
                        name="template_id"
                        options="{'no_create': 1, 'no_open': 1}"
                    />
                    <field name="lang" />
                </group>
                <footer>
                    <button
                        name="generate"
                        string="Create"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_encounter_create_diagnostic_report_act_window"
    >
        <field name="name">Podiatry Encounter Create Diagnostic Report</field>
        <field name="res_model">pod.encounter.create.diagnostic.report</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_encounter_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
