<odoo>
    <record model="ir.ui.view" id="pod_diagnostic_report_template_print_form_view">
        <field
            name="name"
        >pod.diagnostic.report.template.print.form (in pod_diagnostic_report)</field>
        <field name="model">pod.diagnostic.report.template.print</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="diagnostic_template_id" invisible="1" />
                    <field name="lang" />
                </group>
                <footer>
                    <button
                        name="print"
                        string="Preview"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_diagnostic_report_template_print_act_window"
    >
        <field name="name">Preview Template</field>
        <field name="res_model">pod.diagnostic.report.template.print</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_diagnostic_template_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
