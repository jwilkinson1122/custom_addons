<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="pod_patient_form_view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_observations_with_concept" class="oe_stat_button" icon="fa-file-pod-alt" string="Observations">
                </button>
                <button name="%(pod_diagnostic_report.patient_concept_evolution_act_window)s" type="action" icon="fa-chart-line" string="Observation evolution" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_diagnostic_report_concepts_patient_tree_view">
        <field name="name">pod.observation.tree (in pod_diagnostic_report)</field>
        <field name="model">pod.observation</field>
        <field name="arch" type="xml">
            <tree default_order='observation_date desc' create="false">
                <field name="name" />
                <field name="value_type" invisible="1" />
                <field name="value_representation" />
                <field name="uom_id" />
                <field name="interpretation" />
                <field name="observation_date" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_patient_his_form_view">
        <field name="name">pod.patient.form</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_his_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='administration_data']" position="before">
                <page name="diagnostic_reports" string="Reports">
                    <field name="diagnostic_report_ids" widget="one2many" readonly="1" options="{'record_action': 'get_formview_action'}">
                        <tree decoration-warning="fhir_state == 'registered'" decoration-danger="fhir_state == 'cancelled'">
                            <button type="object" name="preview_pod_diagnostic_report" class="oe_stat_button" icon="fa-duotone fa-file-pdf" />
                            <field name="internal_identifier" />
                            <field name="encounter_id" />
                            <field name="name" />
                            <field name="issued_user_id" />
                            <field name="issued_date" />
                            <field name="create_date" />
                            <field name="state" invisible="1" />
                            <field name="fhir_state" invisible="1" />
                        </tree>
                    </field>
                    <button type="action" name="%(pod_diagnostic_report.pod_patient_create_diagnostic_report_act_window)s" class="oe_stat_button btn-warning" icon="fa-file-pod-alt" string="Generate Podiatry Report" groups="pod_base.group_pod_assistance_user" attrs="{'invisible': [('encounter_count', '=', 0)]}" />
                </page>
            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="pod_diagnostic_report_concepts_patient_act_window">
        <field name="name">Observations</field>
        <field name="res_model">pod.observation</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
