<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <menuitem
        id="menu_pod_report_root"
        name="Reports"
        sequence="80"
        parent="pod_base.pod_root"
    />
    <record id="pod_observation_pivot" model="ir.ui.view">
        <field name="name">pod.observation.pivot</field>
        <field name="model">pod.observation</field>
        <field name="arch" type="xml">
            <pivot disable_linking="True" display_quantity="True">
                <field name="concept_id" type="row" />
            </pivot>
        </field>
    </record>
    <record id="pod_observation_pivot_search" model="ir.ui.view">
        <field name="name">pod.observation.pivot.search</field>
        <field name="model">pod.observation</field>
        <field name="arch" type="xml">
            <search>
                <filter
                    string="Date"
                    name="year"
                    date="create_date"
                    default_period="this_year"
                />
                <separator />
                <field name="concept_id" />
                <field name="interpretation" />
            </search>
        </field>
    </record>
    <record id="pod_observation_pivot_action" model="ir.actions.act_window">
        <field name="name">Observations</field>
        <field name="res_model">pod.observation</field>
        <field
            name="domain"
        >[('state', '=', 'final'), ('concept_id', '!=', False)]</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="pod_observation_pivot_search" />
        <field name="view_id" ref="pod_observation_pivot" />
    </record>
    <record model="ir.ui.menu" id="menu_pod_report_pivot_observation">
        <field name="name">Observations reports</field>
        <field name="parent_id" ref="menu_pod_report_root" />
        <field name="action" ref="pod_observation_pivot_action" />
        <field name="sequence" eval="10" />
    </record>


</odoo>
