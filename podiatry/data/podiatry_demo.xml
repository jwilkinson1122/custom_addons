<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!--Users-->
    <record id="base.user_demo" model="res.users">
        <field name="groups_id" eval="[(4, ref('podiatry.podiatry_group_manager'))]" />
    </record>

    <record id="podiatry_device_state_ordered" model="podiatry.device.state">
        <field name="name">Ordered</field>
        <field name="sequence">6</field>
    </record>

    <record id="podiatry_device_state_hold" model="podiatry.device.state">
        <field name="name">Hold</field>
        <field name="sequence">9</field>
    </record>

    <record id="type_service_service_1" model="podiatry.service.type">
        <field name="name">Repair and maintenance</field>
        <field name="category">service</field>
    </record>
    <record id="type_service_1" model="fleet.service.type">
        <field name="name">Top Cover Replacement</field>
        <field name="category">service</field>
    </record>

    <record id="device_tag_child" model="podiatry.device.tag">
        <field name="name">Child</field>
        <field name="color" eval="1"/>
    </record>

    <record id="device_tag_adult" model="podiatry.device.tag">
        <field name="name">Adult</field>
        <field name="color" eval="2"/>
    </record>

    <record id="device_tag_custom" model="podiatry.device.tag">
        <field name="name">Custom</field>
        <field name="color" eval="5"/>
    </record>

    <record id="device_tag_otc" model="podiatry.device.tag">
        <field name="name">OTC</field>
        <field name="color" eval="6"/>
    </record>

    <record id="device_tag_brace" model="podiatry.device.tag">
        <field name="name">Brace</field>
        <field name="color" eval="7"/>
    </record>

    <record id="device_1" model="podiatry.device">
        <field name="device_registration">1-ACK-205</field>
        <field name="din_sn">5454541</field>
        <field name="model_id" ref="model_astra"/>
        <field name="color">Black</field>
        <field name="location">Grand-Rosiere</field>
        <field name="laterality_count">2</field>
        <field name="patient_id" ref="base.partner_demo" />
        <field name="acquisition_date" eval="(DateTime.now() - timedelta(days=336)).strftime('%Y-%m-%d')" />
        <field name="state_id" ref="podiatry_device_state_new_request"/>
        <field name="laterality_unit">bl</field>
        <field name="device_price">145</field>
        <field eval="[(6,0,[ref('podiatry.device_tag_custom'),ref('podiatry.device_tag_adult')])]" name="tag_ids"/>
    </record>

    <record id="log_laterality_1" model="podiatry.device.laterality">
        <field name="device_id" ref="device_1" />
        <field name="date" eval="(DateTime.now() - timedelta(days=336)).strftime('%Y-%m-%d')" />
        <field name="value">bl</field>
    </record>

    <record id="log_service_1" model="podiatry.device.log.services">
        <field name="device_id" ref="device_1" />
        <field name="amount">10</field>
        <field name="service_type_id" ref="type_service_service_1"/>
        <field name="date" eval="(DateTime.now() - timedelta(days=60)).strftime('%Y-%m-%d')" />
        <field name="purchaser_id" ref="base.res_partner_address_18" />
        <field name="inv_ref">4586</field>
        <field name="notes">Device repairing</field>
        <field name="state">done</field>
    </record>


</odoo>
