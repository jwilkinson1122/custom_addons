<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record model="ir.ui.view" id="podiatry.product_template_form_view">
            <field name="name">podiatry.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='general_information']/group[1]" position="after">
                    <group name="product_dimension" string="Dimensions">
                        <group>
                            <field name="length"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                        <group>
                            <field name="dimensions_uom_id"/>
                            <field name="weight_uom_id"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>