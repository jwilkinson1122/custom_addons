<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- search View Of Teahcer's Profiles -->
        <record id="view_podiatry_practitioner_search" model="ir.ui.view">
            <field name="name">podiatry.practitioner.search</field>
            <field name="model">podiatry.practitioner</field>
            <field name="arch" type="xml">
                <search string="Partners">
                    <field name="name" string="Partners" filter_domain="['|',('email','ilike',self),('name','ilike',self)]"/>
                    <field name="location_id"/>
                    <field name="category_ids" groups="base.group_partner_manager"/>
                    <field name="function"/>
                    <group expand="0" string="Group By">
                        <filter name="class" string="Class" domain="[]" context="{'group_by':'standard_id'}"/>
                        <filter name="function" string="Function" domain="[]" context="{'group_by':'function'}"/>
                        <filter name="company" string="Company" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        

        <record id="podiatry_practitioner_kanban_view" model="ir.ui.view">
            <field name="name">Practitioner KANBAN</field>
            <field name="model">podiatry.practitioner</field>
            <field name="arch" type="xml">
                <kanban nocreate="1" create="false">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_partner_kanban_record">
                            <field name="avatar_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="name" />
                                        </strong>
                                        <div class="o_kanban_tags_section oe_kanban_partner_categories" />
                                        <ul>
                                            <li t-if="record.practice_id.raw_value"><field name="practice_id" /></li>
                                            <li t-if="record.function.raw_value"><field name="function" /></li>
                                            <li t-if="record.phone"><field name="phone" /></li>
                                            <li t-if="record.email.raw_value"><field name="email" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- tree View Of Teahcer's Profiles -->
        <record id="view_podiatry_practitioner_tree" model="ir.ui.view">
            <field name="name">podiatry.practitioner.tree</field>
            <field name="model">podiatry.practitioner</field>
            <field name="arch" type="xml">
                <tree string="Practice">
                    <field name="name"/>
                    <field name="phone" invisible="1"/>
                    <field name="email"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="location_id"/>
                    <field name="function"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of Teahcer's Profiles -->
        <record id="view_podiatry_practitioner_form" model="ir.ui.view">
            <field name="name">podiatry.practitioner.form</field>
            <field name="model">podiatry.practitioner</field>
            <field name="arch" type="xml">
                <form string="Faculty">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                        <field name="company_id" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Practitioner's Name" required='1'/>
                            </h1>
                        </div>
                        <field name="category_ids" widget="many2many_tags" placeholder="e.g. Part Time" groups="base.group_partner_manager"/>
                        <group>
                            <field name="standard_id"/>
                            <!-- <field name="standard_ids" required="1" widget="many2many_tags"/> -->
                            <field name="subject_id" required="1" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="practice_id" required="1"/>
                        </group>
                        <group>
                            <field name="is_doctor" widget="boolean_toggle"/>
                            <field name='pat_doctor_id'
                                attrs="{'invisible':[('is_doctor','=',False)],'required': [('is_doctor','!=',False)]}"/>
                        </group>
                        <notebook>
                            <page name="public" string="Public Information">
                                <group>
                                    <group string="Contact Information">
                                        <field name="address_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}" string="Work Address"/>
                                        <field name="mobile" />
                                        <field name="location_id" />
                                        <field name="email" widget="email" required="1"/>
                                        <field name="phone" invisible="1"/>
                                    </group>
                                    <group string="Position">
                                        <field name="location_id"/>
                                        <field name="function"/>
                                        <field name="partner_id"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Personal Information" groups="base.group_partner_manager">
                                <group>
                                    <group string="Contact &amp; Other Information">
                                        <field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        <field name="ref" groups="base.group_partner_manager"/>
                                    </group>
                                    <group string="Contact Information">
                                        <field name="contact_address" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Patients" attrs="{'invisible': [('is_doctor','=', False)]}">
                                 <field name="patient_id" domain="[('state', '=', 'done')]"/>
                            </page>
                            <page string="Settings" groups="base.group_partner_manager" invisible="1">
                                <group>
                                    <group string="Status" name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="partner_id" string="Related Partner" context="{'default_groups_ref': ['base.group_user']}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action View Of podiatry practitioner-->

        <record id="action_podiatry_practitioner_form" model="ir.actions.act_window">
            <field name="name">Practitioner Profile</field>
            <field name="res_model">podiatry.practitioner</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="practitioner_profile_menu" name="Practitioners" action="action_podiatry_practitioner_form"
                  parent="menu_patients_doctors" sequence="32"
                  groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_practitioner"/>

    </data>
</odoo>
