<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
    Form
    -->
    <record id="view_res_config_settings_form_inherit_podiatry" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.podiatry</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Patients" string="Patients" data-key="podiatry" groups="podiatry.group_manager">
                    <h2>Patients</h2>

                    <div class="row mt16 o_settings_container" name="patients_settings_container">

                        <!-- podiatry_calendar -->
                        <div class="col-12 col-lg-6 o_setting_box" id="patient_calendar_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_podiatry_calendar"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_podiatry_calendar" string="Prescriptions"/>
                                <div class="text-muted">
                                        Schedule order delivery dates
                                </div>
                            </div>
                        </div>

                        <!-- <xpath expr="//div[hasclass('settings')]" position="inside">
