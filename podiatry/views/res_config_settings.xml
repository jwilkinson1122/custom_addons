                            <div class="o_setting_left_pane">
                                <field name="module_podiatry_product"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_podiatry_product" string="Products"/>
                                <div class="text-muted">
                                        Configure Products
                                </div>
                            </div>
                        </div> -->


                        <!-- podiatry_encounter -->
                        <!-- <div class="col-12 col-lg-6 o_setting_box" id="patient_encounter_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_podiatry_encounter"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_podiatry_encounter" string="Encounters"/>
                                <div class="text-muted">
                                        Capture and organize patient encounters
                                </div>
                            </div>
                        </div> -->

                        <!-- podiatry_patient_tags -->
                        <div class="col-12 col-lg-6 o_setting_box" id="patient_tags_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_podiatry_patient_tags"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_podiatry_patient_tags" string="Tags"/>
                                <div class="text-muted">
                                        Organize and manage your patients using tags
                                </div>
                            </div>
                        </div>

                        <!-- podiatry_phone_validation -->
                        <div class="col-12 col-lg-6 o_setting_box" id="patient_phone_validation_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_podiatry_phone_validation"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_podiatry_phone_validation" string="Phone Number Validation"/>
                                <div class="text-muted">
                                        Automatically format and validate phone numbers
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </xpath>
        </field>
    </record>

    <!--
    Action
    -->
    <record id="action_res_config_settings_inherit_podiatry" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.res_config_settings_view_form"/>
        <field name="target">inline</field>
        <field name="context">{'module': 'podiatry'}</field>
    </record>

    <!--
    Submenu: Settings
    -->
    <menuitem id="menu_settings" name="Settings" parent="menu_configuration" action="action_res_config_settings_inherit_podiatry" sequence="5"/>

</odoo>
