<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_podiatry_practitioner_prescription_list" model="ir.ui.view">
        <field name="name">Practitioner Prescriptions</field>
        <field name="model">podiatry.practitioner.prescription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="time"/>
                <field name="practitioner_id"/>
                <field name="patient_id"/>
                <field name="diagnosis_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_podiatry_practitioner_prescription_calendar" model="ir.ui.view">
        <field name="name">Practitioner Prescriptions</field>
        <field name="model">podiatry.practitioner.prescription</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar date_start="date" string="visits" mode="month" color="color">
                <field name="patient_id"/>
                <field name="practitioner_id"/>
                <field name="date"/>
            </calendar>
        </field>
    </record>


    <record id="view_podiatry_practitioner_prescription_form" model="ir.ui.view">
        <field name="name">Practitioner Prescription</field>
        <field name="model">podiatry.practitioner.prescription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Main">
                            <group>
                                <group>
                                    <field name="date"/>
                                    <field name="time"/>
                                </group>
                                <group>
                                    <field name="practitioner_id"/>
                                    <field name="patient_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

