    <record id="action_podiatry_practitioner_prescription_dashboard" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">podiatry.practitioner.prescription</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_podiatry_practitioner_prescription_search"/>
