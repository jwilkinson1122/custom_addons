<odoo>
    <!-- ====== Devices ====== -->
    <!-- Form view of podiatry device -->
    <record id="view_podiatry_device_form" model="ir.ui.view">
        <field name="name">podiatry.device.form</field>
        <field name="model">podiatry.device</field>
        <field name="arch" type="xml">
            <form string="Podiatry Device">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}" />
                    <div class="oe_title">
                        <label for="name" string="Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                        <label for="status" string="Status" />
                        <h2>
                            <field name="status" readonly="1" />
                        </h2>
                        <h2>
                            <field name="is_custom_device" />
                        </h2>
                    </div>
                    <notebook>
                        <page name="information_podiatry_device" string="Information">
                            <group colspan="4" col="4">
                                <field name="device_categ_id" select="1" />
                                <field name="product_manager" select="2" string="Device Manager" />
                                <field name="capacity" />
                                <field name="uom_id" invisible="1" />
                                <field name="supplier_taxes_id" widget="many2many_tags" string="Supplier Taxes" />
                                <field name="taxes_id" widget="many2many_tags" string="Customer Taxes" />
                            </group>
                        </page>
                        <page string="Device Items">
                            <separator string=" Device Items" />
                            <field name="device_items_ids" colspan="4" nolabel="1" />
                        </page>
                        <page string="Procurement">
                            <group colspan="4" col="4">
                                <field name="active" select="2" />
                                <field name="list_price" />
                                <!--commented as rental field is removed from odoo14-->
                                <!-- <field name="rental" select="2" /> -->
                                <field name="standard_price" />
                                <field name="cost_method" string="Cost Method" />
                                <newline />
                            </group>
                            <newline />
                            <group>
                                <separator string="Suppliers" />
                                <field name="seller_ids" colspan="4" nolabel="1" widget="one2many_list" />
                            </group>
                        </page>
                        <page string="Descriptions">
                            <separator string="Description" />
                            <field name="description" colspan="4" nolabel="1" />
                        </page>
                        <page string="Prescription Device Reservations">
                            <separator colspan='4' string="Prescription Device Reservation Line" />
                            <field name="device_line_ids" colspan="4" nolabel='1'>
                                <form string=" Device line">
                                    <group colspan='4' col='4'>
                                        <field name="device_id" />
                                        <field name="book_in" />
                                        <field name="book_out" />
                                        <field name="prescription_id" />
                                        <field name="status" />
                                    </group>
                                </form>
                                <tree>
                                    <field name="device_id" />
                                    <field name="book_in" />
                                    <field name="book_out" />
                                    <field name="prescription_id" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view of podiatry device -->
    <record id="view_podiatry_device_search" model="ir.ui.view">
        <field name="name">podiatry.device.search</field>
        <field name="model">podiatry.device</field>
        <field name="arch" type="xml">
            <search string="Podiatry Device">
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
                <field name="device_categ_id" />
                <field name="list_price" string="Device rate" />
                <field name="status" string="Status" />
                <newline />
                <filter name="available" string="Available" domain="[('status','=', 'available')]" />
                <filter name="reserved" string="Reserved" domain="[('status','=', 'unavailable')]" />
            </search>
        </field>
    </record>
    <!-- Tree view of podiatry device -->
    <record id="view_podiatry_device_tree" model="ir.ui.view">
        <field name="name">podiatry.device.tree</field>
        <field name="model">podiatry.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="device_categ_id" />
                <field name="list_price" string="Device rate" />
                <field name="status" />
                <field name="capacity" />
            </tree>
        </field>
    </record>
    <!-- Kanban view of podiatry device -->
    <record id="view_podiatry_device_kanban" model="ir.ui.view">
        <field name="name">podiatry.device.kanban</field>
        <field name="model">podiatry.device</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name" />
                <field name="status" />
                <field name="color" />
                <field name="lst_price" />
                <field name="id" />
                <field name="code" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a role="button" class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                    <span title="fa_icon" class="fa fa-bars fa-lg" />
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                    </t>
                                    <li>
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </li>
                                </ul>
                            </div>
                            <div class="oe_kanban_details" style='margin-top: -5px;'>
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_project_list">
                                        <H3>
                                            <a type="open">
                                                <img alt="device_image" t-att-src="kanban_image('podiatry.device', 'image_medium', record.id.value)" style="height:70px;width:70px" class="oe_avatar oe_kanban_avatar_smallbox" />
                                                <t t-if="record.code.raw_value" style="margin-right: 10px">
                                                    [
                                                    <field name="code" />
                                                    ]
                                                </t>
                                                <field name="name" />
                                            </a>
                                        </H3>
                                    </div>
                                    <div name="tags" />
                                    <ul>
                                        <li>
                                            Status:
                                            <field name="status" />
                                        </li>
                                        <li>
                                            Rate:
                                            <field name="lst_price" />
                                        </li>
                                        <li>
                                            Capacity:
                                            <field name="capacity" />
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <a t-if="record.status.raw_value === 'available'" type="object" string="Available" name="set_device_status_unavailable" class="oe_kanban_status oe_kanban_status_green ">
                                    </a>
                                    <a t-if="record.status.raw_value === 'unavailable'" type="object" string="unavailable" name="set_device_status_available" class="oe_kanban_status oe_kanban_status_red ">
                                    </a>
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
