<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Form View 1 Of Patient's Profiles -->
    <record id="view_patient_patient_form_1" model="ir.ui.view">
        <field name="name">patient.patient.form.1</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Information" create="false" delete="false">
                <header>
                    <button class="oe_highlight oe_stat_button" name="%(podiatry.action_delete_wizard)d" string="Delete" type="action" icon="fa-ban" states="done" groups="podiatry.group_podiatry_administration" />
                    <button class="oe_stat_button" name="set_archive" string="Archive" type="object" icon="fa-archive" states="done" groups="podiatry.group_podiatry_administration" />
                    <button class="oe_stat_button" icon="fa-check" name="register_done" type="object" string="Done" states="draft" groups="podiatry.group_podiatry_administration" />
                    <field name="state" widget="statusbar" statusbar_visible="archive,delete" attrs="{'invisible':[('state','=','done')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons"></div>
                    <div class="oe_inline">
                        <newline />
                        <separator string="Personal Information" />
                        <b>
                            <field name="reg_code" readonly="1" />
                        </b>
                        <br />
                        <field name="photo" widget="image" attrs="{'readonly':[('state','in',['archive','delete'])]}" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;"/>
                        <div class="oe_title">
                            <group>
                                <field name="name" placeholder="First Name" nolabel="1" required="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <br />
                                <field name="middle" placeholder="Middle Name" nolabel="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <br />
                                <field name="last" placeholder="Last Name" nolabel="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <br />
                                <field name="pid" invisible="1"/>
                            </group>
                        </div>
                    </div>
                    <group>
                        <group string="Patient Information">
                            <field name="patient_code" readonly="1" />
                            <field name="roll_no" help="Roll number of Patient" readonly="1"/>
                            <field name="year" placeholder="Year" widget="selection" help="Academic year of Patient" attrs="{'readonly':['|',('state','in',['archive','delete']),('doctor_user_grp','=',True)]}"/>
                            <field name="podiatry_id" placeholder="Practice" widget="selection" help="Practice of Patient" attrs="{'readonly':['|',('state','in',['archive','delete']),('doctor_user_grp','=',True)]}"/>
                        </group>
                        <group string="Standard Information">
                            <field name="standard_id" placeholder="Standard" readonly="1" domain="[('podiatry_id','=',podiatry_id)]" widget="selection" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="division_id" placeholder="Division" invisible="1" widget="selection" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="medium_id" placeholder="Medium" readonly="1" widget="selection" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="street" string="Address" />
                            <div class="o_address_format">
                                <field name="street" class="o_address_street" placeholder="Street..." attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="street2" class="o_address_street" placeholder="Street2..." attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="city" placeholder="City" class="o_address_city" required="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="state_id" domain="[('country_id','=',country_id)]" class="o_address_state" required="1" placeholder="State" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country,oe_no_button" options="{&quot;no_open&quot;: True}" required="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" placeholder="Phone Number" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="mobile" placeholder="Mobile Number" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="email" placeholder="Email Address" String="Email" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="website" widget="url" placeholder="e.g. www.company.com" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            <field name="doctor_user_grp" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General" name="general">
                            <group>
                                <group>
                                    <field name="cast_id" attrs="{'readonly':[('state','in',['archive','delete'])]}" widget="selection" placeholder="Religion/Caste"/>
                                    <field name="date_of_birth" widget="date" placeholder="Birthdate" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                    <field name="gender" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Gender" required="1"/>
                                    <field name="age"/>
                                </group>
                                <group>
                                    <field name="mother_tongue" attrs="{'readonly':[('state','in',['archive','delete'])]}" widget="selection" placeholder="Mother Tounge"/>
                                    <field name="register_date" widget="date" placeholder="Registry Date" attrs="{'readonly':[('state','in',['archive','delete'])]}" readonly="1"/>
                                    <field name="maritual_status" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Maritial Status"/>
                                </group>
                                <newline />
                                <separator string="Emergency Contact Details" colspan="4" />
                                <newline />
                                <group colspan="4" col="4">
                                    <field name="contact_phone" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Phone Number"/>
                                    <field name="contact_mobile" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Mobile Number"/>
                                </group>
                                <newline />
                            </group>
                            <newline/>
                            <separator string="Termination Reason" attrs="{'invisible':[('state','in',['draft','done','archive'])]}"/>
                            <group>
                                <field name="delete_reason" attrs="{'invisible':[('state','in',['draft','done','archive'])]}" readonly="1"/>
                            </group>
                        </page>
                        <page string="Parents">
                            <field name="parent_id" attrs="{'readonly':[('state','in',['archive','delete'])]}" context="{'form_view_ref':'podiatry.view_parent_form','default_parent_podiatry':1}" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </page>
                        <page string="References">
                            <field name="reference_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <tree string="Reference" editable="top">
                                    <field name="name" />
                                    <field name="middle" />
                                    <field name="last" />
                                    <field name="designation" />
                                    <field name="phone" />
                                    <field name="gender" />
                                </tree>
                                <form string="Reference">
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="First Name"/>
                                        <field name="gender"/>
                                        <field name="middle" placeholder="Middle Name"/>
                                        <field name="designation" placeholder="Designation"/>
                                        <field name="last" placeholder="Last Name"/>
                                        <field name="phone" placeholder="Phone Number"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Previous Practice">
                            <field name="previous_podiatry_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <tree string="Previous Practice Details">
                                    <field name="name" />
                                    <field name="registration_no" />
                                    <field name="register_date" />
                                    <field name="exit_date" />
                                    <field name="course_id" widget="selection" />
                                </tree>
                                <form string="Previous Practice Details">
                                    <separator string="Previous Practice Details" />
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Practice Name" />
                                        <field name="registration_no" placeholder="Registry No" />
                                        <field name="register_date" />
                                        <field name="exit_date" />
                                        <field name="course_id" widget="selection"/>
                                        <newline />
                                        <separator string="Subjects Details"/>
                                        <field name="add_sub" nolabel="1" colspan="4">
                                            <form>
                                                <group col='4' colspan="4">
                                                    <field name="name"/>
                                                    <field name="add_sub_id" />
                                                    <field name="maximum_marks" />
                                                    <field name="minimum_marks" />
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Award Info">
                            <field name="award_list" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <tree string="Reference" editable="top">
                                    <field name="name" required="1" placeholder="Name"/>
                                    <field name="description" placeholder="Description"/>
                                </tree>
                                <form string="Reference">
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Enter Name"/>
                                        <field name="description" placeholder="Enter Description"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Family Info">
                            <field name="family_con_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <form string="Family Contact Details">
                                    <group>
                                        <group>
                                            <field name="rel_name" />
                                            <field name="pt_name" placeholder="Create or Select Name" attrs="{'invisible':[('rel_name','!=','exist')]}" options="{&quot;no_create&quot;: True}"/>
                                            <field name="name" placeholder="Name" attrs="{'invisible':[('rel_name','!=','new')]}"/>
                                            <field name="relation" placeholder="Enter or select Relation" />
                                        </group>
                                        <group>
                                            <field name="phone" placeholder="Phone Number" />
                                            <field name="email" placeholder="Email ID" />
                                        </group>
                                    </group>
                                </form>
                                <tree string="Family Contact Details">
                                    <field name="relative_name"/>
                                    <field name="relation" />
                                    <field name="phone" />
                                </tree>
                            </field>
                        </page>
                        <page string="Medical">
                            <group>
                                <group string="Doctor Information">
                                    <field name="designation" placeholder="Doctor Designation" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                    <field name="doctor_phone" placeholder="Doctor's Contact No" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                </group>
                                <group string="Physical Information">
                                    <field name="blood_group" placeholder="e.g.B+,Ab+" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                    <field name="height" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Height"/>
                                    <field name="weight" attrs="{'readonly':[('state','in',['archive','delete'])]}" placeholder="Weight"/>
                                </group>
                            </group>
                            <separator string="Does the applicant have any Disabilities?" colspan="4" />
                            <group col="6" colspan="4">
                                <field name="eye" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="ear" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="nose_throat" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="respiratory" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="cardiovascular" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="neurological" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="muskoskeletal" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="dermatological" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                                <field name="blood_pressure" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            </group>
                            <separator string="Notes" colspan="4" />
                            <group col="6" colspan="4">
                                <field name="comment" placeholder="Notes About Medical.." nolabel="1" attrs="{'readonly':[('state','in',['archive','delete'])]}"/>
                            </group>
                        </page>
                        <page string="Certificates">
                            <field name="certificate_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <form string="Certificate">
                                    <group col="4">
                                        <field name="description" placeholder="Description About Certificate" />
                                        <field name="certi" />
                                    </group>
                                </form>
                                <tree string="Certifaicate" editable="top">
                                    <field name="description" required="1" placeholder="Enter Description"/>
                                    <field name="certi" required="1" placeholder="Upload Certi"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Remarks">
                            <field name="description" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['archive','delete'])]}">
                                <form string="Extra Details">
                                    <group col="4" colspan="2">
                                        <field name="name" placeholder="Field Name" />
                                        <field name="description" placeholder="Description" />
                                    </group>
                                </form>
                                <tree string="Remarks" editable="top">
                                    <field name="name" required="1" placeholder="Enter Name"/>
                                    <field name="description" placeholder="Enter Description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="History" groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_doctor,podiatry.group_podiatry_parent,podiatry.group_podiatry_patient">
                            <field name="history_ids" nolabel="1" colspan="4" readonly="1" attrs="{'readonly':[('state','in',['archive','delete'])]}" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}">
                                <tree string="History">
                                    <field name="academice_year_id" required="1"/>
                                    <field name="standard_id" required="1"/>
                                    <field name="percentage"/>
                                    <field name="result"/>
                                </tree>
                                <form string="History">
                                    <group col="4" colspan="4">
                                        <field name="academice_year_id" placeholder="Acadamic Year" />
                                        <field name="standard_id" placeholder="Select or Create Standard" />
                                        <field name="percentage" />
                                        <field name="result" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!-- Tree View 1 Of Patient's Profiles -->
    <record id="view_patient_patient_tree_1" model="ir.ui.view">
        <field name="name">patient.patient.tree.1</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient Information" create="false" delete="false">
                <field name="pid" />
                <field name="name" />
                <field name="patient_name" invisible="1" />
                <field name="year" widget="selection" />
                <field name="register_date" />
                <field name="gender" />
                <field name="state" />
                <field name="podiatry_id" />
            </tree>
        </field>
    </record>
    <!-- Search View 1 Of Patient's Profiles -->
    <record id="view_patient_patient_search_1" model="ir.ui.view">
        <field name="name">patient.patient.search.1</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <search string="Patient Information">
                <group col="10" colspan="4">
                    <field name="pid" />
                    <field name="patient_name" invisible="1" />
                    <field name="year" />
                    <field name="gender" />
                    <field name="podiatry_id" placeholder="Practice"/>
                </group>
                <newline />
                <group expand="0" string="Group By..." colspan="12" col="10">
                    <filter name="class" string="Class" help="By Class" context="{'group_by':'standard_id'}" />
                    <filter name="gender" string="Gender" help="By Gender" context="{'group_by':'gender'}" />
                    <filter name="name" string="Name" help="By Class" context="{'group_by':'patient_name'}" />
                    <filter name="podiatry" string="Practice" help="By Practice" context="{'group_by':'podiatry_id'}" />
                    <filter name="state" string="State" help="By State" context="{'group_by':'state'}"/>
                </group>
                <separator/>
                <filter name="archive" string="Archive" domain="[('state','=', 'archive')]" help="Registry In Confirm State"/>
                <filter name="delete" string="Archived" domain="[('state','=', 'delete')]" help="Registry In Pending State"/>
                <filter name="done" string="Done" domain="[('state','=', 'done')]" help="Registry In Done State"/>
                <filter name="english" string="English Medium" domain="[('medium_id.name','ilike', 'English')]" help="Registry In English Medium"/>
                <filter name="french" string="French Medium" domain="[('medium_id.name','ilike', 'French')]" help="Registry In French Medium"/>
                <filter name="urdu" string="Urdu Medium" domain="[('medium_id.name','ilike', 'Urdu')]" help="Registry In Urdu Medium"/>
            </search>
        </field>
    </record>
    <!-- Kanban View Of Patient's Profiles -->
    <record id="patient_patient_kanban_view" model="ir.ui.view">
        <field name="name">Patient KANBAN</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="standard_id" nocreate="1" create="false">
                <field name="color"/>
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="kanban_color(record.color.raw_value || record.name.raw_value)" />
                        <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td class="oe_kanban_title1" align="left" valign="middle" style="padding-left:10px;">
                                                <h4>
                                                    <a type="open">
                                                        <field name="name" />
                                                        <field name="middle" />
                                                        <field name="last" />
                                                        <field name="patient_name" invisible="1" />
                                                        <field name="standard_id" invisible="1" />
                                                        <field name="podiatry_id" invisible="1" />
                                                        <field name="gender" invisible="1" />
                                                        <field name="state" invisible="1" />
                                                    </a>
                                                </h4>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                    <table class="oe_kanban_table">
                                        <tr width="300">
                                            <td valign="top" width="64" align="left">
                                                <a type="open">
                                                    <img heigh="80" width="80" t-att-src="kanban_image('patient.patient', 'photo', record.id.raw_value)" alt="image"/>
                                                </a>
                                            </td>
                                            <td valign="top" align="left" style="padding-left:10px;">
                                                <table>
                                                    <tr>
                                                        <td>Patient ID :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="pid" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Standard : </td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="standard_id" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Registry Date : </td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="register_date" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Gender : </td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="gender" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Form View Of Patient Register Information -->
    <record id="view_patient_patient_form_2" model="ir.ui.view">
        <field name="name">patient.patient.form.2</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Register">
                <header>
                    <button class="oe_highlight oe_stat_button" name="set_delete" string="Delete" type="object" icon="fa-ban" states="done" groups="podiatry.group_podiatry_administration"/>
                    <button class="oe_stat_button" name="set_archive" string="Archive" type="object" icon="fa-archive" states="done" groups="podiatry.group_podiatry_administration" />
                    <button class="oe_stat_button" icon="fa-check" name="register_done" type="object" string="Done" states="draft" groups="podiatry.group_podiatry_administration" />
                    <button class="oe_stat_button" icon="fa-ban" name="cancel_register" type="object" string="Cancel" states="draft" groups="podiatry.group_podiatry_administration"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,cancel"/>
                </header>
                <sheet>
                    <div class="oe_inline">
                        <newline />
                        <separator string="Personal Information" />
                        <field name="photo" widget="image" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;" />
                        <div class="oe_title">
                            <group>
                                <field name="pid" nolabel="1" readonly="1"/>
                                <br />
                                <field name="name" placeholder="First Name" nolabel="1" required="1" attrs="{'readonly':[('state','=','archive')]}"/>
                                <br />
                                <field name="middle" placeholder="Middle Name" nolabel="1" attrs="{'readonly':[('state','=','archive')]}"/>
                                <br />
                                <field name="last" placeholder="Last Name" nolabel="1" attrs="{'readonly':[('state','=','archive')]}"/>
                                <br/>
                                <field name="active" invisible="1"/>
                            </group>
                        </div>
                    </div>
                    <group>
                        <group string="Practice Information">
                            <field name="podiatry_id" placeholder="Practice Name" required="1" attrs="{'readonly':[('state','=','archive')]}" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="year" widget="selection" placeholder="Academic Year" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Class Information">
                            <field name="medium_id" placeholder="Medium" widget="selection" attrs="{'readonly':[('state','=','archive')]}"/>
                            <field name="standard_id" placeholder="Class" domain="[('podiatry_id','=',podiatry_id),('medium_id','=',medium_id)]" widget="selection" attrs="{'readonly':[('state','=','archive')]}"/>
                            <field name="division_id" placeholder="Division" widget="selection" attrs="{'readonly':[('state','=','archive')]}" invisible="1"/>

                        </group>
                    </group>
                    <group colspan="4">
                        <group>
                            <label for="street" string="Address" />
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly':[('state','=','archive')]}"/>
                                <field name="street2" placeholder="Street2..." class="o_address_street" attrs="{'readonly':[('state','=','archive')]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country,oe_no_button" required="1" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','=','archive')]}"/>
                                <field name="city" placeholder="City" class="o_address_city" required="1" attrs="{'readonly':[('state','=','archive')]}"/>
                                <field name="state_id" class="o_address_state" domain="[('country_id','=',country_id)]" placeholder="State" options="{&quot;no_open&quot;: True}" required="1" attrs="{'readonly':[('state','=','archive')]}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','=','archive')]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" placeholder="Phone Number" attrs="{'readonly':[('state','=','archive')]}"/>
                            <field name="mobile" placeholder="Mobile Number" attrs="{'readonly':[('state','=','archive')]}"/>
                            <field name="email" placeholder="Email Address" String="Email" attrs="{'readonly':[('state','=','archive')]}"/>
                            <field name="website" widget="url" placeholder="e.g. www.company.com" attrs="{'readonly':[('state','=','archive')]}"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="General">
                            <form string="General">
                                <sheet>
                                    <group string="General Information">
                                        <group>
                                            <field name="gender" placeholder="Gender" attrs="{'readonly':[('state','=','archive')]}" required="1"/>
                                            <field name="date_of_birth" placeholder="Birthdate" attrs="{'readonly':[('state','=','archive')]}"/>
                                            <field name="age" />
                                        </group>
                                        <group>
                                            <field name="mother_tongue" widget="selection" placeholder="Mother Tongue" attrs="{'readonly':[('state','=','archive')]}"/>
                                            <field name="register_date" placeholder="Registry Date" attrs="{'readonly':[('state','=','archive')]}" readonly="1"/>
                                            <field name="maritual_status" placeholder="Select Maritual Status" attrs="{'readonly':[('state','=','archive')]}"/>
                                        </group>
                                        <newline />
                                        <separator string="Emergency Contact Details" colspan="4" />
                                        <newline />
                                        <group colspan="4" col="4">
                                            <field name="contact_phone" attrs="{'readonly':[('state','=','archive')]}" placeholder="Phone Number"/>
                                            <field name="contact_mobile" attrs="{'readonly':[('state','=','archive')]}" placeholder="Mobile Number"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </page>
                        <page string="Parents">
                            <field name="parent_id" attrs="{'readonly':[('state','=','archive')]}" context="{'form_view_ref':'podiatry.view_parent_form','default_parent_podiatry':1}" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </page>
                        <page string="References">
                            <field name="reference_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','archive')]}">
                                <tree string="Reference" editable="top">
                                    <field name="name" placeholder="Firstname"/>
                                    <field name="middle" placeholder="Middlename"/>
                                    <field name="last" placeholder="Surname"/>
                                    <field name="designation" placeholder="Designation"/>
                                    <field name="phone" placeholder="Phone"/>
                                    <field name="gender" placeholder="Gender"/>
                                </tree>
                                <form string="Reference">
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="First Name" required="True"/>
                                        <field name="middle" placeholder="Middle Name" />
                                        <field name="last" placeholder="Last Name" />
                                        <field name="designation" placeholder="Designation" />
                                        <field name="phone" placeholder="Phone Number" />
                                        <field name="gender" placeholder="Gender"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Previous Practice">
                            <field name="previous_podiatry_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','archive')]}">
                                <tree string="Previous Practice Details">
                                    <field name="name" />
                                    <field name="registration_no" />
                                    <field name="register_date" />
                                    <field name="exit_date" />
                                    <field name="course_id" widget="selection" />
                                </tree>
                                <form string="Previous Practice Details">
                                    <separator string="Previous Practice Details" />
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Practice Name" />
                                        <field name="registration_no" placeholder="Registry No" />
                                        <field name="register_date" placeholder="Registry Date"/>
                                        <field name="exit_date" placeholder="Exit Date"/>
                                        <field name="course_id" placeholder="Course" widget="selection"/>
                                        <newline />
                                        <separator string="Subjects Details" />
                                        <field name="add_sub" nolabel="1" colspan="4">
                                            <form>
                                                <group col='4' colspan="4">
                                                    <field name="name"/>
                                                    <field name="add_sub_id" />
                                                    <field name="maximum_marks" />
                                                    <field name="minimum_marks" />
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Family Details">
                            <field name="family_con_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','archive')]}">
                                <tree string="Family  Contact Details">
                                    <field name="relative_name"/>
                                    <field name="relation" />
                                    <field name="phone" />
                                </tree>
                                <form string="Family Contact Details">
                                    <group>
                                        <group>
                                            <field name="rel_name" placeholder="Name" />
                                            <field name="pt_name" placeholder="Create or Select Name" attrs="{'invisible':[('rel_name','!=','exist')]}" options="{&quot;no_create&quot;: True}"/>
                                            <field name="name" placeholder="Name" attrs="{'invisible':[('rel_name','!=','new')]}"/>
                                            <field name="relation" placeholder="Enter or select Relation" />
                                            <field name="relative_name" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="phone" placeholder="Phone Number" />
                                            <field name="email" placeholder="Email Address" />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Remarks">
                            <form string="Remarks">
                                <field name="remark" placeholder="Remark" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','archive')]}"/>
                            </form>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!-- Tree View Of Patient Register Information -->
    <record id="view_patient_patient_tree_2" model="ir.ui.view">
        <field name="name">patient.patient.tree.2</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient Register">
                <field name="pid" />
                <field name="name" />
                <field name="patient_name" invisible="1" />
                <field name="year" widget="selection" />
                <field name="standard_id" widget="selection" />
                <field name="podiatry_id" />
                <field name="register_date" />
                <field name="gender" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <!-- Search View Of Patient Register Information -->
    <record id="view_patient_patient_search_2" model="ir.ui.view">
        <field name="name">patient.patient.search.2</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <search string="Patient Register">
                <filter string="Draft" name="state_patient" domain="[('state','=', 'draft')]" help="Registry In Draft State" />
                <separator orientation="vertical" />
                <field name="patient_name" invisible="1" />
                <field name="year" />
                <field name="standard_id" />
                <field name="gender" />
                <field name="podiatry_id" />
                <newline />
                <group expand="0" string="Group By..." colspan="12" col="10">
                    <filter name="class" string="Class" domain="[]" help="By Class" context="{'group_by':'standard_id'}" />
                    <filter name="gender" string="Gender" domain="[]" help="By Gender" context="{'group_by':'gender'}" />
                    <filter name="name" string="Name" domain="[]" help="By Class" context="{'group_by':'patient_name'}" />
                    <filter name="podiatry" string="Practice" help="By Practice" context="{'group_by':'podiatry_id'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action Of Form, Tree & Kanban View Of Patient Register Information -->
    <record id="action_patient_patient_form_2" model="ir.actions.act_window">
        <field name="name">Patient Register</field>
        <field name="res_model">patient.patient</field>
        <field name="domain">['|',('state','=','draft'),('state','=','cancel')]</field>
        <field name="view_id" ref="view_patient_patient_form_2" />
        <field name="search_view_id" ref="view_patient_patient_search_2" />
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Action View 2 Of Kanban View Of Patient Information -->
    <record id="action_view_patient_patient_kanban_2" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field eval="21" name="sequence" />
        <field name="view_id" ref="patient_patient_kanban_view" />
        <field name="act_window_id" ref="action_patient_patient_form_2" />
    </record>

    <!-- Action View 2 Of Tree View Of Patient Information -->
    <record id="action_patient_patient_tree_2" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field eval="20" name="sequence" />
        <field name="view_id" ref="view_patient_patient_tree_2" />
        <field name="act_window_id" ref="action_patient_patient_form_2" />
    </record>

    <!-- Action Of Form, Tree & Kanban Views Of Patient Information -->
    <record id="action_patient_patient_form_12" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="domain">[('state', '=', 'done')]</field>
        <field name="context">{'search_default_done_patient':1}</field>
        <field name="res_model">patient.patient</field>
        <field name="view_id" ref="" />
        <field name="search_view_id" ref="view_patient_patient_search_1" />
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Action of Archive state -->
    <record id="action_patient_archive" model="ir.actions.act_window">
        <field name="name">Patient Archive</field>
        <field name="domain">[('active','=',False)]</field>
        <field name="res_model">patient.patient</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Action View 1 Of Kanban View Of Patient Information-->
    <record id="action_view_patient_patient_kanban_1" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field eval="31" name="sequence" />
        <field name="view_id" ref="patient_patient_kanban_view" />
        <field name="act_window_id" ref="action_patient_patient_form_12" />
    </record>
</odoo>
