<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field string="Practice" name="practice_id"/>
                <field string="Podiatrist" name="practitioner_id"/>
                <field string="Patient" name="patient_id"/>
                <field name="prescription_date" string="Prescription Date"/>
                <field name="commitment_date"/>
                <field name="po_ref"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="print_prescription_report_ticket_size" class="btn btn-success" string="Print Measure" type="object"></button>
                <button name="print_podiatry_prescription_report_ticket_size" class="btn btn-success" string="Print Prescription" type="object"></button>
                <button name="print_sale_order_report" class="btn btn-success" string="Print Sale Order" type="object" attrs="{'invisible':[('state','!=','sale')]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']" position="before">
                <button name="action_config_start" states="draft,sent" class="oe_highlight" type="object" style="margin-top: 15px;" string="Configure Product" groups="podiatry.group_product_configurator"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="config_ok" invisible="1"/>
                <field name="config_session_id"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field name="config_ok" invisible="1"/>
                <button name="reconfigure_product" groups="podiatry.group_product_configurator" help="Reconfigure" icon="fa-cogs" class="fa-lg" type="object" attrs="{
                            'invisible': [
                                '|', ('config_ok','=',False),
                                ('state','not in',['draft','sent'])
                            ]
                        }"/>
                <field name="config_session_id"/>
            </xpath>

            <xpath expr="//form//notebook//field[@name='order_line']/form/field[@name='name']" position="after">
                <div groups="podiatry.group_product_configurator">
                    <label for="custom_value_ids"/>
                    <field name="custom_value_ids">
                        <tree>
                            <field name="attribute_id"/>
                            <field name="name"/>
                            <field name="attachment_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </div>
            </xpath>

        </field>
    </record>

</odoo>