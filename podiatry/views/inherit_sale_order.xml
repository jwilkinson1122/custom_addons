<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="complete_pair_order_view" model="ir.ui.view">
        <field name="name">Complete Pair Order</field>
        <field name="model">complete.pair.order</field>
        <field name="arch" type="xml">
            <form>
                <field name="sale" invisible="1"/>
                <field name="customer_id" invisible="1"/>

                <!-- <field name="customer_id" invisible="1"/> -->
                <group>
                    <field name="prescription_id" domain="[('practitioner_id', '=', customer_id)]"/>
                    <field string="Patient" name="patient_id"/>
                </group>
                <group>
                    <field name="shell_foundation"/>
                </group>
                <group>
                    <field name="arch_height"/>
                </group>
                <group>
                    <field name="x_guard"/>
                </group>
                <group>
                    <field name="top_cover"/>
                </group>
                <group>
                    <field name="cushion"/>
                    <field name="extension"/>
                </group>
                <footer>
                    <button name="show_btn" class="oe_highlight" string="Add to Order" type="object"/>
                    <button class="oe_highlight" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="complete_pair_order_wizard" model="ir.actions.act_window">
        <field name="name">Complete Pair Order wizard</field>
        <field name="res_model">complete.pair.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="complete_pair_order_view"/>
    </record>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_view_invoice']" position="after">
                <button name="helpdesk_ticket" type="object" class="oe_stat_button" icon="fa-ticket">
                    <field name="helpdesk_tickets_count" widget="statinfo" string="Tickets"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field string="Prescription" name="prescription_id"/>
                <field string="Practice" name="practice_id"/>
                <field string="Practitioner" name="practitioner_id"/>
                <field string="Patient" name="patient_id"/>
                <field name="prescription_date" string="Prescription Date"/>
                <field name="commitment_date"/>
                <field name="po_ref"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="print_prescription_report_ticket_size" class="btn btn-success" string="Print Measure" type="object"></button>
                <button name="print_podiatry_prescription_report_ticket_size" class="btn btn-success" string="Print Prescription" type="object"></button>
                <button name="print_sale_order_report" class="btn btn-success" string="Print Sale Order" type="object" attrs="{'invisible':[('state','!=','sale')]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="helpdesk_discription_id"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page name='helpdesk_ticket' string='Helpdesk Tickets'>
                    <field name='helpdesk_tickets_ids' context="{'form_view_ref': 'helpdesk.helpdesk_ticket_action_main_tree'}"/>
                </page>
            </xpath>

            <xpath expr="//field[@name='order_line']" position="before">
                <!-- <hr/> -->
                <!-- <button name="action_config_start" states="draft,sent" class="oe_highlight" string="Configure Product" type="object" style="margin-left: 3px;" groups="podiatry.group_product_configurator"></button> -->
                <div class="oe_right">
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" type="action" string="Complete Pair"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Test1" type="action" style="margin-left: 3px;"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Test2" type="action" style="margin-left: 3px;"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Test3" type="action" style="margin-left: 3px;"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Accommodations" type="action" style="margin-left: 3px;"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Services" type="action" style="margin-left: 3px;"></button>
                    <button name="%(complete_pair_order_wizard)d" states="draft,sent" class="btn btn-info" string="Miscellaneous" type="action" style="margin-left: 3px;"></button>
                </div>
                <hr states="draft,sent"/>
            </xpath>

        </field>
    </record>

</odoo>