<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_podiatry_patient_tree" model="ir.ui.view">
        <field name="name">podiatry.patient.tree</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients" decoration-muted="not active">
                <field name="name" decoration-bf="1"/>
                <field name="practice_name"/>
                <field name="practitioner_name"/>
                <field name="reference"/>
                <field name="user_id" widget="many2one_avatar" invisible="1"/>
                <field name="active"/>
                <field name="folio_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_podiatry_patient_form" model="ir.ui.view">
        <field name="name">podiatry.patient.form</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <field name="active" invisible="1"/>
                <header>

                </header>
                <div name="alert_patient_reference_already_exists" class="alert alert-warning oe_edit_only mb16" role="alert" attrs="{'invisible': [('same_reference_patient_id', '=', False)]}">
                    A patient with the same reference already exists, are you sure you want to create a new one?
                    <br/>
                    •                    <field name="same_reference_patient_id"/>
                </div>
                <div name="alert_patient_identification_already_exists" class="alert alert-warning oe_edit_only mb16" role="alert" attrs="{'invisible': [('same_identification_patient_id', '=', False)]}">
                    A patient with the same identification already exists, are you sure you want to create a new one?
                    <br/>
                    •                    <field name="same_identification_patient_id"/>
                </div>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_folios" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <field name="folio_count" class="o_stat_value"/>
                                <span class="o_stat_text">Folios</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div name="avatar">
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
                    </div>
                    <div name="title" class="oe_title">
                        <div name="reference">
                            <h1>
                                <field name="reference"/>
                            </h1>
                        </div>
                        <div name="name">
                            <h1>
                                <field name="name" required="1" placeholder="Patient's Name"/>
                            </h1>
                        </div>
                    </div>

                    <group name="responsible" string="Responsible">
                        <group name="practice_information">
                            <field name="practice_id" required="1"/>
                        </group>
                        <group name="practitioner_information">
                            <field name="practitioner_id" required="1"/>
                        </group>
                    </group>
                    <group name="personal_contact">
                        <group name="address_information" string="Address Information">
                            <span class="o_form_label o_td_label" name="address">Address</span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                            </div>
                        </group>
                        <group name="contact_information" string="Contact Information">
                            <field name="mobile" widget="phone" help="help"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>

                    </group>
                    <notebook>
                        <page name="patient_attributes" string="Attributes">
                            <group name="attributes" string="Attributes">
                                <field name="gender"/>
                                <field name="diagnosis"/>
                            </group>
                        </page>
                        <page name="patient_measures" string="Measures">

                        </page>
                        <page name="patient_images" string="File Attachments">
                            <group name="photo_group_tlOo2">
                                <group name="photo_group_tlOo2_left">
                                    <field widget="image" options='{"size": [0, 150]}' name="image1" string="Left Image"/>
                                </group>
                                <group name="photo_group_tlOo2_right">
                                    <field widget="image" options='{"size": [0, 150]}' name="image2" string="Right Image"/>
                                </group>
                            </group>
                            <group name="obj_group_DPydw">
                                <group name="obj_group_DPydw_left">
                                    <field filename="left_obj_file_name" name="left_obj_model" string="Left Scan"/>
                                    <field invisible="1" name="left_obj_file_name"/>
                                </group>
                                <group name="obj_group_DPydw_right">
                                    <field filename="right_obj_file_name" name="right_obj_model" string="Right Scan"/>
                                    <field invisible="1" name="right_obj_file_name"/>
                                </group>
                            </group>
                        </page>
                        <page name='internal_notes' string="Patient Notes">
                            <field name="notes" placeholder="Add note..."/>
                        </page>

                        <page name="perscriptions_list" string="Folios">
                            <separator name="folios" string="Folios List"/>
                            <div name="alert_no_folios" class="oe_read_only alert alert-info mb8" role="alert" attrs="{'invisible': [('patient_folio_id', '!=', ())]}">
                                No Folios
                            </div>
                            <field name="patient_folio_id" mode="kanban"/>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                </div>
            </form>
        </field>
    </record>

