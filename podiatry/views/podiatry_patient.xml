    <!-- Activity -->
    <record id="view_podiatry_patient_activity" model="ir.ui.view">
        <field name="name">podiatry.patient.activity</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <activity string="Patients">
                <field name="id"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('podiatry.patient', 'image_128', record.id.raw_value)" role="img" t-att-title="record.id.value" t-att-alt="record.id.value"/>
                        <div>
                            <field name="name" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!--Search-->
    <record id="view_podiatry_patient_search" model="ir.ui.view">
        <field name="name">podiatry.patient.search</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <!--
                Fields
                -->
                <field name="name"/>
                <field name="identification" operator="="/>
                <field name="reference" operator="="/>
                <separator/>

                <!--
                Filters
                -->
                <separator/>
                <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>

                <!--
                Groups
                -->
                <group name="group_by" string="Group By">
                    <filter string="Practice" name="practice_id" context="{'group_by': 'practice_id'}"/>
                    <filter string="Practitioner" name="practitioner_id" context="{'group_by': 'practitioner_id'}"/>
                    <separator/>
                    <filter string="Diagnosis" name="diagnosis" context="{'group_by': 'diagnosis'}"/>
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                    <separator/>
                    <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="state_id" context="{'group_by': 'state_id'}"/>
                </group>

                <!--
                Search panel
                -->

                <searchpanel>
                    <field name="practice_id" icon="fa-hospital-o" enable_counters="1"/>
                    <field name="practitioner_id" icon="fa-user-md" enable_counters="1"/>
                    <!-- <field name="gender" icon="fa-venus-mars" enable_counters="1"/>
                    <field name="country_id" icon="fa-globe" enable_counters="1"/> -->
                </searchpanel>

            </search>
        </field>
    </record>

    <!-- Pivot -->
    <record id="view_podiatry_patient_pivot" model="ir.ui.view">
        <field name="name">podiatry.patient.pivot</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <pivot string="Patients" sample="1">
                <field name="name" invisible="1"/>
                <field name="color" invisible="1"/>
                <field name="identification" invisible="1"/>
                <field name="reference" invisible="1"/>
                <field name="mobile" invisible="1"/>
                <field name="phone" invisible="1"/>
                <field name="email" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="street" invisible="1"/>
                <field name="street2" invisible="1"/>
                <field name="zip" invisible="1"/>
                <field name="message_main_attachment_id" invisible="1"/>
            </pivot>
        </field>
    </record>

</odoo>
