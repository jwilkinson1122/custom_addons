<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="podiatry_practice_type_view_form" model="ir.ui.view">
        <field name="name">podiatry.practice.type.view.form</field>
        <field name="model">podiatry.practice.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Role">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="podiatry_practice_type_view_tree" model="ir.ui.view">
        <field name="name">podiatry.practice.type.view.tree</field>
        <field name="model">podiatry.practice.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="Account Types">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_podiatry_practice_type">
        <field name="name">Account Types</field>
        <field name="res_model">podiatry.practice.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
