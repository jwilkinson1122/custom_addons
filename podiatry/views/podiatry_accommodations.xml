<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--============ Podiatry Accommodation ============ -->
    <!-- Form view of podiatry accommodation -->
    <record id="view_podiatry_accommodations_form" model="ir.ui.view">
        <field name="name">.podiatry.accommodations.form</field>
        <field name="model">podiatry.accommodations</field>
        <field name="arch" type="xml">
            <form string="Podiatry Accommodations">
                <sheet>
                    <label for="name" string="Name" />
                    <h1>
                        <field name="name" select="1" />
                    </h1>
                    <notebook>
                        <page string="Information">
                            <group>
                                <group colspan="4" col="4">
                                    <field name="type" select="2" string="Accommodation Type" />
                                    <field name="accommodation_categ_id" string="Accommodation Category" />
                                    <field name="product_manager" select="2" string="Accommodation Manager" />
                                    <field name="uom_id" />
                                    <field name="default_code" />
                                    <field name="uom_po_id" />
                                    <field name="supplier_taxes_id" widget="many2many_tags" string="Supplier Taxes" />
                                    <field name="taxes_id" widget="many2many_tags" string="Customer Taxes" />
                                </group>
                            </group>
                        </page>
                        <page string="Procurement">
                            <group colspan="4" col="4">
                                <field name="active" select="2" />
                                <field name="list_price" />
                                <field name="cost_method" string="Cost Method" />
                                <field name="sale_ok" select="2" />
                                <field name="standard_price" />
                            </group>
                            <newline />
                            <group>
                                <separator string="Suplliers" />
                                <field name="seller_ids" colspan="4" nolabel="1" widget="one2many_list" />
                            </group>
                        </page>
                        <page string="Descriptions">
                            <separator string="Description" />
                            <field name="description" colspan="4" nolabel="1" />
                            <separator string="Sale Description" />
                            <field name="description_sale" colspan="4" nolabel="1" />
                            <separator string="Purchase Description" />
                            <field name="description_purchase" colspan="4" nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view of podiatry accommodation -->
    <record id="view_podiatry_accommodations_search" model="ir.ui.view">
        <field name="name">podiatry.accommodations.search</field>
        <field name="model">podiatry.accommodations</field>
        <field name="arch" type="xml">
            <search string="Podiatry Accommodations">
                <field name="name" />
                <field name="accommodation_categ_id" string="Accommodation Category" />
                <field name="list_price" string="Accommodation rate" />
                <newline />
            </search>
        </field>
    </record>
    <!-- Tree view of podiatry accommodation -->
    <record id="view_podiatry_accommodations_tree" model="ir.ui.view">
        <field name="name">podiatry.accommodations.tree</field>
        <field name="model">podiatry.accommodations</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="accommodation_categ_id" string="Accommodation Category" />
                <field name="list_price" string="Accommodation rate" />
            </tree>
        </field>
    </record>
</odoo>
