<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
    Form
    -->
    <record id="view_podiatry_patient_weight_form" model="ir.ui.view">
        <field name="name">podiatry.patient.weight.form</field>
        <field name="model">podiatry.patient.weight</field>
        <field name="arch" type="xml">
            <form string="Weight">
                <field name="active" invisible="1"/>
                <sheet>
                    <!--
                    Button Box
                    -->
                    <div name="button_box" class="oe_button_box"/>

                    <!--
                    Ribbons
                    -->
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <!--
                    Title
                    -->
                    <div class="oe_title">
                        <h1 name="name">
                            <field name="name" placeholder="e.g. 125 lbs"/>
                        </h1>
                    </div>

                    <!--
                    Content
                    -->
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>

                    <!--
                    Notebook
                    -->
                    <notebook>
                        <page name="notes" string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--
    Tree
    -->
    <record id="view_podiatry_patient_weight_tree" model="ir.ui.view">
        <field name="name">podiatry.patient.weight.tree</field>
        <field name="model">podiatry.patient.weight</field>
        <field name="arch" type="xml">
            <tree string="Weights" editable="top" decoration-muted="not active">
                <field name="name" decoration-bf="1"/>
                <field name="code"/>
                <field name="notes" optional="hide"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!--
    Search
    -->
    <record id="view_podiatry_patient_weight_search" model="ir.ui.view">
        <field name="name">podiatry.patient.weight.search</field>
        <field name="model">podiatry.patient.weight</field>
        <field name="arch" type="xml">
            <search string="Weights">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code" operator="="/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!--
    Action
    -->
    <record id="action_podiatry_patient_weight" model="ir.actions.act_window">
        <field name="name">Weights</field>
        <field name="res_model">podiatry.patient.weight</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_podiatry_patient_weight_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new weight
            </p>
            <p>
                Organize and manage weights at a glance.
            </p>
        </field>
    </record>

    <!--
    Submenu: Settings / Weights
    -->
    <menuitem id="menu_podiatry_patient_weight" name="Weights" parent="menu_configuration_patient" action="action_podiatry_patient_weight" groups="group_manager" sequence="30" />

</odoo>
