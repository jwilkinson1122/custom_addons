    <!-- Action: Practices-->
    <record id="action_pod_clinics" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="res_model">podiatry.practice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_practice', '=', True)]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practice_search"/>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_practice': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new practice
            </p>
            <p>
                Organize and manage practices at a glance.
            </p>
        </field>
    </record>
    <!-- Action: Contacts -->
    <record id="action_pod_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">podiatry.practitioner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!-- <field name="domain">[('is_practitioner', '=', True)]</field> -->
        <field name="domain">[]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practitioner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new practitioner
            </p>
            <p>
                Schedule and organize your practitioners efficiently.
            </p>
        </field>
    </record>

    <!-- Action: Patients-->
    <record id="action_pod_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!-- <field name="domain">[('is_patient', '=', True)]</field> -->
        <field name="search_view_id" ref="view_podiatry_patient_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new patient
            </p>
            <p>
                Schedule and organize your patients efficiently.
            </p>
        </field>
    </record>

    <!-- Action for podiatry device type -->
    <record id="open_podiatry_device_type_form_tree" model="ir.actions.act_window">
        <field name="name">Device Type</field>
        <field name="res_model">podiatry.device.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device items type -->
    <record id="action_podiatry_device_items_type_view_form" model="ir.actions.act_window">
        <field name="name">Items Type</field>
        <field name="res_model">podiatry.device.items.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device items -->
    <record id="action_podiatry_device_items_view_form" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">podiatry.device.items</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_categ_id':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_items_list" />
    </record>
    <!-- Action for podiatry device -->
    <record id="action_podiatry_device_form" model="ir.actions.act_window">
        <field name="name">Device</field>
        <field name="res_model">podiatry.device</field>
        <field name="context">{'default_is_custom_device':1,'default_rental':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_tree" />
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Action for podiatry prescription -->
    <record id="open_podiatry_prescription1_form_tree_all" model="ir.actions.act_window">
        <field name="name">Generate Prescription</field>
        <field name="res_model">podiatry.prescription</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'prescription': True}</field>
    </record>
    <!-- Action for podiatry accommodation type -->
    <record id="open_podiatry_accommodation_type_form_tree" model="ir.actions.act_window">
        <field name="name">Accommodation Type</field>
        <field name="res_model">podiatry.accommodation.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry accommodation -->
    <record id="action_podiatry_accommodations_form" model="ir.actions.act_window">
        <field name="name">Accommodations</field>
        <field name="res_model">podiatry.accommodations</field>
        <field name="context">{'default_is_accommodation':1,'default_available_in_pos':0}
        </field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
