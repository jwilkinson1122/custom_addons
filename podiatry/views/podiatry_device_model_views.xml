<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='podiatry_device_model_view_form' model='ir.ui.view'>
        <field name="name">podiatry.device.model.form</field>
        <field name="model">podiatry.device.model</field>
        <field name="arch" type="xml">
            <form string="Model">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_model_device" type="object" icon="fa-device" class="oe_stat_button" attrs="{'invisible': [('device_count', '=', 0)]}">
                            <field name="device_count" widget="statinfo" string="Devices"/>
                        </button>
                    </div>
                    <field name="image_128" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Model S"/>
                        </h1>
                        <label for="line_id"/>
                        <h2>
                            <field name="line_id" placeholder="e.g. Tesla"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="device_type"/>
                            <field name="category_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information" name="information">
                            <group>
                                <group string="Model" attrs="{'invisible': [('device_type', '!=', 'device')]}">
                                    <field name="pairs"/>
                                    <field name="doors"/>
                                    <field name="color"/>
                                </group>
                            </group>
                            <group string="Patient Info" attrs="{'invisible': [('device_type', '!=', 'device')]}">
                                <group>
                                    <field name="default_device_type" required="1"/>
                                    <field name="arch_height"/>
                                </group>
                                <group>
                                    <label for="patient_height"/>
                                    <div class="o_row">
                                        <field name="patient_height"/>
                                        <span>ft/ins</span>
                                    </div>
                                    <field name="patient_weight"/>
                                    <label for="patient_weight"/>
                                    <div class="o_row">
                                        <field name="patient_weight"/>
                                        <span>lbs</span>
                                    </div>
                                    <field name="patient_weight"/>
                                </group>
                            </group>
                        </page>
                        <page string="Vendors" name="vendors">
                            <field name="vendors">
                                <kanban quick_create="false" create="true">
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div style="position: relative" class="oe_kanban_global_click">
                                                <div>
                                                    <div class="o_kanban_record_title">
                                                        <field name="name"/>
                                                        <div class="o_kanban_details float-right">
                                                            <span class="text-muted">
                                                                <t t-if="record.phone.raw_value">
                                                                    <field name="phone"/>
                                                                    <br/>
                                                                </t>
                                                                <t t-if="record.email.raw_value">
                                                                    <field name="email"/>
                                                                </t>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='podiatry_device_model_view_tree' model='ir.ui.view'>
        <field name="name">podiatry.device.model.tree</field>
        <field name="model">podiatry.device.model</field>
        <field name="arch" type="xml">
            <tree string="Models">
                <field name="line_id" />
                <field name="name" />
                <field name="device_count" string="Devices"/>
                <field name="category_id" optional="show"/>
                <field name="device_type" optional="show"/>
            </tree>
        </field>
    </record>

    <record id='podiatry_device_model_view_kanban' model='ir.ui.view'>
        <field name="name">podiatry.device.model.kanban</field>
        <field name="model">podiatry.device.model</field>
        <field name="arch" type="xml">
            <kanban string="Models">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div>
                                <field name="line_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='podiatry_device_model_view_search' model='ir.ui.view'>
        <field name="name">podiatry.device.model.search</field>
        <field name="model">podiatry.device.model</field>
        <field name="arch" type="xml">
            <search string="Devices costs">
                <field name="line_id" />
                <group expand="1" string="Group By">
                    <filter name="groupby_line" context="{'group_by' : 'line_id'}" string="Contains Devices"/>
                </group>
            </search>
        </field>
    </record>

    <record id='podiatry_device_model_action' model='ir.actions.act_window'>
        <field name="name">Device Models</field>
        <field name="res_model">podiatry.device.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_groupby_line" : True,}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new model
            </p>
            <p>
            You can define several models (e.g. A3, A4) for each make (Audi).
            </p>
        </field>
    </record>

    <menuitem name="Podiatry" id="menu_root" sequence="220" groups="podiatry_group_user" web_icon="podiatry,static/description/icon.png"/>
    <menuitem name="Configuration" parent="menu_root" id="podiatry_configuration" sequence="100" groups="podiatry_group_manager"/>

    <record id='podiatry_device_model_line_view_tree' model='ir.ui.view'>
        <field name="name">podiatry.device.model.line.tree</field>
        <field name="model">podiatry.device.model.line</field>
        <field name="arch" type="xml">
            <tree string="Model Make">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id='podiatry_device_model_line_view_form' model='ir.ui.view'>
        <field name="name">podiatry.device.model.line.form</field>
        <field name="model">podiatry.device.model.line</field>
        <field name="arch" type="xml">
            <form string="Model Make">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_line_model" type="object" icon="fa-device" class="oe_stat_button" attrs="{'invisible': [('model_count', '=', 0)]}">
                            <field name="model_count" widget="statinfo" string="Models"/>
                        </button>
                    </div>
                    <group>
                        <div>
                            <field name="image_128" widget="image" class="oe_avatar"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='podiatry_device_model_line_view_kanban' model='ir.ui.view'>
        <field name="name">podiatry.device.model.linekanban</field>
        <field name="model">podiatry.device.model.line</field>
        <field name="arch" type="xml">
            <kanban default_order="name">
                <field name="id"/>
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-deviceet btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="open" class="dropdown-item">Properties</a>
                                </div>
                            </div>
                            <div class="o_kanban_image">
                                <img alt="img" t-att-src="kanban_image('podiatry.device.model.line', 'image_128', record.id.raw_value)" class="o_image_64_max" height="52"/>
                            </div>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <div>
                                    <a type="object" name="action_line_model" class="oe_kanban_podiatry_model"/>
                                    <field name="model_count"/>
 MODELS
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="podiatry_device_model_line_view_search" model="ir.ui.view">
        <field name="name">podiatry.device.model.line.view.search</field>
        <field name="model">podiatry.device.model.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="With Models" name="with_models" domain="[('model_count', '>', 0)]"/>
            </search>
        </field>
    </record>

    <record id='podiatry_device_model_line_action' model='ir.actions.act_window'>
        <field name="name">Manufacturers</field>
        <field name="res_model">podiatry.device.model.line</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new manufacturer
            </p>
        </field>
    </record>

    <!-- Model Category -->
    <record id='podiatry_device_model_category_action' model='ir.actions.act_window'>
        <field name="name">Model Category</field>
        <field name="res_model">podiatry.device.model.category</field>
        <field name="view_mode">tree</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">
                Create a new category
            </p>
        </field>
    </record>

    <record id="podiatry_device_model_category_view_tree" model="ir.ui.view">
        <field name="name">podiatry.device.model.category.view.tree</field>
        <field name="model">podiatry.device.model.category</field>
        <field name="arch" type="xml">
            <tree string="Model Category" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="podiatry_device_model_category_view_form" model="ir.ui.view">
        <field name="name">podiatry.device.model.category.view.form</field>
        <field name="model">podiatry.device.model.category</field>
        <field name="arch" type="xml">
            <form string="Model Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem action="podiatry_device_model_line_action" parent="podiatry_configuration" id="podiatry_device_model_line_menu" sequence="2"/>
    <menuitem action="podiatry_device_model_action" parent="podiatry_configuration" id="podiatry_device_model_menu" sequence="2"/>
    <menuitem action="podiatry_device_model_category_action" parent="podiatry_configuration" id="podiatry_device_model_category_menu" sequence="2"/>
</odoo>
