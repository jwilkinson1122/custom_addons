<?xml version="1.0" ?>
<odoo>
    <record id="sale_order_form_config" model="ir.ui.view">
        <field name="name">sale.order.form.config</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('is_company', '=', True)]</attribute>
                <field string="Practitioner" name="practitioner_id"/>

            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <button class="oe_highlight" groups="podiatry.group_product_configurator" name="action_config_start" states="draft,sent" string="Configure Product" style="margin-top: 15px;" type="object" />
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field invisible="1" name="config_ok" />
                <field name="config_session_id" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field invisible="1" name="config_ok" />
                <button attrs="{'invisible': ['|', ('config_ok','=',False), ('state','not in',['draft','sent'])]}" class="fa-lg" groups="podiatry.group_product_configurator" help="Reconfigure" icon="fa-cogs" name="reconfigure_product" type="object" title="Reconfigure" />
                <field name="config_session_id" />
            </xpath>
            <!-- <xpath expr="//field[@name='partner_id']" position="after">
                <field string="Practice" name="practice_id"/>
                <field string="Practitioner" name="practitioner_id"/>
                <field string="Patient" name="patient_id"/>
            </xpath> -->
            <xpath expr="//header" position="inside">
                <button name="print_prescription_report_ticket_size" class="btn btn-success" string="Print RX" type="object"></button>
                <button name="print_prescription_report_ticket_size" class="btn btn-success" string="Print WO" type="object"></button>
                <button name="print_sale_order_report" class="btn btn-success" string="Print Orders" type="object" attrs="{'invisible':[('state','!=','sale')]}"/>
                <!-- <button name="print_purchase_order_report" class="btn btn-success" string="Print Purchase Order" type="object" attrs="{'invisible':[('state','!=','sale'),('po_ref','=',False)]}"/> -->

            </xpath>
        </field>
    </record>
</odoo>
