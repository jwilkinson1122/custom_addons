<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_view_clinics_from_partner" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.podiatry</field>
        <field name="context">{'default_partner_id': active_id}</field>
        <field name="domain">[('partner_id', '=', active_id)]</field>
    </record>

    <record id="inherit_view_partner_tree" model="ir.ui.view">
			<field name="name">inherit.partner.tree</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_tree"/>
			<field name="arch" type="xml">
				<field name="display_name" position="after">
					<field name="code"/>
				</field>
			</field>
		</record>

    <!-- Form -->
    <record id="inherit_view_partner_form" model="ir.ui.view">
        <field name="name">inherit.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@id='individual']" position="after">
					<field name="code"/>
			</xpath>
            <xpath expr="//span[@name='address_name']" position="inside">
                <b attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'sale')]}">Sale Contact Address</b>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="after">
                <field name="is_clinic" />
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="More Info" string="More Info">
                    <field name="info_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="info_name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="clinic_ids" invisible="1"/>
                <button type="action" name="%(action_view_clinics_from_partner)d" class="oe_stat_button" icon="fa-user">
                    <field name="clinics_count" string="Clinics" widget="statinfo"/>
                </button>
            </xpath>
            <!-- <group name="sale" position="inside">
                <field name="sale_type" />
            </group> -->
        </field>
    </record>

    <!-- Search -->
    <record id="inherit_search_view_partner_form" model="ir.ui.view">
        <field name="name">inherit.search.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Clinics" name="is_clinic" domain="[('is_clinic', '=', True)]" />
                <separator/>
            </xpath>
        </field>
    </record>

    <!-- Action > TODO: Add integration with the Contacts module -->
    <record id="action_res_partner_clinics" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="context">{'search_default_is_clinic': True}</field>
    </record>

    <!-- <menuitem id="menu_res_partners" name="Contacts" action="action_res_partner_patients" parent="podiatry.menu_configuration_root" sequence="20"/> -->

</odoo>
