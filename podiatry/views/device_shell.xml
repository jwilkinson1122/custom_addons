<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="device_shell_form" model="ir.ui.view">
        <field name="name">device.shell.form</field>
        <field name="model">device.shell</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="device_foundation"></field>
                            <field name="collection"></field>
                            <field name="currency_id" invisible="1"></field>
                            <field name="price"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="device_shell_tree" model="ir.ui.view">
        <field name="name">device.shell.tree</field>
        <field name="model">device.shell</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="device_foundation"></field>
                <field name="collection"></field>
                <field name="currency_id" invisible="1"></field>
                <field name="price"></field>
            </tree>
        </field>
    </record>
    <!--    Action of device menu-->
    <record model="ir.actions.act_window" id="device_action">
        <field name="name">Device Shell/Foundation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">device.shell</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[('is_prescription', '=', True)]</field> -->
        <field name="domain">[]</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create  device shell/foundation
            </p>
            <p>
                    You can create device shell/foundation here.
            </p>
        </field>
    </record>

</odoo>