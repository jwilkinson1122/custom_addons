<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="podiatry_specialty_view_form" model="ir.ui.view">
        <field name="name">podiatry.specialty.form</field>
        <field name="model">podiatry.specialty</field>
        <field name="arch" type="xml">
            <form string="Medical Specialty">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="podiatry_specialty_view_tree" model="ir.ui.view">
        <field name="name">podiatry.specialty.tree</field>
        <field name="model">podiatry.specialty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="podiatry_specialty_view_search" model="ir.ui.view">
        <field name="name">podiatry.specialty.search</field>
        <field name="model">podiatry.specialty</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="podiatry_specialty_action" model="ir.actions.act_window">
        <field name="name">Specialties</field>
        <field name="res_model">podiatry.specialty</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="podiatry_specialty_menu" name="Specialties" parent="podiatry_conf_practitioner_menu" action="podiatry_specialty_action" sequence="30"/>
</odoo>
