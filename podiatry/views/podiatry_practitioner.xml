                            <span class="fa fa-long-arrow-right" role="img"></span>
                            <field name="practice_id" placeholder="Company Name" widget="res_partner_many2one" required="1" readonly="not context.get('can_edit_parent_id', True)"/>
                        </div>
                    </div>
                    <group style="margin:20px;">
