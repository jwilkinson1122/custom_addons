    <!--
    Tree
    -->
    <record id="view_podiatry_practitioner_tree" model="ir.ui.view">
        <field name="name">podiatry.practitioner.tree</field>
        <field name="model">podiatry.practitioner</field>
        <field name="arch" type="xml">
            <tree string="Contacts" decoration-muted="not active">
                <field name="name" decoration-bf="1"/>
                <field name="reference" optional="hide"/>
                <field name="mobile" widget="phone" optional="show"/>
                <field name="phone" widget="phone" optional="show"/>
                <field name="email" widget="email" optional="show"/>
                <field name="user_id" widget="many2one_avatar" optional="show"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Kanban -->
    <record id="view_podiatry_practitioner_kanban" model="ir.ui.view">
        <field name="name">podiatry.practitioner.kanban</field>
        <field name="model">podiatry.practitioner</field>
        <field name="arch" type="xml">
            <kanban string="Contacts" class="o_res_partner_kanban">
                <field name="id"/>
                <field name="color"/>
                <field name="reference"/>
                <field name="name"/>
                <field name="title"/>
                <field name="email"/>
                <field name="is_practitioner"/>
                <field name="practice_id"/>
                <field name="phone"/>
                <field name="street"/>
                <field name="street2"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="state_id"/>
                <field name="category_id"/>
                <field name="avatar_128"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="!record.is_practitioner.raw_value">
                                <t t-set="background_image" t-value="kanban_image('podiatry.practitioner', 'avatar_128', record.id.raw_value)"/>
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{background_image}')">
                                    <img class="o_kanban_image_inner_pic" t-if="record.raw_value" t-att-alt="record.value" t-att-src="kanban_image('podiatry.practitioner', 'avatar_128', record.raw_value)"/>
                                </div>
                                <div class="o_kanban_image d-md-none" t-attf-style="background-image: url(#{background_image})">
                                    <img class="o_kanban_image_inner_pic" t-if="record.raw_value" t-att-alt="record.value" t-att-src="kanban_image('podiatry.practitioner', 'avatar_128', record.raw_value)"/>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('podiatry.practitioner', 'avatar_128', record.id.raw_value)})" role="img"/>
                            </t>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li>ID : 
                                        <field name="reference"/>
                                    </li>
                                    <li>Practice : 
                                        <field name="practice_id"/>
                                    </li>
                                    <li t-if="record.city.raw_value or record.country_id.raw_value">
                                        <t t-if="record.city.raw_value">
                                            <field name="city"/>
                                            <t t-if="record.country_id.raw_value">, </t>
                                        </t>
                                        <t t-if="record.country_id.raw_value">
                                            <field name="country_id"/>
                                        </t>
                                    </li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow">
                                        <field name="email"/>
                                    </li>
                                    <li>Prescriptions: 
                                        <field name="prescription_count"/>
                                    </li>
                                </ul>
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--
    Activity
    -->
    <record id="view_podiatry_practitioner_activity" model="ir.ui.view">
        <field name="name">podiatry.practitioner.activity</field>
        <field name="model">podiatry.practitioner</field>
        <field name="arch" type="xml">
            <activity string="Contacts">
                <field name="id"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('podiatry.practitioner', 'image_128', record.id.raw_value)" role="img" t-att-title="record.id.value" t-att-alt="record.id.value"/>
                        <div>
                            <field name="name" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!--
    Search
    -->
    <record id="view_podiatry_practitioner_search" model="ir.ui.view">
        <field name="name">podiatry.practitioner.search</field>
        <field name="model">podiatry.practitioner</field>
        <field name="arch" type="xml">
            <search string="Contacts">
                <!--
                Fields
                -->
                <field name="name"/>
                <field name="reference" operator="="/>

                <separator/>

                <!--
                Filters
                -->
                <separator/>
                <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>

                <!--
                Groups
                -->
                <group name="group_by" string="Group By">
                    <filter string="Practice" name="practice_id" context="{'group_by': 'practice_id'}"/>
                    <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"/>
                    <filter string="State" name="state_id" context="{'group_by': 'state_id'}"/>
                </group>

                <!--
                Search panel
                -->

                <searchpanel>
                    <field name="practice_id" icon="fa-hospital-o" enable_counters="1"/>
                    <field name="country_id" icon="fa-globe" enable_counters="1"/>
                </searchpanel>

            </search>
        </field>
    </record>

    <!--
    Action: Contacts
    -->
    <record id="action_pod_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">podiatry.practitioner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!-- <field name="domain">[('is_practitioner', '=', True)]</field> -->
        <field name="domain">[]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practitioner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new practitioner
            </p>
            <p>
                Schedule and organize your practitioners efficiently.
            </p>
        </field>
    </record>

    <!--
        =========
        Reporting
        =========
    -->

    <record id="view_podiatry_practitioner_pivot" model="ir.ui.view">
        <field name="name">podiatry.practitioner.pivot</field>
        <field name="model">podiatry.practitioner</field>
        <field name="arch" type="xml">
            <pivot string="Contacts" sample="1">
                <field name="name" invisible="1"/>
                <field name="color" invisible="1"/>
                <field name="reference"/>
                <field name="mobile" invisible="1"/>
                <field name="phone" invisible="1"/>
                <field name="email" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="street" invisible="1"/>
                <field name="street2" invisible="1"/>
                <field name="zip" invisible="1"/>
                <field name="message_main_attachment_id" invisible="1"/>
            </pivot>
        </field>
    </record>

    <!--
    Action
    -->
    <record id="action_pod_contacts_report" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">podiatry.practitioner</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="view_podiatry_practitioner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No practitioners
            </p>
            <p>
                Create a practitioner to begin.
            </p>
        </field>
    </record>

