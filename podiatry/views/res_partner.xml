    </record>

    <record id="action_pod_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="context">{'res_partner_search_mode': 'person', 'default_company_type':'person', 'default_is_company':False, 'default_is_practitioner': True}</field>
        <field name="search_view_id" ref="view_res_partner_search"/>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
          (0, 0, {'view_mode': 'kanban', 'view_id': ref('base.res_partner_kanban_view')}),
          (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_partner_tree')}),
          (0, 0, {'view_mode': 'form', 'view_id': ref('view_partner_contact_form')})]" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
