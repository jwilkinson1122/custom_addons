    <!-- Form -->
    <record id="view_res_partner_form_inherit_podiatry" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.podiatry</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="groups_id" eval="[(4, ref('group_medical_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="after">
                <group colspan="6" col="6">
                    <field name="is_patient" />
                    <field name="is_practitioner" />
                    <field name="is_practice" />
                </group>
            </xpath>
            <!-- <notebook>
                <page string="Medical">
                    <group colspan="6" col="6">
                        <field name="is_patient" />
                        <field name="is_practitioner" />
                        <field name="is_practice" />
                    </group>
                </page>
            </notebook> -->
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="More Info" string="More Info">
                    <field name="info_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="info_name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">

                <!-- <button type="action" name="%(action_pod_patient_from_partner)d" class="oe_stat_button" icon="fa-users" context="{'target_partner_id': active_id}" attrs="{'invisible': [('is_practice', '=', False), ('patient_count', '=', 0)]}">
