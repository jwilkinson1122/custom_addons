                </button> -->
            </xpath>
        </field>
    </record>

    <!-- Search -->
    <record id="view_res_partner_search_inherit_podiatry" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.podiatry</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="groups_id" eval="[(4, ref('group_medical_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Patients" name="is_patient" domain="[('is_patient', '=', True)]" />
                <separator/>
            </xpath>
        </field>
    </record>

