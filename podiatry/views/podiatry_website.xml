<?xml version="1.0"?>
<odoo>

    <template id="website_sale_product_inherit_device_prescription" inherit_id="website_sale.product">
        <xpath expr="//section" position="inside">
            <table class="table table-striped" t-if="product_variant.is_custom_device">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Model</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="product_variant.prescription_device_ids" t-as="product_line">
                        <tr t-if="product_line.is_custom_device">
                            <th scope="row">
                                <span t-field="product_line.name"/>
                            </th>
                            <td>
                                <span t-field="product_line.name"/>
                            </td>
                            <td>
                                <span t-field="product_line.model"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>

