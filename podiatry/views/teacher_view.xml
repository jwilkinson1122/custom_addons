<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- search View Of Teahcer's Profiles -->
        <record id="view_podiatry_teacher_search" model="ir.ui.view">
            <field name="name">podiatry.teacher.search</field>
            <field name="model">podiatry.teacher</field>
            <field name="arch" type="xml">
                <search string="Partners">
                    <field name="name" string="Partners" filter_domain="['|',('email','ilike',self),('name','ilike',self)]"/>
                    <field name="department_id"/>
                    <field name="category_ids" groups="base.group_user"/>
                    <field name="role_id"/>
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter name="class" string="Class" domain="[]" context="{'group_by':'standard_id'}"/>
                        <filter name="manager" string="Manager" domain="[]" context="{'group_by':'parent_id'}"/>
                        <filter name="assistant" string="Assistant" domain="[]" context="{'group_by':'assistant_id'}"/>
                        <filter name="department" string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter name="job" string="Job" domain="[]" context="{'group_by':'role_id'}"/>
                        <filter name="partner" string="Partner" domain="[]" context="{'group_by':'partner_id'}" groups="base.group_multi_partner"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="podiatry_teacher_kanban_view" model="ir.ui.view">
            <field name="name">Teacher KANBAN</field>
            <field name="model">podiatry.teacher</field>
            <field name="arch" type="xml">
                <kanban nocreate="1" create="false">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <field name="avatar_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"/>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="name" />
                                        </strong>
                                        <div class="o_kanban_tags_section oe_kanban_partner_categories" />
                                        <ul>
                                            <li t-if="record.clinic_id.raw_value"><field name="clinic_id" /></li>
                                            <li t-if="record.role_id.raw_value"><field name="role_id" /></li>
                                            <li t-if="record.phone.raw_value"><field name="phone" /></li>
                                            <li t-if="record.email.raw_value"><field name="email" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- tree View Of Teahcer's Profiles -->
        <record id="view_podiatry_teacher_tree" model="ir.ui.view">
            <field name="name">podiatry.teacher.tree</field>
            <field name="model">podiatry.teacher</field>
            <field name="arch" type="xml">
                <tree string="Faculty" decoration-bf="message_needaction==True">
                    <field name="name"/>
                    <field name="phone" invisible="1"/>
                    <field name="phone_numbers"/>
                    <field name="email"/>
                    <field name="partner_id" groups="base.group_multi_partner"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    <field name="department_id"/>
                    <field name="role_id"/>
                    <field name="parent_id"/>
                    <field name="manager_id"/>
                    <field name="address_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of Teahcer's Profiles -->
        <record id="view_podiatry_teacher_form" model="ir.ui.view">
            <field name="name">podiatry.teacher.form</field>
            <field name="model">podiatry.teacher</field>
            <field name="arch" type="xml">
                <form string="Faculty">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Teacher's Name" required='1'/>
                            </h1>
                        </div>
                        <field name="category_ids" widget="many2many_tags" placeholder="e.g. Part Time" groups="base.group_user"/>
                        <group>
                            <field name="standard_id" widget="selection"/>
                            <!-- <field name="standard_ids" required="1" widget="many2many_tags"/> -->
                            <field name="subject_id" required="1" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="clinic_id" required="1" widget="selection"/>
                        </group>
                        <group>
                            <field name="is_parent" widget="boolean_toggle"/>
                            <field name='stu_parent_id'
                                attrs="{'invisible':[('is_parent','=',False)],'required': [('is_parent','!=',False)]}"/>
                        </group>
                        <notebook>
                            <page name="public" string="Public Information">
                                <group>
                                    <group string="Contact Information">
                                        <field name="address_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}" string="Work Address"/>
                                        <field name="location_id" />
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="phone" invisible="1"/>
                                        <field name="phone_numbers"/>
                                        <field name="mobile" />
                                        
                                        <field name="email" widget="email" required="1"/>
                                        
                                    </group>
                                    <group string="Position">
                                        <field name="department_id"/>
                                        <field name="role_id"/>
                                        <field name="parent_id"/>
                                        <field name="manager_id"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Personal Information" groups="base.group_user">
                                <group>
                                    <group string="Citizenship &amp; Other Information">
                                        <field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        <field name="identification_id" groups="base.group_user"/>
                                    </group>
                                    <group string="Contact Information">
                                        <field name="personal_address_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                                    </group>
                                    <group string="Status">
                                        <field name="gender"/>
                                    </group>
                                    <group string="Birth">
                                        <field name="birthday"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Children" attrs="{'invisible': [('is_parent','=', False)]}">
                                 <field name="student_id" domain="[('state', '=', 'done')]"/>
                            </page>
                            <page string="Settings" groups="base.group_user" invisible="1">
                                <group>
                                    <group string="Status" name="active_group">
                                        <field name="partner_id" groups="base.group_multi_partner"/>
                                        <field name="user_id" string="Related User" context="{'default_groups_ref': ['base.group_user']}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action View Of podiatry teacher-->

        <record id="action_podiatry_teacher_form" model="ir.actions.act_window">
            <field name="name">Teacher Profile</field>
            <field name="res_model">podiatry.teacher</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem id="teacher_profile_menu" name="Teachers" action="action_podiatry_teacher_form" 
                  parent="menu_students_parents" sequence="32"
                  groups="podiatry.group_podiatry_administration,podiatry.group_podiatry_teacher"/>

    </data>
</odoo>
