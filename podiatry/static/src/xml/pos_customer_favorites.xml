<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="ProductsWidgetControlPanel" t-inherit="point_of_sale.ProductsWidgetControlPanel" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('products-widget-control')]//div[hasclass('rightpane-header')]" position="inside">
            <div class="wk_customer_favorites" t-on-click="wk_toggle_customer_fav_list">
               <img class="diselect_fav" src="/pos_customer_favorites/static/description/diselect_fav.png" width="35px" height="35px" />
               <img class="select_fav" src="/pos_customer_favorites/static/description/select_fav.png" width="35px" height="35px" />  
            </div>
        </xpath>
    </t>
    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('searchbox-client') and hasclass('top-content-center')]" position="after">
            <span class='button wk_show_customer_favorite' t-on-click="wk_show_customer_favorite">
                <img src="/pos_customer_favorites/static/description/select_fav.png" width="35px" height="35px" />
            </span>
        </xpath>
    </t>
</templates>