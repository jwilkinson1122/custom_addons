    <record id="group_option_management" model="res.groups">
        <field name="name">Option Management</field>
    </record> -->

    <record id="base.group_erp_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_medical_configurator'))]"/>
