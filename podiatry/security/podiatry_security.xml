<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">

        <record id="module_category_podiatry" model="ir.module.category">
            <field name="name">Podiatry Management</field>
            <field name="sequence">22</field>
        </record>

        <record id="group_podiatry_administration" model="res.groups">
            <field name="name">Podiatry Administrator</field>
            <field name="category_id" ref="module_category_podiatry"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_podiatry_teacher" model="res.groups">
            <field name="name">Podiatry Teacher</field>
            <field name="category_id" ref="module_category_podiatry"/>
        </record>

        <record id="group_podiatry_student" model="res.groups">
            <field name="name">Podiatry Student</field>
            <field name="category_id" ref="module_category_podiatry"/>
        </record>

        <record id="group_podiatry_parent" model="res.groups">
            <field name="name">Student Parent</field>
            <field name="category_id" ref="module_category_podiatry"/>
        </record>

        <record id="group_is_admission" model="res.groups">
            <field name="name">In Admission</field>
            <field name="category_id" ref="module_category_podiatry"/>
        </record>

        <!-- Rule For Creating Personal Podiatry Record As A Teacher, Student & Parent-->

        <record id="rule_personal_podiatry_record" model="ir.rule">
            <field name="name">Rule Personal Podiatry Record</field>
            <field name="model_id" ref="model_podiatry_podiatry"/>
            <field name="domain_force">['|','|',('partner_id.child_ids', 'child_of', [user.partner_id.id]),('partner_id', 'child_of', [user.partner_id.id]),('partner_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_teacher')),(4, ref('group_podiatry_student')),(4, ref('group_podiatry_parent'))]"/>
        </record>

        <!-- Rule For Student Profile Record As A Student -->

        <record id="rule_student_profile_record_as_student" model="ir.rule">
            <field name="name">Rule Student Profile Record As A Student</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_student'))]"/>
        </record>

        <!-- Rule For Student Profile Record As An Administrator -->

        <record id="rule_student_profile_record_as_admin" model="ir.rule">
            <field name="name">Rule Student Profile Record As An Administrator</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force"> ['|','|',('partner_id.child_ids','child_of',[user.partner_id.id]),('partner_id','child_of',[user.partner_id.id]),('partner_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_administration'))]"/>
        </record>

        <!-- Rule For Student Profile Record As A Teacher -->

        <record id="rule_student_profile_record_as_teacher" model="ir.rule">
            <field name="name">Rule Student Profile Record As A Teacher</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_teacher'))]"/>
        </record>

        <!-- Rule For Student Profile Record As A Parent -->

<!--         <record id="rule_student_profile_record_as_parent" model="ir.rule"> -->
<!--             <field name="name">Rule Student Profile Record As A Parent</field> -->
<!--             <field name="model_id" ref="model_student_student"/> -->
<!--             <field name="global" eval="True"/> -->
<!--             <field name="domain_force"> [('id','in', user.partner_id.student_ids.ids)]</field> -->
<!--             <field name="groups" eval="[(4, ref('group_podiatry_parent'))]"/> -->
<!--         </record> -->
        
        <record id="rule_student_profile_record_as_parent" model="ir.rule">
            <field name="name">Rule Student Profile Record As A Parent</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force"> [('parent_id.partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_parent'))]"/>
        </record>

        <!-- Rule For Podiatry Standard Record As An Administrator -->

        <record id="rule_podiatry_standard_record_as_admin" model="ir.rule">
            <field name="name">Rule Podiatry Standard Record As An Administrator</field>
            <field name="model_id" ref="model_podiatry_standard"/>
            <field name="global" eval="True"/>
            <field name="domain_force"> ['|','|',('cmp_id.child_ids','child_of',[user.partner_id.id]),('cmp_id','child_of',[user.partner_id.id]),('cmp_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_administration'))]"/>
        </record>
        <!-- Record Rule teacher can see standards related to podiatry -->
        <record id="rule_podiatry_standard_teacher" model="ir.rule">
            <field name="name">Teacher Podiatry Standard Record Rule</field>
            <field name="model_id" ref="model_podiatry_standard"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('podiatry_id.partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_podiatry_teacher'))]"/>
        </record>

        <!-- Rule For News Update Record As A Student & Teacher -->
        <record id="rule_student_news_update_record" model="ir.rule">
            <field name="name">Rule News Update Record</field>
            <field name="model_id" ref="model_student_news"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('user_ids.id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('podiatry.group_podiatry_student')),(4, ref('podiatry.group_podiatry_teacher'))]"/>
        </record>

        <!-- Record Rule parents can see reminder of own child -->
        <record id="parents_reminder_record_rule" model="ir.rule">
            <field name="name">Parents Reminder Record Rule</field>
            <field name="model_id" ref="model_student_reminder"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('stu_id.parent_id.partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('podiatry.group_podiatry_parent'))]"/>
        </record>

        <!-- Record Rule student can see reminder of their own  -->
        <record id="student_reminder_record_rule" model="ir.rule">
            <field name="name">Student Remainder Record Rule</field>
            <field name="model_id" ref="model_student_reminder"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('stu_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('podiatry.group_podiatry_student'))]"/>
       </record>
       
       <!--  Rule For Podiatry Teacher -->
<!--        <record id="rule_podiatry_teacher_own" model="ir.rule"> -->
<!--            <field name="name">Rule Podiatry Teacher Self</field> -->
<!--            <field name="model_id" ref="hr.model_partner"/> -->
<!--            <field name="global" eval="True"/> -->
<!--            <field name="domain_force"> [('user_id','=',user.id)]</field> -->
<!--            <field name="groups" eval="[(4, ref('podiatry.group_podiatry_teacher'))]"/> -->
<!--        </record> -->
       <record id="rule_personal_podiatry_teacher" model="ir.rule">
           <field name="name">Rule Personal teacher Record</field>
           <field name="model_id" ref="model_podiatry_teacher"/>
           <field name="domain_force">[('partner_id.user_id.id', '=', user.id)]</field>
           <field name="groups" eval="[(4, ref('group_podiatry_teacher'))]"/>
       </record>
       
       <!--  Rule For Parent Profile Record As A Parent -->
       <record id="rule_podiatry_parents" model="ir.rule">
           <field name="name">Rule Parent Profile Record As A Parent</field>
           <field name="model_id" ref="model_podiatry_parent"/>
           <field name="global" eval="True"/>
           <field name="domain_force"> [('partner_id','=', user.partner_id.id)]</field>
           <field name="groups" eval="[(4, ref('podiatry.group_podiatry_parent'))]"/>
       </record>
       <!-- Record Rule student can see own parent -->
       <record id="rule_stud_parent" model="ir.rule">
           <field name="name">Record rule student can see own parent</field>
           <field name="model_id" ref="model_podiatry_parent"/>
           <field name="global" eval="True"/>
           <field name="domain_force"> [('student_id.user_id','=', user.id)]</field>
           <field name="groups" eval="[(4, ref('podiatry.group_podiatry_student'))]"/>
       </record>
       
       <!-- Rule For Student Profile Record in Adminssion -->

        <record id="rule_student_profile_record_as_student_in_admisssion" model="ir.rule">
            <field name="name">Rule Student Profile Record As A Student for in Adminssion </field>
            <field name="model_id" ref="model_student_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_is_admission'))]"/>
        </record>
    </data>
</odoo>
