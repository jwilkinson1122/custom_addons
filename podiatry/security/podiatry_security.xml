<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Group for podiatry user -->
    <record id="group_podiatry_user" model="res.groups">
        <field name="name">Podiatry Management / User</field>
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>
    <!--Group for podiatry manager -->
    <record id="group_podiatry_manager" model="res.groups">
        <field name="name">Podiatry Management/ Manager</field>
        <field eval="[(4, ref('podiatry.group_podiatry_user'))]" name="implied_ids" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

</odoo>
