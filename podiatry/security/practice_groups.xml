<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="bi_group_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="comment">the user will have access to his own data in the Doctor.</field>
        </record>

        <record id="group_chemist" model="res.groups">
            <field name="name">Chemist</field>
            <field name="comment">the user will have access to his own data in the Chemist.</field>
        </record>

        <record id="group_podiatry_group" model="res.groups">
            <field name="name">Podiatry Group</field>
            <field name="comment">the user will have access to his own data in the Podiatry Group.</field>
        </record>

        <record id="group_receptionist" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="comment">the user will have access to his own data in the Receptionist.</field>
        </record>

        <record id="product_config_category" model="ir.module.category">
            <field name="name">Product Configurator</field>
        </record>

        <record id="group_product_configurator" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="product_config_category"/>
            <field name="implied_ids" eval="[(4, ref('product.group_product_variant'))]"/>
        </record>

        <record id="group_product_configurator_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="product_config_category"/>
            <field name="implied_ids" eval="[(4, ref('podiatry.group_product_configurator'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Set default to all employees -->
        <record model="res.groups" id="base.group_user">
            <field name="implied_ids" eval="[(4, ref('podiatry.group_product_configurator'))]"/>
        </record>
        <record model="res.users" id="base.user_root">
            <field eval="[(4, ref('podiatry.group_product_configurator_manager'))]" name="groups_id"/>
        </record>

        <record id="group_product_variant_extended_description" model="res.groups">
            <field name="name">Use extended description when having product attributes</field>
            <field name="category_id" ref="base.module_category_hidden" />
        </record>


    </data>
</odoo>