<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="create_prescription_obj_form" model="ir.ui.view">
        <field name="name">create.prescription.obj.wizard</field>
        <field name="model">create.prescription.obj</field>
        <field name="arch" type="xml">
            <form string="Create Prescription Object">
                <header>
                    <field name="state" invisible="True" />
                    <field name="state" widget="statusbar" options="{'clickable': True, 'fold_field': 'fold'}" />
                </header>
                <sheet>
                    <group>
                        <field name="patient" />
                        <field name="product_id" />
                    </group>
                </sheet>
                <footer>
                    <button name="create_prescription_obj" string="Save" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="create_prescription_obj_wizard" model="ir.actions.act_window">
        <field name="name">Create Prescription Object</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.prescription.obj</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_prescription_obj_form" />
        <field name="target">new</field>
    </record>

</odoo>