<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Form View of delete patient wizard -->
        <record id="podiatry_delete_reason" model="ir.ui.view">
            <field name="name">Delete Reason</field>
            <field name="model">delete.reason</field>
            <field name="arch" type="xml">
                <form string="Delete Wizard">
                    <sheet>
                        <group>
                            <field name="reason" required="1" nolabel="1" placeholder="Reason"/>
                        </group>
                        <footer>
                            <button name="save_delete" string="Delete" type="object"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Action of Delete Patient Wizard -->
        <record id="action_delete_wizard" model="ir.actions.act_window">
            <field name="name">Termination Reason</field>
            <field name="res_model">delete.reason</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
