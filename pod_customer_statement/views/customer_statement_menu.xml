<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='customer_statement_form' model="ir.ui.view">
        <field name='name'>customer.statement.config</field>
        <field name='model'>customer.statement.config</field>
        <field name="arch" type='xml'>
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="mail_history" type="object" icon="fa-envelope" class="oe_stat_button" string="Mail History" />
                    </div>
                    <group>
                        <group>
                            <field name="name" required="True" />
                            <field name="cust_create_log_history" />
                            <field name="customer_statement_auto_send" />
                            <field name="filter_only_unpaid_and_send_that" />
                            <field name="customer_statement_action" invisible="not customer_statement_auto_send" required="customer_statement_auto_send"/>
                            <field name="cus_daily_statement_template_id" invisible="customer_statement_action != 'daily'" required="customer_statement_action == 'daily'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_week_day" invisible="customer_statement_action != 'weekly'" required="customer_statement_action == 'weekly'"/>
                            <field name="cust_weekly_statement_template_id" invisible="customer_statement_action != 'weekly'" required="customer_statement_action == 'weekly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_monthly_end" invisible="customer_statement_action != 'monthly'"/>
                            <field name="cust_monthly_date" invisible="customer_statement_action != 'monthly' or cust_monthly_end" required="customer_statement_action == 'monthly'"/>
                            <field name="cust_monthly_template_id" invisible="customer_statement_action != 'monthly'" required="customer_statement_action == 'monthly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_yearly_date" invisible="customer_statement_action != 'yearly'" required="customer_statement_action == 'yearly'"/>
                            <field name="cust_yearly_month" invisible="customer_statement_action != 'yearly'" required="customer_statement_action == 'yearly'"/>
                            <field name="cust_yearly_template_id" invisible="customer_statement_action != 'yearly'" required="customer_statement_action == 'yearly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="partner_ids" required="True" widget="many2many_tags" domain="[('customer_rank','>=',1)]"/>

                            <field name="cust_due_create_log_history" />
                            <field name="customer_due_statement_auto_send" />
                            <field name="customer_due_statement_action" invisible="not customer_due_statement_auto_send" required="customer_due_statement_auto_send"/>
                            <field name="cus_due_daily_statement_template_id" invisible="customer_due_statement_action != 'daily'" required="customer_due_statement_action == 'daily'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_due_week_day" invisible="customer_due_statement_action != 'weekly'" required="customer_due_statement_action == 'weekly'"/>
                            <field name="cust_due_weekly_statement_template_id" invisible="customer_due_statement_action != 'weekly'" required="customer_due_statement_action == 'weekly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_due_monthly_end" invisible="customer_due_statement_action != 'monthly'"/>
                            <field name="cust_due_monthly_date" invisible="customer_due_statement_action != 'monthly' or cust_due_monthly_end" required="customer_due_statement_action == 'monthly'"/>
                            <field name="cust_due_monthly_template_id" invisible="customer_due_statement_action != 'monthly'" required="customer_due_statement_action == 'monthly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                            <field name="cust_due_yearly_date" invisible="customer_due_statement_action != 'yearly'" required="customer_due_statement_action == 'yearly'" />
                            <field name="cust_due_yearly_month" invisible="customer_due_statement_action != 'yearly'" required="customer_due_statement_action == 'yearly'"/>
                            <field name="cust_due_yearly_template_id" invisible="customer_due_statement_action != 'yearly'" required="customer_due_statement_action == 'yearly'" domain="[('model','=','res.partner')]" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='customer_statement_tree' model="ir.ui.view">
        <field name='name'>Customer Statement Config</field>
        <field name='model'>customer.statement.config</field>
        <field name="arch" type='xml'>
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id='customer_statement_action' model="ir.actions.act_window">
        <field name='name'>Customer Statement Config</field>
        <field name='res_model'>customer.statement.config</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_customer_statement_config" action="customer_statement_action" parent='account.menu_finance_configuration' sequence="1" />

    <!-- Add Manually From mass action -->
    <record model="ir.actions.server" id="customer_statement_mass_update">
        <field name="name">Mass Update</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_customer_statement_config" />
        <field name="binding_model_id" ref="model_customer_statement_config" />
        <field name="state">code</field>
        <field name="code">
                action = records.add_replace_customer_manually_()
        </field>
    </record>
</odoo>