<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="statement_config_setting_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pay_invoice_online_setting_container']" position="after">

                <block title="Account Statement Display" id="account_statement">
                    <setting string="Due/Overdue Statement Display" help="Display due/overdue account statements" id="statement_due_configuration">
                        <field name="display_due_statement"/>
                    </setting>
                    <setting string="Portal Statement Display" help="Display account statement menu in the customer portal" id="statement_portal_menu_configuration">
                        <field name="display_customer_statement"/>
                    </setting>
                    <setting string="Send Statement Log History" id="statement_log_history_configuration" help="Send statement log history to customers">
                        <div class="mt16">
                            <div class="content-group" id="send_statment_options">
                                <div>
                                    <field name="cust_create_log_history"/>
                                    <label for="cust_create_log_history" string="Statement Log History"/>
                                </div>
                                <div>
                                    <field name="cust_due_create_log_history"/>
                                    <label for="cust_due_create_log_history" string="Overdue Statement Log History"/>
                                </div>
                                <div class="mt8">
                                    <button name="%(pod_customer_statement.customer_mail_history_action)d" icon="oi-arrow-right" type="action" string="View all mail log history" class="btn-link" />

                                </div>
                            </div>
                        </div>
                    </setting>
                    <setting string="Auto Send Configuration" id="statement_auto_send_configuration">
                        <div class="content-group">
                            <div class="mt16">
                                <div class="content-group" id="send_statment_options">
                                    <div>
                                        <field name="customer_statement_auto_send"/>
                                        <label for="customer_statement_auto_send" string="Statements"/>
                                    </div>
                                    <div>
                                        <field name="customer_due_statement_auto_send"/>
                                        <label for="customer_due_statement_auto_send" string="Statements Due"/>
                                    </div>
                                    <div>
                                        <field name="filter_only_unpaid_and_send_that"/>
                                        <label for="filter_only_unpaid_and_send_that" string="Statements Unpaid"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="row mt8" invisible="not customer_statement_auto_send">
                                <label for="customer_statement_action" class="col-lg-4 o_light_label"/>
                                <field name="customer_statement_action" required="customer_statement_auto_send" />
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'daily'">
                                <label for="cus_daily_statement_template_id" class="col-lg-4 o_light_label"/>
                                <field name="cus_daily_statement_template_id" required="customer_statement_action == 'daily'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'weekly'">
                                <label for="cust_week_day" class="col-lg-4 o_light_label"/>
                                <field name="cust_week_day" required="customer_statement_action == 'weekly'"/>
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'weekly'">
                                <label for="cust_weekly_statement_template_id" class="col-lg-4 o_light_label"/>
                                <field name="cust_weekly_statement_template_id" required="customer_statement_action == 'weekly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}"/>
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'monthly'">
                                <label for="cust_monthly_end" class="col-lg-4 o_light_label"/>
                                <field name="cust_monthly_end"/>
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'monthly' or cust_monthly_end">
                                <label for="cust_monthly_date" class="col-lg-4 o_light_label"/>
                                <field name="cust_monthly_date" required="customer_statement_action == 'monthly' or not cust_monthly_end"/>
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'monthly'">
                                <label for="cust_monthly_template_id" class="col-lg-4 o_light_label"/>
                                <field name="cust_monthly_template_id" class="oe_inline" required="customer_statement_action == 'monthly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'yearly'">
                                <label for="cust_yearly_date" class="col-lg-4 o_light_label"/>
                                <field name="cust_yearly_date" class="oe_inline" required="customer_statement_action == 'yearly'" />
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'yearly'">
                                <label for="cust_yearly_month" class="col-lg-4 o_light_label"/>
                                <field name="cust_yearly_month" class="oe_inline" required="customer_statement_action == 'yearly'" />
                            </div>
                            <div class="row mt8" invisible="customer_statement_action != 'yearly'">
                                <label for="cust_yearly_template_id" class="col-lg-4 o_light_label"/>
                                <field name="cust_yearly_template_id" class="oe_inline" required="customer_statement_action == 'yearly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="row mt8" invisible="not customer_due_statement_auto_send">
                                <label for="customer_due_statement_action" class="col-lg-4 o_light_label"/>
                                <field name="customer_due_statement_action" class="oe_inline" required="customer_due_statement_auto_send" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'daily'">
                                <label for="cus_due_daily_statement_template_id" class="col-lg-4 o_light_label"/>
                                <field name="cus_due_daily_statement_template_id" class="oe_inline" required="customer_due_statement_action == 'daily'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'weekly'">
                                <label for="cust_due_week_day" class="col-lg-4 o_light_label"/>
                                <field name="cust_due_week_day" class="oe_inline" required="customer_due_statement_action == 'weekly'" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'weekly'">
                                <label for="cust_due_weekly_statement_template_id" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_weekly_statement_template_id" class="oe_inline" required="customer_due_statement_action == 'weekly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'monthly'">
                                <label for="cust_due_monthly_end" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_monthly_end" class="oe_inline" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'monthly' or cust_due_monthly_end">
                                <label for="cust_due_monthly_date" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_monthly_date" class="oe_inline" required="customer_due_statement_action == 'monthly' or not cust_due_monthly_end"/>
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'monthly'">
                                <label for="cust_due_monthly_template_id" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_monthly_template_id" class="oe_inline" required="customer_due_statement_action == 'monthly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'yearly'">
                                <label for="cust_due_yearly_date" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_yearly_date" class="oe_inline" required="customer_due_statement_action == 'yearly'" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'yearly'">
                                <label for="cust_due_yearly_month" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_yearly_month" class="oe_inline" required="customer_due_statement_action == 'yearly'" />
                            </div>
                            <div class="row mt8" invisible="customer_due_statement_action != 'yearly'">
                                <label for="cust_due_yearly_template_id" class="col-lg-4 o_light_label"/>

                                <field name="cust_due_yearly_template_id" class="oe_inline" required="customer_due_statement_action == 'yearly'" domain="[('model','=','res.partner')]" context="{'default_model':'res.partner'}" />
                            </div>
                        </div>
                    </setting>
                    <!-- Statement Send Whatsapp Configuration -->
                    <setting string="Whatsapp Configuration" id="statement_whatsapp_configuration" invisible="1">
                        <div class="content-group">
                            <div class="row mt8">
                                <div class="text-muted">Show Signature</div>
                                <label for="statement_signature" class="col-lg-4 o_light_label"/>
                                <field name="statement_signature"/>
                            </div>
                            <div class="row mt8">
                                <div class="text-muted">Show Message in Chatter</div>
                                <label for="display_message_in_chatter" class="col-lg-4 o_light_label"/>
                                <field name="display_message_in_chatter"/>
                            </div>
                            <div class="row mt8">
                                <div class="text-muted">Send Report Url in Message</div>
                                <label for="statement_pdf_in_message" class="col-lg-4 o_light_label"/>
                                <field name="statement_pdf_in_message"/>
                            </div>
                            <div class="row mt8">
                                <div class="text-muted">Send Statement Url in Message</div>
                                <label for="statement_url_in_message" class="col-lg-4 o_light_label"/>
                                <field name="statement_url_in_message"/>
                            </div>
                        </div>
                    </setting>
                </block>



            </xpath>
        </field>
    </record>
</odoo>
