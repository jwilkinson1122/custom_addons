<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

	<t t-name="tooth_select_widget.CustomModal" owl="1">
		 <div role="dialog" class="modal fade"  id="modaltreatement">
			 <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			       	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button>
			
			      </div>
			      <div class="modal-body traitment-model">
			        	<div class="d-flex row-traitement">
			        		 <div class="button-check"  t-foreach="this.props.treatmentIds" t-as="treatmentId" t-key="treatmentId.id">
			        			<ButtonCheckBox
			        				label = "treatmentId.name"
			                        value="treatmentId.checked"
			                        onChange="(ev) => this.onModalChangeTraitement(treatmentId.id, ev)">
		                    	</ButtonCheckBox>
					        	
							</div> 
			        	 </div>
			        	
			        </div>
			        
			        <div class="modal-footer">
						<button class="btn btn-primary" t-on-click="confirm"> Confirm </button>
						
			      	</div> 
			      	<label t-att-for="props.id or id" class="form-check-label">
			            <t t-slot="default"/>
			        </label>
		    	</div>
			</div>
		</div>
	</t>
</templates>