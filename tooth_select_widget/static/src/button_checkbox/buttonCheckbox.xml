<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="tooth_select_widget.ButtonCheckBox" owl="1">
    <div class="button-checkbox d-flex"  t-attf-class="{{props.value? 'checked': ''}}" t-on-click="onClick" t-ref="root">
        <input
            t-att-id="props.id or id"
            type="hidden"
            class="form-check-input"
            t-att-disabled="props.disabled"
            t-att-checked="props.value"
            t-att-name="props.name"
            t-on-change="onChange"
        />
        <i class="fa fa-medkit" />
        <t t-esc="props.label"/>
        <label t-att-for="props.id or id" class="form-check-label">
            <t t-slot="default"/>
        </label>
    </div>
</t>

</templates>
