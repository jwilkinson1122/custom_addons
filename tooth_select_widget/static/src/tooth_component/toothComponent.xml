<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

	<t t-name="tooth_select_widget.ToothComponent" owl="1">
		 <div t-attf-class="tooth {{ toothId.selected ? 'selected' : ''}} {{ toothId.muliSelectList ? 'muli-select-list' : ''}}"  t-foreach="props.ToothIds" t-as="toothId" t-key="toothId.name" t-on-click="() => this.clickTooth(toothId.id)" >
	        	<t t-set="action" t-value="toothId.action"></t>
			 <t t-if="!action">
					 <t t-call="tooth_select_widget.default"/>
			 </t>
			 <t t-else="">
			 <t t-if="!props.top">
				<span class="tooth-span"> <t t-esc="toothId.name"/></span>

				<img  t-if="!action.replace_racine" t-attf-class="tooth-img"  src="/tooth_select_widget/static/src/tooth_select_field/img/tooth2.png"/>
				<img t-else="" t-attf-class="tooth-img "
                    t-att-src="action.racine_bottom_replace"/>

				 <img t-if="!action.replace_tooth" t-attf-class="tooth-img "
                    t-attf-src="/web/image?model=tooth.tooth&amp;id={{toothId.id}}	&amp;field=image"/>

				 <img t-else="" t-attf-class="tooth-img "
                    t-att-src="action.img_bottom_replace"/>

       		</t>


			<t t-if="props.top">
				<img t-if="!action.replace_tooth" t-attf-class="tooth-img "
                    t-attf-src="/web/image?model=tooth.tooth&amp;id={{toothId.id}}	&amp;field=image"/>

				 <img t-else="" t-attf-class="tooth-img "
                    t-att-src="action.img_top_replace"/>
				<img  t-if="!action.replace_racine"  t-attf-class="tooth-img"  src="/tooth_select_widget/static/src/tooth_select_field/img/tooth2.png"/>
				<img t-else="" t-attf-class="tooth-img "
                    t-att-src="action.racine_top_replace"/>
					<span class="tooth-span"> <t t-esc="toothId.name"/></span>
			</t>
		</t>



	        </div>
	</t>
	<t t-name="tooth_select_widget.default" owl="1">

		<t t-if="!props.top">
       		<span class="tooth-span"> <t t-esc="toothId.name"/></span>
       		<img   t-attf-class="tooth-img"  src="/tooth_select_widget/static/src/tooth_select_field/img/tooth2.png"/>
       	</t>
        	<img t-attf-class="tooth-img "
                    t-attf-src="/web/image?model=tooth.tooth&amp;id={{toothId.id}}	&amp;field=image"/>
       	<t t-if="props.top">
       		<img   t-attf-class="tooth-img"  src="/tooth_select_widget/static/src/tooth_select_field/img/tooth2.png"/>
              	<span class="tooth-span"> <t t-esc="toothId.name"/></span>
       	</t>
	</t>

</templates>

