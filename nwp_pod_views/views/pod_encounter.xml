<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="encounter_find_by_barcode" model="ir.actions.act_window">
        <field name="name">Find encounter</field>
        <field name="res_model">barcode.action</field>
        <field name="view_mode">form</field>
        <field
            name="context"
        >{'default_model': 'pod.encounter', 'default_method': 'find_encounter_by_barcode'}</field>
        <field name="target">new</field>
    </record>


    <menuitem
        id="encounter_find_by_barcode_menu"
        name="Find encounter"
        parent="pod_base.pod_root_administration"
        action="encounter_find_by_barcode"
        sequence="35"
    />
    <record id="view_pod_encounter_kanban" model="ir.ui.view">
        <field name="name">pod.encounter.kanban</field>
        <field name="model">pod.encounter</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="center_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="internal_identifier" />
                                </strong>
                            </div>
                            <div>
                                <field name="patient_id" />
                            </div>
                            <div>
                                <field name="center_id" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_encounter_kanban_show_create">
        <field name="name">pod.encounter.kanban.show</field>
        <field name="model">pod.encounter</field>
        <field name="inherit_id" ref="view_pod_encounter_kanban" />
        <field name="arch" type="xml">
            <kanban position="attributes">
                <attribute name="create">true</attribute>
            </kanban>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_encounter_tree_hide_create">
        <field name="name">pod.encounter.tree.hide</field>
        <field name="model">pod.encounter</field>
        <field
            name="inherit_id"
            ref="pod_administration_encounter.pod_encounter_view_tree"
        />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">false</attribute>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_encounter_tree_show_create">
        <field name="name">pod.encounter.tree.create</field>
        <field name="model">pod.encounter</field>
        <field
            name="inherit_id"
            ref="nwp_pod_views.pod_encounter_tree_hide_create"
        />
        <field
            name="groups_id"
            eval="[(4, ref('nwp_pod_views.group_can_create_encounters'))]"
        />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">true</attribute>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_encounter_form_hide_create">
        <field name="name">pod.encounter.form.hide</field>
        <field name="model">pod.encounter</field>
        <field
            name="inherit_id"
            ref="pod_administration_encounter.pod_encounter_view_form"
        />
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">false</attribute>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_encounter_form_show_create">
        <field name="name">pod.encounter.form.create</field>
        <field name="model">pod.encounter</field>
        <field name="inherit_id" ref="pod_encounter_form_hide_create" />
        <field
            name="groups_id"
            eval="[(4, ref('nwp_pod_views.group_can_create_encounters'))]"
        />
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">true</attribute>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_administration_encounter.pod_encounter_action"
    >
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'ignore_mcfix_widget': True}</field>
    </record>
</odoo>
