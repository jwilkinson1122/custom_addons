<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_event_tree">
        <field name="name">pod.event.tree</field>
        <field name="model">pod.event</field>
        <field name="inherit_id" ref="pod_workflow.pod_event_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="decoration-success">state == 'in-progress'</attribute>
                <attribute name="decoration-info">state == 'suspended'</attribute>
                <attribute name="decoration-muted">state == 'completed'</attribute>
                <attribute name="decoration-danger">state == 'entered-in-error'</attribute>
                <attribute name="decoration-warning">state == 'cancelled'</attribute>
                <attribute name="decoration-primary">state == 'unknown'</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="pod_event_form">
        <field name="name">pod.event.form</field>
        <field name="model">pod.event</field>
        <field name="inherit_id" ref="pod_workflow.pod_event_form" />
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <field name="service_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
