<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <record id="pod_laboratory_request_view_tree" model="ir.ui.view">
        <field name="name">pod.laboratory.request.view.tree</field>
        <field name="model">pod.laboratory.request</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_request_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Laboratory requests</attribute>
                <attribute name="decoration-muted">fhir_state=='cancelled'</attribute>
            </xpath>
        </field>
    </record>

    <record id="pod_laboratory_request_view_form" model="ir.ui.view">
        <field name="name">pod.laboratory.request.view.form</field>
        <field name="model">pod.laboratory.request</field>
        <field name="inherit_id" ref="pod_request_form" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string">Laboratory Request</attribute>
            </form>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_laboratory_events" class="oe_stat_button" icon="fa-microscope" attrs="{'invisible': [('fhir_state','=','draft')]}">
                    <field name="laboratory_event_count" widget="statinfo" string="Laboratory Events" />
                    <field name='laboratory_event_ids' invisible="1" />
                </button>
            </xpath>
            <field name="performer_id" position="after">
                <field name="laboratory_service_ids" widget="many2many_tags" />
                <field name="event_coverage_agreement_id" invisible="1" />
            </field>
            <xpath expr="//notebook/page[@name='inheritance']" position="after">
                <page string="Events" id="event">
                    <field name="laboratory_event_ids" context="{'default_coverage_agreement_id': event_coverage_agreement_id, 'default_laboratory_request_id': id, 'default_encounter_id': encounter_id, 'default_patient_id': patient_id, 'default_service_id': service_id, 'default_performer_id': performer_id, 'default_patient_id': patient_id, 'tree_view_ref':'pod_clinical_laboratory.pod_laboratory_event_view_tree'}" />
                </page>
            </xpath>
        </field>
    </record>

    <record id="pod_laboratory_request_view_search" model="ir.ui.view">
        <field name="name">pod.laboratory.request.view.search</field>
        <field name="model">pod.laboratory.request</field>
        <field name="arch" type="xml">
            <search string="Podiatry Laboratory Request">
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="name" />
                <field name="fhir_state" />
                <field name="priority" />
                <field name="performer_id" />
                <field name="order_by_id" />
                <field name="intent" />
                <newline />
                <filter domain="[('fhir_state', '=', 'draft')]" help="Draft" name="Draft" />
                <filter domain="[('fhir_state', '=', 'active')]" help="Active" name="Active" />
                <filter domain="[('fhir_state', '=', 'completed')]" help="Completed" name="Completed" />
                <filter domain="[('fhir_state', '=', 'suspended')]" help="Suspended" name="Suspended" />
                <filter domain="[('fhir_state', '=', 'entered-in-error')]" help="Error" name="Error" />
                <filter domain="[('fhir_state', '=', 'cancelled')]" help="Cancelled" name="Cancelled" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" name="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                    <filter string="Performer" name="Performer" domain="[]" context="{'group_by':'performer_id'}" />
                    <filter string="Priority" name="Priority" domain="[]" context="{'group_by':'priority'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="pod_laboratory_request_action" model="ir.actions.act_window">
        <field name="name">Laboratory Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.laboratory.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="pod_laboratory_request" name="Laboratory Requests" parent="pod_base.pod_clinical_request" sequence="10" action="pod_laboratory_request_action" />

</odoo>
