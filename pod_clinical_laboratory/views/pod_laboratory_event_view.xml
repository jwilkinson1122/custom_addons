    <record id="pod_laboratory_event_view_tree" model="ir.ui.view">
        <field name="name">pod.laboratory.event.view.tree</field>
        <field name="model">pod.laboratory.event</field>
        <!-- <field name="mode">primary</field> -->
        <field name="inherit_id" eval="False" />
        <!-- <field name="inherit_id" ref="pod_workflow.pod_event_tree" /> -->
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Laboratory Event" decoration-danger="state in ['entered-in-error', 'aborted']">
                <field name="laboratory_request_id" invisible="1" />
                <field name="patient_id" invisible="1" />
                <field name="encounter_id" invisible="1" readonly="0" />
                <field name="service_id" invisible="1" />
                <field name="performer_id" invisible="1" />
                <field name="laboratory_service_id" />
                <field name="laboratory_code" invisible="1" readonly="0" />
                <field name="private_amount" sum="Private Amount" />
                <field name="coverage_amount" sum="Coverage Amount" />
                <field name="is_sellable_insurance" invisible="1" />
                <field name="is_sellable_private" invisible="1" />
                <field name="private_cost" />
                <field name="coverage_cost" />
                <field name="fhir_state" invisible="1" />
                <field name="state" invisible="1" />
                <field name="coverage_agreement_id" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="pod_laboratory_event_view_form" model="ir.ui.view">
        <field name="name">pod.laboratory.event.view.form</field>
        <field name="model">pod.laboratory.event</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_event_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Laboratory Event</attribute>
            </xpath>
            <field name="performer_id" position="after">
                <field name="delay" />
                <field name="laboratory_service_id" />
                <field name="laboratory_code" invisible="1" readonly="0" />
            </field>
            <group name="inheritance" position="inside">
                <field name="laboratory_request_id" />
            </group>
        </field>
    </record>

