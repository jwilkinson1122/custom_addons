    <record id="pod_laboratory_event_view_search" model="ir.ui.view">
        <field name="name">pod.laboratory.event.view.search</field>
        <field name="model">pod.laboratory.event</field>
        <field name="arch" type="xml">
            <search string="Podiatry Laboratory Event">
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="performer_id" />
                <field name="laboratory_request_id" />
                <field name="name" />
                <field name="state" />
                <newline />
                <filter domain="[('state', '=', 'preparation')]" help="Preparation" name="Preparation" />
                <filter domain="[('state', '=', 'in-progress')]" help="In progress" name="In progress" />
                <filter domain="[('state', '=', 'completed')]" help="Completed" name="Completed" />
                <filter domain="[('state', '=', 'suspended')]" help="Suspended" name="Suspended" />
                <filter domain="[('state', '=', 'entered-in-error')]" help="Error" name="Error" />
                <filter domain="[('state', '=', 'aborted')]" help="Aborted" name="Aborted" />
                <filter domain="[('state', '=', 'unknown')]" help="Unknown" name="Unknown" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" name="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                    <filter string="Performer" name="Performer" domain="[]" context="{'group_by':'performer_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_laboratory_event_action">
        <field name="name">Laboratory Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.laboratory.event</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="pod_laboratory_event" name="Laboratory events" parent="pod_base.pod_clinical_event" sequence="10" action="pod_laboratory_event_action" />

</odoo>
