<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescriptions_order_form_config" model="ir.ui.view">
        <field name="name">prescriptions.order.form.inherit.config</field>
        <field name="model">prescriptions.order</field>
        <field name="inherit_id" ref="prescriptions.prescriptions_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="product_template_id" string="Product" readonly="state in ['prescriptions', 'to approve', 'done', 'cancel']" required="not display_type" options="{'no_open': True}" context="{'partner_id': parent.partner_id}" widget="product_configurator" />
                <field name="product_template_attribute_value_ids" invisible="1" />
                <field name="product_custom_attribute_value_ids" invisible="1">
                    <tree>
                        <field name="custom_product_template_attribute_value_id" />
                        <field name="custom_value" />
                    </tree>
                </field>
                <field name="product_no_variant_attribute_value_ids" invisible="1" />
                <field name="is_configurable_product" invisible="1" />
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="optional">hide</attribute>
                <attribute name="string">Product Variant</attribute>
            </xpath>
        </field>
    </record>
</odoo>
