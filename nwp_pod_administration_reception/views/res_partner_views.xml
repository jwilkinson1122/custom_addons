<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    
    <record id="pod_practice_reception_action" model="ir.actions.act_window">
        <field name="name">Podiatry Receptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_reception', '=', True), ('practice_id', '=', active_id)]</field>
        <field name="context">{
            'default_company_type':'company',
            'default_is_company':True, 
            'default_is_reception': True, 
            'default_is_pod': True,
            'default_practice_id': active_id,
            }</field>
    </record>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_administration_practice.res_partner_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']//form//field[@name='parent_id']" position="after">
                <field name="is_reception" invisible="1" />
            </xpath>
            <field name="is_pod" position="before">
                <field name="is_reception" />
            </field>
            <div name="button_box" position="inside">
                <button type="action" name="%(pod_practice_reception_action)d" class="oe_stat_button" icon="fa-registered" attrs="{'invisible': [('is_practice', '=', False)]}">
                    <field name="reception_count" widget="statinfo" string="Receptions" />
                </button>
            </div>
            <field name="practice_id" position="attributes">
                <attribute name="attrs">{'invisible': [('is_location','=',False), ('is_reception', '=', False)], 'required': ['|',('is_location', '=', True), ('is_reception', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
