            <group name="preferences" position="after">
                <group string="Access">
                    <field name="allow_create_order_line" />
                    <field name="allow_payments" />
                    <field name="allow_delete_order" />
                    <field name="allow_discount" invisible="not allow_create_order_line"/>
                    <field name="allow_edit_price" invisible="not allow_create_order_line" />
                    <field name="allow_decrease_amount" invisible="not allow_create_order_line"/>
                    <field name="allow_delete_order_line" invisible="not allow_decrease_amount or not allow_create_order_line"/>
                    <field name="allow_refund" invisible="not allow_create_order_line"/>
                    <field name="allow_manual_customer_selecting" />
                </group>
            </group>
