<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
           <xpath expr="//div[hasclass('payment-controls')]" position="inside">
               <t t-if="env.pos.config.ni_enable_customer">
               <div>
                   <div id="my_button" class="button js_invoice"
                       t-on-click="NiCustomerDetails">
                        <i class='fa fa-address-card' />Customer Details
                   </div>
               </div>
               </t>
           </xpath>
    </t>

    <t t-name="NiCustomerDetailsPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-custinfo" >
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Please Enter Customer Details</p>
                    <div class='custinfo-detail'>
                        <span class='label'>Contact.</span>
                        <input class='ni_customer_contact' name='ni_customer_contact'  t-att-value="props.ni_customer_contact" placeholder='Customer Contact'></input>
                    </div>
                    <div class='custinfo-detail'>
                        <span class='label'>Flat No.</span>
                        <input class='ni_customer_flat' name='ni_customer_flat' t-att-value="props.ni_customer_flat" placeholder='Flat No..'></input>
                    </div>
                    <div class='custinfo-detail'>
                        <span class='label'>Bldg No.</span>
                        <input class='ni_customer_bldg' name='ni_customer_bldg' t-att-value="props.ni_customer_bldg" placeholder='Bldg No..'></input>
                    </div>
                    <div class='custinfo-detail'>
                        <span class='label'>Street</span>
                        <input class='ni_customer_street' name='ni_customer_street' t-att-value="props.ni_customer_street" placeholder='Street..'></input>
                    </div>
                    <div class='custinfo-detail'>
                        <span class='label'>Area</span>
                        <input class='ni_customer_area' name='ni_customer_area' t-att-value="props.ni_customer_area" placeholder='Area..'></input>
                    </div>


                <div class="footer" style="background-color: rgb(110,200,155); color: #fff;position:fixed;bottom:0;">
                    <div class="button confirm" style="background-color: #0075AC; color: #fff;" t-on-click="confirm_details_customer">
                        Confirm
                    </div>
                	<div class="button cancel" style="background-color: #0075AC; color: #fff;" t-on-click="go_back_screen">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>