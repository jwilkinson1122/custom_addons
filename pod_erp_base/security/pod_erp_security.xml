<odoo>
    <record id="ir_module_category_podiatry" model="ir.module.category">
        <field name="name">Podiatry</field>
    </record>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <!-- <field name="implied_ids" eval="[(4, ref('group_flag_display'))]" /> -->
    </record>
    <record id="group_configurator" model="res.groups">
        <field name="name">Configurator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>
    <record id="group_flag_category_display" model="res.groups">
        <field name="name">Flag Category Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
    <record id="group_flag_category_manager" model="res.groups">
        <field name="name">Flag Category Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_flag_category_display'))]" />
    </record>
    <record id="group_flag_display" model="res.groups">
        <field name="name">Flag Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_user')), (4, ref('group_flag_category_display'))]" />
    </record>
    <record id="group_flag_manager" model="res.groups">
        <field name="name">Flag Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="implied_ids" eval="[(4, ref('group_flag_display'))]" />
    </record>

    <!-- Generic groups -->
    <!-- <record id="group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_flag_display'))]" />
    </record>
    <record id="group_configurator" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_flag_category_manager')), (4,ref('group_flag_manager'))]" />
    </record> -->

    <record id="group_admin" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="category_id" ref="ir_module_category_podiatry" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[
        (4, ref('group_user')), 
        (4, ref('group_configurator')), 
        (4, ref('group_flag_category_manager')), 
        (4, ref('group_flag_manager')),
        (4, ref('base.group_erp_manager')),
        ]" />
    </record>
</odoo>

