<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_patient_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.from.patient</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook" position="inside">
                <page name="details" string="Details" groups="pod_erp_base.group_manager_patients_custom">
                    <group>
                        <group>
                            <field name="contact_internal_code"/>
                            <field name="order_internal_code" readonly="1"/>
                            <field name="owner_id"/>
                            <field name="app_url" widget="url"/>
                        </group>
                        <group>
                            <field name="pod_practitioner_id"/>
                            <field name="pod_assistant_id"/>
                            <field name="pod_billing_id"/>
                            <field name="pod_sales_partner_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="pod_location_id"/>
                <field name="pod_account_id"/>
                <field name="customer_phone" string=""/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_search_inherit_from_custom" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.from.patient.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='partner_id']" position="after">
                <field name="pod_location_id"/>
                <field name="pod_account_id"/>
                <field name="pod_sales_partner_id"/> 
            </xpath>
            <xpath expr="//filter[@name='order_month']" position="after">
                <separator/>
                <filter name="group_location" string="Location" context="{'group_by': 'pod_location_id'}"/>
                <filter name="group_practice" string="Practice" context="{'group_by': 'pod_account_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree_inherit" model="ir.ui.view">
        <field name="name">view.order.tree.patient</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_status" position="after">
                <field name="pod_location_id" optional="hide"/>
                <field name="pod_practitioner_id" optional="hide"/>
                <field name="pod_assistant_id" optional="hide"/>
                <field name="pod_account_id" optional="hide"/>
                <field name="pod_billing_id" optional="hide"/>
                <field name="pod_sales_partner_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">view.quotation.tree.patient</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_status" position="after">
                <field name="pod_location_id" optional="hide"/>
                <field name="pod_practitioner_id" optional="hide"/>
                <field name="pod_assistant_id" optional="hide"/>
                <field name="pod_account_id" optional="hide"/>
                <field name="pod_billing_id" optional="hide"/>
                <field name="pod_sales_partner_id" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>