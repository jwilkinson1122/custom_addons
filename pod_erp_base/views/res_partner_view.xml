    <record id="view_res_partner_pivot" model="ir.ui.view">
        <field name="name">res.partner.pivot</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <pivot string="Contacts">
                <field name="name" type="row"/>
                <!-- <field name="date" type="col"/> -->
            </pivot>
        </field>
    </record>

    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Details Tab -->
            <xpath expr="//form/sheet/notebook" position="inside">
                <page name="details" string="Details">
                    <group>
                        <group>

                            <field name="is_practice"/>
                            <field name="is_location"/>
                            <field name="is_practitioner"/>
                            <field name="is_personnel"/>
                            <field name="is_patient" invisible="1"/>
                            <field name="is_sales_partner"/>
                            <field name="record_num"/>
                            <field name="patient_birthday"/>
                        </group>
                        <group>
                            <field name="program_group"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">not is_company</attribute>
            </xpath>
            <!-- Removing Base Fields -->
            <xpath expr="//field[@name='title']" position="replace">
            </xpath>
            <xpath expr="//field[@name='category_id']" position="replace">
            </xpath>
            <xpath expr="//field[@name='website']" position="replace">
            </xpath>
            <!-- Redesign Left -->
            <xpath expr="//field[@name='vat']" position="replace">
                <field name="lang"/>
                <field name="tz"/>
                <field name="vat"/>
                <field name="warehouse_id" invisible="is_location == False"/>
                <field name="contact_uuid" groups="base.group_no_one" readonly="1"/>
                <field name="order_uuid" groups="base.group_no_one" readonly="1"/>
            </xpath>
            <!-- Redesign Right-->
            <xpath expr="//field[@name='function']" position="replace">
                <field name="patient_gender" invisible="is_patient != True"/>
                <field name="website" widget="url" string="Website"/>
                <field name="patient_url" widget="url" invisible="1"/>
                <field name="function" invisible="is_company"/>
                <!--This below fields is inherited in this same file please review before change in fields view-->
                <field name="practice_id" domain="[('is_practice', '=', True)]"/>
                <field name="practice_location_id" domain="[('is_location', '=', True)]" invisible="is_company"/>
                <field name="practice_practitioner_id" domain="[('is_practitioner', '=', True)]"/>
                <field name="practice_assistant_id" domain="[('is_practitioner', '=', True)]"/>
                <field name="practice_billing_id" domain="[('is_practitioner', '=', True)]"/>
                <field name="sales_partner_id" domain="[('is_sales_partner', '=', True)]"/>
                <!--**************************************************-->
                <field name="fax" invisible="is_patient == True" widget="phone"/>
            </xpath>
            <!--xpath expr="//field[@name='child_ids']/form/sheet/group/group[3]" position="after"-->
            <xpath expr="//field[@name='child_ids']//form/sheet/group/group[2]" position="after">
                <group string="Partner Type">
                    <field name="is_patient"/>
                </group>
            </xpath>
            <!--     add chatter       -->
            <!--            <xpath expr="//sheet" position="after">-->
            <!--                <div class="oe_chatter">-->
            <!--                    <field name="message_follower_ids"/>-->
            <!--                    <field name="activity_ids"/>-->
            <!--                    <field name="message_ids"/>-->
            <!--                </div>-->
            <!--            </xpath>-->
            <!--div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_patient_devices" icon="fa-mobile" attrs="{'invisible': [('is_patient', '=', False)]}">
                    <field string="Devices" name="device_count" widget="statinfo"/>
                </button>
            </div-->
        </field>
    </record>
