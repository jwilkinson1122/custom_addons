<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_status_tree" model="ir.ui.view">
        <field name="name">view.status.tree</field>
        <field name="model">pod.status</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Status">
                <field name="name" required="1"/>
            </tree>
        </field>
    </record>

    <record id="view_status_form" model="ir.ui.view">
        <field name="name">view.status.form</field>
        <field name="model">pod.status</field>
        <field name="arch" type="xml">
            <form string="Status">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_status" model="ir.actions.act_window">
        <field name="name">Status</field>
        <field name="res_model">pod.status</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_status" parent ="contacts.res_partner_menu_config"
                action="action_status" name="Status" sequence='4'/>    
</odoo>