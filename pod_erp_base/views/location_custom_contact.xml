<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_custom_location" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity,pivot</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'default_is_company': True, 'default_is_location':True, 'default_company_type': 'company'}</field>
        <field name="domain">[('is_location', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new pratice!
            </p>
            <p>
            Locations are the child companies of locations.
            </p>
        </field>
    </record>

    <record id="action_custom_location_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="action_custom_location"/>
    </record>

    <record id="action_custom_location_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="action_custom_location"/>
    </record>

    <record id="action_custom_location_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.view_partner_form"/>
        <field name="act_window_id" ref="action_custom_location"/>
    </record>

    <menuitem id="custom_location_menu" name="Locations" action="action_custom_location" parent="pod_erp_base.root_menu_administration" sequence="2"/>

</odoo>
