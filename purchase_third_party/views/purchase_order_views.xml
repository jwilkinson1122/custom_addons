<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_rfq_send' and @states='draft']"
                position="after"
            >
                <button
                    name="action_rfq_send"
                    attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('third_party_order', '=', False)]}"
                    string="Send RFQ by Email to Third"
                    type="object"
                    context="{'send_rfq':True, 'third_party_send': True}"
                    class="oe_highlight"
                />
            </xpath>
            <xpath
                expr="//button[@name='action_rfq_send' and @states='sent']"
                position="after"
            >
                <button
                    name="action_rfq_send"
                    attrs="{'invisible': ['|', ('state', '!=', 'sent'), ('third_party_order', '=', False)]}"
                    string="Re-Send RFQ by Email to Third"
                    type="object"
                    context="{'send_rfq':True, 'third_party_send': True}"
                    class="oe_highlight"
                />
            </xpath>
            <xpath
                expr="//button[@name='action_rfq_send' and @states='purchase']"
                position="after"
            >
                <button
                    name="action_rfq_send"
                    attrs="{'invisible': ['|', ('state', '!=', 'purchase'), ('third_party_order', '=', False)]}"
                    string="Send PO by Email to Third"
                    type="object"
                    context="{'send_rfq':False, 'third_party_send': True}"
                    class="oe_highlight"
                />
            </xpath>
            <field name="partner_id" position="after">
                <field
                    name="third_party_partner_id"
                    attrs="{'invisible': [('third_party_order', '=', False)], 'required': [('third_party_order', '!=', False)]}"
                />
                <field name="third_party_order" />
            </field>
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='price_unit']"
                position="after"
            >
                <field
                    name="third_party_price_unit"
                    attrs="{'column_invisible': [('parent.third_party_order', '=', False)]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='price_unit']"
                position="after"
            >
                <field
                    name="third_party_price_unit"
                    attrs="{'column_invisible': [('parent.third_party_order', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
