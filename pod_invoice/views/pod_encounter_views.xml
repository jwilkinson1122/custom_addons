<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pod_encounter_view_form" model="ir.ui.view">
        <field name="name">pod.encounter.view.form</field>
        <field name="model">pod.encounter</field>
        <field name="inherit_id" ref="nw_pod_careplan_sale.pod_encounter_view_form" />
        <field name="arch" type="xml">
            <button name="onleave2finished" position="after">
                <button name="%(pod_invoice.pod_encounter_change_partner_action)d" type="action" string="Change Partner" class="oe_highlight" context="{'default_encounter_id': active_id}" attrs="{'invisible': [('state','not in',['finished'])]}" />
            </button>
        </field>
    </record>
</odoo>
