<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <record id="sale_order_line_config_option_view_form_base" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale_configurator_base.sale_order_line_config_base_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='product_id']" position="attributes">
                <attribute name="context">{'add_default_option': True}</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='product_id']" position="attributes">
                <attribute name="domain">[("is_configurable_opt", "=", True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_configurable_opt" invisible="1" />
                <label for="option_ids" attrs="{'invisible': [('is_configurable_opt', '=', False)]}" />
                <field name="option_ids" context="{'default_order_id': order_id}" attrs="{'invisible': [('is_configurable_opt', '=', False)]}">
                    <tree editable="bottom">
                        <field name="company_id" invisible="1"/>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="product_template_id"/>
                        <!-- Other fields here -->
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_config_option_view_form" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale_order_line_config_option_view_form_base" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='option_ids']/tree/field[@name='product_uom_qty']" position="before">
                <field name="option_unit_qty" string="Qty" />
                <field name="option_qty_type" string="Qty type" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='option_ids']/tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="string">Total Qty</attribute>
            </xpath>
            <xpath expr="//field[@name='option_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('is_option', '=', True),('used_on_product_ids', '=', parent.product_id)]</attribute>
            </xpath>
            <!-- In case that you have the configurator activated -->
            <xpath expr="//field[@name='option_ids']/tree/field[@name='product_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='option_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="optional" />
                <attribute name="string">Product</attribute>
            </xpath>
        </field>
    </record>

</odoo>
