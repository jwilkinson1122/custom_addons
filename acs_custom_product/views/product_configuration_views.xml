    <record id="view_product_laboratory_tree" model="ir.ui.view">
        <field name="name">view.product.laboratory.tree</field>
        <field name="model">product.laboratory</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_product_laboratory_action" model="ir.actions.act_window">
        <field name="name">Laboratorios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.laboratory</field>
        <field name="view_id" ref="view_product_laboratory_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

