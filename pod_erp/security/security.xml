<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <data noupdate="1">
        <record model="ir.rule" id="see_his_own_practitioner">
            <field name="name">Practitioner See His Record Only</field>
            <field name="model_id" ref="model_podiatry_practitioner"/>
            <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_pod_erp_practitioners'))]"/>
        </record>
        <record model="ir.rule" id="admin_see_all_practitioner">
            <field name="name">Admin see All Practitioner</field>
            <field name="model_id" ref="model_podiatry_practitioner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        <record model="ir.rule" id="see_his_own_patient">
            <field name="name">Patient See His Record Only</field>
            <field name="model_id" ref="model_podiatry_patient"/>
            <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_pod_erp_patients'))]"/>
        </record>
        <record model="ir.rule" id="admin_see_all_patient">
            <field name="name">Admin see All Patient</field>
            <field name="model_id" ref="model_podiatry_patient"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>
