<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Group for pod user -->
    <record id="group_pod_user" model="res.groups">
        <field name="name">ERP User</field>
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>
    <!--Group for pod manager -->
    <record id="group_pod_manager" model="res.groups">
        <field name="name">ERP Manager</field>
        <field eval="[(4, ref('pod_erp.group_pod_user'))]" name="implied_ids" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

</odoo>
