<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="patient_orthotic_form" model="ir.ui.view">
            <field name="name">podiatry.patient.orthotic.form</field>
            <field name="model">podiatry.patient.orthotic</field>
            <field name="arch" type="xml">
                <form string="Orthotic History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="orthotic" />
                            <field name="doctor_physician_id" />
                            <field name="is_active" />
                            <field name="indication" />
                        </group>
                        <separator colspan="4" string="Admnistration" />
                        <group colspan="4" col="4">
                            <field name="route" />
                        </group>
                        <separator colspan="4" string="Measure" />
                        <group colspan="4" col="4">
                            <field name="quant" />
                            <field name="qty" />
                            <field name="quant_unit" />
                        </group>
                        <separator colspan="4"
                            string=" Treatment Duration " />
                        <group colspan="4" col="4">
                            <field name="duration" />
                            <field name="duration_period" />
                        </group>
                        <separator colspan="4" string="  Common Measure  " />
                        <group colspan="4" col="4">
                            <field name="common_measure" />
                            <field name="admin_times" />
                        </group>
                        <separator colspan="4"
                            string="  Specific Measure  " />
                        <group colspan="4" col="4">
                            <field name="frequency" />
                            <field name="frequency_unit" />
                        </group>
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="patient_orthotic_tree" model="ir.ui.view">
            <field name="name">podiatry.patient.orthotic.tree</field>
            <field name="model">podiatry.patient.orthotic</field>
            <field name="arch" type="xml">
                <tree string="Orthotic">
                    <field name="orthotic" />
                    <field name="doctor_physician_id" />
                    <field name="is_active" />
                    <field name="indication" />
                </tree>
            </field>
        </record>

</odoo>
