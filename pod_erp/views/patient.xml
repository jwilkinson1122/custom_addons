<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="patients_form_view" model="ir.ui.view">
        <field name="name">podiatry.patients.form.view</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="print_report" type="object" string="Print Patient Card" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <field name="photo" nolabel="1" class="oe_left oe_avatar" options="{'size': [90, 90]}" widget="image" />
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="patient_id" />
                            </div>
                            <h1>
                                <field name="patient_id" default_focus="1" placeholder="Patient Name" context="{'default_is_patient': 1,'default_is_person': 1}" />
                            </h1>
                        </div>
                    </group>

                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_of_birth" />
                        </group>

                        <group>
                            <field name="gender" />
                            <field name="age" readonly="1" />
                            <field name="partner_address_id" invisible="1"/>
                            <label for="partner_address_id" name="partner_address_id"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street" />
                                <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                <field name="city" placeholder="City" class="o_address_city" />
                                <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" />
                                <field name="zip_code" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group string="Patient General Information">
                            <field colspan="4" name="general_info" nolabel="1" />
                                <newline />
                                <group>
                     
                                    <field name="primary_care_physician_id" />
                                </group>
                            </group>
                        </page>

                        <page string="Conditions">
                            <field name="patient_condition_ids" nolabel="1" widget="section_and_note_one2many"/>
                        </page>

                        <page string="Orthotic">
                            <field name="orthotic_ids" widget="section_and_note_one2many">
                                <tree>
                                    <field name="orthotic_id" />
                                    <field name="indication_pathology_id" />
                                    <field name="is_active" />
                                    <field name="doctor_physician_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="patients_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patients.tree.view</field>
        <field name="model">podiatry.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient Information">
                <field name="name" />
                <field name="patient_id" />
                <field name="gender" />
                <field name="date_of_birth" />
                <field name="primary_care_physician_id" />
            </tree>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">podiatry.patient</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_patient_code" action="action_patient" parent="menu_patients" sequence="0" /> -->

    <record id="action_view_priscription_id2" model="ir.actions.act_window">
        <field name="name">Prescription Orders</field>
        <field name="res_model">podiatry.prescription.order</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('patient_id', '=', active_id)]</field>
    </record>
    
</odoo>
