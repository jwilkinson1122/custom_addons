<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="practitioner_view_form" model="ir.ui.view">
			<field name="name">practitioner.view.form</field>
			<field name="model">podiatry.practitioner</field>
			<field name="inherit_id" ref="practitioner_practitioner"/>
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('oe_button_box')]" position="inside">
					<button name="open_podiatry_prescriptions" class="oe_stat_button" type="object" icon="fa-tasks">
						<field string="Prescription" name="prescription_count" widget="statinfo"/>
					</button>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
