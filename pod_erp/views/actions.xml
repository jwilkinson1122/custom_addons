<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Action of pod floor -->
    <record id="open_pod_floor_form_tree" model="ir.actions.act_window">
        <field name="name">Floor</field>
        <field name="res_model">pod.floor</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for pod device type -->
    <record id="open_pod_device_type_form_tree" model="ir.actions.act_window">
        <field name="name">Device Type</field>
        <field name="res_model">pod.device.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for pod device accommodations type -->
    <record
        id="action_pod_device_accommodations_type_view_form"
        model="ir.actions.act_window"
    >
        <field name="name">Accommodations Type</field>
        <field name="res_model">pod.device.accommodations.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for pod device accommodations -->
    <record id="action_pod_device_accommodations_view_form" model="ir.actions.act_window">
        <field name="name">Accommodations</field>
        <field name="res_model">pod.device.accommodations</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_categ_id':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_pod_device_accommodations_list" />
    </record>
    <!-- Action for pod device -->
    <record id="action_pod_device_form" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">pod.device</field>
        <field
            name="context"
        >{'default_is_device':1,'default_rental':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_pod_device_tree" />
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Action for pod prescription -->
    <record id="open_pod_prescription1_form_tree_all" model="ir.actions.act_window">
        <field name="name">Generate Prescription</field>
        <field name="res_model">pod.prescription</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'prescription': True}</field>
    </record>
    <!-- Action for pod option type -->
    <record id="open_pod_option_type_form_tree" model="ir.actions.act_window">
        <field name="name">Option Types</field>
        <field name="res_model">pod.option.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for pod option -->
    <record id="action_pod_options_form" model="ir.actions.act_window">
        <field name="name">Options</field>
        <field name="res_model">pod.options</field>
        <field name="context">{'default_is_option':1,'default_available_in_pos':0}
        </field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
