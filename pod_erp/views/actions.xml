    <!-- Action for podiatry device type -->
    <record id="open_podiatry_device_type_form_tree" model="ir.actions.act_window">
        <field name="name">Device Type</field>
        <field name="res_model">podiatry.device.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device amenities type -->
    <record id="action_podiatry_device_amenities_type_view_form" model="ir.actions.act_window">
        <field name="name">Amenities Type</field>
        <field name="res_model">podiatry.device.amenities.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry device amenities -->
    <record id="action_podiatry_device_amenities_view_form" model="ir.actions.act_window">
        <field name="name">Amenities</field>
        <field name="res_model">podiatry.device.amenities</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_iscategid':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_amenities_list" />
    </record>
    <!-- Action for podiatry device -->
    <record id="action_podiatry_device_form" model="ir.actions.act_window">
        <field name="name">Device</field>
        <field name="res_model">podiatry.device</field>
        <field name="context">{'default_isdevice':1,'default_rental':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_podiatry_device_tree" />
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Action for podiatry prescription -->
    <record id="open_podiatry_prescription1_form_tree_all" model="ir.actions.act_window">
        <field name="name">Generate Prescription</field>
        <field name="res_model">podiatry.prescription</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'prescription': True}</field>
    </record>
    <!-- Action for podiatry service type -->
    <record id="open_podiatry_service_type_form_tree" model="ir.actions.act_window">
        <field name="name">Service Type</field>
        <field name="res_model">podiatry.service.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for podiatry service -->
    <record id="action_podiatry_services_form" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">podiatry.services</field>
        <field name="context">{'default_isservice':1,'default_available_in_pos':0}
        </field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action of Configurable Templates -->
    <record id="product_configurable_template_action" model="ir.actions.act_window">
        <field name="name">Configurable Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="product.product_template_kanban_view" />
        <field name="context">{'default_config_ok': True, 'custom_create_variant': True, 'search_default_filter_config_ok': 1}</field>
    </record>

    <!-- Action of Configured Variants -->
    <record id="product_configurable_variant_action" model="ir.actions.act_window">
        <field name="name">Configured Variants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="search_view_id" ref="product.product_search_form_view" />
        <field name="view_id" eval="False" />
        <!-- Force empty -->
        <field name="context">{'default_config_ok': True, 'custom_create_variant': True, 'search_default_filter_config_ok': 1}</field>
    </record>

