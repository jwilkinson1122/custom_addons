<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inh_pos" model="ir.ui.view">
            <field name="name">product.template.form.inherit.pos</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Shell / Founation Elements" name="shell_elements" autofocus="autofocus" invisible="context.get('def_categ_id') in ['Topcover', 'Service','Topcover Treatment', 'Miscellaneous']">

                        <group>
                            <field name="shell_material"/>
                            <field name="shell_shape"/>
                            <field name="shell_type"/>
                            <field name="rim"/>
                            <field name="gender"/>
                        </group>

                    </page>
                </xpath>
                <xpath expr="//div[@name='options']" position="after">
                    <group invisible="context.get('def_categ_id') in ['Topcover', 'Service','Topcover Treatment', 'Miscellaneous']">
                        <field name="manufacturer"/>
                        <field name="brand"/>
                        <field name="collection"/>
                    </group>
                    <group invisible="context.get('def_categ_id') in ['Shells', 'Service','Topcover Treatment', 'Miscellaneous']">
                        <field name="topcover_type"/>
                        <field name="topcover_style"/>
                        <field name="topcover_material"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
