<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="orthotic_form_view" model="ir.ui.view">
            <field name="name">podiatry.orthotic.form.view</field>
            <field name="model">podiatry.orthotic</field>
            <field name="arch" type="xml">
                <form string="orthotics">
                    <notebook>
                        <page string="Main Info">
                            <group>
                                <field name="product_id" required="1"
                                    context="{'default_is_orthotic': 1, 'search_default_is_orthotic': 1,'search_default_type': 'service','default_type': 'service'}" />
                                <field name="therapeutic_action" />
                                <field name="active_component" />
                                <field name="price" />
                                <field name="qty_available" />
                                <field name="indications"/>
                            </group>
                        </page>
                        <page string="Presentation">
                            <field name="presentation" />
                        </page>
                        <page string="Composition">
                            <field name="composition" />
                        </page>

                        <page string="Measure">
                            <group>
                                <field name="measure" />
                                <field name="overmeasure" />
                            </group>
                        </page>

                        <page string="Adverse Reactions">
                            <field name="adverse_reaction" />
                        </page>

                        <page string="Storage Conditions">
                            <field name="storage" />
                        </page>

                        <page string="Extra Info">
                            <field name="notes" />
                        </page>
                    </notebook>

                </form>
            </field>
        </record>

        <record id="orthotic_tree_view" model="ir.ui.view">
            <field name="name">podiatry.orthotic.tree.view</field>
            <field name="model">podiatry.orthotic</field>
            <field name="arch" type="xml">
                <tree string="orthotic">
                    <field name="product_id" />
                    <field name="active_component" />
                    <field name="qty_available" />
                    <field name="therapeutic_action" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <record id="action_orthotic" model="ir.actions.act_window">
            <field name="name">Orthotics</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">podiatry.orthotic</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
