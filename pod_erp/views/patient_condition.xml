<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="patient_condition_form_view" model="ir.ui.view">
            <field name="name">podiatry.patient.condition.form.view</field>
            <field name="model">podiatry.patient.condition</field>
            <field name="arch" type="xml">
                <form string="Conditions">
                    <group string="Main">
                        <group>
                            <field name="pathology_id" />
                            <field name="condition_severity" />
                            <field name="status" />
                            <field name="is_active" />
                        </group>
                        <group>
                            <field name="short_comment" />
                            <field name="diagnosis_date" />
                            <field name="age" />
                            <field name="doctor_id" />
                        </group>
                    </group>

                    <group string="Allergies">
                        <group>
                            <field name="is_allergic"/>
                        </group>
                        <group>
                            <field name="allergy_type" />
                        </group>
                    </group>

                    <group string="Therapy">
                        <group>
                            <field name="is_on_treatment"/>
                            <field name="treatment_description"/>
                        </group>
                    </group>

                    <group string="Extra Info">
                        <field name="extra_info" nolabel="1" colspan="2"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="patient_condition_tree_view" model="ir.ui.view">
            <field name="name">podiatry.patient.condition.tree.view</field>
            <field name="model">podiatry.patient.condition</field>
            <field name="arch" type="xml">
                <tree string="Conditions">
                    <field name="pathology_id" />
                    <field name="status" />
                    <field name="is_active" />
                    <field name="condition_severity" />
                    <field name="diagnosis_date" />
                    <field name="short_comment" />
                </tree>
            </field>
        </record>

        <record id="action_patient_condition" model="ir.actions.act_window">
            <field name="name">Conditions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">podiatry.patient.condition</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
