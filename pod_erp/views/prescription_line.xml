<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Tree view -->
        <record id="prescription_line_tree_view" model="ir.ui.view">
            <field name="name">podiatry.prescription.line.tree.view</field>
            <field name="model">podiatry.prescription.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Prescription lines">
                    <field name="prnt" />
                    <field name="orthotic_id" />
                    <field name="indication" />
                    <field name="quant" />
                    <field name="quant_unit_id" />
                    <field name="form" />
                    <field name="orthotic_measure_id" />
                    <field name="quantity" />
                    <field name="duration" />
                    <field name="duration_period" optional="hide"/>
                    <field name="allow_substitution" />
                    <field name="short_comment" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="prescription_line_form_view" model="ir.ui.view">
            <field name="name">podiatry.prescription.line.form.view</field>
            <field name="model">podiatry.prescription.line</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <group colspan="4" col="4">
                        <field name="orthotic_id" required="1" />
                        <field name="indication" />
                        <field name="allow_substitution" />
                        <field name="prnt" />
                        <field name="form" />
                        <field name="route" />
                    </group>
                    <group colspan="4" string="Measure">
                        <group colspan="6" col="6">
                            <field name="quant" />
                            <field name="quant_unit_id" />

                            <field name="qty" />
                        </group>
                        <separator string="Common Measure" />
                        <group colspan="4" col="4">
                            <field name="orthotic_measure_id" />
                            <field name="admin_times" />
                        </group>
                        <separator string="Specific Measure" />
                        <group colspan="4" col="4">
                            <field name="frequency" />
                            <field name="frequency_unit" />
                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <field name="duration" />
                        <field name="duration_period" />
                        <field name="review" />
                        <field name="quantity" />
                        <field name="refills" />
                        <field name="short_comment" />
                    </group>
                </form>
            </field>
        </record>

</odoo>
