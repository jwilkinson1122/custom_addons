<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="shell_brand_view_form" model="ir.ui.view">
            <field name="name">shell.brand.view.form</field>
            <field name="model">shell.brand</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="shell_collection_view_form" model="ir.ui.view">
            <field name="name">shell.collection.view.form</field>
            <field name="model">shell.collection</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="brand"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="shell_brand_action" model="ir.actions.act_window">
            <field name="name">brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.brand</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="shell_collection_action" model="ir.actions.act_window">
            <field name="name">collection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.collection</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="shell_material_action" model="ir.actions.act_window">
            <field name="name">shell_material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.material</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="shell_shape_action" model="ir.actions.act_window">
            <field name="name">shell_shape</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.shape</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="shell_type_action" model="ir.actions.act_window">
            <field name="name">shell_type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="shell_manufacturer_action" model="ir.actions.act_window">
            <field name="name">manufacturer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shell.manufacturer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="topcover_type_action" model="ir.actions.act_window">
            <field name="name">Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">topcover.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="topcover_style_action" model="ir.actions.act_window">
            <field name="name">Style</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">topcover.style</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="topcover_material_action" model="ir.actions.act_window">
            <field name="name">Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">topcover.material</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="erp_shells_action" model="ir.actions.act_window">
            <field name="name">Shells</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('categ_id','=','Shells')]</field>
            <field name="context">{'def_categ_id':'Shells' }</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="erp_topcover_action" model="ir.actions.act_window">
            <field name="name">Topcover</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('categ_id','=','Topcover')]</field>
            <field name="context">{'def_categ_id':'Topcover' }</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="erp_service_action" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('categ_id','=','Service')]</field>
            <field name="context">{'def_categ_id':'Service' }</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="erp_miscellaneous_action" model="ir.actions.act_window">
            <field name="name">Miscellaneous</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('categ_id','=','Miscellaneous')]</field>
            <field name="context">{'def_categ_id':'Miscellaneous' }</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_shells" name="Shell" parent="pod_erp_config"
                  sequence="4"/>
        <menuitem id="product_topcovers" name="Topcover" parent="pod_erp_config"
                  sequence="10"/>
        <menuitem id="product_shells_brand" name="Brands" parent="product_shells" action="shell_brand_action"
                  sequence="4"/>
        <menuitem id="product_shells_collection" name="Collections" parent="product_shells"
                  action="shell_collection_action"
                  sequence="5"/>
        <menuitem id="product_shells_type" name="Types" parent="product_shells"
                  action="shell_type_action"
                  sequence="6"/>
        <menuitem id="product_shells_material" name="Materials" parent="product_shells"
                  action="shell_material_action"
                  sequence="7"/>
        <menuitem id="product_shells_manufacturer" name="Manufacturer" parent="product_shells"
                  action="shell_manufacturer_action"
                  sequence="8"/>
        <menuitem id="product_shells_shape" name="Shape" parent="product_shells"
                  action="shell_shape_action"
                  sequence="9"/>

        <menuitem id="product_topcovers_type" name="Type" parent="product_topcovers" action="topcover_type_action"
                  sequence="11"/>
        <menuitem id="product_topcovers_style" name="Style" parent="product_topcovers" action="topcover_style_action"
                  sequence="12"/>
        <menuitem id="product_topcovers_material" name="Material" parent="product_topcovers" action="topcover_material_action"
                  sequence="13"/>
                  
        <menuitem id="pod_erp_products" name="Products" parent="pod_erp_root"
                  sequence="5"/>
        <menuitem id="pod_erp_product_shell" name="Shells" parent="pod_erp_products" action="erp_shells_action"
                  sequence="1"/>
        <menuitem id="pod_erp_product_topcover" name="Topcover" parent="pod_erp_products" action="erp_topcover_action"
                  sequence="2"/>
        <menuitem id="pod_erp_product_service" name="Service" parent="pod_erp_products"
                  action="erp_service_action"
                  sequence="3"/>
        <menuitem id="pod_erp_product_miscellaneous" name="Miscellaneous" parent="pod_erp_products"
                  action="erp_miscellaneous_action"
                  sequence="4"/>
    </data>
</odoo>
