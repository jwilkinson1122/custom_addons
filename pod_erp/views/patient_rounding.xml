<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_rounding_form_view" model="ir.ui.view">
        <field name="name">podiatry.patient.rounding.form.view</field>
        <field name="model">podiatry.patient.rounding</field>
        <field name="arch" type="xml">
            <form string="Roundings">
                <sheet>
                    <!-- <header>
                        <button name="action_confirm" states="draft" string="Done" icon="gtk-execute" type="object" modifiers="{'invisible': [['state', 'not in', ['draft']]]}" />
                        <field name="state" readonly="1" widget="statusbar" statusbar_visible="draft" modifiers="{'readonly': true}" />
                    </header> -->
                    <notebook>
                        <page string="Main" id="rounding_main">
                            <group colspan="4" id="group_admin_data">
                                <field name="health_physician_id" />
                                <field name="details_start" />
                                <field name="details_end" />
                                <field name="warning" />
                            </group>
                            <group colspan="4" string="Round Summary">
                                <field name="round_summary" nolabel="1" colspan="4" />
                            </group>
                        </page>
                        <page string="Orthotic">
                            <group colspan="2" col="2">
                                <field name="practice_location_id" />
                            </group>
                            <form string=" Orthotics">
                                <field name="orthotics_ids" nolabel="1" widget="one2many_list">
                                    <tree string="Orthotics" editable="bottom">
                                        <field name="orthotic_id" />
                                        <field name="quantity" />
                                        <field name="lot_id" />
                                        <field name="short_comment" />
                                        <field name="product_id" />
                                    </tree>
                                </field>

                                <field name="supplies_ids" nolabel="1" widget="one2many_list" mode="tree">
                                    <tree string="Podiatry Supplies" editable="bottom">
                                        <field name="product_id" />
                                        <field name="short_comment" />
                                        <field name="lot_id" />
                                        <field name="short_comment" />
                                        <field name="quantity" />
                                    </tree>
                                </field>
                            </form>
                        </page>
<!-- 
                        <page string="Stock Moves">
                            <field name="move_ids" string="Stock Moves" />
                        </page> -->
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="patient_rounding_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patient.rounding.tree.view</field>
        <field name="model">podiatry.patient.rounding</field>
        <field name="arch" type="xml">
            <tree string="Roundings">
                <field name="warning" />
                <field name="details_start" />
                <field name="health_physician_id" />
                <field name="evolution" />
            </tree>
        </field>
    </record>

    <record id="action_patient_rounding" model="ir.actions.act_window">
        <field name="name">Roundings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.patient.rounding</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_patient_rounding" parent="menu_nursing" action="action_patient_rounding" sequence="0" /> -->

</odoo>
