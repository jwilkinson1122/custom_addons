<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pathology_category_form_view" model="ir.ui.view">
            <field name="name">podiatry.pathology.category.form.view</field>
            <field name="model">podiatry.pathology.category</field>
            <field name="arch" type="xml">
                <form string="Condition categories">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" />
                            <field name="active" />
                            <field name="parent_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pathology_category_tree_view" model="ir.ui.view">
            <field name="name">podiatry.pathology.category.tree.view</field>
            <field name="model">podiatry.pathology.category</field>
            <field name="arch" type="xml">
                <tree string="Condition Categories">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="action_pathology_category_tree"
            model="ir.actions.act_window">
            <field name="name">Condition categories Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">podiatry.pathology.category</field>
            <field name="binding_view_types">tree</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_pathology_category_form"
            model="ir.actions.act_window">
            <field name="name">Condition Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">podiatry.pathology.category</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="menu_pathologies" name="Conditions"
            parent="main_menu_configuration" sequence='1' />

        <menuitem id="menu_categories" name="Categories" action="action_pathology_category_form"
            parent="menu_pathologies" /> -->

</odoo>
