<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_details_form_view" model="ir.ui.view">
        <field name="name">podiatry.patient.details.form.view</field>
        <field name="model">podiatry.patient.details</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <notebook>
                        <page>
                            <group string="Main Info">
                                <group>
                                    <field name="patient_id" string="Patient" />
                                    <field name="physician_partner_id" />
                                </group>
                                <group>
                                    <field name="weight" />
                                    <field name="height" />
                                </group>
                            </group>
                            <group string="Symptoms/Pain">
                                <group>
                                    <field name="symptom_pain" />
                                </group>
                                <group>
                                    <field name="symptom_pain_intensity" />
                                </group>
                                <group>
                                    <field name="symptom_arthralgia" />
                                    <field name="symptom_abdominal_pain" />
                                    <field name="symptom_thoracic_pain" />
                                </group>
                                <group>
                                    <field name="symptom_pelvic_pain" />
                                    <field name="symptom_hoarseness" />
                                    <field name="symptom_sore_throat" />
                                </group>
                            </group>
                            <group string="Diagnosis">
                                <group>
                                    <field name="diagnosis_id" />
                                </group>
                                <group>
                                    <field name="user_id" string="Doctor user ID" />

                                </group>
                            </group>

                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_details_tree_view" model="ir.ui.view">
        <field name="name">podiatry.patient.details.tree.view</field>
        <field name="model">podiatry.patient.details</field>
        <field name="arch" type="xml">
            <tree string="Details">
                <field name="patient_id" string="Patient" />
                <field name="physician_partner_id" />
            </tree>
        </field>
    </record>

</odoo>
