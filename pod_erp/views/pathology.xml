<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pathology_form_view" model="ir.ui.view">
            <field name="name">podiatry.pathology.form.view</field>
            <field name="model">podiatry.pathology</field>
            <field name="arch" type="xml">
                <form string="Pathology Info">
                    <sheet>
                        <notebook>
                            <page string="Main">
                                <group>
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="category_id" />
                                    <newline />
                                </group>
                            </page>
                            <page string="Genetics">
                                <group>
                                    <field name="chromosome" />
                                    <field name="protein" />
                                    <field name="gene" />
                                </group>
                            </page>
                            <page string="Extra Info">
                                <field name="info" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pathology_tree_view" model="ir.ui.view">
            <field name="name">podiatry.pathology.tree.view</field>
            <field name="model">podiatry.pathology</field>
            <field name="arch" type="xml">
                <tree string="Pathology">
                    <field name="name" />
                    <field name="code" />
                    <field name="category_id" />
                </tree>
            </field>
        </record>

        <record id="action_pathology" model="ir.actions.act_window">
            <field name="name">Conditions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">podiatry.pathology</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="menu_pathologies" name="Conditions"
            parent="main_menu_configuration" sequence='1' />
        <menuitem id="menu_sub_conditions" action="action_pathology"
            sequence="3" parent="menu_pathologies" /> -->

</odoo>
