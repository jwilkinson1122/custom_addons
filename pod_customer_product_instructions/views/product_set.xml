<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_set_form" model="ir.ui.view">
        <field name="name">sale_instruction: product.set.form</field>
        <field name="model">product.set</field>
        <field name="inherit_id" ref="pod_product_set.view_product_set_form" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="typology" />
            </field>
        </field>
    </record>
    <record id="view_product_set_tree" model="ir.ui.view">
        <field name="name">sale_instruction: product.set.tree</field>
        <field name="model">product.set</field>
        <field name="inherit_id" ref="pod_product_set.view_product_set_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="typology" />
            </field>
        </field>
    </record>
    <record id="view_product_set_search" model="ir.ui.view">
        <field name="name">sale_instruction: product.set.search</field>
        <field name="model">product.set</field>
        <field name="inherit_id" ref="pod_product_set.view_product_set_search" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="typology" />
            </field>
            <filter name="group_by_partner_id" position="after">
                <filter name="group_by_typology" string="Typology" domain="[]" context="{'group_by':'typology'}" />
            </filter>
        </field>
    </record>
</odoo>
