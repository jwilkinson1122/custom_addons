<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_coverage_agreement_join_form_view">
        <field name="name">pod.coverage.agreement.join.form (in cb_pod_financial_coverage_agreement)</field>
        <field name="model">pod.coverage.agreement.join</field>
        <field name="arch" type="xml">
            <form string="Podiatry Coverage Agreement Join">
                <group>
                    <field name="agreement_ids" />
                </group>
                <footer>
                    <button name="run" string="Join" class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="pod_coverage_agreement_join_act_window" model="ir.actions.act_window">
        <field name="name">Podiatry Coverage Agreement Join</field>
        <field name="binding_model_id" ref="model_pod_coverage_agreement" />
        <field name="binding_view_types">list</field>
        <field name="res_model">pod.coverage.agreement.join</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
