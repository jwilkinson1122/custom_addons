<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_coverage_agreement_template_form">
        <field name="name">pod.coverage.agreement.template.form</field>
        <field name="model">pod.coverage.agreement.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Set a template for an Agreement">
                <group>
                    <group>
                        <field name="agreement_id" />
                        <field name="template_id" options="{'no_create':True}" />
                        <field name="set_items" />
                    </group>
                </group>
                <footer>
                    <button string="Apply changes" name="run" type="object" default_focus="1" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="set_pod_coverage_agreement_template_action" model="ir.actions.act_window">
        <field name="name">Change prices</field>
        <field name="res_model">pod.coverage.agreement.template</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
