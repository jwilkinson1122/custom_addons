<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="pod_coverage_template_view_form" model="ir.ui.view">
        <field name="name">pod.coverage.template.view.form</field>
        <field name="model">pod.coverage.template</field>
        <field
            name="inherit_id"
            ref="pod_financial_coverage.pod_coverage_template_view_form"
        />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="coverage_agreements" string="Agreements">
                    <field
                        name="agreement_ids"
                        nolabel="1"
                        options="{'no_create': True}"
                    >
                        <tree
                            delete="1"
                            decoration-muted="(date_from &gt; current_date) or (date_to and date_to &lt; current_date)"
                        >
                            <field name="internal_identifier" />
                            <field name="name" />
                            <field name="company_id" />
                            <field name="date_from" />
                            <field name="date_to" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
    <record id="pod_coverage_template_view_tree_delete" model="ir.ui.view">
        <field name="name">pod.coverage.template.form</field>
        <field name="model">pod.coverage.template</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="pod_financial_coverage.pod_coverage_template_view_tree"
        />
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="delete">1</attribute>
            </tree>
        </field>
    </record>
</odoo>
