<odoo>

    <!-- Patient devicetype Tree View -->
    <record id="view_patient_devicetype_tree" model="ir.ui.view">
        <field name="name">view.patient.devicetype.tree</field>
        <field name="model">patient.devicetype</field>
        <field name="arch" type="xml">
            <tree string="Device Types">
                <field name="name" />
                <field name="devicegroup_id" />
                <field name="devicecat_id" />
            </tree>
        </field>
    </record>

    <!-- Patient devicetype Form View -->
    <record id="view_patient_devicetype_form" model="ir.ui.view">
        <field name="name">view.patient.devicetype.form</field>
        <field name="model">patient.devicetype</field>
        <field name="arch" type="xml">
            <form string="Device Type">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group id="main">
                        <group id="left">
                            <field name="devicegroup_id" />
                            <field name="devicecat_id" />
                        </group>
                        <group id="right" />
                    </group>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_patient_devicetype" model="ir.actions.act_window">
        <field name="name">Device Types</field>
        <field name="res_model">patient.devicetype</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Device Type.
            </p>
        </field>
    </record>

</odoo>
