<odoo>

    <!-- Patient devicegroup Tree View -->
    <record id="view_patient_devicegroup_tree" model="ir.ui.view">
        <field name="name">view.patient.devicegroup.tree</field>
        <field name="model">patient.devicegroup</field>
        <field name="arch" type="xml">
            <tree string="Device Groups">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="devicecat_id" />
            </tree>
        </field>
    </record>

    <!-- Patient devicegroup Form View -->
    <record id="view_patient_devicegroup_form" model="ir.ui.view">
        <field name="name">view.patient.devicegroup.form</field>
        <field name="model">patient.devicegroup</field>
        <field name="arch" type="xml">
            <form string="Device Group">
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group id="main">
                        <group id="left">
                            <field name="devicecat_id" />
                        </group>
                        <group id="right" />
                    </group>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_patient_devicegroup" model="ir.actions.act_window">
        <field name="name">Device Groups</field>
        <field name="res_model">patient.devicegroup</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a devicegroup.
            </p>
        </field>
    </record>

</odoo>
