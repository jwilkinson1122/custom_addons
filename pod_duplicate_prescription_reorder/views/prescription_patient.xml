<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_prescription_patient_form_view" model="ir.ui.view">
            <field name="name">inherit.prescription.patient.form</field>
            <field name="model">prescription.patient</field>
            <field name="inherit_id" ref="pod_prescription_contacts.prescription_patient_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_patient_flags']" position="before">
                    <button class="oe_stat_button" type="object" name="open_prescription_from_view_action" icon="fa-pencil-square-o" invisible="reorder_count == 0">
                        <field name="reorder_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//notebook/page[@name='patient_measures']" position="before">
                    <page name="prescription_order_history" string="Prescription History">
                        <field name="prescription_order_ids" readonly = "True">
                            <tree>
                                <field name="name" readonly = "True"/>
                                <field name="date_order" readonly = "True"/>
                                <field name="partner_id" readonly = "True"/>
                                <field name="patient_id" readonly = "True"/>
                                <button string="Reorder" name="def_reorder_prescription" type="object" class="oe_highlight"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>