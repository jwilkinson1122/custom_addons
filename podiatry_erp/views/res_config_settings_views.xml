<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="podiatry_erp_settings_view_form">
        <field name="name">virtual.meeting.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Podiatry Erp" string="Podiatry Erp" data-key="podiatry_erp">
                    <h2 id="web_theme_title">Podiatry Erp Settings</h2>
                    <div class="row mt16 o_settings_container" name="web_theme">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <span class="o_form_label">Accommodations Chargeable (service charge)</span>
                            <div class="content-group">
                                <div>
                                    <field name="accommodation_chargeable" class="col-5"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>


