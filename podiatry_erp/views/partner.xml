<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Action -->
		<record id="action_medical_prescription_from_partner" model="ir.actions.act_window">
			<field name="name">Prescriptions</field>
			<field name="res_model">medical.prescription</field>
			<field name="context">{'default_partner_id': active_id}</field>
			<field name="domain">[('partner_id', '=', active_id)]</field>
		</record>

		<record model="ir.ui.view" id="partner_view_form_inherit">
			<field name="name">partner.view.user</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//group" position="inside">
					<group>
						<field name="dob" string="Dob"></field>
						<field name="age" string="Age"></field>
					</group>
				</xpath>
				<xpath expr="//div[hasclass('oe_button_box')]" position="inside">
					<button type="action" name="%(action_medical_prescription_from_partner)d" class="oe_stat_button" icon="fa-tasks">
						<field name="prescription_count" string="Prescription" widget="statinfo"/>
					</button>
					<!-- <button name="open_customer_prescriptions" class="oe_stat_button" type="object" icon="fa-tasks">
						<field string="Prescription" name="prescription_count" widget="statinfo"/>
					</button> -->
				</xpath>
				<notebook>
					<page string="Medical">
						<group colspan="6" col="6">
							<field name="is_patient" />
							<field name="is_practitioner" />
							<field name="is_location" />
							<!-- <field name="is_person" /> -->
						</group>
					</page>
				</notebook>
			</field>
		</record>
	</data>
</odoo>
