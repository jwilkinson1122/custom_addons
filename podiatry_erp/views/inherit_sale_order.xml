<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="complete_pair_order_view" model="ir.ui.view">
        <field name="name">Complete Pair Order</field>
        <field name="model">complete.pair.order</field>
        <field name="arch" type="xml">
            <form>
                <field name="sal" invisible="1"/>
                <field name="customer_id" invisible="1"/>
                <group>
                    <field name="prescription" domain="[('customer', '=', customer_id)]"/>
                </group>
                <group>
                    <field name="frame"/>
                </group>
                <group>
                    <field name="lens"/>
                </group>
                <footer>
                    <button name="show_btn" class="oe_highlight" string="Add to Order" type="object"/>
                    <button class="oe_highlight" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="complete_pair_order_wizard" model="ir.actions.act_window">
        <field name="name">Complete Pair Order wizard</field>
        <field name="res_model">complete.pair.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="complete_pair_order_view"/>
    </record>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!--            <xpath expr="//field[@name='payment_term_id']" position="before">-->
            <!--                <field string="Prescription" name="prescription_id"/>-->
            <!--            </xpath>-->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="doctor"/>
                <field name="prescription_date" string="Prescription Date" readonly="0"/>
                <field name="commitment_date"/>
                <field name="po_ref"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="print_prescription_report_ticket_size" class="btn btn-success" string="Print Measure" type="object"></button>
                <button name="print_podiatric_prescription_report_ticket_size" class="btn btn-success" string="Print Podiatric" type="object"></button>
                <button name="print_sale_order_report" class="btn btn-success" string="Print Sale Order" type="object" attrs="{'invisible':[('state','!=','sale')]}"/>
                <button name="print_purchase_order_report" class="btn btn-success" string="Print Purchase Order" type="object" attrs="{'invisible':[('state','!=','sale'),('po_ref','=',False)]}"/>

            </xpath>
            <xpath expr="//group[@name='sale_header']" position="after">
                <hr/>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" type="action" string="Complete Pair"></button>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" string="Contact Lens" type="action" style="margin-left: 3px;"></button>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" string="Frame Only" type="action" style="margin-left: 3px;"></button>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" string="Lens Only" type="action" style="margin-left: 3px;"></button>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" string="Services" type="action" style="margin-left: 3px;"></button>
                <button name="%(complete_pair_order_wizard)d" class="btn btn-info" string="Miscellaneous" type="action" style="margin-left: 3px;"></button>
            </xpath>
        </field>
    </record>

</odoo>