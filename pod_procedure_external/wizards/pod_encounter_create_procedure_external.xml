<odoo>
    <record model="ir.ui.view" id="pod_encounter_create_external_request_form_view">
        <field
            name="name"
        >pod.encounter.create.external.request.form (in pod_procedure_external)</field>
        <field name="model">pod.encounter.create.external.request</field>
        <field name="arch" type="xml">
            <form string="Create External Request">
                <group>
                    <field
                        name="encounter_id"
                        invisible="context.get('default_encounter_id')"
                        domain="[('patient_id', '=', patient_id)]"
                        options="{'no_create': 1, 'no_open': 1}"
                    />
                    <field name="patient_id" invisible="1" />
                    <field
                        name="template_id"
                        options="{'no_create': 1, 'no_open': 1}"
                    />
                    <field name="lang" />
                </group>
                <footer>
                    <button
                        name="generate"
                        string="Create"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_encounter_create_procedure_external_act_window"
    >
        <field name="name">Create External Request</field>
        <field name="res_model">pod.encounter.create.external.request</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_encounter_id': active_id}</field>
        <field name="target">new</field>
    </record>
    <record
        model="ir.actions.act_window"
        id="pod_encounter_create_procedure_external_patient_act_window"
    >
        <field name="name">Create External Request</field>
        <field name="res_model">pod.encounter.create.external.request</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_patient_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
