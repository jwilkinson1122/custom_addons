<odoo>
    <record
        model="ir.ui.view"
        id="pod_procedure_external_request_template_form_view"
    >
        <field
            name="name"
        >pod.procedure.external.request.template.form (in pod_procedure_external_request)</field>
        <field name="model">pod.procedure.external.request.template</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <group>
                        <field name="name" string="Name" />
                        <field name="title" string="Title" />
                        <field name="active" invisible="1" />
                    </group>
                    <notebook>
                        <page name="composition" string="Composition">
                            <field name="composition" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record
        model="ir.ui.view"
        id="pod_procedure_external_request_template_tree_view"
    >
        <field
            name="name"
        >pod.procedure.external.request.template.tree (in pod_procedure_external_request)</field>
        <field name="model">pod.procedure.external.request.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record
        id="pod_procedure_external_request_template_act_window"
        model="ir.actions.act_window"
    >
        <field name="name">External Request Template</field>
        <field name="res_model">pod.procedure.external.request.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.ui.menu" id="pod_request_template_menu">
        <field name="name">External Request Templates</field>
        <field name="parent_id" ref="pod_base.pod_root_configuration" />
        <field
            name="action"
            ref="pod_procedure_external_request_template_act_window"
        />
        <field name="sequence" eval="16" />
    </record>
</odoo>
