<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_encounter_form_view">
        <field
            name="name"
        >pod.encounter.form (in pod_procedure_external)</field>
        <field name="model">pod.encounter</field>
        <field
            name="inherit_id"
            ref="pod_administration_encounter.pod_encounter_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//header/button[last()]" position="after">
                <button
                    type="action"
                    name="%(pod_procedure_external.pod_encounter_create_procedure_external_act_window)s"
                    class="oe_stat_button btn-info"
                    icon="fa-file-prescription"
                    string="Generate External Request"
                    groups="pod_base.group_pod_practitioner"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_external_request"
                    class="oe_stat_button"
                    icon="fa-file-prescription"
                    attrs="{'invisible':[('external_request_count', '=', 0)]}"
                >
                    <field
                        name="external_request_count"
                        widget="statinfo"
                        string="External Requests"
                    />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
