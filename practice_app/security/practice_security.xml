<odoo>

  <data>
    <!-- Practice User Group -->
    <record id="practice_group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_medical"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Practice Manager Group -->
    <record id="practice_group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="category_id" ref="base.module_category_medical"/>
      <field name="implied_ids" eval="[(4, ref('practice_group_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>

  </data>
  <data noupdate="1">
    <record id="prescription_user_rule" model="ir.rule">
      <field name="name">Practice Prescription User Access</field>
      <field name="model_id" ref="model_practice_prescription"/>
      <field name="domain_force">
        [('active', '=', True)] 
      </field>
      <field name="groups" eval="[(4, ref('practice_group_user'))]"/>
    </record>
  </data>

</odoo>
