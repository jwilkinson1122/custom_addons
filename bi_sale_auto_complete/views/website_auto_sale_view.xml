<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="form_website_auto_sale" model="ir.ui.view">
			<field name="name">form.website.auto.sale</field>
			<field name="model">website.auto.sale</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group col="4" colspan="2">
							<field name="name"/>
							<field name ="company_id" invisible="1"/>
						</group>
						<group col="4" colspan="2">
							<group string="Workflow Option">
								<field name="validation_order"/>
								<field name="validation_picking"/>
								<field name="create_incoice"/>
								<field name="validate_invoice"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_website_auto_sale" model="ir.ui.view">
			<field name="name">tree.website.auto.sale</field>
			<field name="model">website.auto.sale</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="validation_order"/>
					<field name="validation_picking"/>
					<field name="create_incoice"/>
					<field name="validate_invoice"/>
				</tree>
			</field>
		</record>

		<record id="action_website_auto_sale" model="ir.actions.act_window">
			<field name="name">Website Auto Sale</field>
			<field name="res_model">website.auto.sale</field>
			<field name="binding_view_types">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" eval="False"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new automated sale entry.
				</p>
			</field>
		</record>

		<menuitem 
			id="menu_website_auto_sale"
			name="Website Auto Sales Workflow"
			parent="account.menu_finance_configuration"
			action="action_website_auto_sale"
			sequence="1"
		/>

		<record id="view_auto_sale_workflow_field" model="ir.ui.view">
			<field name="name">sale.order.auto.sale.field</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='sale_info']" position="inside">
					<field name="web_work_process_id"/>
			   </xpath>
			</field>
		</record>

		<record id="view_res_partner_website_auto_sale" model="ir.ui.view">
			<field name="name">view.res.partner.website.auto.sale</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="bi_automated_sale_order.view_res_partner_is_automate"/>
			<field name="arch" type="xml">
			   <xpath expr="//field[@name='work_process_id']" position="after">
					<field name="web_work_process_id" attrs="{'invisible': [('is_automated', '=', False)]}"/>
			   </xpath>
			</field>
		</record>
	</data>
</odoo>