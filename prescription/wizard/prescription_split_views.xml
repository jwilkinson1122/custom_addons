<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescription_split_wizard_view_form2" model="ir.ui.view">
        <field name="name">prescription.split.wizard.form</field>
        <field name="model">prescription.split.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <label for="product_uom_qty" />
                        <div class="o_row">
                            <field name="product_uom_qty" />
                            <field name="product_uom" groups="uom.group_uom" />
                            <field name="product_uom" invisible="1" />
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="action_split" string="Split" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="prescription_split_wizard_action" model="ir.actions.act_window">
        <field name="name">Split Prescription</field>
        <field name="res_model">prescription.split.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
