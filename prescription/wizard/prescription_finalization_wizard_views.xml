<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescription_finalization_wizard_view_form" model="ir.ui.view">
        <field name="model">prescription.finalization.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="finalization_id" />
                    </group>
                </group>
                <footer>
                    <button
                        name="action_finish"
                        string="Finish Prescription"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="prescription_finalization_wizard_action" model="ir.actions.act_window">
        <field name="name">Finish Prescription Manualy</field>
        <field name="res_model">prescription.finalization.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="prescription.model_prescription" />
        <field name="binding_view_types">list</field>
        <field name="target">new</field>
    </record>
</odoo>
