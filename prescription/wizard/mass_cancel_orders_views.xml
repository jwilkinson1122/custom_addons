<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_cancel_orders_view_form" model="ir.ui.view">
        <field name="name">prescription.mass.cancel.orders.form</field>
        <field name="model">prescription.mass.cancel.orders</field>
        <field name="arch" type="xml">
            <form string="Cancel quotations">
                <field name="prescription_ids" invisible="1"/>
                <field name="prescriptions_count" invisible="1"/>
                <field name="has_confirmed_order" invisible="1"/>
                <div invisible="not has_confirmed_order">
                    <p class="alert alert-warning fw-bold" role="alert">
                        Some confirmed prescription orders are selected. Their related documents might be
                        affected by the cancellation.
                    </p>
                </div>
                <div invisible="prescriptions_count &gt; 1">
                    Are you sure you want to cancel the selected quotation?
                </div>
                <div invisible="prescriptions_count == 1">
                    Are you sure you want to cancel the <field name="prescriptions_count"/> selected
                    quotations?
                </div>
                <footer>
                    <button class="btn-primary"
                            name="action_mass_cancel"
                            type="object"
                            string="Cancel quotations"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_cancel_orders" model="ir.actions.act_window">
        <field name="name">Cancel quotations</field>
        <field name="res_model">prescription.mass.cancel.orders</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mass_cancel_orders_view_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_prescription"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
