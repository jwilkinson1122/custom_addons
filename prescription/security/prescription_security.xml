<?xml version="1.0" ?>
<odoo>
        <record id="module_prescription_category" model="ir.module.category">
            <field name="name">Prescription</field>
            <field name="sequence">17</field>
        </record>
        <record id="prescription_group_user" model="res.groups">
            <field name="name">Officer: Manage all prescription</field>
            <field name="category_id" ref="module_prescription_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="prescription_group_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="category_id" ref="module_prescription_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('prescription.prescription_group_manager'))]"/>
        </record>
        <record id="prescription_rule_prescription_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her prescription</field>
            <field name="model_id" ref="model_prescription_type_log"/>
            <field name="groups" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('prescription_id.location_id','=',user.partner_id.id)]</field>
        </record>
        <record id="prescription_rule_service_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her prescription services</field>
            <field name="model_id" ref="model_prescription_type_log_services"/>
            <field name="groups" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('prescription_id.location_id','=',user.partner_id.id)]</field>
        </record>
        <record id="prescription_rule_measure_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her prescription measures</field>
            <field name="model_id" ref="model_prescription_type_measure"/>
            <field name="groups" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('prescription_id.location_id','=',user.partner_id.id)]</field>
        </record>
        <record id="prescription_rule_prescription_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her prescription</field>
            <field name="model_id" ref="model_prescription_type"/>
            <field name="groups" eval="[(4, ref('prescription_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('location_id','=',user.partner_id.id)]</field>
        </record>
        <record id="prescription_rule_prescription_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on prescription prescription</field>
            <field name="model_id" ref="model_prescription_type_log"/>
            <field name="groups" eval="[Command.link(ref('prescription_group_manager'))]"/>
        </record>
        <record id="prescription_rule_service_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on prescription services</field>
            <field name="model_id" ref="model_prescription_type_log_services"/>
            <field name="groups" eval="[Command.link(ref('prescription_group_manager'))]"/>
        </record>
        <record id="prescription_rule_measure_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on prescription measures</field>
            <field name="model_id" ref="model_prescription_type_measure"/>
            <field name="groups" eval="[Command.link(ref('prescription_group_manager'))]"/>
        </record>
        <record id="prescription_rule_prescription_visibility_manager" model="ir.rule">
            <field name="name">Administrator has all rights on prescription</field>
            <field name="model_id" ref="model_prescription_type"/>
            <field name="groups" eval="[Command.link(ref('prescription_group_manager'))]"/>
        </record>
        <record id="ir_rule_prescription_type" model="ir.rule">
            <field name="name">Prescription type: Multi Company</field>
            <field name="model_id" ref="model_prescription_type"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_prescription_type_log" model="ir.rule">
            <field name="name">Prescription type log prescription: Multi Company</field>
            <field name="model_id" ref="model_prescription_type_log"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_prescription_report" model="ir.rule">
            <field name="name">Costs Analysis: Multi Company</field>
            <field name="model_id" ref="model_prescription_type_cost_report"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_prescription_measure" model="ir.rule">
            <field name="name">Prescription measure: Multi Company</field>
            <field name="model_id" ref="model_prescription_type_measure"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('prescription_id.company_id', '=', False), ('prescription_id.company_id', 'in', company_ids)]</field>
        </record>
        <record id="ir_rule_prescription_log_services" model="ir.rule">
            <field name="name">Prescription log services: Multi Company</field>
            <field name="model_id" ref="model_prescription_type_log_services"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
