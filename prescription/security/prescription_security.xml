<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Group for prescription user -->
    <record id="group_prescription_user" model="res.groups">
        <field name="name">Prescription Management / User</field>
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>
    <!--Group for prescription manager -->
    <record id="group_prescription_manager" model="res.groups">
        <field name="name">Prescription Management/ Manager</field>
        <field eval="[(4, ref('prescription.group_prescription_user'))]" name="implied_ids" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

