<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Prescription Categories -->
        <record id="prescription_type_data_ticket" model="prescription.type">
            <field name="name">Ticketing</field>
            <field name="auto_confirm" eval="False"/>
        </record>
        <record id="prescription_type_data_conference" model="prescription.type">
            <field name="name">Conference</field>
            <field name="auto_confirm" eval="True"/>
        </record>

        <!-- Prescription stages -->
        <record id="prescription_stage_new" model="prescription.stage">
            <field name="name">New</field>
            <field name="description">Freshly created</field>
            <field name="sequence">1</field>
        </record>
        <record id="prescription_stage_booked" model="prescription.stage">
            <field name="name">Booked</field>
            <field name="description">The place has been reserved</field>
            <field name="sequence">2</field>
        </record>
        <record id="prescription_stage_announced" model="prescription.stage">
            <field name="name">Announced</field>
            <field name="description">The prescription has been publicly announced</field>
            <field name="sequence">3</field>
        </record>
        <record id="prescription_stage_done" model="prescription.stage">
            <field name="name">Ended</field>
            <field name="description">Fully ended</field>
            <field name="sequence">5</field>
            <field name="pipe_end" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
        <record id="prescription_stage_cancelled" model="prescription.stage">
            <field name="name">Cancelled</field>
            <field name="description">The prescription has been cancelled</field>
            <field name="sequence">6</field>
            <field name="pipe_end" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
        <!--sequence for patient-->
        <record id="sequence_podiatry_patient" model="ir.sequence">
            <field name="name">Patient ID</field>
            <field name="code">podiatry.patient</field>
            <field name="prefix">PID</field>
            <field name="padding">6</field>
            <!-- <field name="company_id" eval="False"/> -->
        </record>
        <!--sequence for practice-->
        <record id="sequence_podiatry_practice" model="ir.sequence">
            <field name="name">Practice ID</field>
            <field name="code">podiatry.practice</field>
            <field name="prefix">ID</field>
            <field name="padding">6</field>
        </record>
        <!--sequence for practitioner-->
        <record id="sequence_podiatry_practitioner" model="ir.sequence">
            <field name="name">Practitioner ID</field>
            <field name="code">podiatry.practitioner</field>
            <field name="prefix">ID</field>
            <field name="padding">6</field>
        </record>
        <!--sequence for prescription-->
        <record id="sequence_prescription_prescription" model="ir.sequence">
            <field name="name">Prescription Sequence</field>
            <field name="code">prescription.prescription</field>
            <field name="prefix">%(y)s%(month)s-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        <!--sequence for prescription-->
        <record id="prescription_invoice_sequence" model="ir.sequence">
            <field name="name">Prescription Invoice</field>
            <field name="code">pres_inv_seq</field>
            <field name="prefix">PRES/INV/</field>
            <field name="padding">4</field>
        </record>


    </data>
</odoo>
