<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--============ Prescription Accommodation Type ============ -->
    <!-- Form view of prescription accommodation type -->
    <record id="view_prescription_accommodation_type_form" model="ir.ui.view">
        <field name="name">prescription.accommodation_type.form</field>
        <field name="model">prescription.accommodation.type</field>
        <field name="arch" type="xml">
            <form string="Accommodation Type">
                <sheet>
                    <group>
                        <field name="name" string="Accommodation Name" />
                        <field name="accommodation_id" />
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of prescription accommodation type -->
    <record id="view_prescription_accommodation_type_tree" model="ir.ui.view">
        <field name="name">prescription.accommodation_type.tree</field>
        <field name="model">prescription.accommodation.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>
