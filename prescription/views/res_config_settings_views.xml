<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']" position="inside">
				<block title="Prescription" name="prescription_setting_container">
                    <setting id="manual_prescription_setting" title="Finish prescription manually" >
                        <div class="o_setting_left_pane">
                            <field name="group_prescription_manual_finalization" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_prescription_manual_finalization" string="Prescription Manual Finalization" />
                            <div class="text-muted">
                                When the Prescription is received, allow finishing it manually by choosing
                                a finalization reason.
                            </div>
                        </div>
                    </setting>
                    <setting id="prescription_return_setting" title="Prescription Returns" >
                        <div class="o_setting_left_pane">
                            <field name="prescription_return_grouping" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="prescription_return_grouping" />
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company" />
                            <div class="text-muted">
                                Group Prescription returns by customer and warehouse.
                            </div>
                        </div>
                    </setting>
                    <setting id="send_prescription_setting" title="Send Prescription" >
                        <div class="o_setting_left_pane">
                            <field name="send_prescription_confirmation" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_prescription_confirmation" string="Prescription Confirmation Email" />
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company" />
                            <div class="text-muted">
                                When the Prescription is confirmed, send an automatic information email.
                            </div>
                            <div class="row mt16" invisible="not send_prescription_confirmation">
                                <label for="prescription_mail_confirmation_template_id" string="Email Template" class="col-lg-4 o_light_label" />
                                <field name="prescription_mail_confirmation_template_id" class="oe_inline" required="send_prescription_confirmation" context="{'default_model': 'prescription'}" />
                            </div>
                        </div>
                    </setting>
                    <setting id="send_prescription_received_setting" title="Prescription Received Information" >
                        <div class="o_setting_left_pane">
                            <field name="send_prescription_receipt_confirmation" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_prescription_receipt_confirmation" string="Prescription Receipt Confirmation Email" />
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company" />
                            <div class="text-muted">
                                When the Prescription is received, send an automatic information email.
                            </div>
                            <div class="row mt16" invisible="not send_prescription_receipt_confirmation">
                                <label for="prescription_mail_receipt_confirmation_template_id" string="Email Template" class="col-lg-4 o_light_label" />
                                <field name="prescription_mail_receipt_confirmation_template_id" class="oe_inline" required="send_prescription_receipt_confirmation" context="{'default_model': 'prescription'}" />
                            </div>
                        </div>
                    </setting>
                    <setting id="send_prescription_draft_setting" title="Prescription Draft Information" >
                        <div class="o_setting_left_pane">
                            <field name="send_prescription_draft_confirmation" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_prescription_draft_confirmation" string="Prescription draft notification Email" />
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company" />
                            <div class="text-muted">
                                When customers themselves place a prescription order from the portal, send an automatic notification acknowleging it.
                            </div>
                            <div class="row mt16" invisible="not send_prescription_draft_confirmation">
                                <label for="prescription_mail_draft_confirmation_template_id" string="Email Template" class="col-lg-4 o_light_label" />
                                <field name="prescription_mail_draft_confirmation_template_id" class="oe_inline" required="send_prescription_draft_confirmation" context="{'default_model': 'prescription'}" />
                            </div>
                        </div>
                    </setting>
                  
                </block>
			</xpath>
        </field>
    </record>
</odoo>
