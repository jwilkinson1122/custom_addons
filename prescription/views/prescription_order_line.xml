<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_prescription_order_line_tree" model="ir.ui.view">
        <field name="name">prescription.order.line.tree</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <tree string="Prescription Order Lines" create="false">
                <field name="prescription_order_id"/>
                <field name="prescription_order_partner_id"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="product_uom_qty" string="Qty"/>
                <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                <field name="amount_total" sum="Total" widget="monetary"/>
                <field name="currency_id" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="prescription_order_line_view_form_readonly" model="ir.ui.view">
        <field name="name">prescription.order.line.form.readonly</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <form string="Prescription Order Item" edit="false">
                <field name="display_type" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_updatable" invisible="1"/>
                            <field name="prescription_order_id" readonly="1" force_save="1"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="product_uom_readonly" invisible="1"/>
                            <field name="state" invisible="1"/>
                            <field name="product_id"
                                readonly="id and not product_updatable"
                                required="not display_type"
                                force_save="1"
                                widget="many2one_barcode"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"
                                force_save="1"
                                groups="uom.group_uom"
                                readonly="product_uom_readonly"
                                required="not display_type"/>
                            <field name="product_uom" groups="!uom.group_uom" invisible="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="prescription_order_partner_id" invisible="1"/>
                            <field name="display_type" invisible="1"/>
                            <field name="product_updatable" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="price_unit"/>
                            <field name="amount_total" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_prescription_order_line_filter" model="ir.ui.view">
        <field name="name">prescription.order.line.select</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <search string="Search Prescription Order">
                <filter string="My Prescription Order Lines"
                    name="my_prescription_order_lines"
                    domain="[('user_id','=',uid)]"
                    help="Prescription Order Lines related to a Prescription Order of mine"/>
                <field name="prescription_order_id"/>
                <field name="prescription_order_partner_id" operator="child_of"/>
                <field name="product_id"/>
                <field name="user_id"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="Prescription Order" name="prescription_order" domain="[]" context="{'group_by':'prescription_order_id'}"/>
                    <filter string="User" name="user" domain="[]" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="prescription_order_line_view_kanban" model="ir.ui.view">
        <field name="name">prescription.order.line.kanban</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                <field name="display_name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
