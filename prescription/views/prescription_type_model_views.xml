<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='prescription_type_model_view_form' model='ir.ui.view'>
        <field name="name">prescription.type.model.form</field>
        <field name="model">prescription.type.model</field>
        <field name="arch" type="xml">
            <form string="Prescription Models">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_model_prescription_type" type="object" icon="fa-cog" class="oe_stat_button"
                            invisible="prescription_type_count == 0">
                            <field name="prescription_type_count" widget="statinfo" string="Prescription"/>
                        </button>
                    </div>
                    <field name="image_128" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Superglass"/>
                        </h1>
                        <label for="line_id"/>
                        <h2>
                            <field name="line_id" placeholder="e.g. Everyday"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="prescription_type"/>
                            <field name="category_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information" name="information">
                            <group>
                                <group string="Model" invisible="prescription_type != 'custom'">
                                    <field name="pairs"/>
                                    <field name="qty"/>
                                    <field name="color"/>
                                    <field name="model_year"/>
                                    <field name="trailer_hook"/>
                                </group>
                                <group id="prescription_type_information" string="Prescription Information" invisible="prescription_type != 'otc'">
                                    <field name="electric_assistance"/>
                                </group>
                            </group>
                            <group string="Engine" invisible="prescription_type != 'custom'">
                                <group>
                                    <field name="default_shell_type" required="1"/>
                                    <label for="default_co2"/>
                                    <div class="o_row" name="default_co2">
                                        <field name="default_co2"/><span>g/km</span>
                                    </div>
                                    <field name="co2_standard"/>
                                    <!-- <field name="arch_height"/> -->
                                    <field name="default_arch_height"/>
                                </group>
                                <group>
                                    <label for="power"/>
                                    <div class="o_row">
                                        <field name="power"/><span>kW</span>
                                    </div>
                                    <field name="horsepower"/>
                                    <field name="horsepower_tax"/>
                                </group>
                            </group>
                        </page>
                        <page string="Vendors" name="vendors">
                            <field name="vendors">
                                <kanban quick_create="false" create="true">
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div style="position: relative" class="oe_kanban_global_click">
                                                <div>
                                                    <div class="o_kanban_record_title">
                                                        <field name="name"/>
                                                        <div class="o_kanban_details float-end">
                                                            <span class="text-muted">
                                                                <t t-if="record.phone.raw_value"><field name="phone"/><br/></t>
                                                                <t t-if="record.email.raw_value"><field name="email"/></t>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='prescription_type_model_view_tree' model='ir.ui.view'>
        <field name="name">prescription.type.model.tree</field>
        <field name="model">prescription.type.model</field>
        <field name="arch" type="xml">
            <tree string="Prescription Models" multi_edit="1">
                <field name="line_id" />
                <field name="name" />
                <field name="prescription_type_count" string="Prescription"/>
                <field name="category_id" optional="show"/>
                <field name="prescription_type" optional="show"/>
                <field name="default_co2" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id='prescription_type_model_view_kanban' model='ir.ui.view'>
        <field name="name">prescription.type.model.kanban</field>
        <field name="model">prescription.type.model</field>
        <field name="arch" type="xml">
            <kanban string="Prescription Models">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_details">
                            <div><strong><field name="name"/></strong></div>
                            <div><field name="line_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='prescription_type_model_view_search' model='ir.ui.view'>
        <field name="name">prescription.type.model.search</field>
        <field name="model">prescription.type.model</field>
        <field name="arch" type="xml">
            <search string="Prescription" >
                <field name="name" string="Model" />
                <field name="line_id"/>
                <filter string="Contains Prescription" name="contains_prescription" domain="[('prescription_type_count', '!=', 0)]"/>
                <group expand="1" string="Group By">
                    <filter name="groupby_line" context="{'group_by' : 'line_id'}" string="Models"/>
                    <filter name="groupby_category" context="{'group_by' : 'category_id'}" string="Category"/>
                    <filter name="groupby_prescription_type" context="{'group_by' : 'prescription_type'}" string="Prescription Type"/>
                </group>
            </search>
        </field>
    </record>

    <record id='prescription_type_model_action' model='ir.actions.act_window'>
        <field name="name">Models</field>
        <field name="res_model">prescription.type.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_groupby_line" : True,}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new model
          </p><p>
            You can define several models.
          </p>
        </field>
    </record>

    <menuitem name="Prescription" id="menu_root" sequence="220" groups="prescription_group_user" web_icon="prescription,static/description/icon.png"/>
    <menuitem name="Configuration" parent="menu_root" id="prescription_configuration" sequence="100" groups="prescription_group_manager"/>

    <record id='prescription_type_model_line_view_tree' model='ir.ui.view'>
        <field name="name">prescription.type.model.line.tree</field>
        <field name="model">prescription.type.model.line</field>
        <field name="arch" type="xml">
            <tree string="Model Lines">
                <field name="name" />
                <field name="model_count" string="Model Lines"/>
            </tree>
        </field>
    </record>

    <record id='prescription_type_model_line_view_form' model='ir.ui.view'>
        <field name="name">prescription.type.model.line.form</field>
        <field name="model">prescription.type.model.line</field>
        <field name="arch" type="xml">
            <form string="Model Lines">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_line_model" type="object" icon="fa-cog" class="oe_stat_button"
                            invisible="model_count == 0">
                            <field name="model_count" widget="statinfo" string="Model Lines"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="image_128" widget="image" class="oe_avatar float-start"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='prescription_type_model_line_view_kanban' model='ir.ui.view'>
        <field name="name">prescription.type.model.linekanban</field>
        <field name="model">prescription.type.model.line</field>
        <field name="arch" type="xml">
            <kanban default_order="name" action="action_line_model" type="object">
                <field name="id"/>
                <field name="name"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="open" class="dropdown-item">Configuration</a>
                        <a role="menuitem" type="object" name="toggle_active" class="dropdown-item">
                            <t t-if="record.active.raw_value">Archive</t>
                            <t t-else="">Restore</t>
                        </a>
                        <a role="menuitem" t-if="widget.deletable" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="img" t-att-src="kanban_image('prescription.type.model.line', 'image_128', record.id.raw_value)" class="o_image_64_max" height="52"/>
                            </div>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <div>
                                    <field name="model_count"/> COUNT
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="prescription_type_model_line_view_search" model="ir.ui.view">
        <field name="name">prescription.type.model.line.view.search</field>
        <field name="model">prescription.type.model.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="With Model Lines" name="with_model_lines"
                    domain="[('model_count', '>', 0)]"/>
                <separator/>
                <filter string="Archived" name="active" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id='prescription_type_model_line_action' model='ir.actions.act_window'>
        <field name="name">Model Lines</field>
        <field name="res_model">prescription.type.model.line</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new line
          </p>
        </field>
    </record>

    <!-- Model Category -->
    <record id='prescription_type_model_category_action' model='ir.actions.act_window'>
        <field name="name">Categories</field>
        <field name="res_model">prescription.type.model.category</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new category
            </p>
            <p>
                Categories will help you manage your prescription types more efficiently and arrange your prescription.
            </p>
        </field>
    </record>

    <record id="prescription_type_model_category_view_tree" model="ir.ui.view">
        <field name="name">prescription.type.model.category.view.tree</field>
        <field name="model">prescription.type.model.category</field>
        <field name="arch" type="xml">
            <tree string="Model Category" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="prescription_type_model_category_view_form" model="ir.ui.view">
        <field name="name">prescription.type.model.category.view.form</field>
        <field name="model">prescription.type.model.category</field>
        <field name="arch" type="xml">
            <form string="Model Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem name="Prescription Configuration" parent="prescription_configuration" id="prescription_models_configuration" sequence="10" groups="prescription_group_manager"/>
    <menuitem action="prescription_type_model_category_action" parent="prescription_models_configuration" id="prescription_type_model_category_menu" sequence="1"/>
    <menuitem action="prescription_type_model_line_action" parent="prescription_models_configuration" id="prescription_type_model_line_menu" sequence="2"/>
    <menuitem action="prescription_type_model_action" parent="prescription_models_configuration" id="prescription_type_model_menu" sequence="3"/>
    <!-- <menuitem action="prescription_type_model_category_action" parent="prescription_models_configuration" id="prescription_type_model_category_menu" sequence="10"/> -->
</odoo>
