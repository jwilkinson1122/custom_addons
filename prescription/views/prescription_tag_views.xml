<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescription_tag_view_search" model="ir.ui.view">
        <field name="model">prescription.tag</field>
        <field name="arch" type="xml">
            <search string="Prescription Tags">
                <field name="name" />
                <filter string="Archived" name="inactive" domain="[('active','=',False)]" />
                <filter string="Active" name="active" domain="[('active','!=',False)]" />
            </search>
        </field>
    </record>
    <record id="view_prescription_tag_form" model="ir.ui.view">
        <field name="name">Prescription Tags</field>
        <field name="model">prescription.tag</field>
        <field name="arch" type="xml">
            <form string="Prescription Tag">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="is_public" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_prescription_tag_list" model="ir.ui.view">
        <field name="name">Prescription Tags</field>
        <field name="model">prescription.tag</field>
        <field eval="6" name="priority" />
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_public" />
                <field name="active" />
            </tree>
        </field>
    </record>
