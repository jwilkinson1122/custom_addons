        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new Prescription.
            </p>
        </field>
    </record> -->

    <record id="action_prescription_team" model="ir.actions.act_window">
        <field name="name">Prescription team</field>
        <field name="res_model">prescription.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new team member.
            </p>
        </field>
    </record>

    <!-- Action for prescription accommodation type -->
    <record id="action_orthotic_accommodation_types_categ" model="ir.actions.act_window">
        <field name="name">Accommodation Type</field>
        <field name="res_model">prescription.accommodation.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Action for prescription accommodation -->
    <record id="action_orthotic_accommodation_types" model="ir.actions.act_window">
        <field name="name">Accommodations</field>
        <field name="res_model">prescription.accommodations</field>
        <field name="context">{'default_is_accommodation':1,'default_available_in_pos':0}
        </field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="prescription_refund_action_server" model="ir.actions.server">
        <field name="name">To Refund</field>
        <field name="model_id" ref="model_prescription" />
        <field name="binding_model_id" ref="model_prescription" />
        <field name="state">code</field>
        <field name="code">records.action_refund()</field>
    </record>

    <record id="action_prescription_finalization" model="ir.actions.act_window">
        <field name="name">Prescription Finalization Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescription.finalization</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Prescription finalization
            </p>
            <p>
            Manage Prescription finalization reasons to better classify them for tracking and analysis purposes.
            </p>
        </field>
    </record>

    <record id="action_prescription_tag" model="ir.actions.act_window">
        <field name="name">Prescription Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prescription.tag</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Prescription tag
            </p>
            <p>
            Manage Prescription tags to better classify them for tracking and analysis purposes.
            </p>
        </field>
    </record>


