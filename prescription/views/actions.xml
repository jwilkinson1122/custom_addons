<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Action of prescription laterality -->
    <record id="action_prescription_laterality" model="ir.actions.act_window">
        <field name="name">Laterality</field>
        <field name="res_model">prescription.laterality</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for prescription device types -->
    <record id="action_orthotic_device_types" model="ir.actions.act_window">
        <field name="name">Device Types</field>
        <field name="res_model">prescription.device</field>
        <field name="context">{'default_is_device':1,'default_rental':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_prescription_device_tree" />
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Action for prescription device type categories -->
    <record id="action_orthotic_device_types_categ" model="ir.actions.act_window">
        <field name="name">Device Type Categories</field>
        <field name="res_model">prescription.device.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for prescription device options -->
    <record id="action_orthotic_option_types" model="ir.actions.act_window">
        <field name="name">Device Options</field>
        <field name="res_model">prescription.device.options</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_categid':1,'default_available_in_pos':0}
        </field>
        <field name="view_id" ref="view_prescription_device_options_list" />
    </record>

    <!-- Action for prescription device option types categories -->
    <record id="action_orthotic_option_types_categ" model="ir.actions.act_window">
        <field name="name">Device Option Categories</field>
        <field name="res_model">prescription.device.options.type</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for prescription -->
    <record id="action_prescriptions" model="ir.actions.act_window">
        <field name="name">Prescription Orders</field>
        <field name="res_model">prescription</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'order': True}</field>
    </record>

