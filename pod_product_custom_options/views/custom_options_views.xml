<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_custom_options_view_form" model="ir.ui.view">
        <field name="name">product.custom.options.form</field>
        <field name="model">product.custom.options</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="is_required" />
                        </group>
                        <group>
                            <field name="input_type" />
                            <field name="price" invisible="input_type in ('radio','checkbox','drop_down','multiple')"/>
                        </group>
                        <notebook>
                            <page string="Option Values" name="option_values">
                                <field name="custom_options_value_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name='name'/>
                                        <field name='price'/>
                                        <field name='is_default'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_custom_options_view_tree" model="ir.ui.view">
        <field name="name">product.custom.options.tree</field>
        <field name="model">product.custom.options</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="input_type"/>
            </tree>
        </field>
    </record>

    <record id="prescription_custom_options_view_form" model="ir.ui.view">
        <field name="name">prescription.custom.options.form</field>
        <field name="model">prescription.custom.options</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="custom_option_id" />
                        </group>
                        <group>
                            <field name="input_data" />
                            <field name="file_data" invisible="not file_data"/>
                            <!-- <field name="file_preview" widget='image' class="oe_avatar" attrs="{'invisible':[('file_data','==',False)]}"/> -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prescription_custom_options_view_tree" model="ir.ui.view">
        <field name="name">prescription.custom.options.tree</field>
        <field name="model">prescription.custom.options</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="custom_option_id"/>
                <field name="input_data"/>
                <field name="price"/>
                <button name="remove" type="object" class="fa fa-trash-o btn-link" aria-label="Remove" title="Remove"/>
            </tree>
        </field>
    </record>
</odoo>
