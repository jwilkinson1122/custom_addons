<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="option_selection_wizard_form" model="ir.ui.view">
        <field name="name">option.selection.wizard.form</field>
        <field name="model">option.selection.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="prod_tmpl_id" readonly="1" invisible="1"/>
                        <field name="input_type" readonly="1" invisible="1"/>
                        <field name="custom_option_id" domain="[('prod_tmpl_id', '=', prod_tmpl_id)]"/>
                        <field name="time" invisible="input_type != 'time'" widget='float_time'/>
                        <field name="text_input" invisible="input_type != 'field'" options="'on_change': 'add_option'"/>
                        <field name="area_input" invisible="input_type != 'area'"/>
                        <field name="date_input" invisible="input_type != 'date'"/>
                        <field name="datetime_input" invisible="input_type != 'date_time'"/>
                        <field name="file_input" invisible="input_type != 'file'"/>
                        <field name="radio_input" widget="radio" invisible="input_type != 'radio'" domain="[('custom_option_id', '=', custom_option_id)]"/>
                        <field name="dropdown_input" invisible="input_type != 'drop_down'" domain="[('custom_option_id', '=', custom_option_id)]"/>
                        <field name="multi_input" widget="many2many_tags" invisible="input_type != 'multiple'" domain="[('custom_option_id', '=', custom_option_id)]"/>
                        <field name="checkbox_input" invisible="input_type != 'checkbox'" domain="[('custom_option_id', '=', custom_option_id)]"/>
                    </group>
                    <group invisible="input_type not in ('radio', 'drop_down', 'multiple', 'checkbox')">
                        <field name="laterality"/>
                    </group>
                </group>
                <footer>
                    <button name="add_option" string="Add Option" type="object" class="btn-primary" />
                    <button name="cancel_action" string="Cancel" type="object" />
                </footer>
            </form>
        </field>
    </record>
</odoo>