<odoo>
    <record id="action_podiatry_checkout" model="ir.actions.act_window">
        <field name="name">Checkouts</field>
        <field name="res_model">podiatry.checkout</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
    </record>

    <menuitem id="menu_podiatry_checkout" name="Checkout" action="action_podiatry_checkout" parent="podiatry_app.menu_podiatry" sequence="90"/>

    <record id="action_podiatry_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">podiatry.checkout.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_podiatry_stage" name="Stages" action="action_podiatry_stage" parent="podiatry_app.menu_podiatry_configuration" />
</odoo>
