<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Order Action -->
        <record model="ir.actions.act_window" id="action_prescription_to_so">
            <field name="name">Request for Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form,tree</field>
            <field name="domain">[('prescription_so_id','=',active_id)]</field>
        </record>

        <record id="prescription_view_order_form" model="ir.ui.view">
            <field name="name">prescription.form</field>
            <field name="model">prescription</field>
            <field name="arch" type="xml">
                <form string="Sales Order">
                    <header>
                        <button name="action_confirm" id="action_confirm"
                        string="Confirm" class="btn-primary" type="object" invisible="state != 'draft'"/>
                        <button name="action_create_prescription_to_so" type="object"
                            string="New Quotation" class="btn-primary" invisible="state != 'ongoing'"/>
                        <button name="action_close" invisible="state != 'ongoing'" type="object" string="Close"/>
                        <button name="action_cancel" invisible="state not in ['ongoing','draft']" type="object" string="Cancel"/>
                        <button name="action_draft" invisible="state not in  ['cancel','done']" type="object" string="Set to Quotation"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ongoing,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-usd">
                                <field name="order_count" widget="statinfo" string="Sale Orders"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="state != 'draft'"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" widget="res_partner_many2one" readonly="state != 'draft'"/>
                                <field name="date_order" readonly="state != 'draft'"/>
                                <field name="validity_start_date" readonly="state != 'draft'"/>
                                <field name="validity_end_date" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="user_id" readonly="state != 'draft'"/>
                                <field name="company_id" readonly="state != 'draft'"/>
                                <field name="pricelist_id" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines" name="order_lines">
                                <field
                                    name="order_line" readonly="state != 'draft'"
                                    widget="section_and_note_one2many"
                                    mode="tree"
                                >
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="product_uom_qty"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="product_uom_category_id" invisible="1"/>
                                            </group>
                                            <geoup>
                                                <field name="product_uom"/>
                                                <field name="price_unit"/>
                                            </geoup>
                                        </group>
                                    </form>
                                    <tree
                                        string="Blanket Sales Order Lines"
                                        editable="bottom"
                                    >
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit" sum="Total"/>
                                        <!-- <field name="company_id" invisible="1"/> -->
                                        <field name="company_id" column_invisible="True"/>
                                        <!-- <field name="product_uom_category_id" invisible="1"/> -->
                                        <field name="product_uom_category_id" column_invisible="True"/>
                                    </tree>
                                </field>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                        <field colspan="2" name="note" nolabel="1" placeholder="Internal Notes..." readonly="state != 'draft'"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="prescription_view_order_tree" model="ir.ui.view">
            <field name="name">prescription.tree</field>
            <field name="model">prescription</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Prescriptions">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="validity_start_date"/>
                    <field name="validity_end_date"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="pricelist_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_custom_prescriptions" model="ir.actions.act_window">
            <field name="name">Blanket Sales Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">prescription</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>