    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="inherit_res_partner_search_view" />
        <field name="domain">[('is_company', '=', True), ('is_location', '=', False), ('id', '!=', 1)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_partner': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new account
            </p>
            <p>
                Accounts set up a hierarchical relationships with affilated locations and contacts.
            </p>
        </field>
    </record>

    <record id="pod_location_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="inherit_res_partner_search_view" />
        <field name="domain">[('is_company', '=', True), ('is_location', '=', True)]</field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_location': True, 'default_is_partner': True, 'default_type': '', 'default_location_type': ''}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new location
            </p>
            <p>
                Locations are sub-accounts of a main account.
            </p>
        </field>
    </record>

    <record id="pod_practitioner_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_practitioner', '=', True)]</field>
        <field name="context">{'default_company_type':'person', 'default_is_company':False, 'default_is_practitioner': True, 'default_is_partner': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new contact
            </p>
            <p>
                Contacts are members of locations and accounts.
            </p>
        </field>
    </record>

</odoo>