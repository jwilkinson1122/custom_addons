    <record id="inherit_res_partner_search_view" model="ir.ui.view">
        <field name="name">inherit.res.partner.search.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="attributes">
                <attribute name="filter_domain">['|', '|', '|', '|', ('complete_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self), ('pod_internal_identifier', '=', self), ('company_registry', 'ilike', self)]</attribute>
            </xpath>
            <xpath expr="//search/field[@name='name']" position="after">
                <field name="pod_internal_identifier" invisible="1"/>
                <field name="partner_id" invisible="1"/>
            </xpath>
            <xpath expr="//search/filter[@name='type_company']" position="attributes">
                <attribute name="string">Accounts</attribute>
            </xpath>
            <xpath expr="//search/filter[@name='type_company']" position="after">
                <filter name="is_location" string="Locations" domain="[('is_location', '=', True)]"/>
            </xpath>
            <xpath expr="//search/filter[@name='inactive']" position="before">
                <filter name="message_needaction" string="Unread Messages" domain="[('message_needaction', '=', True)]" />
            </xpath>
            <xpath expr="//search/group/filter[@name='group_company']" position="attributes">
                <attribute name="string">Accounts</attribute>
            </xpath>
            <xpath expr="//search/group/filter[@name='group_company']" position="after">
                <filter name="is_location" string="Location" domain="[('is_location','=', True)]" context="{'group_by': 'is_location'}"/>
            </xpath>
            <xpath expr="//search/group[@name='group_by']" position="after">
                <searchpanel>
                    <field name="parent_id" string="Accounts" select="multi" icon="fa-building" enable_counters="1" />
                    <field name="partner_id" string="Locations" select="multi" icon="fa-building-o" domain="[('is_location','=', True)]" enable_counters="1"/>
                </searchpanel>
            </xpath>
        </field>
    </record>

