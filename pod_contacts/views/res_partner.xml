<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_locations_window" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[("is_location", "=", True), ("pod_patient_ids", "=", False), ('parent_id', 'child_of', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new location
            </p>
            <p>
                Organize and manage locations at a glance.
            </p>
        </field>
    </record>

    <record id="action_contacts_window" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[("is_company", "=", False), ("pod_patient_ids", "=", False), ('parent_id', 'child_of', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new contact
            </p>
            <p>
                Organize and manage contacts at a glance.
            </p>
        </field>
    </record>

    <record id="inherit_res_partner_kanban_view" model="ir.ui.view">
        <field name="name">inherit.res.partner.kanban.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="pod_internal_identifier"/>
            </xpath>
            <xpath expr="//field[@name='active']" position="after">
                <field name="pod_location_count" />
            </xpath>
            <xpath expr="//div[@class='oe_kanban_bottom_left']" position="inside">
                <span t-if="record.is_company.raw_value and record.pod_location_count.value>0" class="badge badge-pill">
                    <i class="fa fa-fw fa-sitemap" role="img" aria-label="Locations" title="Locations" />
                    <t t-esc="record.pod_location_count.value" />
                </span>
            </xpath>
        </field>
    </record>

