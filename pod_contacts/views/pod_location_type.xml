<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="pod_location_type_view_form" model="ir.ui.view">
        <field name="name">pod.location.type.view.form</field>
        <field name="model">pod.location.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Location Types">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="pod_location_type_view_tree" model="ir.ui.view">
        <field name="name">pod.location.type.view.tree</field>
        <field name="model">pod.location.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="Location Types">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_location_type_action">
        <field name="name">Location Types</field>
        <field name="res_model">pod.location.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
