<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescription_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="prescription_sale.prescription_view_form" />
        <field name="model">prescription</field>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="phantom_bom_product" invisible="not phantom_bom_product"/>
            </field>
        </field>
    </record>
    
    <record id="prescription_view_tree" model="ir.ui.view">
        <field name="inherit_id" ref="prescription.view_prescription_tree" />
        <field name="model">prescription</field>
        <field name="arch" type="xml">
            <field name="product_uom" position="after">
                <field name="phantom_bom_product" />
            </field>
        </field>
    </record>
</odoo>
