<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pod_patient_form_view">
        <field name="name">pod.patient.form (in pod_administration_encounter)</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_encounter_ids" class="oe_stat_button" attrs="{'invisible': [('encounter_count', '=', 0)]}" icon="fa-hospital-o">
                    <field name="encounter_count" widget="statinfo" string="Encounters" />
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="pod_patient_his_form">
        <field name="name">pod.patient.form (in pod_administration_encounter)</field>
        <field name="model">pod.patient</field>
        <field name="inherit_id" ref="pod_base.pod_patient_his_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="action" name="%(pod_administration_encounter.action_encounter_pod_his)s" class="oe_stat_button" attrs="{'invisible': [('encounter_count', '=', 0)]}" icon="fa-hospital-o">
                    <field name="encounter_count" widget="statinfo" string="Encounters" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
