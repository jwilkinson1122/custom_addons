<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <!-- Multi - Company Rules -->
    <record id="prescriptions_order_comp_rule" model="ir.rule">
        <field name="name">Prescriptions Order multi-company</field>
        <field name="model_id" ref="model_prescriptions_order"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="prescriptions_order_line_comp_rule" model="ir.rule">
        <field name="name">Prescriptions Order Line multi-company</field>
        <field name="model_id" ref="model_prescriptions_order_line"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="prescriptions_order_report_comp_rule" model="ir.rule">
        <field name="name">Prescriptions Order Analysis multi-company</field>
        <field name="model_id" ref="model_prescriptions_report"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Portal Access Rules -->
    <record id="prescriptions_order_rule_portal" model="ir.rule">
        <field name="name">Portal Personal pod_prescriptions/Prescriptions Orders</field>
        <field name="model_id" ref="pod_prescriptions.model_prescriptions_order"/>
        <field name="domain_force">[('message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
    </record>

    <record id="prescriptions_order_line_rule_portal" model="ir.rule">
        <field name="name">Portal Prescriptions Orders Line</field>
        <field name="model_id" ref="pod_prescriptions.model_prescriptions_order_line"/>
        <field name="domain_force">[('order_id.message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Multi - Prescriptionsmen prescriptions order assignation rules -->

    <record id="prescriptions_order_personal_rule" model="ir.rule">
        <field name="name">Personal Orders</field>
        <field ref="model_prescriptions_order" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>
    <record id="prescriptions_order_see_all" model="ir.rule">
        <field name="name">All Orders</field>
        <field ref="model_prescriptions_order" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <record id="prescriptions_order_report_personal_rule" model="ir.rule">
        <field name="name">Personal Orders Analysis</field>
        <field ref="model_prescriptions_report" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="prescriptions_order_report_see_all" model="ir.rule">
        <field name="name">All Orders Analysis</field>
        <field ref="model_prescriptions_report" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <record id="prescriptions_order_line_personal_rule" model="ir.rule">
        <field name="name">Personal Order Lines</field>
        <field ref="model_prescriptions_order_line" name="model_id"/>
        <field name="domain_force">['|',('prescriptionsman_id','=',user.id),('prescriptionsman_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="prescriptions_order_line_see_all" model="ir.rule">
        <field name="name">All Orders Lines</field>
        <field ref="model_prescriptions_order_line" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <record id="account_invoice_report_rule_see_personal" model="ir.rule">
        <field name="name">Personal Invoices Analysis</field>
        <field name="model_id" ref="model_account_invoice_report"/>
        <field name="domain_force">['|', ('invoice_user_id', '=', user.id), ('invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="account_invoice_report_rule_see_all" model="ir.rule">
        <field name="name">All Invoices Analysis</field>
        <field name="model_id" ref="model_account_invoice_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <!-- Payment transactions and tokens access rules -->

    <record id="payment_transaction_prescriptionsman_rule" model="ir.rule">
        <field name="name">Access every payment transaction</field>
        <field name="model_id" ref="payment.model_payment_transaction"/>
        <!-- Reset the domain defined by payment.transaction_user_rule -->
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="payment_token_prescriptionsman_rule" model="ir.rule">
        <field name="name">Access every payment token</field>
        <field name="model_id" ref="payment.model_payment_token"/>
        <!-- Reset the domain defined by payment.token_user_rule -->
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <!-- Multi - Prescriptionsmen invoice and account move assignation rules -->
    <record id="account_invoice_rule_see_personal" model="ir.rule">
        <field name="name">Personal Invoices</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ('out_invoice', 'out_refund')), '|', ('invoice_user_id', '=', user.id), ('invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="account_invoice_rule_see_all" model="ir.rule">
        <field name="name">All Invoices</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="domain_force">[('move_type', 'in', ('out_invoice', 'out_refund'))]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <record id="account_invoice_line_rule_see_personal" model="ir.rule">
        <field name="name">Personal Invoice Lines</field>
        <field name="model_id" ref="model_account_move_line"/>
        <field name="domain_force">[('move_id.move_type', 'in', ('out_invoice', 'out_refund')), '|', ('move_id.invoice_user_id', '=', user.id), ('move_id.invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="account_invoice_line_rule_see_all" model="ir.rule">
        <field name="name">All Invoice Lines</field>
        <field name="model_id" ref="model_account_move_line"/>
        <field name="domain_force">[('move_id.move_type', 'in', ('out_invoice', 'out_refund'))]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <!-- Wizard access rules -->
    <record id="account_invoice_send_rule_see_personal" model="ir.rule">
        <field name="name">Personal Invoice Send and Print</field>
        <field name="model_id" ref="account.model_account_move_send"/>
        <field name="domain_force">[('move_ids.move_type', 'in', ('out_invoice', 'out_refund')), '|', ('move_ids.invoice_user_id', '=', user.id), ('move_ids.invoice_user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman'))]"/>
    </record>

    <record id="account_invoice_send_rule_see_all" model="ir.rule">
        <field name="name">All Invoice Send and Print</field>
        <field name="model_id" ref="account.model_account_move_send"/>
        <field name="domain_force">[('move_ids.move_type', 'in', ('out_invoice', 'out_refund'))]</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_prescriptionsman_all_leads'))]"/>
    </record>

    <record id="prescriptions_payment_provider_onboarding_wizard_rule" model="ir.rule">
        <field name="name">Payment Provider Onboarding Wizard Rule</field>
        <field name="model_id" ref="model_prescriptions_payment_provider_onboarding_wizard"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="prescriptions_advance_payment_inv_rule" model="ir.rule">
        <field name="name">Prescriptions Advance Payment Invoice Rule</field>
        <field name="model_id" ref="model_prescriptions_advance_payment_inv"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="prescriptions_order_cancel_rule" model="ir.rule">
        <field name="name">Prescriptions Order Cancel Rule</field>
        <field name="model_id" ref="model_prescriptions_order_cancel"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="prescriptions_mass_cancel_orders_rule" model="ir.rule">
        <field name="name">Prescriptions Mass Cancel Orders: access only your own wizard</field>
        <field name="model_id" ref="model_prescriptions_mass_cancel_orders"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="mail_plan_rule_group_prescriptions_manager" model="ir.rule">
        <field name="name">Manager can manage prescriptions order plans</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_manager'))]"/>
        <field name="model_id" ref="mail.model_mail_activity_plan"/>
        <field name="domain_force">[('res_model', '=', 'prescriptions.order')]</field>
        <field name="perm_read" eval="False"/>
    </record>

    <record id="mail_plan_template_rule_group_prescriptions_manager" model="ir.rule">
        <field name="name">Manager can manage prescriptions order plan templates</field>
        <field name="groups" eval="[(4, ref('pod_prescriptions_team.group_prescriptions_manager'))]"/>
        <field name="model_id" ref="mail.model_mail_activity_plan_template"/>
        <field name="domain_force">[('plan_id.res_model', '=', 'prescriptions.order')]</field>
        <field name="perm_read" eval="False"/>
    </record>

</odoo>
