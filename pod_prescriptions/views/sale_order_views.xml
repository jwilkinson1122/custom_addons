<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="view_order_form_inherit_prescriptions_order" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.prescriptions_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field string="Prescription" name="prescriptions_order_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Practice</attribute>
                    <attribute name="domain">[('is_company', '=', True)]</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <!-- <field name="practitioner_id" string="Practitioner" domain="[('is_practitioner', '=', True), ('parent_id', '=', partner_id)]"/> -->
                    <field name="patient_id" string="Patient" domain="[('partner_id', '=', partner_id)]"/>
                </xpath>
 
               <!-- <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name='prescriptions_order_id'/>
               </xpath> -->
            </field>
        </record>

    </data>
</odoo>
