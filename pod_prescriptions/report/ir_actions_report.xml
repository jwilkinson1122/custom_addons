<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_prescription_order" model="ir.actions.report">
        <field name="name">Draft Rx / Order</field>
        <field name="model">prescriptions.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pod_prescriptions.report_prescription_order</field>
        <field name="report_file">pod_prescriptions.report_prescription_order</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Draft Rx - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_prescriptions_order"/>
        <field name="binding_type">report</field>
    </record>

