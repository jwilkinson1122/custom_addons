        <record id="podiatry_prescription_order_form_view" model="ir.ui.view">
            <field name="name">podiatry.prescription.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button type="action" name="%(action_view_wo)d" class="oe_stat_button" icon="fa-book" attrs="{'invisible': [('wo_count', '=', 0)]}">
                        <field name="wo_count" widget="statinfo" string="Work Order"/>
                    </button>
                </xpath>

                <xpath expr="//h1" position="after">
                    <label for="internal_identifier" />
                    <field name="internal_identifier" readonly="1" />
                </xpath>

                <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                    <field name="citizen_identification" attrs="{'required': [('is_company', '!=', True)], 'invisible': [('is_company', '=', True)], }"/>

                </xpath> -->

                <field name="partner_id" position="after">
                    <field name="is_prescription_order" invisible="1"/>
                    <!-- <field name="practice_id" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/> -->
                    <field name="practitioner_id" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="patient_id" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                </field>
                <field name="payment_term_id" position="after">
                    <field name="partner_invoice_id" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="pricelist_id" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="partner_shipping_id" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="order_by_id" attrs="{'invisible': [('is_prescription_order', '=', False)]}" />
                    <field name="prescription_date" attrs="{'invisible': [('is_prescription_order', '=', False)]}" />
                    <field name="prescription_start" required="1" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                    <field name="prescription_end" attrs="{'invisible': [('is_prescription_order', '=', False)]}"/>
                </field>
                <!-- <notebook>
                    <page name="Prescription Details" string="Prescription Details" groups="base.group_no_one">
                        <group string="Rx Lines">
                        

                         </group>


                    </page>
                </notebook> -->
            </field>
        </record>

        <record id="podiatry_prescription_action" model="ir.actions.act_window">
            <field name="name">Prescription Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_prescription_order', '=', 1)]</field>
            <field name="context">{
                'default_is_prescription_order': 1
            }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a master shift
                </p>
                <p>Klik Tombol Create Untuk Prescription Order baru</p>
            </field>
        </record>
    </data>
</odoo>