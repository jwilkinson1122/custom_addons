<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="prescription_view_form" model="ir.ui.view">
        <field name="name">prescription.view.form</field>
        <field name="model">prescription</field>
        <field name="inherit_id" ref="prescription.view_prescription_form" />
        <field name="arch" type="xml">
            <field name="partner_invoice_id" position="after">
                <field name="order_id" options="{'no_create': True}" readonly="state != 'draft'"/>
            </field>
            <sheet>
                <field name="allowed_picking_ids" invisible="1" />
                <field name="allowed_move_ids" invisible="1" />
                <field name="allowed_product_ids" invisible="1" />
            </sheet>
        </field>
    </record>
</odoo>
