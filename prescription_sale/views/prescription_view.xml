<odoo>
    <data>
        <record id="prescription_sale.type_form" model="ir.ui.view">
            <field name="name">prescription_sale.prescription_type_form</field>
            <field name="inherit_id" ref="prescription.prescription_type_view_form" />
            <field name="model">prescription.type</field>
            <field eval="15" name="priority"/>
            <!-- <field name="type">form</field> -->
            <field name="arch" type="xml">
                <button name="open_assignation_logs" position="after">
                    <button name="act_show_sales" type="object" class="oe_stat_button" icon="fa-usd">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value"><field name="sales_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/></span>
                            <span class="o_stat_text"><field name="sales_count"/> Sales</span>
                        </div>
                    </button>
                </button>
                <field name="practitioner_id" position="after">
                    <field name="sale_ok" />
                    <field name="currency_id" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>