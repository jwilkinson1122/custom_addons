<odoo>
    <data>
        <record id="prescription_sale_form_view" model="ir.ui.view">
            <field name="name">prescription_sale.sale_order_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="partner_shipping_id" position="after">
                    <field name="type" groups="base.group_user" domain="[('sale_ok','=',True)]"/>
                    <field name="practitioner" groups="base.group_user"/>
                </field>
            </field>
        </record>
        <record id="prescription_sale_filter_view" model="ir.ui.view">
            <field name="name">prescription_sale.sale_order_fliter_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field eval="17" name="priority"/>
            <field name="arch" type="xml">
                <filter name="customer" position="after">
                    <filter name="practitioner" string="Practitioner" context="{'group_by':'practitioner'}"/>
                    <filter name="type" string="Type" context="{'group_by':'type'}"/>
                </filter>
            </field>
        </record>
        <record id="prescription_sale_tree_view" model="ir.ui.view">
            <field name="name">prescription_sale.sale_order_tree_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field eval="17" name="priority"/>
            <!-- <field name="type">form</field> -->
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="type"/>
                    <field name="practitioner"/>
                </field>
            </field>
        </record>
    </data>
</odoo>