<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">forestry_project.edit_project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <field name="label_tasks" position="before">
                <field name="code"/>
                <field name="order_type"/>
                <field name="work_type" attrs="{'invisible': [('order_type', 'not in', ('collection'))]}"/>
            </field>
        </field>
    </record>

    <record id="project_project_view_form_simplified" model="ir.ui.view">
        <field name="name">forestry_project.project_project_view_form_simplified</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="order_type"/>
                <field name="work_type" attrs="{'invisible': [('order_type', 'not in', ('collection'))]}"/>
                <field name="company_id" invisible="1"/>
                <field name="partner_id"/>
            </field>
            <field name="name" position="replace"/>
        </field>
    </record>

    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">forestry_project.view_project_kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban" />
        <field name="arch" type="xml">
            <xpath expr="/kanban/field[@name='tag_ids']" position="after">
                <field name="order_type"/>
                <field name="code"/>
            </xpath>
            <xpath expr="//div[hasclass('o_primary')]/span[1]/t" position="before">
                [<t t-esc="record.code.value"/>] 
            </xpath>
            <xpath expr="//div[hasclass('o_primary')]/span[1]" position="after">
                <span><t t-esc="record.order_type.value"/></span><br/>
            </xpath>
        </field>
    </record>

    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">forestry_project.view_task_kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">

            <xpath expr="/kanban/field[@name='user_ids']" position="after">
                <field name="order_type"/>
            </xpath>

            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="after">
                <br/><span><t t-esc="record.order_type.value"/></span>
            </xpath>

            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="before">
                <span>[<field name="code" />]</span>
            </xpath>

        </field>
    </record>
    
    <record id="view_task_search_formh" model="ir.ui.view">
        <field name="name">forestry_project.view_task_search_formh</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="filter_domain">['|', ('name', 'ilike', self),
                    ('code', 'ilike', self)]
                </attribute>
            </field>
        </field>
    </record>

    <record id="action_view_all_task2" model="ir.actions.act_window">
        <field name="name">All Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">gantt,kanban,tree,form,calendar,pivot,graph,activity,map</field>
        <field name="context">{'all_task': 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form_extended"/>
    </record>

    <menuitem name="All Tasks" id="menu_project_management_all" parent="project.menu_main_pm"
        action="action_view_all_task2" sequence="3" groups="base.group_no_one,project.group_project_user"/>

    <record id="project_enterprise.project_task_kanban_action_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
    </record>

    <record id="project_enterprise.project_task_tree_action_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
    </record>
</odoo>
