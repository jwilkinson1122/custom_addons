<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.module.category" id="module_category_podiatry">
        <field name="name">Hospital Management</field>
        <field name="description">Category for Hospital</field>
    </record>

    <record id="group_podiatry_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_podiatry"/>
    </record>

    <record id="group_podiatry_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_podiatry"/>
        <field name="implied_ids" eval="[(4, ref('pod_manager.group_podiatry_doctor'))]"/>
    </record>

</odoo>