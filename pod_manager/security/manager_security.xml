<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="manager_group_user" model="res.groups">
            <field name="name">Manager User</field>
            <field name="category_id" ref="podiatry.module_podiatry_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('podiatry.podiatry_group_user')),
                                             (4, ref('account.group_account_user'))]"/>
        </record>

        <record id="podiatry.podiatry_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('podiatry.podiatry_group_user')), (4, ref('manager_group_user'))]"/>
            <field name="category_id" ref="podiatry.module_podiatry_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="podiatry.podiatry_rule_device_visibility_user" model="ir.rule">
            <field name="name">User can only see his/her device</field>
            <field name="model_id" ref="podiatry.model_podiatry_device"/>
            <field name="groups" eval="[(4, ref('podiatry.podiatry_group_user')), (4, ref('manager_group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[]</field>
        </record>


    </data>
</odoo>
