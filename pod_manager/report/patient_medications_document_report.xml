<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="pod_manager.patient_devices_document_report">
		<t t-call="web.external_layout">
			<t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>

			<div class="page">
				<div class="oe_structure"/>

				<div>
					<h3 class="text-center">
						<strong>PATIENT MEDICATION HISTORY</strong>
					</h3>
				</div>

				<br/>
				<br/>
				<br/>

				<table class="table table-condensed">
					<tr>
						<th style="border: 0px ;" class="text-left">Patient : 
							<span style="font-weight:normal;" t-field="doc.patient_id.name"/>
						</th>

						<th style="border: 0px ;" class="text-left">Patient : 
							<span style="font-weight:normal;" t-field="doc.name"/>
						</th>

						<th style="border: 0px ;" class="text-left">Age : 
							<span style="font-weight:normal;" t-field="doc.age"/>
						</th>

					</tr>

					<tr>
						<th style="border: 0px ;" class="text-left">Date: 
							<span style="font-weight:normal;" t-field="doc.report_date"/>
						</th>

						<th style="border: 0px ;" class="text-left">gender : 
							<span style="font-weight:normal;" t-field="doc.gender"/>
						</th>

					</tr>
				</table>

				<br/>

				<table class="table table-condensed">
					<thead>
						<tr>
							<th>Device</th>
							<th>Act</th>
							<th>Doctor</th>
						</tr>
					</thead>
					<tbody class="sale_tbody">
						<t t-foreach="doc.device_ids" t-as="l">
							<tr>
								<td>
									<span t-field="l.pod_treatment_id.product_id.name"/>
								</td>
								<td>
									<span t-field="l.is_active"/>
								</td>
								<td>
									<span t-field="l.doctor_doctor_id.partner_id.name"/>
								</td>

							</tr>
						</t>
					</tbody>
				</table>
			</div>
		</t>

	</template>
	<template id="patient_devices_document">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="doc">
				<t t-call="pod_manager.patient_devices_document_report" t-lang="doc.patient_id.lang"/>
			</t>
		</t>
	</template>
</odoo>
