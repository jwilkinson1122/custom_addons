<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="query_unfinished_medicine_form" model="ir.ui.view">
        <field name="name">podiatry.service.query.unfinished.medicine.form</field>
        <field name="model">podiatry.service.query.unfinished.medicine</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                        <field name="facility_code"/>
                    </group>
                </group>
                <footer>
                    <button name="query_unfinished_medicine" string="Sorgula" type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" string="Vazgeç" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="query_unfinished_medicine_action">
        <field name="name">Query Unfinished Medicine</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.service.query.unfinished.medicine</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

