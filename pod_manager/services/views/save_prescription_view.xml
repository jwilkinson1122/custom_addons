<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="save_prescription_form" model="ir.ui.view">
        <field name="name">podiatry.service.save.prescription.form</field>
        <field name="model">podiatry.service.save.prescription</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <p>Reçeteyi göndermek istediğinizden emin misiniz?</p>
                    </group>
                </group>
                <footer>
                    <button name="save_prescription" string="Gönder" type="object" class="btn-primary" data-hotkey="q"/>
                    <button special="cancel" string="Vazgeç" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="save_prescription_action">
        <field name="name">Save Prescription</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.service.save.prescription</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>