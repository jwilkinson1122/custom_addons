<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_rx_shipment_wizard_view"
            model="ir.ui.view">
            <field name="name">Create Rx Order Shipment</field>
            <field name="model">create.rx.shipment</field>
            <field name="arch" type="xml">
                <form string="Create rx invoices">
                    <separator 
                        string="Do you want to create the rx Shipment ?" />
                    <newline />
                    <separator string="                  "
                         />
                     <footer>
                    <button name="create_rx_shipment"
                        class="oe_highlight" string="Create Rx Order Shipment"
                        type="object" />
                        or
                    <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>

            </field>
        </record>

        <act_window id="action_create_rx_shipment1"
            name="Create Rx Order Shipment" res_model="create.rx.shipment"
            binding_model="pod.rx.order" view_mode="form"
            target="new" />

</odoo>
