<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="prescription_query_wizard_tree" model="ir.ui.view">
        <field name="name">podiatry.prescription.query.wizard.tree</field>
        <field name="model">podiatry.prescription.query.wizard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference_no"/>
                <field name="today"/>
                <field name="patient_name"/>
                <field name="patient_surname"/>
            </tree>
        </field>
    </record>

    <record id="prescription_query_wizard_form" model="ir.ui.view">
        <field name="name">podiatry.prescription.query.wizard.form</field>
        <field name="model">podiatry.prescription.query.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Prescription Information
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="today" attrs="{'readonly':[('address_no','not in', False)]}"/>
                            <field name="reference_no" attrs="{'readonly':[('address_no','not in',False)]}"/>
                            <!-- <field name="protokol_no" attrs="{'readonly':[('address_no','not in',False)]}"/> -->
                            <field name="tracking_no" placeholder="Physicians only - leave blank!" attrs="{'readonly':[('address_no','not in',False)]}"/>
                            <!-- <field name="provizyon_tip" attrs="{'readonly':[('address_no','not in',False)]}"/> -->
                            <!-- <field name="facility_code" attrs="{'readonly':[('address_no','not in',False)]}"/> -->
                        </group>
                        <group>
                            <field name="facility_code" attrs="{'readonly':[('address_no','not in',False)]}"/>
                            <field name="address_no" readonly="True"/>
                            <!-- <field name="recete_tur" attrs="{'readonly':[('address_no','not in',False)]}"/> -->
                            <field name="recete_alt_tur" attrs="{'readonly':[('address_no','not in',False)]}"/>

                        </group>
                    </group>
                    <group string="Order Information">
                        <group>
                            <field name="rush_order"/>
                            <field name="make_from_prior_rx"/>
                        </group>
                        <group>
                            <field name="ship_to_patient"/>
                            <field name="make_quantity"/>
                        </group>
                        <group>
                            <field name="make_left_only"/>
                            <field name="make_right_only"/>
                            <field name="make_bilateral"/>
                        </group>

                    </group>
                    <group string="Patient Shipping Information">
                        <!-- <field name="patient_id" attrs="{'readonly':[('address_no','not in',False)]}" string="Patient ID"/>
                        <field name="patient_name" attrs="{'readonly':[('address_no','not in',False)]}" string="First Name"/>
                        <field name="patient_surname" attrs="{'readonly':[('address_no','not in',False)]}" string="Last Name"/> -->
                    </group>

                    <group string="Patient Information">
                        <field name="patient_id" readonly="True"/>
                        <field name="patient_name" readonly="True"/>
                        <field name="patient_surname" readonly="True"/>
                    </group>
                    <group string="Doctor Information">
                        <field name="doctor_id" readonly="True"/>
                        <field name="brans_kod" readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="prescription_query_wizard_action">
        <field name="name">Prescriptions Query Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.prescription.query.wizard</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
    </record>


</odoo>
