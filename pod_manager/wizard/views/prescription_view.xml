<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="prescription_wizard_form" model="ir.ui.view">
        <field name="name">podiatry.prescription.wizard.form</field>
        <field name="model">podiatry.prescription.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Prescription Information
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="today" readonly="True"/>
                            <field name="reference_no" readonly="True"/>
                            <!-- <field name="protokol_no" readonly="True"/> -->
                            <field name="tracking_no" placeholder="Physicians only - leave blank!" readonly="True"/>
                            <!-- <field name="provizyon_tip" readonly="True"/>
                            <field name="facility_code" readonly="True"/> -->
                        </group>
                        <group>
                            <field name="facility_code" readonly="True"/>
                            <field name="address_no" readonly="True"/>
                            <!-- <field name="recete_tur" readonly="True"/> -->
                            <field name="recete_alt_tur" readonly="True"/>
                        </group>
                    </group>
                    <group string="Order Information">
                        <group>
                            <field name="rush_order" readonly="True"/>
                            <field name="make_from_prior_rx" readonly="True"/>
                        </group>
                        <group>
                            <field name="ship_to_patient" readonly="True"/>
                            <field name="make_quantity" readonly="True"/>
                        </group>
                        <group>
                            <field name="make_left_only" readonly="True"/>
                            <field name="make_right_only" readonly="True"/>
                            <field name="make_bilateral" readonly="True"/>
                        </group>

                    </group>
                    <group string="Patient Information">
                        <field name="patient_id" readonly="True"/>
                        <field name="patient_name" readonly="True"/>
                        <field name="patient_surname" readonly="True"/>
                    </group>
                    <group string="Patient Shipping Information">
                        <!-- <field name="patient_id" attrs="{'readonly':[('address_no','not in',False)]}" string="Patient ID"/>
                        <field name="patient_name" attrs="{'readonly':[('address_no','not in',False)]}" string="First Name"/>
                        <field name="patient_surname" attrs="{'readonly':[('address_no','not in',False)]}" string="Last Name"/> -->
                    </group>
                    <group string="Doctor Information">
                        <field name="doctor_id" readonly="True"/>
                        <field name="practice_id" readonly="True"/>
                    </group>
                    <group string="Detail">
                        <field name="diagnosis_line_ids" string="TanÄ± listesi" readonly="True">
                            <tree editable="bottom">
                                <field name="tani_kodu"/>
                                <field name="tani_adi"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="explanation_line_ids" string="Prescriptions Description List" readonly="True">
                            <tree editable="bottom">
                                <field name="aciklama_turu"/>
                                <field name="aciklama"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Product List">
                        <field name="pharmacy_line_ids" readonly="True">
                            <tree>
                                <field name="product_id"/>
                                <field name="medicine_name"/>
                                <field name="kullanim_sekli"/>
                                <field name="kullanim_doz1"/>
                                <field name="kullanim_doz2"/>
                                <field name="kullanim_periyot"/>
                                <field name="kullanim_periyot_birimi"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="prescription_id"/>
                                    <field name="product_id"/>
                                    <field name="medicine_name"/>
                                    <field name="quantity"/>
                                    <field name="kullanim_sekli"/>
                                    <field name="kullanim_doz1"/>
                                    <field name="kullanim_doz2"/>
                                    <field name="kullanim_periyot"/>
                                    <field name="kullanim_periyot_birimi"/>
                                </group>
                                <group>
                                    <field name="explanation_line_ids">
                                        <tree editable="bottom">
                                            <field name="aciklama_turu"/>
                                            <field name="aciklama"/>
                                        </tree>
                                    </field>
                                </group>
                            </form>
                        </field>
                    </group>
                    <footer>
                        <button special="cancel" string="Kapat" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="prescription_wizard_action">
        <field name="name">Prescription Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.prescription.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
    </record>


</odoo>
