<odoo>
    <!--==== Customization Type ==== -->
    <!-- Form view of account device customization type -->
    <record id="view_account_device_customization_type_form" model="ir.ui.view">
        <field name="name">account.device_customization_type_form</field>
        <field name="model">account.device.customization.type</field>
        <field name="arch" type="xml">
            <form string="Account Device Customization Type">
                <sheet>
                    <group>
                        <field name="name" string="Customization Type" />
                        <field name="customization_id" />
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of account device customization type -->
    <record id="view_account_device_customization_type_list" model="ir.ui.view">
        <field name="name">account.device_customization_type_list</field>
        <field name="model">account.device.customization.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <!--===== Device Customization ===== -->
    <!-- Form view of account device customization -->
    <record id="view_account_device_customization_form" model="ir.ui.view">
        <field name="name">account.device.customization.form</field>
        <field name="model">account.device.customization</field>
        <field name="arch" type="xml">
            <form string="Account Device Customization">
                <sheet>
                    <label for="name" string="Name" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <notebook>
                        <page string="Information">
                            <group colspan="4" col="4">
                                <field name="type" select="2" string="Customization Type" />
                                <field name="customization_categ_id" string="Customization Category" />
                                <field name="product_manager" select="2" string="Customization manager" />
                                <field name="uom_id" />
                                <field name="default_code" />
                                <field name="uom_po_id" />
                                <field name="supplier_taxes_id" widget="many2many_tags" string="Supplier Taxes" />
                                <field name="taxes_id" widget="many2many_tags" string="Customer Taxes" />
                            </group>
                        </page>
                        <page string="Procurement">
                            <group colspan="4" col="4">
                                <field name="active" select="2" />
                                <field name="list_price" />
                                <field name="cost_method" string="Cost Method" />
                                <field name="sale_ok" select="2" />
                                <field name="standard_price" />
                            </group>
                            <newline />
                            <group>
                                <separator string="Suppliers" />
                                <field name="seller_ids" colspan="4" nolabel="1" widget="one2many_list" />
                            </group>
                        </page>
                        <page string="Descriptions">
                            <separator string="Description" />
                            <field name="description" colspan="4" nolabel="1" />
                            <separator string="Sale Description" />
                            <field name="description_sale" colspan="4" nolabel="1" />
                            <separator string="Purchase Description" />
                            <field name="description_purchase" colspan="4" nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view of account device customization -->
    <record id="view_account_device_aenities_search" model="ir.ui.view">
        <field name="name">account.device_customization_search</field>
        <field name="model">account.device.customization</field>
        <field name="arch" type="xml">
            <search string="Account Device Customization">
                <field name="name" />
                <field name="customization_categ_id" string="Customization Category" />
                <field name="list_price" string="Customization Price" />
            </search>
        </field>
    </record>
    <!-- Tree view of account device customization -->
    <record id="view_account_device_customization_list" model="ir.ui.view">
        <field name="name">account.device_customization_list</field>
        <field name="model">account.device.customization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="customization_categ_id" string="Customization Category" />
                <field name="list_price" string="Customization Price" invisible="1" />
            </tree>
        </field>
    </record>
</odoo>
