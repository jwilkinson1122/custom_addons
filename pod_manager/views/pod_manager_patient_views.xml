<odoo>
    <data>
        <!--custom_tree_view-->
        <record model="ir.ui.view" id="patient_tree_view">
            <field name="name">patient tree view</field>
            <field name="model">clinic.patient</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="birth_date"/>
                    <field name="clinic_ids"/>
                </tree>
            </field>
        </record>




        <!--custom_form_view-->
        <record id="patient_form_view" model="ir.ui.view">
            <field name="name">patient_form</field>
            <field name="model">clinic.patient</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="custom string" version="7.0">
                    <sheet>
                        <group>
                            <group string="Basic Info">
                                <field name="firstname"/>
                                <field name="lastname"/>
                                <field name="birth_date"/>
                                <field name="age"/>
                                <field name="history" attrs="{'invisible':[('age','&lt;','50')]}"/>
                                <field name="blood_type"/>
                                <field name="pcr" />
                                <field name="cr_ratio" attrs="{'required':[('pcr','=',True)]}"/>
                                <field name="email"/>
                            </group>
                            <group string="more Info">
                                <field name="image" widget="image"/>
                                <field name="address"/>

                                <field name="clinic_ids" domain="[('is_opened','=',True)]"/>
                                <field name="clinic_name"/>
                                <field name="clinic_capacity"/>
                                <field name="state"/>
                                <field name="tags_ids" widget="many2many_tags" attrs="{'readonly':[('clinic_ids','=',False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="history">
                                <group>
                                    <field name="write_uid"/>
                                    <field name="write_date"/>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="pod_manager_actions" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">clinic.patient</field>
        </record>


        <menuitem id="clinic_root" name="pod_manager2"/>
        <menuitem id="pod_manager_patient" name="Patient" parent="clinic_root" action="pod_manager_actions"/>
    </data>
</odoo>