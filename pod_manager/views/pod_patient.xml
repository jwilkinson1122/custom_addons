<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pod_patients_form_view" model="ir.ui.view">
        <field name="name">pod.patients.form.view</field>
        <field name="model">pod.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button type="object" name="print_report" string="Print Patient Card" class="oe_highlight"/>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="action_open_prescriptions" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <field name="prescription_count" class="o_stat_value"/>
                                <span class="o_stat_text">Prescriptions</span>
                            </div>
                        </button>
                    </div> -->
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="patient_id"/>
                        </div>
                        <h1>
                            <field style="width: 50%%" name="patient_id" default_focus="1" placeholder="Patient Name" context="{'default_is_patient': 1,'default_is_person': 1}" />
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="primary_care_doctor_id"/>
                            <!-- <field name="prescription_count"/> -->

                        </group>

                        <group>
                            <!--                                    <field name="name"/>-->
                            <field name="shoe_size"/>
                            <field name="shoe_width"/>
                            <field name="shoe_type"/>
                            <field name="other_shoe_type" attrs="{'invisible':[('shoe_type','=',False)]}"/>

                        </group>

                    </group>


                    <notebook>
                        <page string="Files">
                            <group name="photo_group_tlOo2">
                                <group name="photo_group_tlOo2_left">
                                    <field widget="image" options='{"size": [0, 120]}' name="left_photo" string="Left Image"/>
                                </group>
                                <group name="photo_group_tlOo2_right">
                                    <field widget="image" options='{"size": [0, 120]}' name="right_photo" string="Right Image"/>
                                </group>
                            </group>
                            <group name="obj_group_DPydw">
                                <group name="obj_group_DPydw_left">
                                    <field filename="left_obj_file_name" name="left_obj_model" string="Left Scan"/>
                                    <field invisible="1" name="left_obj_file_name"/>
                                </group>
                                <group name="obj_group_DPydw_right">
                                    <field filename="right_obj_file_name" name="right_obj_model" string="Right Scan"/>
                                    <field invisible="1" name="right_obj_file_name"/>
                                </group>
                            </group>

                        </page>

                        <!--                        <page name='address_info' string="Address info">-->
                        <!--                        </page>-->

                        <page string="Diagnosis">
                            <field name="patient_condition_ids" nolabel="1" widget="one2many_list"/>
                        </page>

                        <page string="History">
                            <group>
                                <field name="device_ids" string="Device History" colspan="4" widget="one2many_list">
                                    <tree>
                                        <field name="pod_treatment_id"/>
                                        <field name="is_active"/>
                                        <field name="doctor_doctor_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>

                        <page string="Notes">
                            <field name="notes"/>
                        </page>

                        <page string="Personal Information">
                            <group name="name" string="Address">
                                <group>
                                    <field name="patient_street" placeholder="Street"/>
                                    <field name="patient_street2" placeholder="Street2"/>
                                    <field name="patient_city" placeholder="City"/>
                                </group>
                                <group>
                                    <field name="patient_state_id" placeholder="State"/>
                                    <field name="patient_country_id" placeholder="Country"/>
                                    <field name="patient_zip" placeholder="Zip"/>
                                </group>
                            </group>

                        </page>

                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="pod_patients_tree_view" model="ir.ui.view">
        <field name="name">pod.patients.tree.view</field>
        <field name="model">pod.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient Information">
                <field name="name"/>
                <field name="patient_id"/>
                <!--                <field name="partner_id" />-->
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="primary_care_doctor_id"/>
                <field name="prescription_count"/>

            </tree>
        </field>
    </record>

    <!-- Action for pod patients -->
    <record id="action_pod_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">pod.patient</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_no_content_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="menu_pod_patient_code" action="action_pod_patient" parent="menu_patient_master" sequence="5"/>

</odoo>
