<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--============ Account Service ============ -->
    <!-- Form view of account service -->
    <record id="view_account_services_form" model="ir.ui.view">
        <field name="name">.account.services.form</field>
        <field name="model">account.services</field>
        <field name="arch" type="xml">
            <form string="Account Services">
                <sheet>
                    <label for="name" string="Name" />
                    <h1>
                        <field name="name" select="1" />
                    </h1>
                    <notebook>
                        <page string="Information">
                            <group>
                                <group colspan="4" col="4">
                                    <field name="type" select="2" string="Service Type" />
                                    <field name="service_categ_id" string="Service Category" />
                                    <field name="product_manager" select="2" string="Service Manager" />
                                    <field name="uom_id" />
                                    <field name="default_code" />
                                    <field name="uom_po_id" />
                                    <field name="supplier_taxes_id" widget="many2many_tags" string="Supplier Taxes" />
                                    <field name="taxes_id" widget="many2many_tags" string="Customer Taxes" />
                                </group>
                            </group>
                        </page>
                        <page string="Procurement">
                            <group colspan="4" col="4">
                                <field name="active" select="2" />
                                <field name="list_price" />
                                <field name="cost_method" string="Cost Method" />
                                <field name="sale_ok" select="2" />
                                <field name="standard_price" />
                            </group>
                            <newline />
                            <group>
                                <separator string="Suplliers" />
                                <field name="seller_ids" colspan="4" nolabel="1" widget="one2many_list" />
                            </group>
                        </page>
                        <page string="Descriptions">
                            <separator string="Description" />
                            <field name="description" colspan="4" nolabel="1" />
                            <separator string="Sale Description" />
                            <field name="description_sale" colspan="4" nolabel="1" />
                            <separator string="Purchase Description" />
                            <field name="description_purchase" colspan="4" nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Search view of account service -->
    <record id="view_account_services_search" model="ir.ui.view">
        <field name="name">account.services.search</field>
        <field name="model">account.services</field>
        <field name="arch" type="xml">
            <search string="Account Services">
                <field name="name" />
                <field name="service_categ_id" string="Service Category" />
                <field name="list_price" string="Service Price" />
                <newline />
            </search>
        </field>
    </record>
    <!-- Tree view of account service -->
    <record id="view_account_services_tree" model="ir.ui.view">
        <field name="name">account.services.tree</field>
        <field name="model">account.services</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="service_categ_id" string="Service Category" />
                <field name="list_price" string="Service Price" />
            </tree>
        </field>
    </record>
</odoo>
