<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <act_window id="action_view_pod_order_id2" name="Orders"
            res_model="pod.order" binding_model="pod.patient"
            view_mode="tree" domain="[('pod_patient_id', '=', active_id)]" />

        <act_window id="action_view_pod_order_id2" name="Orders"
            res_model="pod.order" binding_model="pod.patient"
            view_mode="tree,form" domain="[('pod_patient_id', '=', active_id)]" />

        <!-- Tree view -->
        <record id="pod_order_tree_view" model="ir.ui.view">
            <field name="name">pod.order.tree.view</field>
            <field name="model">pod.order</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Order">
                    <!-- <field name="name" /> -->
                    <field name="order_id" />
                    <field name="pod_patient_id" />
                    <field name="user_id" />
                    <field name="order_date" />
                    <field name="doctor_id" />

                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="pod_order_form_view" model="ir.ui.view">
            <field name="name">pod.order.form.view</field>
            <field name="model">pod.order</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <header>
                        <button name="pod_order_report" type="object"
                            string="Print  Order" class="oe_highlight" />
                        <button
                            name="%(action_create_pod_order_invoice1)d"
                            type="action" string="Create Invoice" class="oe_highlight" />

                    </header>
                    <sheet>
                        <group string="Account Information">
                            <group>
                                <field name="doctor_id" required="1" options="{&quot;always_reload&quot;: 1}" />
                                <field name="order_date" required="1" />
                                <field name="practice_partner_id" />
                                <field name="user_id" />
                            </group>
                            <group>
                                <field name="ship_address" />>
                                <field name="account_id" />
                                <field name="city" />
                                <field name="state" />
                                <field name="zip"/>
                            </group>
                        </group>
                        <group>
                            <group string="Patient Information">
                                <field name="pod_patient_id" required="1" options="{&quot;always_reload&quot;: 1}" />
                                <field name="gender" />
                                <field name="age"/>
                                <field name="height" />
                                <field name="weight"/>
                                <field name="shoe_type" />
                                <field name="shoe_size" />
                                <field name="shoe_width" />
                                <field name="diagnosis" />
                            </group>
                            <group string="Order Information">
                                <field name="order_id" readonly="1" />
                                <field name="order_date" required="1" />
                                <field name="rush_order" />
                                <field name="ship_to_patient" />
                                <field name="pod_patient_address1" attrs="{'invisible': [('ship_to_patient','=', False)]}" />
                                <group>
                                <field name="left_only" />
                                <field name="right_only" />
                                </group>
                            </group>
                        </group>
                        <group string="Order Details">
                            <field name="pod_oder_detail_ids"
                                nolabel="1" widget="one2many_list" />
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1" />
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <!-- Search View -->
        <record id="pod_order_search_view" model="ir.ui.view">
            <field name="name">pod.order.search.view</field>
            <field name="model">pod.order</field>
            <field name="type">search</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Search Patient Orders">
                    <separator orientation="vertical" />
                    <!-- <field name="name" /> -->
                    <field name="order_id" />
                    <field name="pod_patient_id" />
                    <field name="order_date" />
                    <field name="practice_partner_id" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pod_order">
            <field name="name"> Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pod.order</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pod_order_search_view" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


<!-- 
        <menuitem id="dental_pod_order_child" action="action_pod_order"
            name="Orders" parent="menu_patients" sequence="2" /> -->

</odoo>
