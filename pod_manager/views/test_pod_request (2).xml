<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pod_doctor_form_view" model="ir.ui.view">
        <field name="name">pod.doctor.form.view</field>
        <field name="model">pod.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <notebook>
                    <page string="Main Info">
                        <group colspan="4" col="4">
                            <field name="partner_id" required="1" context="{'default_is_doctor': 1, 'search_default_is_doctor': 1}" />
                            <field name="practice_partner_id" context="{'default_is_practice': 1, 'search_default_is_practice': 1}" />
                            <field name="code" />
                        </group>
                    </page>
                    <page string="Extra Info">
                        <field name="info" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="pod_doctor_search_view" model="ir.ui.view">
        <field name="name">pod.doctor.search.view</field>
        <field name="model">pod.doctor</field>
        <field name="arch" type="xml">
            <search string="Search Doctor">
                <separator orientation="vertical" />
                <field name="partner_id" select="1" />
                <field name="code" select="1" />
                <field name="practice_partner_id" select="1" />
                <newline />
                <group expand="1" string="Group By">
                    <filter string="Doctor" name='by_user' context="{'group_by':'partner_id'}"/>
                    <filter string="Medical Practice" name='by_practice' context="{'group_by':'practice_partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pod_doctor_tree_view" model="ir.ui.view">
        <field name="name">pod.doctor.tree.view</field>
        <field name="model">pod.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor Information">
                <field name="partner_id" />
                <field name="code" />
                <field name="practice_partner_id" />
            </tree>
        </field>
    </record>

       <!-- Action for pod doctors -->
    <record id="action_pod_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.doctor</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
