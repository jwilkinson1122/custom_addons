<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pod_patient_device_form" model="ir.ui.view">
            <field name="name">pod.patient.device.form</field>
            <field name="model">pod.patient.device</field>
            <field name="arch" type="xml">
                <form string="Device History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="treatment" />
                            <field name="pod_doctor_id" />
                            <field name="is_active" />
                            <field name="diagnosis" />
                        </group>
                 
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="pod_patient_device_tree" model="ir.ui.view">
            <field name="name">pod.patient.device.tree</field>
            <field name="model">pod.patient.device</field>
            <field name="arch" type="xml">
                <tree string="Device">
                    <field name="treatment" />
                    <field name="pod_doctor_id" />
                    <field name="is_active" />
                    <field name="diagnosis" />
                </tree>
            </field>
        </record>

</odoo>
