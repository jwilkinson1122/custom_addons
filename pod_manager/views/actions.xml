    <record id="practice_action" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="res_model">podiatry.practice</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_practice', '=', True)]</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="view_podiatry_practice_search"/>
        <field name="context">{'default_company_type':'company', 'default_is_company':True, 'default_is_practice': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new practice!
            </p>
            <p>
                Organize and manage practices at a glance.
            </p>
        </field>
    </record>

    <record id="action_practice_type" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">practice.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_practice_type_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new type
            </p>
            <p>
                Organize and manage types at a glance.
            </p>
        </field>
    </record>

    <!-- Action for doctors -->
    <record model="ir.actions.act_window" id="doctor_action">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first doctor!
            </p>
        </field>
    </record>

    <!-- Action for patients -->
    <record model="ir.actions.act_window" id="patient_action">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first patient!
            </p>
        </field>
    </record>

    <!-- Action for prescriptions -->
    <record model="ir.actions.act_window" id="prescription_action">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.prescription</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first e-prescription!
            </p>
        </field>
    </record>
</odoo>
