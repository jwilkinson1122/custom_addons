<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Action for practices -->
    <record model="ir.actions.act_window" id="practice_action">
        <field name="name">Clinics</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.practice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first practice!
            </p>
        </field>
    </record>

    <!-- Action for doctors -->
    <record model="ir.actions.act_window" id="doctor_action">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first doctor!
            </p>
        </field>
    </record>

    <!-- Action for patients -->
    <record model="ir.actions.act_window" id="epatient_action">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.epatient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first patient!
            </p>
        </field>
    </record>

    <!-- Action for prescriptions -->
    <record model="ir.actions.act_window" id="prescription_action">
        <field name="name">Prescriptions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.prescription</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first e-prescription!
            </p>
        </field>
    </record>
</odoo>
