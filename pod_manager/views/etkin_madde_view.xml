<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="etkin_madde_tree" model="ir.ui.view">
        <field name="name">podiatry.etkin_madde.tree</field>
        <field name="model">podiatry.etkin_madde</field>
        <field name="arch" type="xml">
            <tree>
                <field name="etkin_madde_kodu" string="Active Item Code"/>
                <field name="kullanim_doz1"/>
                <field name="kullanim_doz2"/>
                <field name="kullanim_doz_birimi"/>
                <field name="kullanim_doz_periyot"/>
                <field name="kullanim_doz_periyot_birimi"/>
            </tree>
        </field>
    </record>

    <record id="etkin_madde_form" model="ir.ui.view">
        <field name="name">podiatry.etkin_madde.form</field>
        <field name="model">podiatry.etkin_madde</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="etkin_madde_kodu" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <field name="etkin_maddedvo_id"/>
                    </group>
                    <group>
                        <field name="etkin_madde_kodu"/>
                        <field name="kullanim_doz1"/>
                        <field name="kullanim_doz2"/>
                        <field name="kullanim_doz_birimi"/>
                        <field name="kullanim_doz_periyot"/>
                        <field name="kullanim_doz_periyot_birimi"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="etkin_madde_action">
        <field name="name">E-Report Etkin Madde Detayları</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.etkin_madde</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ilk etkin maddenizi oluşturun!
            </p>
        </field>
    </record>

    <menuitem id="podiatry_etkin_madde" name="E-Report Etkin Madde Detayları" parent="podiatry_conf_root" action="etkin_madde_action" sequence="12"/>

</odoo>
