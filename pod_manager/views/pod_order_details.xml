<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Tree view -->
        <record id="pod_oder_detail_tree_view" model="ir.ui.view">
            <field name="name">pod.order.line.tree.view</field>
            <field name="model">pod.order.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Order details">
                    <field name="prnt" />
                    <field name="treatment_id" />
                    <field name="diagnosis" />
                    <field name="quantity" />
                    <field name="short_comment" />
                </tree>
            </field>
        </record>

        <record id="pod_oder_detail_form_view" model="ir.ui.view">
            <field name="name">pod.order.line.form.view</field>
            <field name="model">pod.order.line</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <group colspan="4" col="4">
                        <field name="treatment_id" required="1" />
                        <field name="diagnosis" />
                        <field name="prnt" />
                    </group>
            
                    <group colspan="4" col="4">
                        <field name="review" />
                        <field name="quantity" />
                        <field name="short_comment" />
                    </group>
                </form>
            </field>
        </record>

</odoo>
