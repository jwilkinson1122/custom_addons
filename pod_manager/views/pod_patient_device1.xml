<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pod_patient_device1_form_view" model="ir.ui.view">
            <field name="name">pod.patient.device1.form.view</field>
            <field name="model">pod.patient.device1</field>
            <field name="arch" type="xml">
                <form string="Device History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="pod_treatment_id" />
                            <field name="doctor_doctor_id" />
                            <field name="is_active" />
                        </group>
                        <separator colspan="4" string="Admnistration" />
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="pod_patient_device1_tree_view" model="ir.ui.view">
            <field name="name">pod.patient.device1.tree.view</field>
            <field name="model">pod.patient.device1</field>
            <field name="arch" type="xml">
                <tree string="Device">
                    <field name="pod_treatment_id" />
                    <field name="doctor_doctor_id" />
                    <field name="is_active" />
                </tree>
            </field>
        </record>

</odoo>
