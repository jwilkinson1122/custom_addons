<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">podiatry.doctor.tree</field>
        <field name="model">podiatry.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Doctor Name"/>
                <field name="surname" string="Doctor Name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="birth"/>
            </tree>
        </field>
    </record>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">podiatry.doctor.form</field>
        <field name="model">podiatry.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <field name="image" widget="image" class="oe_avatar"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="gender"/>
                            <field name="birth"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="doctor_tc"/>
                            <field name="brans_kod"/>
                            <field name="sertifika_kod"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

