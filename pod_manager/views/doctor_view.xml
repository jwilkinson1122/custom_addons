<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="doctor_tree" model="ir.ui.view">
        <field name="name">podiatry.doctor.tree</field>
        <field name="model">podiatry.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Doctor Name"/>
                <!-- <field name="surname" string="Doctor Name"/> -->
                <field name="gender"/>
                <field name="age"/>
                <field name="birth"/>
            </tree>
        </field>
    </record>

    <record id="doctor_form" model="ir.ui.view">
        <field name="name">podiatry.doctor.form</field>
        <field name="model">podiatry.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctors">
                <field name="active" invisible="1"/>
                <header/>
                <!-- <div name="alert_doctor_reference_already_exists" class="alert alert-warning oe_edit_only mb16" role="alert" attrs="{'invisible': [('same_reference_doctor_id', '=', False)]}">
                    A doctor with the same reference already exists, are you sure you want to create a new one?
                    <br/>
                    â€¢                    <field name="same_reference_doctor_id"/>
                </div> -->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_prescriptions" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <field name="prescription_count" class="o_stat_value"/>
                                <span class="o_stat_text">Prescriptions</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div name="avatar">
                        <field name="image" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image': 'image_128'}"/>
                    </div>
                    <!-- <div class="oe_title">
                        <field name="image" widget="image" class="oe_avatar"/>
                    </div> -->
                    <div name="title" class="oe_title">
                        <div name="reference">
                            <h1>
                                <field name="reference"/>
                            </h1>
                        </div>
                        <div name="name">
                            <h1>
                                <field name="name" required="1" placeholder="Contact Name"/>
                            </h1>
                        </div>

                        <div name="practice_id">
                            <!-- <label for="practice_id" string="Primary Practice"/> -->
                            <field name="practice_id" placeholder="Practice" required="1" readonly="not context.get('can_edit_parent_id', True)"/>
                        </div>
                    </div>
                    <group>
                        <group name="doctr_information" string="Doctor Information">
                            <field name="name"/>
                            <!-- <field name="surname"/> -->
                            <!-- <field name="gender"/> -->
                            <!-- <field name="birth"/>
                            <field name="age"/> -->
                            <field name="active" invisible="1"/>
                            <!-- <field name="doctor_id"/> -->
                            <field name="practice_id"/>
                            <field name="sertifika_kod"/>
                            <!-- <field name="practice_id"/> -->

                        </group>
                        <group name="address_information" string="Address Information">
                            <span class="o_form_label o_td_label" name="address">Address</span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" placeholder="State" class="o_address_state" context="{'default_country_id': country_id, 'country_id': country_id, 'zip': zip}" options="{'no_open': true, 'no_quick_create': true}" />
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': 1, 'no_create': 1}" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="patients_list" string="Patient List">
                            <separator name="patients" string="Patients"/>
                            <div name="alert_no_patients" class="oe_read_only alert alert-info mb8" role="alert" attrs="{'invisible': [('patient_ids', '!=', ())]}">
                                No Patients
                            </div>
                            <field name="patient_ids" mode="kanban" context="{'default_type': 'contact'}"/>
                        </page>
                        <page name="perscriptions_list" string="Prescriptions">
                            <separator name="prescriptions" string="Prescriptions"/>
                            <div name="alert_no_prescriptions" class="oe_read_only alert alert-info mb8" role="alert" attrs="{'invisible': [('prescription_id', '!=', ())]}">
                                No Prescriptions
                            </div>
                            <field name="prescription_id" mode="kanban"/>
                        </page>
                        <page name="notes" string="Notes">
                            <separator name="notes" string="Notes"/>
                            <field name="notes" nolabel="1" placeholder="Start typing..."/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

