<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="pod_treatment_form_view" model="ir.ui.view">
        <field name="name">pod.treatment.form.view</field>
        <field name="model">pod.treatment</field>
        <field name="arch" type="xml">
            <form string="treatments">
                <notebook>
                    <page string="Main Info">
                        <group colspan="4" col="4">
                            <field name="product_id" required="1"
                                   context="{'default_is_treatment': 1, 'search_default_is_treatment': 1,'search_default_type': 'service','default_type': 'service'}"/>
                            <field name="therapeutic_action"/>
                            <field name="price"/>
                            <field name="qty_available"/>
                        </group>
                    </page>
                    <page string="Extra Info">
                        <field name="notes"/>
                    </page>
                </notebook>

            </form>
        </field>
    </record>

    <record id="pod_treatment_tree_view" model="ir.ui.view">
        <field name="name">pod.treatment.tree.view</field>
        <field name="model">pod.treatment</field>
        <field name="arch" type="xml">
            <tree string="treatment">
                <field name="product_id"/>
                <field name="qty_available"/>
                <field name="therapeutic_action"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Action for pod devices -->
    <record id="action_pod_treatment" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.treatment</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
