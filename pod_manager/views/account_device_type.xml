<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--======= Device Type ======= -->
    <!-- Form view of account device type -->
    <record id="view_account_device_type_form" model="ir.ui.view">
        <field name="name">account.device_type.form</field>
        <field name="model">account.device.type</field>
        <field name="arch" type="xml">
            <form string=" Account Device Type">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="categ_id" select="1" />
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of account device type -->
    <record id="view_account_device_type_tree" model="ir.ui.view">
        <field name="name">account.device_type.tree</field>
        <field name="model">account.device.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>
