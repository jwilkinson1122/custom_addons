<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pod_pathology_form_view" model="ir.ui.view">
        <field name="name">pod.pathology.form.view</field>
        <field name="model">pod.pathology</field>
        <field name="arch" type="xml">
            <form string="Pathology Info">
                <notebook>
                    <page string="Main">
                        <group colspan="4" col="4">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <newline/>
                        </group>
                    </page>
                    <!-- <page string="Genetics">
                            <group colspan="4" col="4">
                                <field name="chromosome" />
                                <field name="protein" />
                                <field name="gene" />
                            </group>
                        </page> -->
                    <page string="Extra Info">
                        <field name="info"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="pod_pathology_tree_view" model="ir.ui.view">
        <field name="name">pod.pathology.tree.view</field>
        <field name="model">pod.pathology</field>
        <field name="arch" type="xml">
            <tree string="Pathology">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>


    <record id="action_pathology_conditions" model="ir.actions.act_window">
        <field name="name">Conditions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.pathology</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_pathologies" name="Pathologies" parent="menu_configuration_master" sequence='1'/>
    <menuitem id="menu_sub_pathologies" action="action_pod_pathology" sequence="3" parent="menu_pathologies"/> -->


</odoo>
