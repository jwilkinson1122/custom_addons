<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="medicine_explanation_tree" model="ir.ui.view">
        <field name="name">podiatry.medicine.explanation.tree</field>
        <field name="model">podiatry.medicine.explanation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="address_no"/>
                <field name="aciklama_turu"/>
                <field name="aciklama"/>
            </tree>
        </field>
    </record>

    <record id="medicine_explanation_form" model="ir.ui.view">
        <field name="name">podiatry.medicine.explanation.form</field>
        <field name="model">podiatry.medicine.explanation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="GÃ¶nder" type="object" confirm="Are you sure?" class="oe_highlight" data-hotkey="H"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="tesis_kodu"/>
                            <field name="address_no"/>
                            <field name="medicine_id"/>
                            <field name="aciklama_turu"/>
                            <field name="aciklama"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="medicine_explanation_action">
        <field name="name">Medicine Explanation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">podiatry.medicine.explanation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first medicine explanation!
            </p>
        </field>
    </record>

</odoo>
