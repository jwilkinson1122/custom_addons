<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--  Tree -->
    <record id="sale_order_tree_optical" model="ir.ui.view">
        <field name="name">sale.order.inherited.tree.optical</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="optometrist_id"/>
            </xpath>
        </field>
    </record>

    <!--Form-->
    <record id="sale_order_form_optical" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.optical</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="optometrist_id" attrs="{'readonly': [('state', 'not in', ('draft', 'sent'))]}"/>
            </field>
            <page name="order_lines" position="after">
                <page string="Lens Details">
                    <table border="1" bordercolor="gray" style="width:100%">
                        <tr>
                            <td style="width: 16%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">RX</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">SPH</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">CYL</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">AXIS</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">PRISM</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">ADD</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">VA</td>
                            <td style="width: 12%; padding-left:8px; padding-right:8px; text-align:center; background-color:#8aa8fd; font-weight:bold">PD</td>
                        </tr>
                        <tr>
                            <td style="padding:4px; text-align:left; font-weight:bold; background-color: #8bfddd">O.D (Right)</td>
                            <td style="padding:4px; text-align:center"><field name="right_sph" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="right_cyl" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="right_axis" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="right_prism" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="right_add" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="right_va" /></td>
                            <td style="padding:4px; text-align:center"><field name="right_pd" /></td>

                        </tr>
                        <tr>
                            <td style="padding:4px; text-align:left; font-weight:bold; background-color: #8bfddd">O.S (Left)</td>
                            <td style="padding:4px; text-align:center"><field name="left_sph" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="left_cyl" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="left_axis" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="left_prism" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="left_add" widget="selection"/></td>
                            <td style="padding:4px; text-align:center"><field name="left_va" /></td>
                            <td style="padding:4px; text-align:center"><field name="left_pd" /></td>
                        </tr>
                    </table>
                    <br/>
                    <field name="prescription_note" placeholder="Write Remarks"/>
                </page>
            </page>
        </field>
    </record>

</odoo>