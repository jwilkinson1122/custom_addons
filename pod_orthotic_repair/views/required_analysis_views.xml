<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="required_analysis_form_view" model="ir.ui.view">
            <field name="name">required.analysis.form.view</field>
            <field name="model">required.analysis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="description"/>
                            <h1>
                                <field name="description" placeholder="e.g. Name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="required_analysis_tree_view" model="ir.ui.view">
            <field name="name">required.analysis.tree.view</field>
            <field name="model">required.analysis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="is_check"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="action_required_analysis" model="ir.actions.act_window">
            <field name="name">Required Analysis</field>
            <field name="res_model">required.analysis</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
