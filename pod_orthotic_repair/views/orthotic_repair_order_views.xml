<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="orthotic_repair_order_form_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.form.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="stages" widget="statusbar"
                               statusbar_visible="draft,assign_to_technician,inspection_mode,quotation,quotation_sent"/>

                        <button name="%(action_repair_technician)d" string="Assign To Technician" type="action"
                                class="btn-primary" invisible="team_id != False"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="In Inspection Mode" name="assign_to_technician_to_inspection_mode" type="object"
                                class="oe_highlight" invisible="stages not in ['assign_to_technician']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="Quotations" name="inspection_mode_to_quotation" type="object"
                                class="oe_highlight" invisible="stages not in ['inspection_mode']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="Approve" name="quotation_sent_to_approve" type="object" class="oe_highlight"
                                invisible="stages not in ['quotation_sent']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="In Repair Mode" name="create_repair_order" type="object" class="oe_highlight"
                                invisible="stages not in ['approve'] or team_task_id != False"/>

                        <button string="Reset to Draft" name="reject_to_inspection_mode" type="object"
                                class="oe_highlight" invisible="stages not in ['reject']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="Review" name="in_progress_to_review" type="object" class="oe_highlight"
                                invisible="stages not in ['in_progress']"/>

                        <button string="Complete" name="review_to_complete" type="object" class="oe_highlight"
                                invisible="sale_order_id == False or stages not in ['review']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="Reject" name="quotation_to_reject" type="object" class="oe_highlight"
                                invisible="stages not in ['quotation_sent']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>

                        <button string="Cancel" name="complete_to_cancel" type="object"
                                invisible="stages in  ['draft', 'cancel', 'complete']"
                                groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="action_task_view" icon="fa-tasks">
                                <field string="Tasks" name="task_count" widget="statinfo"/>
                            </button>
                            <button type="object" class="oe_stat_button" icon="fa-usd" name="action_sale_order_view">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="order_amount" widget='monetary'
                                               options="{'currency_field': 'currency_id'}"/>
                                    </span>
                                    <span class="o_stat_text">Sale Orders</span>
                                </div>
                            </button>
                            <button type="object" name="action_delivery_orders_view" class="oe_stat_button"
                                    icon="fa-truck" invisible="sale_order_id == False">
                                <field name="delivery_order_count" widget="statinfo" string="Delivery"/>
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="oe_title">
                                    <h1>
                                        <field name="sequence_number"/>
                                    </h1>
                                    <h1>
                                        <field name="orthotic_problem" placeholder="Problem"/>
                                    </h1>
                                </div>
                            </div>
                            <div class="col-md-4" style="text-align: right; margin-top: 10px;">
                                <span invisible="is_website_order == False"
                                      style="background: #90EE90; color: black; padding: 8px; border-radius: 10px; font-size: 15px; font-weight: bolder;">
                                    Website Request
                                </span>
                            </div>
                        </div>
                        <group string="Orthotic Details">
                            <group>
                                <field name="orthotic_product_id"/>
                                <field name="model"/>
                                <field name="mfg_year"/>
                                <field name="is_website_order" invisible="1"/>
                            </group>
                            <group>
                                <field name="orthotic_brand"/>
                                <field name="serial_number"/>
                                <field name="is_previous_service_history"/>
                            </group>
                        </group>
                        <group>
                            <group string="Customer Details">
                                <field name="customer_id" required="1"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                            <group string="Service Location">
                                <span class="o_form_label o_td_label" name="address_name">
                                    <strong>Address</strong>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                </div>
                            </group>
                        </group>
                        <group string="General Information">
                            <group>
                                <field name="company_id"/>
                                <field name="company_phone"/>
                                <field name="company_email"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="receiving_date"/>
                                <field name="delivery_date"/>
                                <field name="responsible_id" widget="many2one_avatar_user" readonly="1"/>
                                <field name="supervisor_id"/>
                                <field name="file_name" invisible="1"/>
                                <field name="attachment" filename="file_name" widget="binary"/>
                                <field name="priority" widget="priority"/>
                            </group>
                        </group>
                        <group string="Team Details" invisible="team_id == False">
                            <group>
                                <field name="team_id" readonly="1"/>
                                <field name="technician_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="team_project_id" readonly="1"/>
                                <field name="work_is_done" invisible="1"/>
                                <field name="team_task_id" invisible="1"/>
                                <label for="sale_order_id" string="Sale Order"
                                       invisible="sale_order_id == False"/>
                                <div class="address_format">
                                    <field name="sale_order_id" invisible="sale_order_id == False"
                                           readonly="1" style="width: auto;"/>
                                    <field name="state"
                                           decoration-success="state == 'sale' or state == 'done'"
                                           decoration-info="state == 'draft' or state == 'sent'"
                                           widget="badge" optional="show" style="margin-left: 15px; width: auto;"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page name="problem_description" string="Problem Descriptions">
                                <field name="problem_description" placeholder="Problem Descriptions..."/>
                            </page>
                            <page name="previous_service_history" string="Previous Service History"
                                  invisible="is_previous_service_history == False">
                                <field name="previous_service_history_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="orthotic_repair_service_id"/>
                                        <field name="date_of_service"/>
                                        <field name="technician_id"/>
                                        <field name="previous_service_description"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="inspection" string="Inspections">
                                <h4>
                                    Inspection images
                                </h4>
                                <hr/>
                                <field name="inspection_image_ids" nolabel="1">
                                    <kanban string="Kanban" class="">
                                        <field name="id"/>
                                        <field name="avatar"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click"
                                                     style="max-width: 340px !important; max-height: 320px !important;">
                                                    <div class="col-12">
                                                        <img t-att-src="kanban_image('inspection.image', 'avatar', record.id.raw_value)"
                                                             t-att-alt="name" style="margin: 0px;"
                                                             width="320px" height="280px" class="img img-responsive"/>
                                                    </div>
                                                    <div class="oe_kanban_details"
                                                         style="text-align: center; margin-top: 5px;">
                                                        <strong>
                                                            <field name="name"/>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                <br/>
                                <br/>
                                <h4>
                                    Required Analysis
                                </h4>
                                <hr/>
                                <group>
                                    <group>
                                        <field name="analysis_template_id"/>
                                    </group>
                                </group>
                                <field name="required_analysis_ids">
                                    <tree editable="bottom" default_order='description asc'
                                          decoration-success="is_check == True">
                                        <field name="is_check"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                                <br/>
                                <br/>
                                <h4>
                                    Diagnosed Problems
                                </h4>
                                <hr/>
                                <field name="diagnosed_problem_ids">
                                    <form>
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="problem_name"/>
                                                <h1>
                                                    <field name="problem_name" placeholder="e.g. Problem"/>
                                                </h1>
                                            </div>
                                        </sheet>
                                    </form>
                                    <tree editable="bottom" default_order='problem_name asc'
                                          decoration-success="is_check == True">
                                        <field name="is_check"/>
                                        <field name="problem_name"/>
                                    </tree>
                                </field>
                                <br/>
                            </page>
                            <page name="inspection" string="Required Parts &amp; Repair Services"
                                  groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_technician">
                                <h4>
                                    Required Parts
                                </h4>
                                <hr/>
                                <field name="material_of_repair_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="serial_number"/>
                                        <field name="remarks"/>
                                        <field name="product_qty"/>
                                        <field name="uom_id"/>
                                        <field name="price"
                                               groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>
                                        <field name="sub_total" sum="sub_total"
                                               groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>
                                        <field name="company_id" column_invisible="True"/>
                                        <field name="currency_id" column_invisible="True"/>
                                    </tree>
                                </field>
                                <br/>
                                <h4>
                                    Orthotic Repair Services
                                </h4>
                                <hr/>
                                <field name="orthotic_repair_service_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="service_charge"
                                               groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist"/>
                                        <field name="company_id" column_invisible="True"/>
                                        <field name="currency_id" column_invisible="True"/>
                                    </tree>
                                </field>
                                <group groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist">
                                    <field name="sale_order_id" invisible="1"/>
                                    <field name="invoice_id" invisible="1"/>
                                    <field name="order_amount" invisible="1"/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" string="Total Estimations"
                                       style="text-align: right"
                                       groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist">
                                    <field name="total_part_price"/>
                                    <field name="total_service_charge"/>
                                    <field name="total" class="oe_subtotal_footer_separator"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </page>
                            <page name="reject_reasons" string="Reject Reasons"
                                  invisible="stages != 'reject'">
                                <field name="reject_reason"/>
                            </page>
                        </notebook>
                        <br/>
                        <div class="row text-center"
                             groups="pod_orthotic_repair.service_manager,pod_orthotic_repair.service_supervisor,pod_orthotic_repair.service_receptionist">
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                            </div>
                            <div class="col-4 text-end">
                                <strong>
                                    Date:
                                </strong>
                                <field name="date" style="width: 8rem;"/>
                                <br/>
                                <field name="signature" widget="signature" style="width: 20rem;"/>
                                <br/>
                                <strong>
                                    Authorized Signature
                                </strong>
                            </div>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="orthotic_repair_order_tree_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.tree.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence_number"/>
                    <field name="orthotic_product_id"/>
                    <field name="serial_number"/>
                    <field name="receiving_date"/>
                    <field name="delivery_date"/>
                    <field name="customer_id"/>
                    <field name="priority" widget="priority"/>
                    <field name="stages" widget="badge" optional="show"
                           decoration-info="stages in ('draft', 'quotation')"
                           decoration-danger="stages in ('cancel', 'reject', 'review')"
                           decoration-warning="stages in ('assign_to_technician', 'inspection_mode', 'quotation_sent', 'in_progress')"
                           decoration-success="stages in ('complete', 'approve')"/>
                </tree>
            </field>
        </record>
        <record id="orthotic_repair_order_kanban_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.kanban.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sequence_number"/>
                    <field name="orthotic_product_id"/>
                    <field name="serial_number"/>
                    <field name="receiving_date"/>
                    <field name="delivery_date"/>
                    <field name="customer_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong>
                                            <field name="sequence_number"/>
                                        </strong>
                                        <br/>
                                        <field name="orthotic_product_id"/>&#160;-&#160;
                                        <field name="model"/>
                                        <br/>
                                        <field name="customer_id"/>
                                    </div>
                                    <strong>
                                        <field name="responsible_id" widget="many2one_avatar_user"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span>
                                            <field name="receiving_date"/>&#160;-
                                            <field name="delivery_date"/>
                                        </span>
                                    </div>
                                    <br/>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="stages" widget="label_selection"
                                                   options="{'classes': {'draft': 'info', 'quotation': 'info', 'assign_to_technician': 'warning', 'inspection_mode': 'warning', 'in_progress': 'warning', 'quotation_sent': 'warning', 'cancel': 'danger',  'reject': 'danger',  'review': 'danger', 'complete': 'success', 'approve': 'success'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="orthotic_repair_order_calendar_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.calendar.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <calendar string="Orthotic Repair Calendar"
                          date_start="receiving_date"
                          event_open_popup="true"
                          mode="month"
                          color="orthotic_product_id"
                          scales="day,month,year"
                          quick_create="False">
                    <field name="responsible_id" filters="1"/>
                    <field name="orthotic_product_id"/>
                    <field name="serial_number"/>
                    <field name="customer_id"/>
                </calendar>
            </field>
        </record>
        <record id="orthotic_repair_order_pivot_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.pivot.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="priority">60</field>
            <field name="arch" type="xml">
                <pivot string="Orthotic Repair Details" sample="1">
                    <field name="stages" type="col"/>
                    <field name="sequence_number" type="row"/>
                    <field name="customer_id" type="row"/>
                    <field name="orthotic_product_id" type="row"/>
                </pivot>
            </field>
        </record>
        <record id="orthotic_repair_order_graph_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.graph.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <graph string="Orthotic Repair Analysis" sample="1">
                    <field name="customer_id"/>
                    <field name="sequence_number"/>
                    <field name="orthotic_product_id"/>
                    <field name="receiving_date" interval="month"/>
                    <field name="delivery_date" interval="month"/>
                </graph>
            </field>
        </record>
        <record id="orthotic_repair_order_search_view" model="ir.ui.view">
            <field name="name">orthotic.repair.order.search.view</field>
            <field name="model">orthotic.repair.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="orthotic_product_id"/>
                    <group string="Group By">
                        <filter name="stages" string="Status"
                                context="{'group_by': 'stages'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_orthotic_repair_order" model="ir.actions.act_window">
            <field name="name">Repair Order</field>
            <field name="res_model">orthotic.repair.order</field>
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph,search,activity</field>
        </record>
    </data>
</odoo>
