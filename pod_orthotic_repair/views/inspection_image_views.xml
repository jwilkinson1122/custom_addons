<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inspection_image_form_view" model="ir.ui.view">
        <field name="name">inspection.image.form.view</field>
        <field name="model">inspection.image</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Name"/>
                        </h1>
                    </div>
                    <group string="Inspection Image">
                        <field name="avatar" widget="image" style="width: 75%;" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="inspection_image_image_kanban_view" model="ir.ui.view">
        <field name="name">inspection.image.image.kanban.view</field>
        <field name="model">inspection.image</field>
        <field name="arch" type="xml">
            <kanban string="Kanban" class="">
                <field name="id"/>
                <field name="avatar"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="row oe_kanban_global_click" style="max-width: 250px !important;">
                            <div class="col-12">
                                <img t-att-src="kanban_image('inspection.image', 'avatar', record.id.raw_value)"
                                     t-att-alt="name" style="margin: 10px 0" width="180px" height="180px"
                                     class="img img-responsive"/>
                            </div>
                            <div class="oe_kanban_details" style="text-align: center;">
                                <h5>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </h5>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_inspection_image" model="ir.actions.act_window">
        <field name="name">Inspection Image</field>
        <field name="res_model">inspection.image</field>
        <field name="view_mode">kanban,form</field>
    </record>
</odoo>
