<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="material_of_repair_form_view" model="ir.ui.view">
            <field name="name">material.of.repair.form.view</field>
            <field name="model">material.of.repair</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Part Details">
                            <group>
                                <field name="product_id"/>
                                <field name="serial_number"/>
                                <field name="remarks"/>
                            </group>
                            <group>
                                <label for="product_qty" string="Package Qty"/>
                                <div class="address_format">
                                    <field name="product_qty" style="width: 20%"/>
                                    <strong>&#160;&#160;</strong>
                                    <field name="uom_id" style="width: 30%"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="material_of_repair_tree_view" model="ir.ui.view">
            <field name="name">material.of.repair.tree.view</field>
            <field name="model">material.of.repair</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="uom_id"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
        <record id="action_material_of_repair" model="ir.actions.act_window">
            <field name="name">Material of Repair</field>
            <field name="res_model">material.of.repair</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
