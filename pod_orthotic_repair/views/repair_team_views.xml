<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="repair_team_form_view" model="ir.ui.view">
            <field name="name">repair.team.form.view</field>
            <field name="model">repair.team</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="title"/>
                            <h1>
                                <field name="title" placeholder="e.g. Team"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="responsible_id" widget="many2one_avatar_user"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="team_members" string="Team Members">
                                <field name="team_member_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="repair_team_tree_view" model="ir.ui.view">
            <field name="name">repair.team.tree.view</field>
            <field name="model">repair.team</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="responsible_id" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>
        <record id="repair_team_search_view" model="ir.ui.view">
            <field name="name">repair.team.search.view</field>
            <field name="model">repair.team</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                    <group string="Group By">
                        <filter name="responsible_id" string="Manager"
                                context="{'group_by': 'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_repair_team" model="ir.actions.act_window">
            <field name="name">Team</field>
            <field name="res_model">repair.team</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>
