<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Product-->
        <record id="product_product_form_view" model="ir.ui.view">
            <field name="name">product.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='purchase_ok']" position="after">
                    <span class="d-inline-block">
                        <field name="is_orthotic"/>
                        <label for="is_orthotic"/>
                    </span>
                    <span class="d-inline-block">
                        <field name="is_repair_service"/>
                        <label for="is_repair_service"/>
                    </span>
                    <span class="d-inline-block">
                        <field name="is_orthotic_part"/>
                        <label for="is_orthotic_part"/>
                    </span>
                </xpath>
            </field>
        </record>
        <record id="action_orthotic" model="ir.actions.act_window">
            <field name="name">Orthotic</field>
            <field name="res_model">product.product</field>
            <field name="domain">[('is_orthotic', '=', True)]</field>
            <field name="context">{'default_is_orthotic': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_orthotic_repair_service" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">product.product</field>
            <field name="domain">[('is_repair_service', '=', True)]</field>
            <field name="context">{'default_is_repair_service': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_orthotic_part" model="ir.actions.act_window">
            <field name="name">Spare Part</field>
            <field name="res_model">product.product</field>
            <field name="domain">[('is_orthotic_part', '=', True)]</field>
            <field name="context">{'default_is_orthotic_part': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!--Product Template-->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='purchase_ok']" position="after">
                    <span class="d-inline-block">
                        <field name="is_orthotic"/>
                        <label for="is_orthotic"/>
                    </span>
                    <span class="d-inline-block">
                        <field name="is_repair_service"/>
                        <label for="is_repair_service"/>
                    </span>
                    <span class="d-inline-block">
                        <field name="is_orthotic_part"/>
                        <label for="is_orthotic_part"/>
                    </span>
                </xpath>
            </field>
        </record>
        <record id="action_orthotic_template" model="ir.actions.act_window">
            <field name="name">Orthotic</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('is_orthotic', '=', True)]</field>
            <field name="context">{'default_is_orthotic': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_orthotic_repair_service_template" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('is_repair_service', '=', True)]</field>
            <field name="context">{'default_is_repair_service': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_orthotic_part_template" model="ir.actions.act_window">
            <field name="name">Spare Part</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('is_orthotic_part', '=', True)]</field>
            <field name="context">{'default_is_orthotic_part': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!--Sale Order Model-->
        <record id="sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="orthotic_repair_order_id" readonly="1" invisible="orthotic_repair_order_id == False"/>
                </xpath>
            </field>
        </record>

        <!--Sale Invoice Model-->
        <record id="account_move_form_view" model="ir.ui.view">
            <field name="name">account.move.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="orthotic_repair_order_id" readonly="1" force_save="1"/>
                </xpath>
            </field>
        </record>

        <!--Res Partner Model-->
        <record id="res_partner_form_view" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_mro_view" icon="fa-wrench">
                        <field string="Repair Orders" name="mro_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>

        <!--Project Task Model-->
        <record id="project_task_form_view" model="ir.ui.view">
            <field name="name">project.task.form.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <header>
                    <button string="Work is Completed" name="work_is_completed" type="object" class="oe_highlight"
                            invisible="work_is_done != False or not task_orthotic_problem_ids"/>
                </header>
                <div class="oe_button_box" name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_mro_view"
                            icon="fa-wrench" invisible="orthotic_repair_order_id == False">
                        <field string="Repair Order" name="mro_count" widget="statinfo"/>
                        <field name="orthotic_repair_order_id" invisible="1"/>
                    </button>
                </div>
                <xpath expr="//div[@name='button_box']" position="after">
                    <widget name="web_ribbon" title="Work is Completed" bg_color="bg-success"
                            invisible="work_is_done == False"/>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="work_is_done" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                    <page name="diagnosed_problems" string="Diagnosed Problems">
                        <field name="task_orthotic_problem_ids">
                            <tree editable="bottom" default_order='description asc'
                                  decoration-success="is_check == True">
                                <field name="is_check"/>
                                <field name="description"/>
                                <field name="remarks"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>