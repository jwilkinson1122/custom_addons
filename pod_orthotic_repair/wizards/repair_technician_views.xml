<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="repair_technician_form_view" model="ir.ui.view">
            <field name="name">repair.technician.form.view</field>
            <field name="model">repair.technician</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="orthotic_repair_order_id" invisible="1"/>
                            <field name="team_id"/>
                        </group>
                        <group>
                            <field name="technician_id"/>
                            <field name="team_member_ids" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Assign" name="repair_technician_details" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_repair_technician" model="ir.actions.act_window">
            <field name="name">Assign to Technician</field>
            <field name="res_model">repair.technician</field>
            <field name="target">new</field>
            <field name="view_id" ref="repair_technician_form_view"/>
        </record>
    </data>
</odoo>
