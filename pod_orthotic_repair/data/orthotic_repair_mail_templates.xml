<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="orthotic_repair_mail_template" model="mail.template">
            <field name="name">Orthotic Repair Mail Template</field>
            <field name="model_id" ref="pod_orthotic_repair.model_orthotic_repair_order"/>
            <field name="subject">Your Orthotic Repair is Completed</field>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="partner_to">{{ object.customer_id.id }}</field>
            <field name="body_html" type="html">
                <table style="width: 100%">
                    <tr>
                        <td>
                            Dear Customer,
                            <br/>
                            <h4>
                                <strong>
                                    <t t-out="object.customer_id.name"/>
                                </strong>
                            </h4>
                        </td>
                    </tr>
                </table>
                <hr/>
                <p>
                    We're pleased to inform you that your
                    <strong>
                        <t t-out="object.orthotic_product_id.name"/>
                    </strong>
                    repair is now complete. Our team has carefully inspected and tested your orthotic to ensure that it
                    is in good working order.
                </p>
                <p>
                    Here is your orthotic information
                </p>
                <table style="width: 100%;">
                    <tr>
                        <td colspan="2">
                            <span style="font-size: 20px;">
                                <strong>
                                    <t t-out="object.orthotic_product_id.name"/>
                                    -
                                    <span t-field="object.model"/>
                                    -
                                    <span t-field="object.mfg_year"/>
                                    -
                                    <span t-field="object.orthotic_brand"/>
                                    -
                                    <span t-field="object.serial_number"/>
                                </strong>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>
                                <strong>Receiving Date:</strong>
                                <t t-out="object.receiving_date"/>
                            </span>
                        </td>
                        <td>
                            <span>
                                <strong>Delivery Date:</strong>
                                <t t-out="object.delivery_date"/>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>
                                <strong>Invoice:</strong>
                                <t t-out="format_amount(object.order_amount, object.currency_id)"/>
                            </span>
                        </td>
                    </tr>
                </table>
                <p>
                    If you have any questions or concerns about your
                    <strong>
                        <t t-out="object.orthotic_product_id.name"/>
                    </strong>
                    orthotic, please do not hesitate to contact us. Our team is always here to help and we want to ensure
                    that you are completely satisfied with our service.
                </p>
                <p>
                    Thank you for choosing
                    <strong>
                        <t t-out="object.company_id.name"/>
                    </strong>
                    for your orthotic repair needs. We appreciate your business and look forward to serving you again in
                    the future.
                </p>
                <br/>
                <h6>
                    Best regards,
                </h6>
                <h5>
                    <strong>
                        <t t-out="object.company_id.name"/>
                    </strong>
                </h5>
                <hr/>
                <span>
                    <h6>
                        <t t-out="object.company_id.name"/>
                    </h6>
                    <t t-out="object.company_id.phone"/>
                    <br/>
                    <t t-out="object.company_id.email"/>
                    <br/>
                    <t t-out="object.company_id.website"/>
                </span>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>