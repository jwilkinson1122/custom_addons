<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="inspection_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="inspection">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 style="text-align: center;">
                                Inspection Report
                            </h2>
                            <br/>
                            <div id="information" class="row mt32 mb32">
                                <div class="col-auto col-4 mw-100 mb-2" t-if="inspection.sequence_number"
                                     name="sequence_number">
                                    <strong>Sequence Number</strong>
                                    <p class="m-0" t-field="inspection.sequence_number"/>
                                </div>
                                <div class="col-auto col-4 mw-100 mb-2" t-if="inspection.orthotic_product_id"
                                     name="orthotic_product_id">
                                    <strong>Orthotic</strong>
                                    <p class="m-0" t-field="inspection.orthotic_product_id"/>
                                </div>
                                <div class="col-auto col-4 mw-100 mb-2" t-if="inspection.model"
                                     name="model">
                                    <strong>Model</strong>
                                    <p class="m-0" t-field="inspection.model"/>
                                </div>
                            </div>
                            <div id="information" class="row mt32 mb32">
                                <div class="col-auto col-4 mw-100 mb-2" t-if="inspection.customer_id"
                                     name="customer_id">
                                    <strong>Customer</strong>
                                    <p class="m-0" t-field="inspection.customer_id.name"/>
                                </div>
                                <div class="col-auto col-4 mw-100 mb-2" t-if="inspection.responsible_id"
                                     name="responsible_id">
                                    <strong>Responsible</strong>
                                    <p class="m-0" t-field="inspection.responsible_id.name"/>
                                </div>
                                <div class="col-auto col-4 mw-100 mb-2">
                                </div>
                            </div>
                            <br/>
                            <table class="table table-sm o_main_table"
                                   style="width: 100%; font-size: 11px; margin-top: 0px;">
                                <tr>
                                    <td colspan="2"
                                        style="background-color: #F8F8F8; text-align: center; font-size: 13px; border: 0px;">
                                        <strong>Diagnosed Problems</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border-top: aliceblue; width: 5%; text-align: center;">
                                        <strong>Check</strong>
                                    </td>
                                    <td style="border-top: aliceblue; width: 95%; text-align: center;">
                                        <strong>Problem</strong>
                                    </td>
                                </tr>
                                <tr t-foreach="inspection.diagnosed_problem_ids" t-as="diagnosed">
                                    <td style="width: 5%; text-align: center;">
                                        <t t-if="diagnosed.is_check">
                                            <img src="/pod_orthotic_repair/static/src/img/true.png"
                                                 style="width: 10px; height: 10px;"/>
                                        </t>
                                        <t t-else="">
                                            <img src="/pod_orthotic_repair/static/src/img/false.png"
                                                 style="width: 10px; height: 10px;"/>
                                        </t>
                                    </td>
                                    <td style="width: 95%;">
                                        <span t-field="diagnosed.problem_name"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-sm o_main_table"
                                   style="width: 100%; font-size: 11px; margin-top: 0px;">
                                <tr>
                                    <td colspan="6"
                                        style="background-color: #F8F8F8; text-align: center; font-size: 13px; border: 0px;">
                                        <strong>Required Parts</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border-top: aliceblue;">
                                        <strong>Part Name</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Serial Number</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Quantity</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Unit</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Remarks</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Price</strong>
                                    </td>
                                </tr>
                                <tr t-foreach="inspection.material_of_repair_ids" t-as="quotation">
                                    <td>
                                        <span t-field="quotation.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="quotation.serial_number"/>
                                    </td>
                                    <td>
                                        <span t-field="quotation.product_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="quotation.uom_id"/>
                                    </td>
                                    <td>
                                        <span t-field="quotation.remarks"/>
                                    </td>
                                    <td>
                                        <span t-field="quotation.price"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-sm o_main_table"
                                   style="width: 100%; font-size: 11px; margin-top: 0px;">
                                <tr>
                                    <td colspan="3"
                                        style="background-color: #F8F8F8; text-align: center; font-size: 13px; border: 0px;">
                                        <strong>âž¤&#160;Orthotic Repair Services</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border-top: aliceblue;">
                                        <strong>Service</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Description</strong>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Service Charge</strong>
                                    </td>
                                </tr>
                                <tr t-foreach="inspection.orthotic_repair_service_ids" t-as="service">
                                    <td>
                                        <span t-field="service.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="service.description"/>
                                    </td>
                                    <td>
                                        <span t-field="service.service_charge"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-sm o_main_table" style="width: 100%; font-size: 11px; margin-top: 0px;">
                                <tr>
                                    <td style="border-top: aliceblue;">
                                        <strong>Sale Order Details</strong>
                                        <br/>
                                        Sale Order:
                                        <span t-field="inspection.sale_order_id"/>&#160;&#160;-&#160;
                                        <span t-field="inspection.state"/>
                                        <br/>
                                        Total Amounts:
                                        <span t-field="inspection.order_amount"/>
                                    </td>
                                    <td style="border-top: aliceblue;">
                                        <strong>Total Estimations</strong>
                                        <br/>
                                        Part Price:
                                        <span t-field="inspection.total_part_price"/>
                                        <br/>
                                        Service Charge:
                                        <span t-field="inspection.total_service_charge"/>
                                        <br/>
                                        Total:
                                        <span t-field="inspection.total"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-bordered" style="width: 100%; margin-top: 0px;">
                                <tr>
                                    <td style="text-align: center; font-size: 12px; background-color: #F8F8F8;"
                                        colspan="100%">
                                        <strong>Inspection Images</strong>
                                    </td>
                                </tr>
                                <t t-set="ap_tag" t-value="str('&lt;/td&gt;&lt;/tr&gt;&lt;tr&gt;&lt;td&gt;')"/>
                                <t t-set="img_count" t-value="0"/>
                                <tr>
                                    <td>
                                        <t t-foreach="inspection.inspection_image_ids" t-as="img">
                                            <t t-set="img_count" t-value="img_count + 1"/>
                                            <div style="display: inline-block;text-align:center;">
                                                <t t-if="img.avatar">
                                                    <img t-att-src="image_data_uri(img.avatar)"
                                                         style="width: 260px; height: 160px; margin-left: 10px; margin-top: 10px; margin-bottom: 10px;"/>
                                                </t>
                                                <h6>
                                                    <span t-field="img.name"/>
                                                </h6>
                                            </div>
                                            <t t-if="img_count % 3 == 0">
                                                <t t-raw="ap_tag"/>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
    <record id="action_inspection_report" model="ir.actions.report">
        <field name="name">Inspection Report</field>
        <field name="model">orthotic.repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pod_orthotic_repair.inspection_report_template</field>
        <field name="report_file">pod_orthotic_repair.inspection_report_template</field>
        <field name="binding_model_id" ref="model_orthotic_repair_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
