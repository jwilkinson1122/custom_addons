<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="delivery_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="order">
                <t t-call="web.external_layout">
                    <div class="page">
                        <table class="table table-sm o_main_table"
                               style="width: 100%; margin-top: 0px; font-size: 14px;">
                            <tr>
                                <td colspan="2"
                                    style="background-color: #F8F8F8; text-align: center; font-size: 16px; border-top: aliceblue;">
                                    <strong>Delivery Order for Orthotic Repair</strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-top: aliceblue;">
                                    <span>
                                        Order Number:
                                        <span t-field="order.sequence_number"/>
                                    </span>
                                </td>
                                <td style="border-top: aliceblue;">
                                    <span>
                                        Order Date:
                                        <span t-field="order.receiving_date"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        <strong>Customer Details</strong>
                                        <br/>
                                        Name:
                                        <span t-field="order.customer_id.name"/>
                                        <br/>
                                        Phone:
                                        <span t-field="order.phone"/>
                                        <br/>
                                        Email:
                                        <span t-field="order.email"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <br/>
                                        Address:
                                        <span t-field="order.customer_id.street"/>
                                        <br/>
                                        <span t-field="order.customer_id.street2" style="margin-left: 3.7rem;"/>
                                        <br/>
                                        <span t-field="order.customer_id.city" style="margin-left: 3.7rem;"/>
                                        <span t-field="order.customer_id.zip"/>
                                        <span t-field="order.customer_id.state_id.name"/>
                                        <br/>
                                        <span t-field="order.customer_id.country_id.name" style="margin-left: 3.7rem;"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        <strong>Orthotic Details</strong>
                                        <br/>
                                        Orthotic Name:
                                        <span t-field="order.orthotic_product_id.name"/>
                                        <br/>
                                        Brand:
                                        <span t-field="order.orthotic_brand"/>
                                        <br/>
                                        Model:
                                        <span t-field="order.model"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <br/>
                                        Manufacturing Year:
                                        <span t-field="order.mfg_year"/>
                                        <br/>
                                        Serial Number:
                                        <span t-field="order.serial_number"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span>
                                        <strong>Repair Estimations</strong>
                                        <br/>
                                        Part Price:
                                        <span t-field="order.total_part_price"/>
                                        <br/>
                                        Service Charge:
                                        <span t-field="order.total_service_charge"/>
                                        <br/>
                                        Total:
                                        <span t-field="order.total"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        <strong>Delivery Details</strong>
                                        <br/>
                                        Delivery Date:
                                        <span t-field="order.delivery_date"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <br/>
                                        Delivery Address:
                                        <span t-field="order.street"/>
                                        <br/>
                                        <span t-field="order.street2" style="margin-left: 6.9rem;"/>
                                        <br/>
                                        <span t-field="order.city" style="margin-left: 6.9rem;"/>
                                        <span t-field="order.state_id.name"/>
                                        <span t-field="order.zip"/>
                                        <br/>
                                        <span t-field="order.country_id.name" style="margin-left: 6.9rem;"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span>
                                        <strong>Description of Issue</strong>
                                        <br/>
                                        <span t-field="order.problem_description"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: center;" colspan="2">
                                    <span>
                                        Thank you for choosing
                                        <strong>
                                            <span t-field="order.company_id.name"/>
                                        </strong>
                                        . If you have any questions or concerns, please don't hesitate to contact us.
                                    </span>
                                </td>
                            </tr>
                        </table>
                        <div class="row" style="text-align: center;">
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                                Date:
                                <span t-field="order.date"/>
                                <br/>
                                <t t-if="order.signature">
                                    <img t-att-src="image_data_uri(order.signature)" att="Logo"
                                         style="width: 100px; height: 40px; margin-bottom: -10px;"/>
                                </t>
                                <hr style="margin-bottom: -10px;"/>
                                <br/>
                                Authorized Signature
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="action_delivery_order_for_orthotic_repair_report" model="ir.actions.report">
        <field name="name">Delivery Order for Orthotic Repair</field>
        <field name="model">orthotic.repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pod_orthotic_repair.delivery_order_report_template</field>
        <field name="report_file">pod_orthotic_repair.delivery_order_report_template</field>
        <field name="binding_model_id" ref="model_orthotic_repair_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>