<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pod_procedure_view_tree" model="ir.ui.view">
        <field name="name">pod.procedure.view.tree</field>
        <field name="model">pod.procedure</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_event_tree" />
        <field name="arch" type="xml">
            <field name="service_id" position="after">
                <field name="performer_id" />
            </field>
        </field>
    </record>

    <record id="pod_procedure_view_form" model="ir.ui.view">
        <field name="name">pod.procedure.view.form</field>
        <field name="model">pod.procedure</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="pod_workflow.pod_event_form" />
        <field name="arch" type="xml">
            <group name="inheritance" position="inside">
                <field name="procedure_request_id" />
            </group>
            <field name="performer_id" position="after">
                <field name="location_id" />
            </field>
            <field name="occurrence_date" position="after">
                <field name="performed_initial_date" />
                <field name="performed_end_date" />
            </field>
            <field name="occurrence_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="pod_procedure_view_search" model="ir.ui.view">
        <field name="name">pod.procedure.view.search</field>
        <field name="model">pod.procedure</field>
        <field name="arch" type="xml">
            <search>
                <field name="internal_identifier" />
                <field name="patient_id" />
                <field name="performer_id" />
                <field name="procedure_request_id" />
                <field name="name" />
                <field name="state" />
                <newline />
                <filter name="preparation" domain="[('state', '=', 'preparation')]" help="Preparation" />
                <filter name="in-progress" domain="[('state', '=', 'in-progress')]" help="In progress" />
                <filter name="completed" domain="[('state', '=', 'completed')]" help="Completed" />
                <filter name="suspended" domain="[('state', '=', 'suspended')]" help="Suspended" />
                <filter name="error" domain="[('state', '=', 'entered-in-error')]" help="Error" />
                <filter name="aborted" domain="[('state', '=', 'aborted')]" help="Aborted" />
                <filter name="unknown" domain="[('state', '=', 'unknown')]" help="Unknown" />
                <newline />
                <group expand="0" name="groupby" string="Group By...">
                    <filter string="Patient" domain="[]" name="group_by_patient" context="{'group_by':'patient_id'}" />
                    <filter string="Performer" name="group_by_performer" domain="[]" context="{'group_by':'performer_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pod_procedure_action">
        <field name="name">Procedures</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pod.procedure</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="pod_procedure">
        <field name="name">Procedures</field>
        <field name="parent_id" ref="pod_base.pod_clinical_event" />
        <field name="action" ref="pod_procedure_action" />
        <field name="sequence" eval="10" />
    </record>
    
</odoo>
