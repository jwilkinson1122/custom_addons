<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pod</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pod_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pod_financial']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_pod_financial_coverage" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Coverages" for="module_pod_financial_coverage" />
                        <div class="text-muted">
                            Allows to use coverages.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
