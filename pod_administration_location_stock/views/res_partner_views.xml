<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pod_administration_location.res_partner_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Location" groups="pod_administration_location_stock.group_pod_location_stock" name="stock_location" attrs="{'invisible': [('is_location', '=', False)]}">
                    <group name="stock_location_group">
                        <group>
                            <field name="stock_location_id" />
                            <field name="stock_picking_type_id" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
