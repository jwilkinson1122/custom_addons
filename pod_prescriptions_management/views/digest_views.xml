<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="digest_digest_view_form" model="ir.ui.view">
        <field name="name">digest.digest.view.form.inherit.prescriptions.order</field>
        <field name="model">digest.digest</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="digest.digest_digest_view_form" />
        <field name="arch" type="xml">
            <group name="kpi_sales" position="after">
                <group string="Printing" name="printing">
                    <field name="printing_action" />
                    <field name="printing_printer_id" options="{'no_create': True}" />
                </group>
            </group>

            <group name="kpi_prescriptions" position="attributes">
                <attribute name="string">Prescriptions</attribute>
                <attribute name="groups">pod_prescriptions_team.group_prescriptions_personnel_all_leads</attribute>
            </group>
            <group name="kpi_prescriptions" position="inside">
                <field name="kpi_all_prescriptions_total"/>
            </group>
        </field>
    </record>

</odoo>
