<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_prescription.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//Orderline" position="inside">
            <div class="pos-receipt-left-padding" t-if="line.rx_reference">From <t t-esc="line.rx_reference"/></div>
            <div class="pos-receipt-left-padding" t-if="line.down_payment_details">
                <table class="prescription-order-info ms-2 text-truncate">
                    <tr t-foreach='line.down_payment_details' t-as='line' t-key='line_index'>
                        <td class="text-truncate"><t t-esc="line['product_uom_qty']" />x</td>
                        <td class="text-truncate" style="max-width: 200px;">
                            <t t-esc="line['product_name']" />
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </t>

</templates>
