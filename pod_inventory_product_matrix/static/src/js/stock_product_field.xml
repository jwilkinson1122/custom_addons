<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="stock.StockProductField" t-inherit="web.Many2OneField" t-inherit-mode="primary">
        <xpath expr="//t[@t-if='hasExternalButton']" position="before">
            <t t-if="product_mode and product_mode != 'normal'">
                <button type="button" class="btn btn-secondary fa fa-pencil" tabindex="-1" draggable="false" t-att-aria-label="configurationButtonHelp" t-att-data-tooltip="configurationButtonHelp" t-on-click="onEditConfiguration"/>
            </t>
        </xpath>
    </t>

</templates>
