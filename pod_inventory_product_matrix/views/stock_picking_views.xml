<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_form_matrix" model="ir.ui.view">
        <field name="name">stock.picking.inherit.matrix</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='product_id']"
                   position="attributes">
                <attribute name="string">Product Variant</attribute>
                <attribute name="context">{'default_detailed_type': 'product', 'product_tmplt_id': product_template_id}</attribute>
            </xpath>

            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='product_id']" position="before">
                <field name="product_template_id"
                       string="Product"
                       width="35%"
                       context="{'partner_id': parent.partner_id}"
                       widget="sml_product_many2one"/>
                <field name="product_template_attribute_value_ids" column_invisible="1"/>
                <field name="product_no_variant_attribute_value_ids" column_invisible="1"/>
                <field name="is_configurable_product" column_invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//list//field[@name='product_template_id']"
                   position="after">
                <field name="inventory_product_add_mode" column_invisible="True"/>
            </xpath>
            <field name="partner_id" position="after">
                <field name="grid" invisible="1"/>
                <field name="grid_product_tmpl_id" invisible="1"/>
                <field name="grid_update" invisible="1"/>
            </field>
            <group name="other_infos" position="inside">
<!--                <field name="report_grids" groups="base.group_no_one"/>-->
               <field name="report_grids"/>
            </group>
        </field>
    </record>

</odoo>
