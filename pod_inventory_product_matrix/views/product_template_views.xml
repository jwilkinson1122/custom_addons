<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_grid_view_form_inventory" model="ir.ui.view">
        <field name="name">product.template.form.inherit.inventory.product.matrix</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']" position="inside">
                <group name="product_mode" invisible="not has_configurable_attributes">
                    <group string="Inventory Variant Selection">
                        <field name="has_configurable_attributes"/>
                        <field name="inventory_product_add_mode" widget="radio" nolabel="1" colspan="2"/>
                    </group>
                    <!-- <group string="Inventory Variant Selection">
                        <field name="has_configurable_attributes" invisible="1"/>
                        <field name="inventory_product_add_mode" widget="radio" nolabel="1" colspan="2"/>
                    </group> -->
                </group>
            </xpath>
        </field>
    </record>
</odoo>
