<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Group for hotel user -->
    <record id="group_hotel_user" model="res.groups">
        <field name="name">Hotel Management / User</field>
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>
    <!--Group for hotel manager -->
    <record id="group_hotel_manager" model="res.groups">
        <field name="name">Hotel Management/ Manager</field>
        <field eval="[(4, ref('hotel.group_hotel_user'))]" name="implied_ids" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

    <record id="product_config_category" model="ir.module.category">
        <field name="name">Product Configurator</field>
    </record>

    <record id="group_product_configurator" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="product_config_category" />
        <field name="implied_ids" eval="[(4, ref('product.group_product_variant'))]" />
    </record>

    <record id="group_product_configurator_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="product_config_category" />
        <field name="implied_ids" eval="[(4, ref('hotel.group_product_configurator'))]" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>

    <!-- Set default to all employees -->
    <record model="res.groups" id="base.group_user">
        <field name="implied_ids" eval="[(4, ref('hotel.group_product_configurator'))]" />
    </record>
    <record model="res.users" id="base.user_root">
        <field eval="[(4, ref('hotel.group_product_configurator_manager'))]" name="groups_id" />
    </record>

</odoo>
